Dialogue: 0,0:01:37.14,0:01:38.08,八犬-OP.CN,,0,0,0,,	信否
Dialogue: 0,0:01:38.08,0:01:40.49,八犬-OP.CN,,0,0,0,,	可否
Dialogue: 0,0:01:40.49,0:01:44.59,八犬-OP.CN,,0,0,0,,	吾命由君定
Dialogue: 0,0:01:47.86,0:01:51.32,八犬-OP.CN,,0,0,0,,	冷风相拥
Dialogue: 0,0:01:51.32,0:01:57.73,八犬-OP.CN,,0,0,0,,	生命之思 铭记于心
Dialogue: 0,0:01:57.73,0:02:01.13,八犬-OP.CN,,0,0,0,,	百首不离
Dialogue: 0,0:02:01.13,0:02:03.73,八犬-OP.CN,,0,0,0,,	爱深恨切
Dialogue: 0,0:02:03.73,0:02:07.55,八犬-OP.CN,,0,0,0,,	柔由悲生
Dialogue: 0,0:02:07.55,0:02:12.43,八犬-OP.CN,,0,0,0,,	纵光之灭
Dialogue: 0,0:02:12.43,0:02:17.10,八犬-OP.CN,,0,0,0,,	明望尤存
Dialogue: 0,0:02:17.10,0:02:21.28,八犬-OP.CN,,0,0,0,,	沸腾之血 引入我身
Dialogue: 0,0:02:21.28,0:02:26.51,八犬-OP.CN,,0,0,0,,	将其宿命 变为奇迹
Dialogue: 0,0:02:26.51,0:02:28.62,八犬-OP.CN,,0,0,0,,	勿停 勿休
Dialogue: 0,0:02:28.62,0:02:31.19,八犬-OP.CN,,0,0,0,,	神之所绘阴影
Dialogue: 0,0:02:31.19,0:02:34.72,八犬-OP.CN,,0,0,0,,	划破黑暗
Dialogue: 0,0:02:34.72,0:02:38.54,八犬-OP.CN,,0,0,0,,	伸出双手 天涯海角
Dialogue: 0,0:02:38.54,0:02:41.06,八犬-OP.CN,,0,0,0,,	吾心在念
Dialogue: 0,0:02:41.06,0:02:44.62,八犬-OP.CN,,0,0,0,,	直至归期
Dialogue: 0,0:02:44.62,0:02:49.12,八犬-OP.CN,,0,0,0,,	泪之所示 皆有深意
Dialogue: 0,0:02:49.12,0:02:54.02,八犬-OP.CN,,0,0,0,,	漩涡蠢动 世界尽头
Dialogue: 0,0:02:54.02,0:02:56.80,八犬-OP.CN,,0,0,0,,	咆哮交织 此命运
Dialogue: 0,0:02:57.99,0:03:00.83,八犬-OP.CN,,0,0,0,,	hell!
