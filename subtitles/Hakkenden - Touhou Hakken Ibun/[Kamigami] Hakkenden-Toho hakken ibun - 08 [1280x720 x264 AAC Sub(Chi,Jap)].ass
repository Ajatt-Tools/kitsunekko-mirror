Dialogue: 0,0:01:25.05,0:01:25.99,八犬-OP.CN,,0,0,0,,	信否
Dialogue: 0,0:01:25.99,0:01:28.37,八犬-OP.CN,,0,0,0,,	可否
Dialogue: 0,0:01:28.37,0:01:32.62,八犬-OP.CN,,0,0,0,,	吾命由君定
Dialogue: 0,0:01:35.74,0:01:39.20,八犬-OP.CN,,0,0,0,,	冷风相拥
Dialogue: 0,0:01:39.22,0:01:45.68,八犬-OP.CN,,0,0,0,,	生命之思 铭记于心
Dialogue: 0,0:01:45.68,0:01:49.15,八犬-OP.CN,,0,0,0,,	百首不离
Dialogue: 0,0:01:49.15,0:01:51.68,八犬-OP.CN,,0,0,0,,	爱深恨切
Dialogue: 0,0:01:51.68,0:01:55.47,八犬-OP.CN,,0,0,0,,	柔由悲生
Dialogue: 0,0:01:55.47,0:02:00.40,八犬-OP.CN,,0,0,0,,	纵光之灭
Dialogue: 0,0:02:00.40,0:02:05.23,八犬-OP.CN,,0,0,0,,	明望尤存
Dialogue: 0,0:02:05.23,0:02:09.20,八犬-OP.CN,,0,0,0,,	沸腾之血 引入我身
Dialogue: 0,0:02:09.20,0:02:14.35,八犬-OP.CN,,0,0,0,,	将其宿命 变为奇迹
Dialogue: 0,0:02:14.48,0:02:16.62,八犬-OP.CN,,0,0,0,,	勿停 勿休
Dialogue: 0,0:02:16.62,0:02:19.18,八犬-OP.CN,,0,0,0,,	神之所绘阴影
Dialogue: 0,0:02:19.18,0:02:22.68,八犬-OP.CN,,0,0,0,,	划破黑暗
Dialogue: 0,0:02:22.68,0:02:26.44,八犬-OP.CN,,0,0,0,,	伸出双手 天涯海角
Dialogue: 0,0:02:26.44,0:02:29.03,八犬-OP.CN,,0,0,0,,	吾心在念
Dialogue: 0,0:02:29.03,0:02:32.56,八犬-OP.CN,,0,0,0,,	直至归期
Dialogue: 0,0:02:32.56,0:02:37.30,八犬-OP.CN,,0,0,0,,	泪之所示 皆有深意
Dialogue: 0,0:02:37.30,0:02:41.91,八犬-OP.CN,,0,0,0,,	漩涡蠢动 世界尽头
Dialogue: 0,0:02:41.91,0:02:45.73,八犬-OP.CN,,0,0,0,,	咆哮交织 此命运
Dialogue: 0,0:02:45.92,0:02:48.54,八犬-OP.CN,,0,0,0,,hell!
