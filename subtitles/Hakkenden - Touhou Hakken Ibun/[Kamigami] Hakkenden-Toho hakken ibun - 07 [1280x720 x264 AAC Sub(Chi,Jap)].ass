Dialogue: 0,0:00:31.01,0:00:31.96,八犬-OP.CN,,0,0,0,,	信否
Dialogue: 0,0:00:31.96,0:00:34.36,八犬-OP.CN,,0,0,0,,	可否
Dialogue: 0,0:00:34.36,0:00:38.64,八犬-OP.CN,,0,0,0,,	吾命由君定
Dialogue: 0,0:00:41.76,0:00:45.22,八犬-OP.CN,,0,0,0,,	冷风相拥
Dialogue: 0,0:00:45.22,0:00:51.60,八犬-OP.CN,,0,0,0,,	生命之思 铭记于心
Dialogue: 0,0:00:51.60,0:00:55.09,八犬-OP.CN,,0,0,0,,	百首不离
Dialogue: 0,0:00:55.09,0:00:57.58,八犬-OP.CN,,0,0,0,,	爱深恨切
Dialogue: 0,0:00:57.58,0:01:01.35,八犬-OP.CN,,0,0,0,,	柔由悲生
Dialogue: 0,0:01:01.35,0:01:06.35,八犬-OP.CN,,0,0,0,,	纵光之灭
Dialogue: 0,0:01:06.35,0:01:11.18,八犬-OP.CN,,0,0,0,,	明望尤存
Dialogue: 0,0:01:11.18,0:01:15.12,八犬-OP.CN,,0,0,0,,	沸腾之血 引入我身
Dialogue: 0,0:01:15.12,0:01:20.29,八犬-OP.CN,,0,0,0,,	将其宿命 变为奇迹
Dialogue: 0,0:01:20.44,0:01:22.50,八犬-OP.CN,,0,0,0,,	勿停 勿休
Dialogue: 0,0:01:22.50,0:01:25.14,八犬-OP.CN,,0,0,0,,	神之所绘阴影
Dialogue: 0,0:01:25.14,0:01:28.54,八犬-OP.CN,,0,0,0,,	划破黑暗
Dialogue: 0,0:01:28.54,0:01:32.35,八犬-OP.CN,,0,0,0,,	伸出双手 天涯海角
Dialogue: 0,0:01:32.35,0:01:34.84,八犬-OP.CN,,0,0,0,,	吾心在念
Dialogue: 0,0:01:34.84,0:01:38.37,八犬-OP.CN,,0,0,0,,	直至归期
Dialogue: 0,0:01:38.37,0:01:43.01,八犬-OP.CN,,0,0,0,,	泪之所示 皆有深意
Dialogue: 0,0:01:43.20,0:01:47.84,八犬-OP.CN,,0,0,0,,	漩涡蠢动 世界尽头
Dialogue: 0,0:01:47.84,0:01:51.68,八犬-OP.CN,,0,0,0,,	咆哮交织 此命运
Dialogue: 0,0:01:51.83,0:01:52.83,八犬-OP.CN,,0,0,0,,	hell!
Dialogue: 0,0:00:00.00,0:00:00.00,Default,,0,0,0,,
Dialogue: 0,0:22:18.91,0:22:21.66,八犬-ed.CN,,0,0,0,,	残像再生
Dialogue: 0,0:22:21.66,0:22:24.31,八犬-ed.CN,,0,0,0,,	通向何方
Dialogue: 0,0:22:24.31,0:22:28.80,八犬-ed.CN,,0,0,0,,	分隔未来的光芒
Dialogue: 0,0:22:29.85,0:22:34.88,八犬-ed.CN,,0,0,0,,	选择的天空 所指示的黎明
Dialogue: 0,0:22:34.88,0:22:39.83,八犬-ed.CN,,0,0,0,,	为了知道生存的意义
Dialogue: 0,0:22:40.36,0:22:45.75,八犬-ed.CN,,0,0,0,,	就算被伤害 但若有闪耀的未来
Dialogue: 0,0:22:45.75,0:22:50.75,八犬-ed.CN,,0,0,0,,	那这身躯 便能毫不犹豫地献出
Dialogue: 0,0:22:50.85,0:22:56.13,八犬-ed.CN,,0,0,0,,	现在 朝着那狂风的彼岸
Dialogue: 0,0:22:56.13,0:23:01.46,八犬-ed.CN,,0,0,0,,	就算有一天世界消融
Dialogue: 0,0:23:01.61,0:23:07.01,八犬-ed.CN,,0,0,0,,	交握的手所抓住的羁绊
Dialogue: 0,0:23:07.26,0:23:12.15,八犬-ed.CN,,0,0,0,,	绝不会被解开
Dialogue: 0,0:23:12.74,0:23:18.18,八犬-ed.CN,,0,0,0,,	紧紧连接命运 string of pain
