Dialogue: 0,0:27:44.12,0:28:01.72,01_rjp,#1,0,0,0,,{\kf100}{\fad(200,200)\blur5}Ĝi {\kf104}estas {\kf112}kiel {\kf104}la {\kf472}kanto, {\kf128}bela {\kf136}kanto {\kf96}de {\kf400}feliĉo
Dialogue: 0,0:27:46.84,0:27:48.08,01_jpn,#1,0,0,0,,アテナ先輩
Dialogue: 0,0:28:01.86,0:28:02.84,01_jpn,#1,0,0,0,,アテナ先輩
Dialogue: 0,0:28:02.98,0:28:03.84,01_jpn,#1,0,0,0,,どこですか？
Dialogue: 0,0:28:04.75,0:28:06.12,01_jpn,#1,0,0,0,,い、いい加減にしないと
Dialogue: 0,0:28:06.40,0:28:08.30,01_jpn,#1,0,0,0,,もう一人で帰っちゃいますよ
Dialogue: 0,0:28:24.41,0:28:25.58,01_jpn,#1,0,0,0,,お姫様
Dialogue: 0,0:28:28.17,0:28:30.62,01_jpn,#1,0,0,0,,シャボンの国へようこそ
Dialogue: 0,0:28:35.96,0:28:37.46,01_jpn,#1,0,0,0,,今宵一夜
Dialogue: 0,0:28:37.71,0:28:40.54,01_jpn,#1,0,0,0,,心ばかりの魔女ベファーナからの
Dialogue: 0,0:28:40.81,0:28:41.96,01_jpn,#1,0,0,0,,贈り物ですよ
Dialogue: 0,0:28:55.39,0:28:57.89,01_jpn,#1,0,0,0,,お姫様、お飲み物をどうぞ
Dialogue: 0,0:28:57.89,0:29:00.09,01_jpn,#1,0,0,0,,お菓子もいっぱいありますぞ
Dialogue: 0,0:29:05.17,0:29:06.91,01_jpn,#1,0,0,0,,藍華ちゃん、まだ早い
Dialogue: 0,0:29:07.24,0:29:08.28,01_jpn,#1,0,0,0,,あによ
Dialogue: 0,0:29:17.48,0:29:18.53,01_jpn,#1,0,0,0,,アテナ先輩
Dialogue: 0,0:29:19.24,0:29:21.47,01_jpn,#1,0,0,0,,今日は本当にありがとうございました
Dialogue: 0,0:29:22.40,0:29:23.74,01_jpn,#1,0,0,0,,そしてごめんなさい
Dialogue: 0,0:29:24.32,0:29:27.53,01_jpn,#1,0,0,0,,先輩方にも迷惑をかけてしまいました
Dialogue: 0,0:29:28.26,0:29:28.84,01_jpn,#1,0,0,0,,この間
Dialogue: 0,0:29:29.17,0:29:31.87,01_jpn,#1,0,0,0,,私が「シャボンの国のお姫様♡」だなんて
Dialogue: 0,0:29:32.10,0:29:34.07,01_jpn,#1,0,0,0,,無理難題を言ってしまったから
Dialogue: 0,0:29:37.05,0:29:38.56,01_jpn,#1,0,0,0,,ねぇ、アリスちゃん
Dialogue: 0,0:29:39.20,0:29:40.08,01_jpn,#1,0,0,0,,もしかして
Dialogue: 0,0:29:40.50,0:29:43.35,01_jpn,#1,0,0,0,,大人になるのはつまらないって思ってる？
Dialogue: 0,0:29:44.60,0:29:46.73,01_jpn,#1,0,0,0,,それってとってももったいないわよ
Dialogue: 0,0:29:48.61,0:29:50.40,01_jpn,#1,0,0,0,,確かに子供の頃は
Dialogue: 0,0:29:50.69,0:29:53.88,01_jpn,#1,0,0,0,,楽しいことは向こうからどんどんやってくるわ
Dialogue: 0,0:29:54.90,0:29:57.52,01_jpn,#1,0,0,0,,だけど、いつもいっぱいいっぱい
Dialogue: 0,0:29:57.78,0:29:59.21,01_jpn,#1,0,0,0,,いっぱいいっぱい
Dialogue: 0,0:29:59.62,0:30:01.82,01_jpn,#1,0,0,0,,そう、いっぱいいっぱい
Dialogue: 0,0:30:02.08,0:30:02.96,01_jpn,#1,0,0,0,,余裕ゼロ
Dialogue: 0,0:30:03.94,0:30:05.39,01_jpn,#1,0,0,0,,でも大人になれば
Dialogue: 0,0:30:05.77,0:30:07.58,01_jpn,#1,0,0,0,,子供の頃には見えなかった
Dialogue: 0,0:30:07.76,0:30:09.34,01_jpn,#1,0,0,0,,素敵な世界に気づける
Dialogue: 0,0:30:10.64,0:30:12.38,01_jpn,#1,0,0,0,,自分の心一つで
Dialogue: 0,0:30:12.46,0:30:15.34,01_jpn,#1,0,0,0,,自由自在の変幻自在に楽しめるのよ
Dialogue: 0,0:30:16.78,0:30:19.18,01_jpn,#1,0,0,0,,自由自在の変幻自在
Dialogue: 0,0:30:20.75,0:30:22.22,01_jpn,#1,0,0,0,,魔法みたいですね
Dialogue: 0,0:30:24.79,0:30:25.34,01_jpn,#1,0,0,0,,そう
Dialogue: 0,0:30:26.08,0:30:27.83,01_jpn,#1,0,0,0,,素敵な大人になれば
Dialogue: 0,0:30:28.23,0:30:30.54,01_jpn,#1,0,0,0,,ただ待ってるだけじゃなくなるの
Dialogue: 0,0:30:33.32,0:30:34.51,01_jpn,#1,0,0,0,,魔法をかけて
Dialogue: 0,0:30:34.72,0:30:37.37,01_jpn,#1,0,0,0,,魔女のベファーナ自身にだってなれちゃうのよ
Dialogue: 0,0:30:38.17,0:30:38.84,01_jpn,#1,0,0,0,,それ
Dialogue: 0,0:30:39.18,0:30:39.80,01_jpn,#1,0,0,0,,それ
Dialogue: 0,0:30:40.84,0:30:41.54,01_jpn,#1,0,0,0,,それ
Dialogue: 0,0:30:44.63,0:30:45.42,01_jpn,#1,0,0,0,,それは
Dialogue: 0,0:30:46.86,0:30:49.55,01_jpn,#1,0,0,0,,でっかいドキドキワクワクですね
Dialogue: 0,0:30:54.86,0:30:56.02,01_jpn,#1,0,0,0,,アテナ先輩は
Dialogue: 0,0:30:56.59,0:30:57.61,01_jpn,#1,0,0,0,,私にとって
Dialogue: 0,0:30:58.35,0:31:00.59,01_jpn,#1,0,0,0,,ずっとずっと魔女のベファーナなんです
Dialogue: 0,0:31:06.83,0:31:08.50,01_jpn,#1,0,0,0,,アテナ先輩のおかげで
Dialogue: 0,0:31:09.00,0:31:10.58,01_jpn,#1,0,0,0,,私は自分のことを
Dialogue: 0,0:31:10.74,0:31:12.90,01_jpn,#1,0,0,0,,少しだけ好きになれた気がしました
Dialogue: 0,0:31:13.77,0:31:16.13,01_jpn,#1,0,0,0,,でもこうしてプリマになってみると
Dialogue: 0,0:31:16.35,0:31:17.13,01_jpn,#1,0,0,0,,全然で
Dialogue: 0,0:31:43.84,0:31:45.60,01_jpn,#1,0,0,0,,招待状がこない
Dialogue: 0,0:31:52.07,0:31:52.67,01_jpn,#1,0,0,0,,おい
Dialogue: 0,0:31:55.32,0:31:56.41,01_jpn,#1,0,0,0,,おい！
Dialogue: 0,0:31:57.22,0:32:00.15,01_jpn,#1,0,0,0,,暁さん、またお買い物ですか？
Dialogue: 0,0:32:00.40,0:32:03.26,01_jpn,#1,0,0,0,,あ、レデントーレのお祭りに来たんですか？
Dialogue: 0,0:32:03.42,0:32:05.08,01_jpn,#1,0,0,0,,いや、なんだ
Dialogue: 0,0:32:05.84,0:32:07.54,01_jpn,#1,0,0,0,,愛アイはいないのか？
Dialogue: 0,0:32:07.83,0:32:08.89,01_jpn,#1,0,0,0,,アイちゃんだったら
Dialogue: 0,0:32:09.15,0:32:12.03,01_jpn,#1,0,0,0,,藍華ちゃんのガーデンカフェをお手伝いに行ってます
Dialogue: 0,0:32:13.38,0:32:14.64,01_jpn,#1,0,0,0,,そんなことをしてて
Dialogue: 0,0:32:14.95,0:32:16.18,01_jpn,#1,0,0,0,,間に合うのか？
Dialogue: 0,0:32:16.21,0:32:17.01,01_jpn,#1,0,0,0,,間に合う？
Dialogue: 0,0:32:18.11,0:32:19.46,01_jpn,#1,0,0,0,,屋形船だよ
Dialogue: 0,0:32:19.89,0:32:21.65,01_jpn,#1,0,0,0,,招待状が来てないが
Dialogue: 0,0:32:21.85,0:32:23.88,01_jpn,#1,0,0,0,,あ、屋形船ですか
Dialogue: 0,0:32:25.91,0:32:28.97,01_jpn,#1,0,0,0,,別に楽しみにしていたとかじゃないんだがな
Dialogue: 0,0:32:28.99,0:32:30.27,01_jpn,#1,0,0,0,,あれは中止です
Dialogue: 0,0:32:32.45,0:32:34.35,01_jpn,#1,0,0,0,,なん，だと！？
Dialogue: 0,0:32:34.99,0:32:37.26,01_jpn,#1,0,0,0,,みなさんお忙しいみたいで
Dialogue: 0,0:32:37.51,0:32:38.74,01_jpn,#1,0,0,0,,中止…
Dialogue: 0,0:32:39.16,0:32:40.91,01_jpn,#1,0,0,0,,あわわわ、えっと
Dialogue: 0,0:32:41.03,0:32:42.41,01_jpn,#1,0,0,0,,少し時間がありますから
Dialogue: 0,0:32:42.60,0:32:43.86,01_jpn,#1,0,0,0,,お茶でもいかがですか？
Dialogue: 0,0:32:45.22,0:32:48.35,01_jpn,#1,0,0,0,,うむ、生クリームのせココアで頼む
Dialogue: 0,0:32:48.66,0:32:49.81,01_jpn,#1,0,0,0,,ありません
Dialogue: 0,0:32:50.33,0:32:52.21,01_jpn,#1,0,0,0,,ほうじ茶でいいですか？
Dialogue: 0,0:32:54.08,0:32:56.34,03_jpn,#1,0,0,0,,{\an7}ローズティーオレとパンプキンタルトですね
Dialogue: 0,0:32:54.96,0:32:56.61,03_jpn,#1,0,0,0,,{\an9}ご注文をお伺いします
Dialogue: 0,0:32:56.76,0:32:58.78,01_jpn,#1,0,0,0,,ああ、それ2番テーブル、2番テーブル
Dialogue: 0,0:32:59.53,0:33:00.00,01_jpn,#1,0,0,0,,あ、はい
Dialogue: 0,0:33:00.04,0:33:02.12,01_jpn,#1,0,0,0,,予約のお客様、お見えになりました
Dialogue: 0,0:33:03.34,0:33:05.60,03_jpn,#1,0,0,0,,{\an7}おすすめは、こちらのクレープになります
Dialogue: 0,0:33:06.84,0:33:07.84,01_jpn,#1,0,0,0,,いらっしゃいませ
Dialogue: 0,0:33:11.21,0:33:12.89,01_jpn,#1,0,0,0,,テンションマックス
Dialogue: 0,0:33:15.68,0:33:17.14,01_jpn,#1,0,0,0,,ありがとう、アリア社長
Dialogue: 0,0:33:17.62,0:33:20.70,01_jpn,#1,0,0,0,,本当にもう猫の手も借りたいところだったのよ
Dialogue: 0,0:33:23.15,0:33:24.94,01_jpn,#1,0,0,0,,ああ、ありがとう
Dialogue: 0,0:33:32.01,0:33:35.20,01_jpn,#1,0,0,0,,今日もアテナさんのコンサート、満席みたいですね
Dialogue: 0,0:33:35.59,0:33:38.44,01_jpn,#1,0,0,0,,はい、特に今日は最終日ですし
Dialogue: 0,0:33:38.74,0:33:40.31,01_jpn,#1,0,0,0,,昼公演だけですから
Dialogue: 0,0:33:41.05,0:33:41.98,01_jpn,#1,0,0,0,,昨日行ったけど
Dialogue: 0,0:33:42.18,0:33:44.17,01_jpn,#1,0,0,0,,本当に素晴らしかった
Dialogue: 0,0:33:44.45,0:33:46.05,01_jpn,#1,0,0,0,,アリスさんは行かれたんですか？
Dialogue: 0,0:33:47.59,0:33:49.08,01_jpn,#1,0,0,0,,ああ、いいえ
Dialogue: 0,0:33:49.35,0:33:50.65,01_jpn,#1,0,0,0,,そうですか
Dialogue: 0,0:33:50.76,0:33:52.50,01_jpn,#1,0,0,0,,お忙しいですもんね
Dialogue: 0,0:34:21.97,0:34:23.61,01_jpn,#1,0,0,0,,お疲れ様でした
Dialogue: 0,0:34:23.61,0:34:25.12,01_jpn,#1,0,0,0,,ありがとう
Dialogue: 0,0:34:25.22,0:34:26.85,01_jpn,#1,0,0,0,,猫さんもありがとうね
Dialogue: 0,0:34:35.43,0:34:37.05,01_jpn,#1,0,0,0,,花火楽しみ
Dialogue: 0,0:34:37.43,0:34:39.33,01_jpn,#1,0,0,0,,あ、始まっちゃう
Dialogue: 0,0:34:39.33,0:34:40.25,01_jpn,#1,0,0,0,,行くわよ
Dialogue: 0,0:34:40.36,0:34:40.71,01_jpn,#1,0,0,0,,うん
Dialogue: 0,0:34:41.55,0:34:42.79,01_jpn,#1,0,0,0,,ありがとうございます
Dialogue: 0,0:34:50.36,0:34:51.98,01_jpn,#1,0,0,0,,お疲れちゃん
Dialogue: 0,0:34:52.29,0:34:54.23,01_jpn,#1,0,0,0,,おかげで大成功だったわ
Dialogue: 0,0:34:54.52,0:34:56.52,01_jpn,#1,0,0,0,,みんなも遠慮なく食べて、食べて
Dialogue: 0,0:34:56.62,0:34:58.26,01_jpn,#1,0,0,0,,いただきます
Dialogue: 0,0:34:59.03,0:35:01.21,01_jpn,#1,0,0,0,,みんな、お疲れ様
Dialogue: 0,0:35:01.59,0:35:03.97,01_jpn,#1,0,0,0,,お、灯里、お疲れ
Dialogue: 0,0:35:09.27,0:35:11.51,01_jpn,#1,0,0,0,,灯里さん、お疲れ様でした
Dialogue: 0,0:35:12.27,0:35:13.48,01_jpn,#1,0,0,0,,この時間になると
Dialogue: 0,0:35:13.72,0:35:15.55,01_jpn,#1,0,0,0,,このあたりは静かだね
Dialogue: 0,0:35:15.90,0:35:18.07,01_jpn,#1,0,0,0,,みんな花火の方に行っちゃうからね
Dialogue: 0,0:35:18.47,0:35:19.89,01_jpn,#1,0,0,0,,お店もおしまい
Dialogue: 0,0:35:20.27,0:35:22.20,01_jpn,#1,0,0,0,,ほら、あんたも食べなさい
Dialogue: 0,0:35:22.52,0:35:23.28,01_jpn,#1,0,0,0,,うん
Dialogue: 0,0:35:26.88,0:35:27.84,01_jpn,#1,0,0,0,,アリスちゃんは？
Dialogue: 0,0:35:28.24,0:35:28.79,01_jpn,#1,0,0,0,,うん
Dialogue: 0,0:35:29.87,0:35:32.47,01_jpn,#1,0,0,0,,一応私がここにいることは
Dialogue: 0,0:35:32.60,0:35:33.93,01_jpn,#1,0,0,0,,伝えてありますけど
Dialogue: 0,0:35:34.37,0:35:36.68,01_jpn,#1,0,0,0,,もしアテナさんとアリスさんが来たら
Dialogue: 0,0:35:36.77,0:35:38.13,01_jpn,#1,0,0,0,,かなりミラクルだよね
Dialogue: 0,0:35:38.55,0:35:39.64,01_jpn,#1,0,0,0,,だよね
Dialogue: 0,0:35:43.29,0:35:44.80,01_jpn,#1,0,0,0,,花火始まった
Dialogue: 0,0:35:49.23,0:35:50.95,01_jpn,#1,0,0,0,,花火が見える場所だったら
Dialogue: 0,0:35:51.01,0:35:53.18,01_jpn,#1,0,0,0,,もう一稼ぎできたんだけどね
Dialogue: 0,0:35:53.39,0:35:56.53,01_jpn,#1,0,0,0,,ええ、まだ働き足りないんですか？
Dialogue: 0,0:35:56.82,0:35:58.83,01_jpn,#1,0,0,0,,藍華さんパワフルすぎます
Dialogue: 0,0:35:59.04,0:36:00.09,01_jpn,#1,0,0,0,,もはや鬼
Dialogue: 0,0:36:00.42,0:36:01.64,01_jpn,#1,0,0,0,,あに言ってんのよ
Dialogue: 0,0:36:01.89,0:36:03.62,01_jpn,#1,0,0,0,,晃さんの鬼っぷりに比べたら
Dialogue: 0,0:36:03.78,0:36:04.86,01_jpn,#1,0,0,0,,私なんか天使よ
Dialogue: 0,0:36:08.62,0:36:09.55,01_jpn,#1,0,0,0,,晃さん
Dialogue: 0,0:36:10.05,0:36:12.06,01_jpn,#1,0,0,0,,誰が鬼だ、誰が
Dialogue: 0,0:36:12.50,0:36:13.26,01_jpn,#1,0,0,0,,あらあら
Dialogue: 0,0:36:15.01,0:36:17.60,01_jpn,#1,0,0,0,,アリシアさんも、ご用は済んだんですか？
Dialogue: 0,0:36:17.79,0:36:21.61,01_jpn,#1,0,0,0,,うん、忙しいのは花火が始まるまでだから
Dialogue: 0,0:36:22.04,0:36:24.62,01_jpn,#1,0,0,0,,それより素敵な記念日は見つかった？
Dialogue: 0,0:36:24.90,0:36:25.86,01_jpn,#1,0,0,0,,いいえ
Dialogue: 0,0:36:26.73,0:36:28.20,01_jpn,#1,0,0,0,,え、みんな知ってるの？
Dialogue: 0,0:36:28.40,0:36:29.22,01_jpn,#1,0,0,0,,サプライズ…
Dialogue: 0,0:36:29.79,0:36:31.06,01_jpn,#1,0,0,0,,いいのかな
Dialogue: 0,0:36:32.09,0:36:33.06,01_jpn,#1,0,0,0,,全っく
Dialogue: 0,0:36:34.21,0:36:34.90,01_jpn,#1,0,0,0,,あいつら
Dialogue: 0,0:36:35.29,0:36:37.82,01_jpn,#1,0,0,0,,後輩たちにこんなに気を使わせるとはな
Dialogue: 0,0:36:38.21,0:36:41.49,01_jpn,#1,0,0,0,,本当に 放っておけない二人ね
Dialogue: 0,0:36:46.75,0:36:47.61,01_jpn,#1,0,0,0,,いつだって
Dialogue: 0,0:36:47.83,0:36:49.48,01_jpn,#1,0,0,0,,あいつは不器用なんだ
Dialogue: 0,0:36:50.54,0:36:51.44,01_jpn,#1,0,0,0,,そうね
Dialogue: 0,0:36:51.79,0:36:54.92,01_jpn,#1,0,0,0,,そして、とても真っ直ぐ
Dialogue: 0,0:36:55.34,0:36:56.52,01_jpn,#1,0,0,0,,あの時もな
Dialogue: 0,0:36:57.56,0:36:59.62,01_jpn,#1,0,0,0,,覚えてるか、アリシア？
Dialogue: 0,0:37:00.00,0:37:01.12,01_jpn,#1,0,0,0,,ええ
Dialogue: 0,0:37:07.72,0:37:09.16,01_jpn,#1,0,0,0,,ねえねえ、聞いてください
Dialogue: 0,0:37:09.31,0:37:11.25,01_jpn,#1,0,0,0,,例の天才少女のこと
Dialogue: 0,0:37:14.89,0:37:16.36,01_jpn,#1,0,0,0,,重度の人見知りで
Dialogue: 0,0:37:16.40,0:37:18.99,01_jpn,#1,0,0,0,,コミュニケーションに難ありだそうで
Dialogue: 0,0:37:19.24,0:37:21.36,01_jpn,#1,0,0,0,,ウンディーネは接客業なのに
Dialogue: 0,0:37:21.57,0:37:23.38,01_jpn,#1,0,0,0,,大丈夫なのかしら
Dialogue: 0,0:37:24.61,0:37:27.24,01_jpn,#1,0,0,0,,緊張が続いてるんじゃないかな
Dialogue: 0,0:37:27.43,0:37:29.91,01_jpn,#1,0,0,0,,周りは年上ばかりだもんね
Dialogue: 0,0:37:31.14,0:37:32.44,01_jpn,#1,0,0,0,,でも天才
Dialogue: 0,0:37:32.98,0:37:34.38,01_jpn,#1,0,0,0,,羨ましい
Dialogue: 0,0:37:34.91,0:37:37.25,01_jpn,#1,0,0,0,,きっと足踏みすることもなく
Dialogue: 0,0:37:37.60,0:37:39.12,01_jpn,#1,0,0,0,,プリマになるんでしょうね
Dialogue: 0,0:37:58.81,0:38:00.36,01_jpn,#1,0,0,0,,アリスちゃん
Dialogue: 0,0:38:00.41,0:38:02.00,01_jpn,#1,0,0,0,,すごい、すごい
Dialogue: 0,0:38:02.28,0:38:03.44,01_jpn,#1,0,0,0,,やめてください
Dialogue: 0,0:38:04.73,0:38:07.05,01_jpn,#1,0,0,0,,水の三大妖精の先輩に
Dialogue: 0,0:38:07.57,0:38:10.30,01_jpn,#1,0,0,0,,私の気持ちなんてわかりっこありませんから
Dialogue: 0,0:38:12.42,0:38:14.82,01_jpn,#1,0,0,0,,今の私が満足にできるのは
Dialogue: 0,0:38:15.13,0:38:16.85,01_jpn,#1,0,0,0,,操舵術だけなんです
Dialogue: 0,0:38:17.15,0:38:18.69,01_jpn,#1,0,0,0,,接客に必要な話術も
Dialogue: 0,0:38:18.89,0:38:19.73,01_jpn,#1,0,0,0,,カンツォーネも
Dialogue: 0,0:38:19.90,0:38:21.61,01_jpn,#1,0,0,0,,散々な有様です
Dialogue: 0,0:38:22.51,0:38:23.94,01_jpn,#1,0,0,0,,だから先輩も
Dialogue: 0,0:38:24.01,0:38:25.98,01_jpn,#1,0,0,0,,私に期待しないで下さい
Dialogue: 0,0:38:27.09,0:38:29.49,01_jpn,#1,0,0,0,,きっとこんな歪な子だったんだって
Dialogue: 0,0:38:29.79,0:38:31.14,01_jpn,#1,0,0,0,,失望するから
Dialogue: 0,0:38:33.49,0:38:34.30,01_jpn,#1,0,0,0,,わかる
Dialogue: 0,0:38:37.64,0:38:38.70,01_jpn,#1,0,0,0,,怖いよね
Dialogue: 0,0:38:39.82,0:38:40.63,01_jpn,#1,0,0,0,,アリスちゃん
Dialogue: 0,0:38:41.12,0:38:41.92,01_jpn,#1,0,0,0,,実はね
Dialogue: 0,0:38:42.38,0:38:44.21,01_jpn,#1,0,0,0,,私も謳だけなの
Dialogue: 0,0:38:45.22,0:38:46.40,01_jpn,#1,0,0,0,,歪な子よ
Dialogue: 0,0:38:46.77,0:38:48.89,01_jpn,#1,0,0,0,,だからすごくよくわかる
Dialogue: 0,0:38:55.71,0:38:58.91,01_jpn,#1,0,0,0,,私たち、どこか似ているのかもね
Dialogue: 0,0:39:01.37,0:39:03.47,01_jpn,#1,0,0,0,,ね、ゆっくり行きましょう
Dialogue: 0,0:39:04.37,0:39:05.21,01_jpn,#1,0,0,0,,アリスちゃん
Dialogue: 0,0:39:06.81,0:39:10.07,l1_jpn,#1,0,0,0,,{\fad(200,200)\blur5}{\kf42}二{\kf80}人{\kf77}似{\kf42}て{\kf44}い{\kf41}る
Dialogue: 0,0:39:10.44,0:39:14.35,l1_jpn,#1,0,0,0,,{\kf74}{\fad(200,200)\blur5}マーー{\kf34}ブ{\kf55}ダーー{\kf45}チ{\kf56}超{\kf45}最{\kf82}高
Dialogue: 0,0:39:15.19,0:39:17.46,01_jpn,#1,0,0,0,,なんですか、何なんですか
Dialogue: 0,0:39:15.57,0:39:18.85,l1_jpn,#1,0,0,0,,{\fad(200,200)\blur5}{\kf82}歪{\kf65}な{\kf80}二{\kf101}人
Dialogue: 0,0:39:19.11,0:39:22.95,l1_jpn,#1,0,0,0,,{\fad(200,200)\blur5}{\kf55}お{\kf55}似{\kf38}合{\kf32}い{\kf51}だ{\kf116}も{\kf37}の
Dialogue: 0,0:39:22.07,0:39:23.48,01_jpn,#1,0,0,0,,でっかいがっかりです
Dialogue: 0,0:39:23.52,0:39:24.35,01_jpn,#1,0,0,0,,あら
Dialogue: 0,0:39:27.38,0:39:29.52,01_jpn,#1,0,0,0,,誰かをがっかりさせると
Dialogue: 0,0:39:30.15,0:39:32.07,01_jpn,#1,0,0,0,,自分もがっかりしてしまう
Dialogue: 0,0:39:33.29,0:39:35.77,01_jpn,#1,0,0,0,,人よりスタートが早かったのであれば
Dialogue: 0,0:39:35.98,0:39:37.05,01_jpn,#1,0,0,0,,なおのこと
Dialogue: 0,0:39:37.69,0:39:39.72,01_jpn,#1,0,0,0,,急ぐ必要はないの
Dialogue: 0,0:39:40.70,0:39:42.86,01_jpn,#1,0,0,0,,ゆっくりのんびり
Dialogue: 0,0:39:43.01,0:39:45.60,01_jpn,#1,0,0,0,,アリスちゃんの歩む一歩一歩が
Dialogue: 0,0:39:45.65,0:39:48.72,01_jpn,#1,0,0,0,,この街で過ごす大切な宝物
Dialogue: 0,0:39:49.56,0:39:51.36,01_jpn,#1,0,0,0,,一つ一つの足跡は
Dialogue: 0,0:39:51.48,0:39:52.80,01_jpn,#1,0,0,0,,織り成すメロディー
Dialogue: 0,0:39:53.52,0:39:55.76,01_jpn,#1,0,0,0,,ああ、謳の神様
Dialogue: 0,0:39:56.31,0:39:57.80,01_jpn,#1,0,0,0,,どうか、アリスちゃんの
Dialogue: 0,0:39:57.97,0:39:59.12,01_jpn,#1,0,0,0,,遺す軌跡が…
Dialogue: 0,0:39:59.62,0:40:00.43,01_jpn,#1,0,0,0,,旋律が
Dialogue: 0,0:40:01.32,0:40:02.90,01_jpn,#1,0,0,0,,素敵なシンフォニーを
Dialogue: 0,0:40:03.26,0:40:04.76,01_jpn,#1,0,0,0,,響かせますように
Dialogue: 0,0:40:09.08,0:40:11.55,01_jpn,#1,0,0,0,,本当に不器用なんだよ
Dialogue: 0,0:40:13.13,0:40:15.91,01_jpn,#1,0,0,0,,お互いを思うほどに不器用になる
Dialogue: 0,0:40:16.19,0:40:17.38,01_jpn,#1,0,0,0,,みんな同じね
Dialogue: 0,0:40:17.81,0:40:19.36,01_jpn,#1,0,0,0,,私はそんなことないぞ
Dialogue: 0,0:40:19.57,0:40:20.28,01_jpn,#1,0,0,0,,あらあら
Dialogue: 0,0:40:20.56,0:40:23.73,01_jpn,#1,0,0,0,,晃さんなんか不器用の塊ですよね
Dialogue: 0,0:40:23.98,0:40:25.50,01_jpn,#1,0,0,0,,お前に言われたくないな
Dialogue: 0,0:40:25.69,0:40:26.94,01_jpn,#1,0,0,0,,泣き虫セレナーデ
Dialogue: 0,0:40:27.12,0:40:29.11,01_jpn,#1,0,0,0,,泣き虫セレナーデ禁止
Dialogue: 0,0:40:29.22,0:40:29.98,01_jpn,#1,0,0,0,,あらあら
Dialogue: 0,0:40:31.74,0:40:34.02,01_jpn,#1,0,0,0,,おっと、そろそろ時間だ
Dialogue: 0,0:40:34.19,0:40:35.00,01_jpn,#1,0,0,0,,そうね
Dialogue: 0,0:40:35.85,0:40:37.48,01_jpn,#1,0,0,0,,みんな、行きましょうか
Dialogue: 0,0:40:38.71,0:40:40.19,01_jpn,#1,0,0,0,,行くって
Dialogue: 0,0:40:40.79,0:40:41.96,01_jpn,#1,0,0,0,,どこへ？
Dialogue: 0,0:40:43.44,0:40:44.26,01_jpn,#1,0,0,0,,実はね
Dialogue: 0,0:41:15.14,0:41:16.19,01_jpn,#1,0,0,0,,アテナ先輩
Dialogue: 0,0:41:17.83,0:41:18.67,01_jpn,#1,0,0,0,,アリスちゃん
Dialogue: 0,0:41:19.49,0:41:20.59,01_jpn,#1,0,0,0,,来てくれたのね
Dialogue: 0,0:41:21.10,0:41:22.28,01_jpn,#1,0,0,0,,アリシアさんから
Dialogue: 0,0:41:22.45,0:41:25.26,01_jpn,#1,0,0,0,,直接招待状を受け取ってしまいましたので
Dialogue: 0,0:41:25.85,0:41:27.53,01_jpn,#1,0,0,0,,こないわけにはいきません
Dialogue: 0,0:41:28.71,0:41:29.42,01_jpn,#1,0,0,0,,ありがとう
Dialogue: 0,0:41:32.21,0:41:33.99,01_jpn,#1,0,0,0,,で、なんでしょうか？
Dialogue: 0,0:41:34.57,0:41:37.52,01_jpn,#1,0,0,0,,アリスちゃん、もしかして怒ってない？
Dialogue: 0,0:41:38.91,0:41:41.68,01_jpn,#1,0,0,0,,何か怒らせるようなことでもしたんですか？
Dialogue: 0,0:41:43.05,0:41:43.80,01_jpn,#1,0,0,0,,そうなの
Dialogue: 0,0:41:44.45,0:41:44.83,01_jpn,#1,0,0,0,,え？
Dialogue: 0,0:41:47.41,0:41:49.81,01_jpn,#1,0,0,0,,わたし、アリスちゃんに
Dialogue: 0,0:41:49.98,0:41:52.36,01_jpn,#1,0,0,0,,話さなくちゃいけないことがあるの
Dialogue: 0,0:41:58.32,0:41:59.42,01_jpn,#1,0,0,0,,プリマへの…
Dialogue: 0,0:42:00.00,0:42:01.52,01_jpn,#1,0,0,0,,飛び級昇格
Dialogue: 0,0:42:02.36,0:42:05.08,01_jpn,#1,0,0,0,,ええ、われわれは待ち望んでいます
Dialogue: 0,0:42:05.61,0:42:07.98,01_jpn,#1,0,0,0,,アリス・キャロルの卒業の時を
Dialogue: 0,0:42:08.65,0:42:11.40,01_jpn,#1,0,0,0,,試験内容は全て一任します
Dialogue: 0,0:42:17.94,0:42:18.99,01_jpn,#1,0,0,0,,アテナちゃん
Dialogue: 0,0:42:19.18,0:42:20.07,01_jpn,#1,0,0,0,,どうした？
Dialogue: 0,0:42:22.13,0:42:23.50,01_jpn,#1,0,0,0,,全くわからんな
Dialogue: 0,0:42:24.38,0:42:26.60,01_jpn,#1,0,0,0,,もうすぐ卒業なの
Dialogue: 0,0:42:28.15,0:42:29.02,01_jpn,#1,0,0,0,,卒業？
Dialogue: 0,0:42:29.69,0:42:30.93,01_jpn,#1,0,0,0,,アリスちゃんのこと？
Dialogue: 0,0:42:31.29,0:42:33.61,01_jpn,#1,0,0,0,,そうか、早いもんだな
Dialogue: 0,0:42:37.93,0:42:40.97,01_jpn,#1,0,0,0,,そう、もっとゆっくりでいい
Dialogue: 0,0:42:43.57,0:42:44.39,01_jpn,#1,0,0,0,,なのに
Dialogue: 0,0:42:45.46,0:42:48.27,01_jpn,#1,0,0,0,,開演の幕は上がってしまう
Dialogue: 0,0:42:52.30,0:42:54.40,01_jpn,#1,0,0,0,,今日は私がお客様で
Dialogue: 0,0:42:54.80,0:42:57.01,01_jpn,#1,0,0,0,,アリスちゃんがウンディーネの役で
Dialogue: 0,0:42:57.17,0:42:58.74,01_jpn,#1,0,0,0,,一日通してみない？
Dialogue: 0,0:43:00.96,0:43:02.72,01_jpn,#1,0,0,0,,面白いアイデアですね
Dialogue: 0,0:43:03.35,0:43:04.97,01_jpn,#1,0,0,0,,受けて立ちましょう
Dialogue: 0,0:43:05.65,0:43:07.96,01_jpn,#1,0,0,0,,じゃあアテナ先輩は今から
Dialogue: 0,0:43:08.16,0:43:10.25,01_jpn,#1,0,0,0,,私の大切なお客様ですね
Dialogue: 0,0:43:10.47,0:43:11.74,01_jpn,#1,0,0,0,,はい、よろしく
Dialogue: 0,0:43:16.46,0:43:19.27,01_jpn,#1,0,0,0,,お客様、お手をどうぞ
Dialogue: 0,0:43:19.99,0:43:22.23,01_jpn,#1,0,0,0,,ああ、神様
Dialogue: 0,0:43:23.29,0:43:24.70,01_jpn,#1,0,0,0,,謳の神様
Dialogue: 0,0:43:26.27,0:43:27.56,01_jpn,#1,0,0,0,,飛び級昇進が
Dialogue: 0,0:43:27.89,0:43:29.28,01_jpn,#1,0,0,0,,やりすぎだと思うのは
Dialogue: 0,0:43:30.23,0:43:32.80,01_jpn,#1,0,0,0,,私がのろすけだからでしょうか
Dialogue: 0,0:43:35.04,0:43:37.51,01_jpn,#1,0,0,0,,あ、謳の神様
Dialogue: 0,0:43:39.30,0:43:41.59,01_jpn,#1,0,0,0,,このかけがえのない時間が
Dialogue: 0,0:43:42.15,0:43:44.80,01_jpn,#1,0,0,0,,ゆるやかに続けばいいと願うのは
Dialogue: 0,0:43:45.95,0:43:48.44,01_jpn,#1,0,0,0,,私が歪だからでしょうか？
Dialogue: 0,0:44:00.65,0:44:04.37,01_jpn,#1,0,0,0,,私、もともと声が小さい方ですし
Dialogue: 0,0:44:04.86,0:44:07.97,01_jpn,#1,0,0,0,,それに謳もあんまり上手くないですし
Dialogue: 0,0:44:08.73,0:44:11.05,01_jpn,#1,0,0,0,,ちゃんと声量が出ているかとか
Dialogue: 0,0:44:11.26,0:44:13.70,01_jpn,#1,0,0,0,,音程を外していないかとか
Dialogue: 0,0:44:14.25,0:44:17.99,01_jpn,#1,0,0,0,,上手に歌わなければと考えれば考えるほど
Dialogue: 0,0:44:18.28,0:44:20.53,01_jpn,#1,0,0,0,,頭の中が真っ白になってしまいます
Dialogue: 0,0:44:20.53,0:44:22.58,01_jpn,#1,0,0,0,,あ、謳の神様
Dialogue: 0,0:44:24.19,0:44:25.74,01_jpn,#1,0,0,0,,迷える後輩を
Dialogue: 0,0:44:26.01,0:44:28.34,01_jpn,#1,0,0,0,,銀色の輝きに導くのは
Dialogue: 0,0:44:28.82,0:44:29.64,01_jpn,#1,0,0,0,,暖かく
Dialogue: 0,0:44:29.98,0:44:31.90,01_jpn,#1,0,0,0,,優しい言葉なのでしょう
Dialogue: 0,0:44:33.63,0:44:35.91,01_jpn,#1,0,0,0,,心を俯かせるような言葉は
Dialogue: 0,0:44:36.18,0:44:37.79,01_jpn,#1,0,0,0,,口にするべきではない
Dialogue: 0,0:44:39.14,0:44:42.27,01_jpn,#1,0,0,0,,大切な試験の途中なら、とくに
Dialogue: 0,0:44:44.52,0:44:47.97,01_jpn,#1,0,0,0,,でも、だとしても私は——
Dialogue: 0,0:44:48.37,0:44:50.91,01_jpn,#1,0,0,0,,謳という存在の前でだけは
Dialogue: 0,0:44:51.49,0:44:54.06,01_jpn,#1,0,0,0,,自分の心に正直であり続けたい
Dialogue: 0,0:44:59.01,0:45:01.56,01_jpn,#1,0,0,0,,本人が辛いと思って歌う謳は
Dialogue: 0,0:45:02.01,0:45:04.33,01_jpn,#1,0,0,0,,聴いている人にもつらく伝わるわ
Dialogue: 0,0:45:05.26,0:45:08.27,01_jpn,#1,0,0,0,,歌うための技術はもちろん必要だけど…
Dialogue: 0,0:45:08.88,0:45:10.44,01_jpn,#1,0,0,0,,何より大切なのは
Dialogue: 0,0:45:10.88,0:45:11.84,01_jpn,#1,0,0,0,,歌うことが
Dialogue: 0,0:45:11.84,0:45:13.38,01_jpn,#1,0,0,0,,大好きだという気持ち
Dialogue: 0,0:45:15.68,0:45:16.78,01_jpn,#1,0,0,0,,歌うことが
Dialogue: 0,0:45:17.26,0:45:18.08,01_jpn,#1,0,0,0,,大好き…
Dialogue: 0,0:45:20.63,0:45:22.10,01_jpn,#1,0,0,0,,アリスちゃんの謳を
Dialogue: 0,0:45:22.34,0:45:25.00,01_jpn,#1,0,0,0,,アリスちゃん自身が好きになってあげなくて
Dialogue: 0,0:45:25.72,0:45:28.44,01_jpn,#1,0,0,0,,他の誰が好きになってくれるというの
Dialogue: 0,0:45:30.40,0:45:31.19,01_jpn,#1,0,0,0,,大丈夫
Dialogue: 0,0:45:31.77,0:45:32.97,01_jpn,#1,0,0,0,,つまづいてもいい
Dialogue: 0,0:45:34.00,0:45:34.90,01_jpn,#1,0,0,0,,ゆっくり
Dialogue: 0,0:45:35.37,0:45:36.48,01_jpn,#1,0,0,0,,ゆっくりでいい
Dialogue: 0,0:45:37.91,0:45:38.63,01_jpn,#1,0,0,0,,それが
Dialogue: 0,0:45:39.24,0:45:40.93,01_jpn,#1,0,0,0,,歪な私達の
Dialogue: 0,0:45:41.26,0:45:43.04,01_jpn,#1,0,0,0,,歩く速さなのだもの
Dialogue: 0,0:45:46.35,0:46:02.88,01_rjp,#1,0,0,0,,{\kf873}{\fad(200,200)\blur5}Vesperruĝo, {\kf336}fluas {\kf101}en {\kf317}ondetoj
Dialogue: 0,0:46:02.88,0:46:21.46,01_rjp,#1,0,0,0,,{\kf116}{\fad(200,200)\blur5}Ĝi {\kf136}estas {\kf120}kiel {\kf85}la {\kf507}kanto, {\kf112}bela {\kf197}kanto {\kf59}de {\kf491}feliĉo
Dialogue: 0,0:46:23.18,0:46:25.30,01_jpn,#1,0,0,0,,あ、アリスちゃん…
Dialogue: 0,0:46:26.26,0:46:42.22,01_rjp,#1,0,0,0,,{\kf59}{\fad(200,200)\blur5}Ĉu {\kf64}vi {\kf360}rimarkis {\kf451}birdojn, {\kf186}portanta {\kf296}afableco {\kf33}?
Dialogue: 0,0:46:26.56,0:46:28.44,01_jpn,#1,0,0,0,,こんなにも強く
Dialogue: 0,0:46:28.64,0:46:31.41,01_jpn,#1,0,0,0,,一足飛びに成長を遂げていたなんて
Dialogue: 0,0:46:32.47,0:46:34.76,01_jpn,#1,0,0,0,,貴方は本当に駆け足だね
Dialogue: 0,0:46:36.82,0:46:38.60,01_jpn,#1,0,0,0,,自分の通り名にまつわる
Dialogue: 0,0:46:38.82,0:46:39.98,01_jpn,#1,0,0,0,,神話を知ってから
Dialogue: 0,0:46:40.81,0:46:41.97,01_jpn,#1,0,0,0,,心のどこかで
Dialogue: 0,0:46:42.18,0:46:42.95,01_jpn,#1,0,0,0,,恐れていた
Dialogue: 0,0:46:43.74,0:47:01.42,01_rjp,#1,0,0,0,,{\kf176}{\fad(200,200)\blur5}Super {\kf50}la {\kf105}maro {\kf375}flugas, {\kf51}ili {\kf407}flugas {\kf131}kun {\kf473}amo
Dialogue: 0,0:46:44.09,0:46:45.41,01_jpn,#1,0,0,0,,もし自分の謳が
Dialogue: 0,0:46:45.93,0:46:49.38,01_jpn,#1,0,0,0,,誰かを哀しみの海に沈めてしまったらと…
Dialogue: 0,0:46:51.10,0:46:53.57,01_jpn,#1,0,0,0,,でも今私の目の前で
Dialogue: 0,0:46:53.70,0:46:54.65,01_jpn,#1,0,0,0,,歌っている
Dialogue: 0,0:46:55.04,0:46:57.11,01_jpn,#1,0,0,0,,この天使の翼が折れ
Dialogue: 0,0:46:57.28,0:46:58.61,01_jpn,#1,0,0,0,,闇に堕ちることは
Dialogue: 0,0:46:59.25,0:47:00.14,01_jpn,#1,0,0,0,,けっしてないーー
Dialogue: 0,0:47:05.76,0:47:07.28,01_jpn,#1,0,0,0,,あの時、私ーー
Dialogue: 0,0:47:07.84,0:47:09.90,01_jpn,#1,0,0,0,,アリスちゃんが試験に落ちても
Dialogue: 0,0:47:10.09,0:47:11.47,01_jpn,#1,0,0,0,,いいって思ってた
Dialogue: 0,0:47:12.69,0:47:13.71,01_jpn,#1,0,0,0,,そのことが
Dialogue: 0,0:47:14.04,0:47:16.38,01_jpn,#1,0,0,0,,ずっと心に引っかかってた
Dialogue: 0,0:47:17.15,0:47:17.98,01_jpn,#1,0,0,0,,ごめんなさい
Dialogue: 0,0:47:19.00,0:47:20.10,01_jpn,#1,0,0,0,,アテナ先輩
Dialogue: 0,0:47:21.24,0:47:23.38,01_jpn,#1,0,0,0,,あやまって赦されることじゃない
Dialogue: 0,0:47:24.31,0:47:25.16,01_jpn,#1,0,0,0,,わかってる
Dialogue: 0,0:47:26.04,0:47:27.48,01_jpn,#1,0,0,0,,えっと…
Dialogue: 0,0:47:27.78,0:47:28.96,01_jpn,#1,0,0,0,,ちゃんと話せたな
Dialogue: 0,0:47:31.11,0:47:33.36,01_jpn,#1,0,0,0,,頑張ったわね、アテナちゃん
Dialogue: 0,0:47:34.96,0:47:35.74,01_jpn,#1,0,0,0,,ありがとう
Dialogue: 0,0:47:36.58,0:47:38.30,01_jpn,#1,0,0,0,,皆さん、これは…
Dialogue: 0,0:47:38.63,0:47:40.80,01_jpn,#1,0,0,0,,お前ら二人の様子がおかしいって
Dialogue: 0,0:47:41.24,0:47:42.44,01_jpn,#1,0,0,0,,心配してる後輩を
Dialogue: 0,0:47:42.61,0:47:43.69,01_jpn,#1,0,0,0,,放っておけなくてな
Dialogue: 0,0:47:44.60,0:47:47.38,01_jpn,#1,0,0,0,,え？あの、私はそんなこと…
Dialogue: 0,0:47:47.38,0:47:48.91,01_jpn,#1,0,0,0,,あらあら、うふふ
Dialogue: 0,0:47:50.74,0:47:52.90,01_jpn,#1,0,0,0,,で、アテナを問い質したら
Dialogue: 0,0:47:53.08,0:47:55.28,01_jpn,#1,0,0,0,,どうしてもあやまりたいことがあるって言うんで
Dialogue: 0,0:47:55.61,0:47:57.05,01_jpn,#1,0,0,0,,一肌脱いだってわけだ
Dialogue: 0,0:47:57.72,0:48:00.24,01_jpn,#1,0,0,0,,ちっともアリスちゃんに会えないから
Dialogue: 0,0:48:01.17,0:48:02.85,01_jpn,#1,0,0,0,,それで招待状を…
Dialogue: 0,0:48:03.08,0:48:05.45,01_jpn,#1,0,0,0,,もとは、私がアリスちゃんを
Dialogue: 0,0:48:05.45,0:48:07.26,01_jpn,#1,0,0,0,,怒らせちゃったせいなんだけど
Dialogue: 0,0:48:07.70,0:48:09.66,01_jpn,#1,0,0,0,,怒って会いに行かないなんて
Dialogue: 0,0:48:09.66,0:48:11.07,01_jpn,#1,0,0,0,,大人げない〜
Dialogue: 0,0:48:11.25,0:48:12.25,01_jpn,#1,0,0,0,,藍華ちゃん
Dialogue: 0,0:48:12.48,0:48:14.01,01_jpn,#1,0,0,0,,違うんです
Dialogue: 0,0:48:14.28,0:48:17.28,01_jpn,#1,0,0,0,,私がアテナ先輩に会いに行かなかったのは
Dialogue: 0,0:48:17.30,0:48:18.50,01_jpn,#1,0,0,0,,私のせいなんです
Dialogue: 0,0:48:19.56,0:48:22.11,01_jpn,#1,0,0,0,,アーニャちゃんの良い先輩になれるかどうか
Dialogue: 0,0:48:22.43,0:48:24.06,01_jpn,#1,0,0,0,,自信が持てなくて
Dialogue: 0,0:48:24.76,0:48:25.88,01_jpn,#1,0,0,0,,アリスちゃん？
Dialogue: 0,0:48:26.94,0:48:28.38,01_jpn,#1,0,0,0,,アテナ先輩に会えば
Dialogue: 0,0:48:28.64,0:48:30.01,01_jpn,#1,0,0,0,,きっと助言をくれる
Dialogue: 0,0:48:30.88,0:48:31.39,01_jpn,#1,0,0,0,,でも
Dialogue: 0,0:48:32.04,0:48:33.21,01_jpn,#1,0,0,0,,それじゃあいつまでも
Dialogue: 0,0:48:33.36,0:48:35.32,01_jpn,#1,0,0,0,,一人前になれない気がして
Dialogue: 0,0:48:35.72,0:48:36.59,01_jpn,#1,0,0,0,,まったくもう
Dialogue: 0,0:48:36.78,0:48:39.29,01_jpn,#1,0,0,0,,それでみんなに心配かけたってわけ？
Dialogue: 0,0:48:39.70,0:48:40.94,01_jpn,#1,0,0,0,,お子ちゃま〜
Dialogue: 0,0:48:42.74,0:48:44.46,01_jpn,#1,0,0,0,,返す言葉もありません
Dialogue: 0,0:48:45.36,0:48:48.20,01_jpn,#1,0,0,0,,じゃあ、あの試験の日のことは…
Dialogue: 0,0:48:48.86,0:48:49.40,01_jpn,#1,0,0,0,,はい
Dialogue: 0,0:48:50.02,0:48:51.17,01_jpn,#1,0,0,0,,アテナ先輩は
Dialogue: 0,0:48:51.37,0:48:53.71,01_jpn,#1,0,0,0,,あの時そんなことを考えていたとは
Dialogue: 0,0:48:53.98,0:48:55.61,01_jpn,#1,0,0,0,,全然気づきませんでした
Dialogue: 0,0:48:56.54,0:48:59.34,01_jpn,#1,0,0,0,,それじゃ、改めてあやまります
Dialogue: 0,0:49:00.54,0:49:03.76,01_jpn,#1,0,0,0,,本当に、本当にごめんなさい
Dialogue: 0,0:49:06.89,0:49:07.77,01_jpn,#1,0,0,0,,赦しません
Dialogue: 0,0:49:10.49,0:49:11.05,01_jpn,#1,0,0,0,,はい
Dialogue: 0,0:49:12.56,0:49:13.49,01_jpn,#1,0,0,0,,もしあの時
Dialogue: 0,0:49:14.02,0:49:15.96,01_jpn,#1,0,0,0,,厳しい助言をしてくれなかったら
Dialogue: 0,0:49:16.31,0:49:17.37,01_jpn,#1,0,0,0,,赦しません！
Dialogue: 0,0:49:17.60,0:49:19.85,01_jpn,#1,0,0,0,,え？でも
Dialogue: 0,0:49:20.02,0:49:20.65,01_jpn,#1,0,0,0,,だから
Dialogue: 0,0:49:20.94,0:49:22.57,01_jpn,#1,0,0,0,,今は感謝しています
Dialogue: 0,0:49:23.46,0:49:26.05,01_jpn,#1,0,0,0,,相変わらず謳は得意じゃないですが
Dialogue: 0,0:49:26.86,0:49:29.47,01_jpn,#1,0,0,0,,自分の謳が嫌いではなくなりましたから
Dialogue: 0,0:49:30.96,0:49:31.88,01_jpn,#1,0,0,0,,アテナ先輩
Dialogue: 0,0:49:32.33,0:49:34.86,01_jpn,#1,0,0,0,,自分は謳だけって言ってましたけど
Dialogue: 0,0:49:35.20,0:49:37.12,01_jpn,#1,0,0,0,,歌っている時のアテナ先輩は
Dialogue: 0,0:49:37.30,0:49:38.93,01_jpn,#1,0,0,0,,とっても幸せそうです
Dialogue: 0,0:49:40.62,0:49:43.26,01_jpn,#1,0,0,0,,私は、ゴンドラを漕いでいる時が
Dialogue: 0,0:49:43.36,0:49:44.54,01_jpn,#1,0,0,0,,でっかい幸せです
Dialogue: 0,0:49:45.19,0:49:47.68,01_jpn,#1,0,0,0,,やっぱり、似ているのかもしれません
Dialogue: 0,0:49:49.72,0:49:52.99,01_jpn,#1,0,0,0,,歌ってくれませんか？ アテナ先輩
Dialogue: 0,0:50:14.59,0:50:17.11,01_jpn,#1,0,0,0,,私、ずいぶん昔ですが
Dialogue: 0,0:50:17.86,0:50:19.66,01_jpn,#1,0,0,0,,謳を歌いながら歩いてる
Dialogue: 0,0:50:19.99,0:50:21.83,01_jpn,#1,0,0,0,,ペアのウンディーネさんを見たんです
Dialogue: 0,0:50:30.14,0:50:30.79,01_jpn,#1,0,0,0,,あっ
Dialogue: 0,0:50:33.48,0:50:34.30,01_jpn,#1,0,0,0,,それって？
Dialogue: 0,0:50:35.08,0:50:36.80,01_jpn,#1,0,0,0,,私があの時見た…
Dialogue: 0,0:50:37.52,0:50:38.96,01_jpn,#1,0,0,0,,あれはアテナさん
Dialogue: 0,0:50:40.86,0:50:41.88,01_jpn,#1,0,0,0,,人見知りで
Dialogue: 0,0:50:42.64,0:50:45.10,01_jpn,#1,0,0,0,,上手く人前で歌えない私には
Dialogue: 0,0:50:45.94,0:50:47.10,01_jpn,#1,0,0,0,,その姿は
Dialogue: 0,0:50:47.38,0:50:49.61,01_jpn,#1,0,0,0,,とても自由で輝いて見えました
Dialogue: 0,0:50:51.56,0:50:53.74,01_jpn,#1,0,0,0,,私がウンディーネに憧れたのは
Dialogue: 0,0:50:54.09,0:50:55.27,01_jpn,#1,0,0,0,,あの時
Dialogue: 0,0:51:23.17,0:51:24.07,01_jpn,#1,0,0,0,,あの日の
Dialogue: 0,0:51:24.86,0:51:26.68,01_jpn,#1,0,0,0,,あの出会いが始まり
Dialogue: 0,0:51:28.62,0:51:30.20,01_jpn,#1,0,0,0,,そのおかげで私は
Dialogue: 0,0:51:30.49,0:51:31.60,01_jpn,#1,0,0,0,,ゴンドラと出会い
Dialogue: 0,0:51:32.41,0:51:34.94,01_jpn,#1,0,0,0,,ゴンドラを漕ぐことが大好きになったんです
Dialogue: 0,0:51:36.22,0:51:37.94,01_jpn,#1,0,0,0,,だから、もしプリマにーー
Dialogue: 0,0:51:38.72,0:51:41.93,01_jpn,#1,0,0,0,,いえ、ウンディーネになれていなかったとしても
Dialogue: 0,0:51:43.26,0:51:44.50,01_jpn,#1,0,0,0,,きっと私は
Dialogue: 0,0:51:45.21,0:51:47.43,01_jpn,#1,0,0,0,,下手くそな謳を口ずさみながら
Dialogue: 0,0:51:48.29,0:51:50.69,01_jpn,#1,0,0,0,,この大好きな水の都のどこかで
Dialogue: 0,0:51:51.24,0:51:53.80,01_jpn,#1,0,0,0,,ゴンドラを漕ぎ続けていたんだと思うんです
Dialogue: 0,0:52:16.68,0:52:17.41,01_jpn,#1,0,0,0,,アーニャちゃん
Dialogue: 0,0:52:18.18,0:52:21.20,01_jpn,#1,0,0,0,,私、アーニャちゃんにとって
Dialogue: 0,0:52:21.38,0:52:23.70,01_jpn,#1,0,0,0,,いい先輩にならなくちゃって思ってた
Dialogue: 0,0:52:24.86,0:52:25.57,01_jpn,#1,0,0,0,,私も
Dialogue: 0,0:52:25.88,0:52:29.02,01_jpn,#1,0,0,0,,いい後輩にならなくちゃって思ってました
Dialogue: 0,0:52:29.60,0:52:31.93,01_jpn,#1,0,0,0,,でも、そのために大切なのは
Dialogue: 0,0:52:32.15,0:52:33.88,01_jpn,#1,0,0,0,,無理をすることじゃなくて
Dialogue: 0,0:52:34.06,0:52:36.18,01_jpn,#1,0,0,0,,自分に真っ直ぐであることだった
Dialogue: 0,0:52:37.36,0:52:38.09,01_jpn,#1,0,0,0,,はい
Dialogue: 0,0:52:38.88,0:52:40.48,01_jpn,#1,0,0,0,,大好きな人のために
Dialogue: 0,0:52:41.06,0:52:44.92,01_jpn,#1,0,0,0,,まずは素敵な自分でいること、ね
Dialogue: 0,0:52:45.97,0:52:47.82,01_jpn,#1,0,0,0,,大好きな人のために…
Dialogue: 0,0:53:31.40,0:53:33.06,01_jpn,#1,0,0,0,,一緒に歌ってる
Dialogue: 0,0:53:33.33,0:53:35.59,01_jpn,#1,0,0,0,,師弟、夢の共演だな
Dialogue: 0,0:53:36.32,0:53:39.76,01_jpn,#1,0,0,0,,でも、二人とも笑顔が戻ってよかった
Dialogue: 0,0:53:40.29,0:53:41.06,01_jpn,#1,0,0,0,,そうね
Dialogue: 0,0:55:07.02,0:55:08.57,01_jpn,#1,0,0,0,,みんな集まった
Dialogue: 0,0:55:08.69,0:55:10.60,01_jpn,#1,0,0,0,,素敵なミラクルね
Dialogue: 0,0:55:11.94,0:55:13.37,01_jpn,#1,0,0,0,,アーニャちゃんの思いが
Dialogue: 0,0:55:13.72,0:55:15.60,01_jpn,#1,0,0,0,,みんなを動かしたんだよね
Dialogue: 0,0:55:16.54,0:55:17.56,01_jpn,#1,0,0,0,,そうですね
Dialogue: 0,0:55:18.48,0:55:20.41,01_jpn,#1,0,0,0,,ありがとう、アーニャちゃん
Dialogue: 0,0:55:20.86,0:55:21.73,01_jpn,#1,0,0,0,,ありがとう
Dialogue: 0,0:55:22.18,0:55:23.08,01_jpn,#1,0,0,0,,いいえ
Dialogue: 0,0:55:25.06,0:55:26.38,01_jpn,#1,0,0,0,,落ち着くわ
Dialogue: 0,0:55:26.86,0:55:29.11,01_jpn,#1,0,0,0,,こうして藍華のゴンドラに乗ってると
Dialogue: 0,0:55:29.91,0:55:31.24,01_jpn,#1,0,0,0,,昔に戻ったようだ
Dialogue: 0,0:55:31.86,0:55:32.47,01_jpn,#1,0,0,0,,ええ
Dialogue: 0,0:55:33.13,0:55:34.94,01_jpn,#1,0,0,0,,懐かしいあの頃に
Dialogue: 0,0:55:35.90,0:55:39.44,01_jpn,#1,0,0,0,,でも、「あの頃はよかった」じゃなくて
Dialogue: 0,0:55:40.20,0:55:42.76,01_jpn,#1,0,0,0,,「あの頃もよかった」ですよね
Dialogue: 0,0:55:43.21,0:55:44.01,01_jpn,#1,0,0,0,,そうだな
Dialogue: 0,0:55:44.83,0:55:46.86,01_jpn,#1,0,0,0,,今だってまんざらじゃありません
Dialogue: 0,0:55:47.37,0:55:49.25,01_jpn,#1,0,0,0,,かわいい後輩もできたし
Dialogue: 0,0:55:49.84,0:55:51.79,01_jpn,#1,0,0,0,,素敵な先輩方もいるし
Dialogue: 0,0:55:52.48,0:55:53.58,01_jpn,#1,0,0,0,,きっと明日は
Dialogue: 0,0:55:53.96,0:55:55.72,01_jpn,#1,0,0,0,,今日より素敵な自分にも
Dialogue: 0,0:55:55.90,0:55:57.23,01_jpn,#1,0,0,0,,出会える気がする
Dialogue: 0,0:55:57.51,0:55:59.87,01_jpn,#1,0,0,0,,はい、恥ずかしいセリフ禁止！
Dialogue: 0,0:56:00.26,0:56:01.42,01_jpn,#1,0,0,0,,ええーー
Dialogue: 0,0:56:06.92,0:56:08.54,01_jpn,#1,0,0,0,,朝日が登りますよ
Dialogue: 0,0:56:12.37,0:56:13.70,01_jpn,#1,0,0,0,,明日が始まる
Dialogue: 0,0:56:15.50,0:56:19.40,01_jpn,#1,0,0,0,,あ、さっきまでいた夜が
Dialogue: 0,0:56:19.92,0:56:21.17,01_jpn,#1,0,0,0,,あんなに綺麗
Dialogue: 0,0:56:23.36,0:56:24.64,01_jpn,#1,0,0,0,,振り返らないと
Dialogue: 0,0:56:24.96,0:56:26.89,01_jpn,#1,0,0,0,,気づけない素敵もあるんだ
Dialogue: 0,0:56:27.84,0:56:31.17,01_jpn,#1,0,0,0,,そして、今この瞬間の素敵を
Dialogue: 0,0:56:31.70,0:56:34.23,01_jpn,#1,0,0,0,,今の私が全身で感じています
Dialogue: 0,0:56:35.45,0:56:38.42,01_jpn,#1,0,0,0,,来年はきっと、屋形船やりましょうね
Dialogue: 0,0:56:38.52,0:56:40.11,01_jpn,#1,0,0,0,,お、期待してるぞ
Dialogue: 0,0:56:40.52,0:56:41.16,01_jpn,#1,0,0,0,,はい！
Dialogue: 0,0:56:41.36,0:56:43.93,01_jpn,#1,0,0,0,,大好きな人達を思う気持ちが
Dialogue: 0,0:56:44.28,0:56:45.87,01_jpn,#1,0,0,0,,次々に伝わって
Dialogue: 0,0:56:46.60,0:56:49.48,01_jpn,#1,0,0,0,,また一つ、ミラクルを作り出した
Dialogue: 0,0:56:51.19,0:56:53.07,01_jpn,#1,0,0,0,,花ひらいた願いの種は
Dialogue: 0,0:56:53.44,0:56:55.57,01_jpn,#1,0,0,0,,また新しい種を生んで
Dialogue: 0,0:56:56.43,0:56:58.28,01_jpn,#1,0,0,0,,未来へと繋がっていく
Dialogue: 0,0:57:00.29,0:57:01.33,01_jpn,#1,0,0,0,,水と共に
Dialogue: 0,0:57:01.63,0:57:03.31,01_jpn,#1,0,0,0,,悠久の刻を生きる
