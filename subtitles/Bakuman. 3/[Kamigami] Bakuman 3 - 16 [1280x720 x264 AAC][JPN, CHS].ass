Dialogue: 0,0:10:33.14,0:10:37.72,jp,NTP,0000,0000,0000,,
Dialogue: 0,0:10:37.79,0:10:39.51,jp,NTP,0000,0000,0000,,
Dialogue: 0,0:10:39.60,0:10:41.71,jp,NTP,0000,0000,0000,,
Dialogue: 0,0:10:41.73,0:10:42.62,jp,NTP,0000,0000,0000,,
Dialogue: 0,0:10:43.03,0:10:44.83,jp,NTP,0000,0000,0000,,
Dialogue: 0,0:10:44.93,0:10:47.75,jp,NTP,0000,0000,0000,,
