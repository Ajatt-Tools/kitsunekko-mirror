Dialogue: 0,0:00:06.79,0:00:10.17,Default#3,,0,0,0,,（カセキ）村の外の人間？　ふむ…
Dialogue: 0,0:00:10.50,0:00:13.96,Default#3,,0,0,0,,（エン）あれよ\N大昔に村から追放された犯罪者
Dialogue: 0,0:00:14.09,0:00:16.13,Default#3,,0,0,0,,それしかあり得ないじゃない！
Dialogue: 0,0:00:16.34,0:00:19.43,Default#3,,0,0,0,,（孔雀）フフ\N石像の人が動きだしたんじゃない？
Dialogue: 0,0:00:19.55,0:00:22.43,Default#3,,0,0,0,,（あずら）アハハッ まさか
Dialogue: 0,0:00:23.64,0:00:26.31,Default#3,,0,0,0,,（コクヨウ）\Nまさかとは思うが そのよそ者―
Dialogue: 0,0:00:26.43,0:00:28.81,Default#3,,0,0,0,,コハクが連れてきたんじゃ\Nあるまいな
Dialogue: 0,0:00:29.14,0:00:31.52,Default#3,,0,0,0,,（ジャスパー）まだ分かりません\N（ターコイズ）いや そうです 長(おさ)
Dialogue: 0,0:00:31.65,0:00:33.11,Default#3,,0,0,0,,コハクちゃんですよ
Dialogue: 0,0:00:33.23,0:00:36.03,Default#3,,0,0,0,,ジャスパー あんたも聞いたでしょ\N銀狼(ギンロー)から
Dialogue: 0,0:00:36.15,0:00:39.40,Default#3,,0,0,0,,すぐバレるかばい方 よして！\N（コクヨウ）ううう… ぐっ！
Dialogue: 0,0:00:39.65,0:00:42.03,Default#3,,0,0,0,,（コクヨウ）あのバカ娘
Dialogue: 0,0:00:42.16,0:00:45.83,Default#3,,0,0,0,,親子の縁を切ってもなお\Nルールばかり破りよる
Dialogue: 0,0:00:45.95,0:00:47.70,Default#3,,0,0,0,,うむ… まったく
Dialogue: 0,0:00:47.83,0:00:48.75,Default#3,,0,0,0,,（ルリ）あっ！　うっ…
Dialogue: 0,0:00:49.00,0:00:51.58,Default#3,,0,0,0,,（ルリのせき込み）\N（コクヨウ）ルリ！
Dialogue: 0,0:00:51.71,0:00:56.30,Default#3,,0,0,0,,（ルリの荒い息）
Dialogue: 0,0:00:58.72,0:01:02.59,Default#3,,0,0,0,,（クロム）教えてくれ 千空(せんくう)！\N万能薬の作り方をよ
Dialogue: 0,0:01:02.72,0:01:04.64,Default#3,,0,0,0,,ルリの病気 ブッ倒してやるぜ！
Dialogue: 0,0:01:05.22,0:01:08.56,Default#3,,0,0,0,,（コハク）ルリ姉が治るのならば\Nどんな協力でもするぞ！
Dialogue: 0,0:01:10.31,0:01:11.56,Default#3,,0,0,0,,（千空）ヘヘヘ…
Dialogue: 0,0:01:12.06,0:01:15.19,Default#3,,0,0,0,,（男性）ルリ様\N（女性）心配だわ
Dialogue: 0,0:01:15.32,0:01:16.94,Default#3,,0,0,0,,（千空）ウェーイ
Dialogue: 0,0:01:17.07,0:01:17.53,Default#3,,0,0,0,,（ルリ）わーい わーい！\N（男性）病気が治った！
Dialogue: 0,0:01:17.53,0:01:19.11,Default#3,,0,0,0,,（ルリ）わーい わーい！\N（男性）病気が治った！
Dialogue: 0,0:01:17.53,0:01:19.11,Default#3,,0,0,0,,（千空）イーヒヒヒ…\Nイーヒヒヒ…
Dialogue: 0,0:01:19.11,0:01:19.24,Default#3,,0,0,0,,（千空）イーヒヒヒ…\Nイーヒヒヒ…
Dialogue: 0,0:01:19.24,0:01:20.78,Default#3,,0,0,0,,（千空）イーヒヒヒ…\Nイーヒヒヒ…
Dialogue: 0,0:01:19.24,0:01:20.78,Default#3,,0,0,0,,（女性）科学ばんざーい！
Dialogue: 0,0:01:20.78,0:01:20.90,Default#3,,0,0,0,,（千空）イーヒヒヒ…\Nイーヒヒヒ…
Dialogue: 0,0:01:20.90,0:01:23.32,Default#3,,0,0,0,,（千空）イーヒヒヒ…\Nイーヒヒヒ…
Dialogue: 0,0:01:20.90,0:01:23.32,Default#3,,0,0,0,,（男性）俺も科学王国に入ろう
Dialogue: 0,0:01:23.87,0:01:25.03,Default#3,,0,0,0,,見えたぜ
Dialogue: 0,0:01:25.16,0:01:28.83,Default#3,,0,0,0,,今 ヤツだけは ゲスい計算で\Nルリを助けようとしていやがる
Dialogue: 0,0:01:28.95,0:01:32.42,Default#3,,0,0,0,,紳士なのかゲスなのか\N微妙な男でな
Dialogue: 0,0:01:32.54,0:01:35.25,Default#3,,0,0,0,,まあ 単純に合理的なんだろうが
Dialogue: 0,0:01:36.34,0:01:38.59,Default#3,,0,0,0,,（千空）\N俺ら科学王国が作るのは―
Dialogue: 0,0:01:38.84,0:01:40.67,Default#3,,0,0,0,,抗生物質
Dialogue: 0,0:01:40.97,0:01:44.80,Default#3,,0,0,0,,人にとりついた細菌をブッ潰す\N科学の万能薬だ
Dialogue: 0,0:01:45.26,0:01:51.31,Default#3,,0,0,0,,20世紀初頭に発見されて以来\N人類何億人もの命を救ってきた
Dialogue: 0,0:01:51.60,0:01:53.48,Default#3,,0,0,0,,血液検査もできねえ
Dialogue: 0,0:01:53.60,0:01:55.65,Default#3,,0,0,0,,病名も分かりゃしねえ
Dialogue: 0,0:01:56.19,0:01:58.61,Default#3,,0,0,0,,それでも飲ましてみる価値はある
Dialogue: 0,0:01:58.73,0:02:00.28,Default#3,,0,0,0,,（コハク･クロム）うう～
Dialogue: 0,0:02:00.40,0:02:02.53,Default#3,,0,0,0,,おう！\Nそれなら今すぐ作ろうぜ！
Dialogue: 0,0:02:02.65,0:02:03.53,Default#3,,0,0,0,,何が要る？
Dialogue: 0,0:02:03.66,0:02:06.95,Default#3,,0,0,0,,あらゆるブツが足んねえ\N話 聞きやがれ！
Dialogue: 0,0:02:07.49,0:02:10.20,Default#3,,0,0,0,,万能薬作るルートは ざっくり２つ
Dialogue: 0,0:02:10.75,0:02:13.71,Default#3,,0,0,0,,生き物からペニシリンを作る\Nバイオルートと―
Dialogue: 0,0:02:13.83,0:02:16.63,Default#3,,0,0,0,,石からサルファ剤を作る\Nストーンルートだ
Dialogue: 0,0:02:16.75,0:02:18.17,Default#3,,0,0,0,,（コハク）待ってくれ 千空
Dialogue: 0,0:02:18.63,0:02:22.47,Default#3,,0,0,0,,生き物？　石？\Nそれが どう薬になるんだ？
Dialogue: 0,0:02:23.09,0:02:26.59,Default#3,,0,0,0,,有名なのは\N青カビで作るペニシリンだな
Dialogue: 0,0:02:26.72,0:02:30.27,Default#3,,0,0,0,,ただ ペニシリンのバイオルートで\N肝心な青カビは―
Dialogue: 0,0:02:30.39,0:02:32.18,Default#3,,0,0,0,,この石の世界(ストーンワールド)じゃ―
Dialogue: 0,0:02:32.31,0:02:36.27,Default#3,,0,0,0,,“なぜか偶然 100億倍パワーの\Nスーパー青カビを見つけたぜ”
Dialogue: 0,0:02:36.40,0:02:39.65,Default#3,,0,0,0,,“ウェーイ”っつう\N超ラッキーに期待する運ゲーだ
Dialogue: 0,0:02:39.77,0:02:40.73,Default#3,,0,0,0,,ウェーイ！
Dialogue: 0,0:02:40.86,0:02:44.32,Default#3,,0,0,0,,（千空）\N“神様 ナイスな青カビください\Nお願いします～”
Dialogue: 0,0:02:44.45,0:02:46.32,Default#3,,0,0,0,,…って 祈り続けるしかねえ
Dialogue: 0,0:02:47.07,0:02:51.62,Default#3,,0,0,0,,逆にサルファ剤のストーンルートは\N死ぬほど根気と人手が要るが―
Dialogue: 0,0:02:52.45,0:02:57.88,Default#3,,0,0,0,,この石だらけの世界でも\N100億％ 必ず万能薬にたどり着ける
Dialogue: 0,0:02:58.17,0:03:00.55,Default#3,,0,0,0,,だったら\N答えは もう決まってるぜ！
Dialogue: 0,0:03:01.00,0:03:03.67,Default#3,,0,0,0,,（千空）\N分かってんじゃねえか クロム
Dialogue: 0,0:03:04.05,0:03:07.14,Default#3,,0,0,0,,俺らは神様でも天才でもねえ
Dialogue: 0,0:03:07.26,0:03:09.01,Default#3,,0,0,0,,一歩ずつ 一歩ずつ―
Dialogue: 0,0:03:09.14,0:03:12.06,Default#3,,0,0,0,,地べた はいずり回って\N作ってくんだよ
Dialogue: 0,0:03:21.69,0:03:23.69,Default#3,,0,0,0,,（千空）進むのはストーンルート
Dialogue: 0,0:03:24.44,0:03:26.65,Default#3,,0,0,0,,地道に\N１個ずつゲットして―
Dialogue: 0,0:03:26.78,0:03:31.58,Default#3,,0,0,0,,科学史２００万年\N一気にワープするぞ
Dialogue: 0,0:03:31.95,0:03:36.96,Default#3,,0,0,0,,これは万能薬へ向かう\N科学のロードマップだ！
Dialogue: 0,0:03:40.25,0:03:45.26,Default#3,,0,0,0,,♪～
Dialogue: 0,0:05:04.88,0:05:09.88,Default#3,,0,0,0,,～♪
Dialogue: 0,0:05:15.18,0:05:16.35,Default#3,,0,0,0,,うおおお…
Dialogue: 0,0:05:16.47,0:05:18.06,Default#3,,0,0,0,,（クロム）マジか ヤベえ！
Dialogue: 0,0:05:18.52,0:05:20.77,Default#3,,0,0,0,,なら まず この鉄ってやつからだ
Dialogue: 0,0:05:20.89,0:05:22.06,Default#3,,0,0,0,,てか 何だ 鉄って？
Dialogue: 0,0:05:22.60,0:05:23.98,Default#3,,0,0,0,,もろもろ教えてくれ
Dialogue: 0,0:05:24.11,0:05:26.19,Default#3,,0,0,0,,そこも そうそう楽じゃねえぞ
Dialogue: 0,0:05:26.48,0:05:30.28,Default#3,,0,0,0,,千空先生の妖術… 科学教室か
Dialogue: 0,0:05:31.03,0:05:34.07,Default#3,,0,0,0,,聞いても私には分からなそうだな
Dialogue: 0,0:05:35.87,0:05:38.37,Default#3,,0,0,0,,（クロム）マジか！　ヤベえ！
Dialogue: 0,0:05:38.75,0:05:41.96,Default#3,,0,0,0,,地球のほうが回ってんのかよ\Nヤベえ！
Dialogue: 0,0:05:42.08,0:05:44.04,Default#3,,0,0,0,,あ～ そうだよ…
Dialogue: 0,0:05:44.17,0:05:45.92,Default#3,,0,0,0,,（コハク）それは おかしいぞ
Dialogue: 0,0:05:46.04,0:05:49.30,Default#3,,0,0,0,,ならば なぜ 私は今\N枝から放り出されないのだ？
Dialogue: 0,0:05:49.80,0:05:52.72,Default#3,,0,0,0,,重力が あるからだよ
Dialogue: 0,0:05:53.05,0:05:57.31,Default#3,,0,0,0,,妙だと思ってたぜ\N全然 動かねえ星もあるからよ
Dialogue: 0,0:05:57.64,0:05:59.22,Default#3,,0,0,0,,北極星な
Dialogue: 0,0:05:59.35,0:06:03.27,Default#3,,0,0,0,,100億％ 真北にあるっつう\Nクッソ便利な星だ
Dialogue: 0,0:06:03.39,0:06:04.52,Default#3,,0,0,0,,覚えやがれ
Dialogue: 0,0:06:04.90,0:06:06.65,Default#3,,0,0,0,,（クロム）ん そうなのか？
Dialogue: 0,0:06:06.77,0:06:09.73,Default#3,,0,0,0,,若干 真北とは\Nズレてるようにも見えるが…
Dialogue: 0,0:06:10.07,0:06:12.99,Default#3,,0,0,0,,んなわきゃねえだろ\N誤差の範囲だ…
Dialogue: 0,0:06:13.32,0:06:14.36,Default#3,,0,0,0,,はっ！
Dialogue: 0,0:06:14.95,0:06:16.82,Default#3,,0,0,0,,地軸のズレか！
Dialogue: 0,0:06:17.08,0:06:21.87,Default#3,,0,0,0,,3700年かけて\N少しずつ地球全体が傾いた
Dialogue: 0,0:06:22.00,0:06:27.71,Default#3,,0,0,0,,現在 西暦5739年\N北極星が変わってやがる
Dialogue: 0,0:06:28.59,0:06:32.80,Default#3,,0,0,0,,どうりで箱根(はこね)道中\N俺のナビが狂って 迷ったわけだ
Dialogue: 0,0:06:33.09,0:06:36.89,Default#3,,0,0,0,,クッ ハハ…\N科学使いが聞いてあきれるぜ
Dialogue: 0,0:06:37.01,0:06:39.26,Default#3,,0,0,0,,こんなことすら見落とすとはな
Dialogue: 0,0:06:40.22,0:06:44.69,Default#3,,0,0,0,,固定概念がねえテメーらのほうが\Nよっぽど気付いてんじゃねえか
Dialogue: 0,0:06:44.81,0:06:47.11,Default#3,,0,0,0,,しょうもねえヤツだ 俺も
Dialogue: 0,0:06:47.40,0:06:49.69,Default#3,,0,0,0,,ハ！　私には 千空
Dialogue: 0,0:06:49.82,0:06:52.15,Default#3,,0,0,0,,君は しょうもないヤツなどには\N見えんぞ
Dialogue: 0,0:06:53.15,0:06:55.07,Default#3,,0,0,0,,別に自虐じゃねえ
Dialogue: 0,0:06:55.20,0:06:57.91,Default#3,,0,0,0,,冷静ぶっといて\N俺も まだ このスケールに―
Dialogue: 0,0:06:58.03,0:07:00.79,Default#3,,0,0,0,,ついてけてなかったっつう\Nだけの話だ
Dialogue: 0,0:07:02.08,0:07:07.29,Default#3,,0,0,0,,3700年\N今更だが とんでもねえ年月だ
Dialogue: 0,0:07:09.17,0:07:13.59,Default#3,,0,0,0,,ん？　なんで今 元北極星が\N北とズレてるって分かった？
Dialogue: 0,0:07:13.88,0:07:18.39,Default#3,,0,0,0,,おおう！　さすがの千空も\Nこの石は知らねえみてえだな
Dialogue: 0,0:07:18.51,0:07:21.72,Default#3,,0,0,0,,はげ山で たまたま拾った\N超ヤベえ石だぜ！
Dialogue: 0,0:07:22.22,0:07:25.60,Default#3,,0,0,0,,つるすか浮かべると\Nなぜか必ずジャスト北に向くんだぜ
Dialogue: 0,0:07:25.94,0:07:27.69,Default#3,,0,0,0,,ヤベえだろ！
Dialogue: 0,0:07:28.10,0:07:29.40,Default#3,,0,0,0,,（千空）おお…
Dialogue: 0,0:07:30.27,0:07:31.15,Default#3,,0,0,0,,磁石だ
Dialogue: 0,0:07:31.27,0:07:33.32,Default#3,,0,0,0,,って知ってんのかよ クソー！
Dialogue: 0,0:07:34.49,0:07:35.61,Default#3,,0,0,0,,（千空）クッ ハハ…
Dialogue: 0,0:07:36.20,0:07:40.28,Default#3,,0,0,0,,やるじゃねえか クロム\N磁石さえありゃ…
Dialogue: 0,0:07:43.16,0:07:44.33,Default#3,,0,0,0,,（クロム）うお～ほ～！
Dialogue: 0,0:07:48.29,0:07:49.33,Default#3,,0,0,0,,（コハク）んっ！
Dialogue: 0,0:07:52.67,0:07:53.55,Default#3,,0,0,0,,おお～！
Dialogue: 0,0:07:53.67,0:07:57.47,Default#3,,0,0,0,,めっぽう たくさん付いてるぞ\N怪しげな黒い砂が
Dialogue: 0,0:07:58.01,0:08:00.97,Default#3,,0,0,0,,（千空）いよいよ\N科学王国ロードマップ一歩目
Dialogue: 0,0:08:01.43,0:08:03.47,Default#3,,0,0,0,,鉄の時代の幕開けだ！
Dialogue: 0,0:08:04.22,0:08:06.48,Default#3,,0,0,0,,唆(そそ)るじゃねえか！
Dialogue: 0,0:08:07.27,0:08:09.65,Default#3,,0,0,0,,（千空）\Nしっかし すげえな 雌ライオン
Dialogue: 0,0:08:09.77,0:08:12.40,Default#3,,0,0,0,,テメーらの村は 全員 ああなのか？
Dialogue: 0,0:08:12.52,0:08:15.44,Default#3,,0,0,0,,怪力のゴリラは何人かいるけどな
Dialogue: 0,0:08:15.57,0:08:17.61,Default#3,,0,0,0,,身軽なゴリラはコハクだけだ
Dialogue: 0,0:08:17.74,0:08:19.24,Default#3,,0,0,0,,だから ゴリラじゃない！
Dialogue: 0,0:08:19.70,0:08:22.24,Default#3,,0,0,0,,というか\Nほとんど私が集めてるじゃないか！
Dialogue: 0,0:08:22.53,0:08:27.12,Default#3,,0,0,0,,君たちも少しは身軽に働け！\Nそもそも人手が足りないのだ！
Dialogue: 0,0:08:27.91,0:08:29.62,Default#3,,0,0,0,,（千空･クロム）サーセン
Dialogue: 0,0:08:32.00,0:08:34.38,Default#3,,0,0,0,,確かに この分じゃ\N日が暮れちまうな
Dialogue: 0,0:08:35.55,0:08:37.72,Default#3,,0,0,0,,村から誰か 助っと連れてくるか？
Dialogue: 0,0:08:38.05,0:08:42.68,Default#3,,0,0,0,,（コハク）\N村の皆から見れば 君たちは\Nただの怪しい妖術使いだ
Dialogue: 0,0:08:42.80,0:08:45.64,Default#3,,0,0,0,,残念ながら\N誰も手助けには来ないだろうな
Dialogue: 0,0:08:45.89,0:08:46.93,Default#3,,0,0,0,,ハァ…
Dialogue: 0,0:08:47.06,0:08:48.60,Default#3,,0,0,0,,（水音）\N（千空）あ？
Dialogue: 0,0:08:48.89,0:08:50.06,Default#3,,0,0,0,,え…
Dialogue: 0,0:08:52.31,0:08:53.81,Default#3,,0,0,0,,スイカ？
Dialogue: 0,0:08:57.11,0:08:57.99,Default#3,,0,0,0,,（クロム）うおお！\N（千空）あっ！
Dialogue: 0,0:08:58.11,0:09:02.11,Default#3,,0,0,0,,（コハク）あっ スイカじゃないか\Nなぜここに？
Dialogue: 0,0:09:04.12,0:09:05.99,Default#3,,0,0,0,,私たちについてきたのか？
Dialogue: 0,0:09:07.54,0:09:09.83,Default#3,,0,0,0,,（千空）スイカっつう名前なのか？
Dialogue: 0,0:09:09.96,0:09:13.92,Default#3,,0,0,0,,（クロム）あだ名だぜ 多分\Nスイカの殻 かぶりっぱだからな
Dialogue: 0,0:09:14.34,0:09:15.29,Default#3,,0,0,0,,あ～！
Dialogue: 0,0:09:15.63,0:09:16.71,Default#3,,0,0,0,,てか スイカ！
Dialogue: 0,0:09:16.84,0:09:19.05,Default#3,,0,0,0,,俺の磁石\N勝手に持ってきやがったな
Dialogue: 0,0:09:20.13,0:09:21.59,Default#3,,0,0,0,,あっ 砂鉄
Dialogue: 0,0:09:22.05,0:09:25.64,Default#3,,0,0,0,,（スイカ）スイカはね\Nお手伝いがしたいんだよ
Dialogue: 0,0:09:25.93,0:09:30.81,Default#3,,0,0,0,,いつも こんなのかぶってるから\N誰のお役にも立てないんだよ
Dialogue: 0,0:09:30.94,0:09:33.65,Default#3,,0,0,0,,きっと大人になっても そうだよ
Dialogue: 0,0:09:34.48,0:09:35.73,Default#3,,0,0,0,,（クロム）ああ…
Dialogue: 0,0:09:36.02,0:09:38.11,Default#3,,0,0,0,,だから スイカはね\N困ってる人がいたら…
Dialogue: 0,0:09:38.23,0:09:40.24,Default#3,,0,0,0,,（千空）あ～ 御託はもういい
Dialogue: 0,0:09:40.49,0:09:41.53,Default#3,,0,0,0,,あっ…
Dialogue: 0,0:09:42.45,0:09:44.99,Default#3,,0,0,0,,（千空）クク… 実におありがてえ
Dialogue: 0,0:09:45.53,0:09:50.75,Default#3,,0,0,0,,科学王国は来る者 拒まず\N猫の手も借りてえんだ
Dialogue: 0,0:09:51.04,0:09:52.04,Default#3,,0,0,0,,フッ
Dialogue: 0,0:09:52.79,0:09:57.34,Default#3,,0,0,0,,砂集めなんか むしろチビのが\N100億倍 有利だからな
Dialogue: 0,0:09:57.75,0:10:00.88,Default#3,,0,0,0,,クク… 頼むぜ スイカ
Dialogue: 0,0:10:02.72,0:10:03.97,Default#3,,0,0,0,,ああ…
Dialogue: 0,0:10:05.51,0:10:10.60,Default#3,,0,0,0,,スイカが これ かぶってる訳\N聞かないでくれた人 初めてだよ
Dialogue: 0,0:10:11.39,0:10:13.52,Default#3,,0,0,0,,きっと 顔見られたくないんだって\N気付いて―
Dialogue: 0,0:10:13.64,0:10:15.81,Default#3,,0,0,0,,そっとしておいてくれたんだよ！
Dialogue: 0,0:10:15.94,0:10:19.07,Default#3,,0,0,0,,それは君\Nあまりにも千空を知らない
Dialogue: 0,0:10:19.19,0:10:20.32,Default#3,,0,0,0,,美化しすぎだ
Dialogue: 0,0:10:20.44,0:10:21.36,Default#3,,0,0,0,,戦力となりゃ―
Dialogue: 0,0:10:21.49,0:10:24.57,Default#3,,0,0,0,,顔なんてどうでもいいってだけだぜ\Nあいつは
Dialogue: 0,0:10:24.86,0:10:27.83,Default#3,,0,0,0,,（スイカ）スイカは\Nいっぱい採るんだよ 黒い砂！
Dialogue: 0,0:10:27.95,0:10:30.04,Default#3,,0,0,0,,ドンブラコー ドンブラコー
Dialogue: 0,0:10:30.16,0:10:31.16,Default#3,,0,0,0,,桃太郎(ももたろう)かよ！
Dialogue: 0,0:10:31.79,0:10:33.58,Default#3,,0,0,0,,溺れんなよ！\N（千空）ん？
Dialogue: 0,0:10:35.75,0:10:39.67,Default#3,,0,0,0,,ドラクエ モンハンは知らねえで\N「桃太郎」は知ってる？
Dialogue: 0,0:10:39.88,0:10:40.84,Default#3,,0,0,0,,誰に聞いた？
Dialogue: 0,0:10:41.26,0:10:44.47,Default#3,,0,0,0,,おう\N千空も知ってんのか 「桃太郎」
Dialogue: 0,0:10:44.59,0:10:46.84,Default#3,,0,0,0,,ルリ姉が\Nいっぱいお話してくれたんだよ
Dialogue: 0,0:10:47.51,0:10:50.89,Default#3,,0,0,0,,考えてみりゃ\Nゴリラのことも なんで知ってる？
Dialogue: 0,0:10:51.02,0:10:52.22,Default#3,,0,0,0,,野生でいるのか？
Dialogue: 0,0:10:52.68,0:10:54.69,Default#3,,0,0,0,,実物を見たことはないな
Dialogue: 0,0:10:54.81,0:10:57.77,Default#3,,0,0,0,,おう でも「桃太郎」に\N出てくんじゃねえか ゴリラ
Dialogue: 0,0:10:57.90,0:10:59.02,Default#3,,0,0,0,,（千空）出てこねえよ！
Dialogue: 0,0:10:59.44,0:11:02.44,Default#3,,0,0,0,,ん？　キビ団子で\N仲間にゲットしただろ
Dialogue: 0,0:11:02.94,0:11:06.11,Default#3,,0,0,0,,熊 ライオン ゴリラ ワニ…
Dialogue: 0,0:11:06.24,0:11:08.53,Default#3,,0,0,0,,何だ？\Nそのワイルドすぎる「桃太郎」！
Dialogue: 0,0:11:09.53,0:11:14.21,Default#3,,0,0,0,,（千空）危険な猛獣を教えるために\N物語で分かりやすくしてんのか？
Dialogue: 0,0:11:14.66,0:11:18.58,Default#3,,0,0,0,,私もルリ姉からは\Nめっぽう たくさんお話を聞いたぞ
Dialogue: 0,0:11:18.71,0:11:23.05,Default#3,,0,0,0,,言われてみれば 難しい言葉は\Nルリ姉から覚えた気もするな
Dialogue: 0,0:11:23.51,0:11:26.68,Default#3,,0,0,0,,（千空）ルリ… 何者(なにもん)だ 一体？
Dialogue: 0,0:11:26.80,0:11:27.84,Default#3,,0,0,0,,（千空）クク…
Dialogue: 0,0:11:27.97,0:11:32.10,Default#3,,0,0,0,,がぜん そのルリって女に\N興味が湧いてきやがった
Dialogue: 0,0:11:32.60,0:11:34.27,Default#3,,0,0,0,,こうなりゃ なおさら―
Dialogue: 0,0:11:34.39,0:11:37.52,Default#3,,0,0,0,,意地でも万能薬 作って\N助けねえとな
Dialogue: 0,0:11:37.77,0:11:41.69,Default#3,,0,0,0,,う… 何だ ルリに興味って？\Nどういう意味だ 千空！
Dialogue: 0,0:11:42.11,0:11:42.94,Default#3,,0,0,0,,あ？
Dialogue: 0,0:11:43.07,0:11:45.86,Default#3,,0,0,0,,（コハク）千空 千空 千空先生～
Dialogue: 0,0:11:46.74,0:11:49.78,Default#3,,0,0,0,,クロムはルリ姉のことが\N恐らく好きなのだ
Dialogue: 0,0:11:50.12,0:11:52.87,Default#3,,0,0,0,,あ～ そういうことか
Dialogue: 0,0:11:52.99,0:11:54.50,Default#3,,0,0,0,,出･た･よ
Dialogue: 0,0:11:54.95,0:11:57.75,Default#3,,0,0,0,,これでクロムも\Nなかなか お子ちゃまでな
Dialogue: 0,0:11:57.87,0:12:00.04,Default#3,,0,0,0,,無自覚なのが なかなか尊い
Dialogue: 0,0:12:00.17,0:12:01.79,Default#3,,0,0,0,,おう 何の話だ！
Dialogue: 0,0:12:02.17,0:12:04.80,Default#3,,0,0,0,,クッソ 誰がお子ちゃまだ！
Dialogue: 0,0:12:05.42,0:12:09.55,Default#3,,0,0,0,,（スイカ）川で集めたこの黒い砂が\N鉄ってのになるんだね
Dialogue: 0,0:12:09.84,0:12:13.72,Default#3,,0,0,0,,ああ 砂鉄４に炭１ちょい混ぜて\N焼くだけだ
Dialogue: 0,0:12:13.85,0:12:16.39,Default#3,,0,0,0,,（クロム）\Nおう 何だ 簡単じゃねえか！
Dialogue: 0,0:12:16.52,0:12:18.69,Default#3,,0,0,0,,ハァ… そう甘かねえ
Dialogue: 0,0:12:19.23,0:12:21.56,Default#3,,0,0,0,,土器焼くのとは訳が違う
Dialogue: 0,0:12:21.69,0:12:25.82,Default#3,,0,0,0,,木 燃やした火の温度ってのは\Nせいぜいが700度ってとこだ
Dialogue: 0,0:12:26.69,0:12:31.49,Default#3,,0,0,0,,だが 砂鉄を鉄にする\N製鉄に必要な温度は1500度
Dialogue: 0,0:12:32.07,0:12:33.87,Default#3,,0,0,0,,全く足りないじゃないか
Dialogue: 0,0:12:34.37,0:12:35.83,Default#3,,0,0,0,,どうするんだ？
Dialogue: 0,0:12:36.66,0:12:38.08,Default#3,,0,0,0,,フーフーしまくる
Dialogue: 0,0:12:38.66,0:12:40.92,Default#3,,0,0,0,,ジャンジャン酸素ブチ込むしかねえ
Dialogue: 0,0:12:41.04,0:12:42.96,Default#3,,0,0,0,,ひったすら空気 送り続けて―
Dialogue: 0,0:12:43.50,0:12:48.13,Default#3,,0,0,0,,炎の攻撃力を700から1500に\Nバイキルトさせんだよ
Dialogue: 0,0:12:48.47,0:12:50.13,Default#3,,0,0,0,,風を送るのか！
Dialogue: 0,0:12:50.26,0:12:53.39,Default#3,,0,0,0,,こんな便利なものがあれば\N私一人でもいけそうだ！
Dialogue: 0,0:12:53.72,0:12:58.31,Default#3,,0,0,0,,寝言は やってから言え\N人手がいくらあっても足んねえよ
Dialogue: 0,0:12:58.52,0:13:04.27,Default#3,,0,0,0,,（一同）うおおおお！
Dialogue: 0,0:13:04.40,0:13:06.53,Default#3,,0,0,0,,（クロム･コハク･スイカ）\Nひいいいい！
Dialogue: 0,0:13:06.65,0:13:08.32,Default#3,,0,0,0,,ぐああああ！
Dialogue: 0,0:13:08.82,0:13:11.70,Default#3,,0,0,0,,（クロム）クッソ\Nもう腕がパンパンになってきたぜ！
Dialogue: 0,0:13:11.82,0:13:13.95,Default#3,,0,0,0,,（千空）\N休んで温度下げんじゃねえぞ！
Dialogue: 0,0:13:14.07,0:13:16.29,Default#3,,0,0,0,,（コハク）\Nあと何分続けるんだ これを！
Dialogue: 0,0:13:16.66,0:13:19.75,Default#3,,0,0,0,,（千空）\Nそうだな… ざっくり数十時間！
Dialogue: 0,0:13:20.00,0:13:21.75,Default#3,,0,0,0,,（クロム･コハク･スイカ）\N製鉄ヤベえ！
Dialogue: 0,0:13:22.04,0:13:24.71,Default#3,,0,0,0,,ハァハァ… ハァ…
Dialogue: 0,0:13:24.84,0:13:27.51,Default#3,,0,0,0,,無理するな スイカ！\N休んでおけ！
Dialogue: 0,0:13:28.84,0:13:32.93,Default#3,,0,0,0,,（スイカ）やっぱりスイカだけ\Nお役に立てないんだよ
Dialogue: 0,0:13:33.93,0:13:37.52,Default#3,,0,0,0,,（銀狼）な～んか\Nすごい大変そうなことしてるな
Dialogue: 0,0:13:37.89,0:13:40.52,Default#3,,0,0,0,,（銀狼）\Nぼ ぼ… 僕 手伝ってこようかな
Dialogue: 0,0:13:40.64,0:13:41.98,Default#3,,0,0,0,,（金狼(キンロー)）ダメだ 銀狼！
Dialogue: 0,0:13:42.10,0:13:44.73,Default#3,,0,0,0,,持ち場を離れるな\Nルールはルールだ
Dialogue: 0,0:13:45.11,0:13:46.40,Default#3,,0,0,0,,何だよ
Dialogue: 0,0:13:46.52,0:13:49.78,Default#3,,0,0,0,,自分は もう金の槍(やり)\N作ってもらったからってさ
Dialogue: 0,0:13:49.90,0:13:51.90,Default#3,,0,0,0,,僕だって 銀の…\N（金狼）モノか！
Dialogue: 0,0:13:52.03,0:13:54.28,Default#3,,0,0,0,,最低すぎるだろ 銀狼 貴様！
Dialogue: 0,0:13:55.66,0:13:57.87,Default#3,,0,0,0,,（銀狼）じゃあ 槍 替えてよ\N（金狼）ダメだ
Dialogue: 0,0:13:57.99,0:14:00.12,Default#3,,0,0,0,,（銀狼）もう この際\N銀狼の銀じゃなくて―
Dialogue: 0,0:14:00.25,0:14:02.12,Default#3,,0,0,0,,金で我慢するからさ～
Dialogue: 0,0:14:02.25,0:14:03.37,Default#3,,0,0,0,,（金狼）ダメだ！
Dialogue: 0,0:14:04.67,0:14:07.67,Default#3,,0,0,0,,（鳥のさえずり）
Dialogue: 0,0:14:17.05,0:14:19.31,Default#3,,0,0,0,,マンパワーが最優先だ
Dialogue: 0,0:14:19.85,0:14:22.43,Default#3,,0,0,0,,（クロム）\N科学王国民 増やすっきゃねえ
Dialogue: 0,0:14:23.19,0:14:25.94,Default#3,,0,0,0,,槍… 銀の…
Dialogue: 0,0:14:26.15,0:14:28.61,Default#3,,0,0,0,,（千空）ククク… やっぱりな
Dialogue: 0,0:14:28.73,0:14:30.73,Default#3,,0,0,0,,銀狼は もう ほぼゲットだな
Dialogue: 0,0:14:30.86,0:14:33.40,Default#3,,0,0,0,,よし いけるぜ このパターン
Dialogue: 0,0:14:33.74,0:14:35.70,Default#3,,0,0,0,,マンパワーをゲットする
Dialogue: 0,0:14:35.82,0:14:37.83,Default#3,,0,0,0,,（千空･クロム）科学の餌でな！
Dialogue: 0,0:14:37.95,0:14:39.91,Default#3,,0,0,0,,餌 言うな ２人して\N（千空･クロム）ヘヘヘヘ…
Dialogue: 0,0:14:40.24,0:14:44.25,Default#3,,0,0,0,,だが 村人全員が\Nキラキラ槍で大喜びじゃねえ
Dialogue: 0,0:14:44.37,0:14:48.67,Default#3,,0,0,0,,情報収集が要る\Nそいつが今 何を欲しがっているか
Dialogue: 0,0:14:48.79,0:14:50.92,Default#3,,0,0,0,,（スイカ）\Nそういうの スイカ得意だよ！
Dialogue: 0,0:14:51.34,0:14:55.59,Default#3,,0,0,0,,ただの スイカになれるから\Nこっそりいろんなとこ行けるんだよ
Dialogue: 0,0:14:56.34,0:14:57.68,Default#3,,0,0,0,,（クロム･コハク）おおおお！
Dialogue: 0,0:14:57.89,0:15:00.68,Default#3,,0,0,0,,ククク やるじゃねえか
Dialogue: 0,0:15:00.81,0:15:01.64,Default#3,,0,0,0,,よ～し！
Dialogue: 0,0:15:01.77,0:15:06.31,Default#3,,0,0,0,,鉄作りのマンパワーゲットに\N名探偵スイカ様 ご出動だ！
Dialogue: 0,0:15:06.56,0:15:09.02,Default#3,,0,0,0,,おう 頼むぜ 名探偵スイカ！
Dialogue: 0,0:15:10.36,0:15:12.03,Default#3,,0,0,0,,（スイカ）名探偵スイカ！
Dialogue: 0,0:15:12.48,0:15:16.20,Default#3,,0,0,0,,（スイカ）\Nみんなのお役に立つんだよ～
Dialogue: 0,0:15:18.45,0:15:22.91,Default#3,,0,0,0,,（村人たちの話し声）
Dialogue: 0,0:15:23.95,0:15:26.29,Default#3,,0,0,0,,（カーボ）\Nんで 結局 どうしたんだよ
Dialogue: 0,0:15:26.54,0:15:29.75,Default#3,,0,0,0,,コハクが連れてきた\Nよそ者っつうのはよ
Dialogue: 0,0:15:30.34,0:15:31.96,Default#3,,0,0,0,,（シャベル）クロムのね\Nクロムのね―
Dialogue: 0,0:15:32.09,0:15:33.63,Default#3,,0,0,0,,倉庫に住み着いてるよ
Dialogue: 0,0:15:35.93,0:15:39.93,Default#3,,0,0,0,,（なとり）\N村に押し入る気がなければ\N事を荒立てないというのが―
Dialogue: 0,0:15:40.05,0:15:42.01,Default#3,,0,0,0,,長のお考えだよ
Dialogue: 0,0:15:42.14,0:15:44.14,Default#3,,0,0,0,,（あるみ）それは私も賛成だ
Dialogue: 0,0:15:44.43,0:15:47.90,Default#3,,0,0,0,,ただね\Nもし悪さをするようであれば…
Dialogue: 0,0:15:48.44,0:15:50.77,Default#3,,0,0,0,,（スイカ）あわわわわ…\N（マグマ）危ないヤツなら俺が殺す
Dialogue: 0,0:15:51.07,0:15:52.07,Default#3,,0,0,0,,（マントル）あい～
Dialogue: 0,0:15:52.19,0:15:54.40,Default#3,,0,0,0,,（マグマ）\Nそして ルリは俺にホレる
Dialogue: 0,0:15:54.53,0:15:55.65,Default#3,,0,0,0,,あい～
Dialogue: 0,0:15:56.49,0:15:59.66,Default#3,,0,0,0,,（ガーネット）\N問題は その男が強い男かどうか
Dialogue: 0,0:15:59.78,0:16:00.66,Default#3,,0,0,0,,それだけでしょ！
Dialogue: 0,0:16:00.78,0:16:03.41,Default#3,,0,0,0,,（サファイア）え～\N強いとか マジどうでもいい
Dialogue: 0,0:16:03.87,0:16:06.41,Default#3,,0,0,0,,肝心なのは顔っしょ 顔
Dialogue: 0,0:16:06.66,0:16:09.38,Default#3,,0,0,0,,（ルビィ）\N男の顔も中身も どうでもいいよ～
Dialogue: 0,0:16:09.50,0:16:10.75,Default#3,,0,0,0,,狩りとか上手なら
Dialogue: 0,0:16:11.09,0:16:11.96,Default#3,,0,0,0,,っていうか―
Dialogue: 0,0:16:12.09,0:16:16.84,Default#3,,0,0,0,,３姉妹とも好みが違うのに\Nみんな独り身ってどういうこと？
Dialogue: 0,0:16:17.59,0:16:21.47,Default#3,,0,0,0,,（エン）うん… う～ん\N新鮮なお魚はおいしいわね～
Dialogue: 0,0:16:21.60,0:16:23.51,Default#3,,0,0,0,,（サガン）\Nああ… 身が引き締まっとる
Dialogue: 0,0:16:24.56,0:16:28.77,Default#3,,0,0,0,,（ガンエン）焼き魚 もう飽きた～
Dialogue: 0,0:16:34.98,0:16:38.74,Default#3,,0,0,0,,（スイカ）\N何か欲しがってる人がいないか\Nこっそり聞いてきたんだよ
Dialogue: 0,0:16:39.11,0:16:43.45,Default#3,,0,0,0,,まず ガーネット サファイア\Nルビィのキラキラ３姉妹だよ
Dialogue: 0,0:16:43.58,0:16:46.50,Default#3,,0,0,0,,おお 村一番のきれいどころだ
Dialogue: 0,0:16:46.62,0:16:49.25,Default#3,,0,0,0,,３人が\Nすっごく欲しがってるものは…
Dialogue: 0,0:16:49.37,0:16:53.13,Default#3,,0,0,0,,この時代の科学で作れるもんだと\Nおありがてえがな
Dialogue: 0,0:16:53.88,0:16:54.88,Default#3,,0,0,0,,彼氏だよ！
Dialogue: 0,0:16:55.21,0:16:57.63,Default#3,,0,0,0,,ぜってえ\N科学じゃ不可能なのきた～！
Dialogue: 0,0:16:58.13,0:16:59.30,Default#3,,0,0,0,,強い男！
Dialogue: 0,0:16:59.47,0:17:00.43,Default#3,,0,0,0,,イケメン！
Dialogue: 0,0:17:00.55,0:17:02.55,Default#3,,0,0,0,,おごってくれる人！
Dialogue: 0,0:17:02.68,0:17:05.60,Default#3,,0,0,0,,欲望に もう果てしなく忠実だな
Dialogue: 0,0:17:05.93,0:17:10.94,Default#3,,0,0,0,,ハ！　私から見れば 千空\N君は なかなかの色男だが―
Dialogue: 0,0:17:11.06,0:17:14.82,Default#3,,0,0,0,,サファイアの言うイケメンとは\Nそういうことでもなさそうだ
Dialogue: 0,0:17:15.19,0:17:17.86,Default#3,,0,0,0,,おうおう\N勝手なことばっか言いやがって
Dialogue: 0,0:17:17.99,0:17:19.70,Default#3,,0,0,0,,女は これだからよ
Dialogue: 0,0:17:19.82,0:17:22.82,Default#3,,0,0,0,,だから\N俺は女は嫌いだっつってんだよ
Dialogue: 0,0:17:22.95,0:17:25.03,Default#3,,0,0,0,,お子ちゃまだな クロムは
Dialogue: 0,0:17:25.16,0:17:27.70,Default#3,,0,0,0,,ルリ姉や私も女だが 嫌いか？
Dialogue: 0,0:17:27.83,0:17:31.83,Default#3,,0,0,0,,コハク テメーは女と思ってねえよ\Nゴリラだしな
Dialogue: 0,0:17:32.08,0:17:33.63,Default#3,,0,0,0,,（コハク）カハ～
Dialogue: 0,0:17:33.75,0:17:35.25,Default#3,,0,0,0,,（クロム）サーセン
Dialogue: 0,0:17:35.96,0:17:38.17,Default#3,,0,0,0,,“おごってくれる人”っつってる\Nヤツだけ―
Dialogue: 0,0:17:38.30,0:17:39.92,Default#3,,0,0,0,,ワンチャンあんな
Dialogue: 0,0:17:40.05,0:17:41.47,Default#3,,0,0,0,,何を欲しがってる？
Dialogue: 0,0:17:41.59,0:17:43.39,Default#3,,0,0,0,,（スイカ）魚とかのお食事だよ
Dialogue: 0,0:17:43.80,0:17:45.72,Default#3,,0,0,0,,あっ お食事といえば―
Dialogue: 0,0:17:45.97,0:17:48.35,Default#3,,0,0,0,,村一番の食いしん坊\Nガンエンも―
Dialogue: 0,0:17:45.97,0:17:48.35,Default#3,,0,0,0,,（ガンエン）\N飽きた 飽きた
Dialogue: 0,0:17:48.47,0:17:49.22,Default#3,,0,0,0,,毎回毎回 焼き魚に飽き飽きで\N死にそうって―
Dialogue: 0,0:17:49.22,0:17:51.44,Default#3,,0,0,0,,毎回毎回 焼き魚に飽き飽きで\N死にそうって―
Dialogue: 0,0:17:49.22,0:17:51.44,Default#3,,0,0,0,,飽きた 飽きた
Dialogue: 0,0:17:51.44,0:17:51.94,Default#3,,0,0,0,,毎回毎回 焼き魚に飽き飽きで\N死にそうって―
Dialogue: 0,0:17:52.06,0:17:54.44,Default#3,,0,0,0,,新しいお食事 探してたんだよ
Dialogue: 0,0:17:52.06,0:17:54.44,Default#3,,0,0,0,,飽きた 飽きた
Dialogue: 0,0:17:54.86,0:17:56.02,Default#3,,0,0,0,,（千空）ククク…
Dialogue: 0,0:17:56.40,0:17:57.23,Default#3,,0,0,0,,（クロム･コハク）ん？
Dialogue: 0,0:17:57.52,0:18:00.28,Default#3,,0,0,0,,さすがは名探偵スイカ様だ
Dialogue: 0,0:18:00.40,0:18:02.78,Default#3,,0,0,0,,あっさり見えてきたじゃねえか
Dialogue: 0,0:18:02.91,0:18:06.12,Default#3,,0,0,0,,仲間をゲットするための\N科学の餌がな
Dialogue: 0,0:18:06.45,0:18:08.87,Default#3,,0,0,0,,まさか食事を作るのか？
Dialogue: 0,0:18:08.99,0:18:10.66,Default#3,,0,0,0,,科学 関係ねえじゃねえか
Dialogue: 0,0:18:11.21,0:18:14.92,Default#3,,0,0,0,,（千空）関係ねえどころか\N飯イコール科学だ
Dialogue: 0,0:18:15.04,0:18:18.46,Default#3,,0,0,0,,そもそもテメーらが毎日食ってる\N魚のうまみってのは―
Dialogue: 0,0:18:18.59,0:18:20.42,Default#3,,0,0,0,,何だと思ってやがる
Dialogue: 0,0:18:20.55,0:18:22.84,Default#3,,0,0,0,,グルタミン酸やイノシン酸だぞ
Dialogue: 0,0:18:22.97,0:18:24.38,Default#3,,0,0,0,,（犬の鳴き声）\N（千空）ん？
Dialogue: 0,0:18:24.80,0:18:26.43,Default#3,,0,0,0,,（スイカ）フフフフ…
Dialogue: 0,0:18:26.55,0:18:27.64,Default#3,,0,0,0,,（犬の荒い息）
Dialogue: 0,0:18:27.97,0:18:30.31,Default#3,,0,0,0,,（スイカ）\Nフフフッ… フ～ ヘヘヘッ
Dialogue: 0,0:18:31.06,0:18:33.60,Default#3,,0,0,0,,スイカ テメーのそれ 何だ？
Dialogue: 0,0:18:34.02,0:18:37.98,Default#3,,0,0,0,,ああ これはね\N友達のチョークが大好きなおもちゃ
Dialogue: 0,0:18:38.48,0:18:39.73,Default#3,,0,0,0,,（スイカ）犬じゃらしだよ
Dialogue: 0,0:18:39.86,0:18:41.40,Default#3,,0,0,0,,（千空）猫じゃらしな
Dialogue: 0,0:18:41.69,0:18:44.24,Default#3,,0,0,0,,そいつがありゃ\N作れっかもしれねえな
Dialogue: 0,0:18:44.66,0:18:45.49,Default#3,,0,0,0,,（クロム･コハク）ん？
Dialogue: 0,0:18:45.86,0:18:49.83,Default#3,,0,0,0,,（千空）俺ら旧世界の人間なら\N全員大好きな―
Dialogue: 0,0:18:49.95,0:18:53.25,Default#3,,0,0,0,,あの世界一うまい料理がよ
Dialogue: 0,0:18:56.54,0:18:57.50,Default#3,,0,0,0,,（コハク）ふっ！
Dialogue: 0,0:18:57.92,0:18:58.92,Default#3,,0,0,0,,はっ！
Dialogue: 0,0:18:59.38,0:19:00.80,Default#3,,0,0,0,,はあっ！
Dialogue: 0,0:19:01.42,0:19:03.47,Default#3,,0,0,0,,（チョークの鳴き声）
Dialogue: 0,0:19:03.92,0:19:07.09,Default#3,,0,0,0,,ゼロから作る\N原始のサバイバルグルメだ
Dialogue: 0,0:19:07.97,0:19:09.85,Default#3,,0,0,0,,唆るじゃねえか！
Dialogue: 0,0:19:10.81,0:19:12.60,Default#3,,0,0,0,,（コハク）まさかとは思うが…
Dialogue: 0,0:19:12.93,0:19:15.19,Default#3,,0,0,0,,この猫じゃらしを食べるのか？
Dialogue: 0,0:19:15.31,0:19:17.60,Default#3,,0,0,0,,ハ！　私は遠慮しておこう
Dialogue: 0,0:19:17.94,0:19:21.53,Default#3,,0,0,0,,このままじゃ食えねえから\Nブッたたいて脱穀してんだろうが
Dialogue: 0,0:19:22.15,0:19:25.95,Default#3,,0,0,0,,猫じゃらしは\N100億％ 立派な穀物だ
Dialogue: 0,0:19:26.07,0:19:27.87,Default#3,,0,0,0,,アワのご先祖様だな
Dialogue: 0,0:19:28.66,0:19:31.37,Default#3,,0,0,0,,（コハク）\Nうん… めっぽう汚く見えるな
Dialogue: 0,0:19:31.91,0:19:34.12,Default#3,,0,0,0,,毛みたいなのが いっぱいだよ
Dialogue: 0,0:19:34.33,0:19:36.58,Default#3,,0,0,0,,（クロム）ハァ ううっ… ハァ…
Dialogue: 0,0:19:36.79,0:19:38.75,Default#3,,0,0,0,,ハァハァ…
Dialogue: 0,0:19:43.80,0:19:47.68,Default#3,,0,0,0,,（千空）思いつきと\Nトライ＆エラーの繰り返し
Dialogue: 0,0:19:48.05,0:19:51.68,Default#3,,0,0,0,,飯は まさに 科学じゃねえか
Dialogue: 0,0:19:52.01,0:19:55.68,Default#3,,0,0,0,,（千空）小麦粉… じゃあねえ\N猫じゃらし粉の―
Dialogue: 0,0:19:56.27,0:19:58.19,Default#3,,0,0,0,,完成だ！
Dialogue: 0,0:19:58.60,0:20:01.02,Default#3,,0,0,0,,そこに野鳥の卵をブチ込んで―
Dialogue: 0,0:20:01.52,0:20:05.40,Default#3,,0,0,0,,灰のアク 炭酸カリウムで\Nモチモチにする
Dialogue: 0,0:20:05.53,0:20:10.53,Default#3,,0,0,0,,４世紀ごろに名もなきモンゴル人が\N偶然 見つけた科学の飯だ
Dialogue: 0,0:20:11.24,0:20:12.20,Default#3,,0,0,0,,クロム
Dialogue: 0,0:20:12.33,0:20:16.16,Default#3,,0,0,0,,テメーみてえな何でも試す\Nヤベえバカが いたんだろうな
Dialogue: 0,0:20:16.50,0:20:19.08,Default#3,,0,0,0,,４世紀のモンゴルにもよ
Dialogue: 0,0:20:26.97,0:20:28.84,Default#3,,0,0,0,,（コハク･クロム）\Nこ… この香りは！
Dialogue: 0,0:20:29.34,0:20:34.85,Default#3,,0,0,0,,（千空）俺らはな 3700年前\Nこのクッソうまい科学の飯を―
Dialogue: 0,0:20:36.39,0:20:39.27,Default#3,,0,0,0,,ラーメン… そう呼んでた
Dialogue: 0,0:20:39.98,0:20:40.90,Default#3,,0,0,0,,フッ
Dialogue: 0,0:20:41.77,0:20:42.06,Default#3,,0,0,0,,（スイカ）あああ…\Nうううう…
Dialogue: 0,0:20:42.06,0:20:45.65,Default#3,,0,0,0,,（スイカ）あああ…\Nうううう…
Dialogue: 0,0:20:42.06,0:20:45.65,Default#3,,0,0,0,,（コハク）しかし\Nこれ 正体は猫じゃらしだろう？
Dialogue: 0,0:20:45.65,0:20:45.86,Default#3,,0,0,0,,（スイカ）あああ…\Nうううう…
Dialogue: 0,0:20:45.86,0:20:46.94,Default#3,,0,0,0,,（スイカ）あああ…\Nうううう…
Dialogue: 0,0:20:45.86,0:20:46.94,Default#3,,0,0,0,,（クロム）ああ…
Dialogue: 0,0:20:47.65,0:20:49.36,Default#3,,0,0,0,,おう 毒味は任せろ！
Dialogue: 0,0:20:49.49,0:20:51.78,Default#3,,0,0,0,,新しいもんに\Nためらわねえで飛びつくのが
Dialogue: 0,0:20:51.91,0:20:53.70,Default#3,,0,0,0,,妖術使いの生きざまだぜ
Dialogue: 0,0:20:56.70,0:21:00.25,Default#3,,0,0,0,,う… うめえええ！
Dialogue: 0,0:21:00.54,0:21:02.96,Default#3,,0,0,0,,ラーメン ヤベえ！
Dialogue: 0,0:21:07.71,0:21:08.76,Default#3,,0,0,0,,（スイカ）わあ～！
Dialogue: 0,0:21:08.88,0:21:12.34,Default#3,,0,0,0,,ズルズルって食べる感じも\Nこんなの初めてなんだよ！
Dialogue: 0,0:21:12.59,0:21:15.64,Default#3,,0,0,0,,（コハク）こんな食べ物が\Nこの世にあることが信じられん！
Dialogue: 0,0:21:16.06,0:21:19.39,Default#3,,0,0,0,,（千空）\Nクク… 俺も実食といくか
Dialogue: 0,0:21:19.69,0:21:23.11,Default#3,,0,0,0,,3700年ぶりの まともな料理だ
Dialogue: 0,0:21:28.03,0:21:29.53,Default#3,,0,0,0,,（千空）まともじゃなかった
Dialogue: 0,0:21:29.65,0:21:31.99,Default#3,,0,0,0,,もとが猫じゃらしだからな
Dialogue: 0,0:21:32.11,0:21:33.87,Default#3,,0,0,0,,何だ このボッソボソ…
Dialogue: 0,0:21:33.99,0:21:36.58,Default#3,,0,0,0,,後引く苦みが ニチョニチョと…
Dialogue: 0,0:21:36.70,0:21:39.16,Default#3,,0,0,0,,薬膳だと思えば食えるか？
Dialogue: 0,0:21:39.29,0:21:39.79,Default#3,,0,0,0,,（３人）おおお～
Dialogue: 0,0:21:39.79,0:21:43.46,Default#3,,0,0,0,,（３人）おおお～
Dialogue: 0,0:21:39.79,0:21:43.46,Default#3,,0,0,0,,（千空）つっても連中にとっちゃ\N十分 神の飯なはずだ
Dialogue: 0,0:21:44.13,0:21:47.46,Default#3,,0,0,0,,いけるぜ これは\N猫じゃらしラーメン！
Dialogue: 0,0:21:48.92,0:21:51.88,Default#3,,0,0,0,,（チャルメラの演奏）
Dialogue: 0,0:21:51.88,0:21:52.72,Default#3,,0,0,0,,（チャルメラの演奏）
Dialogue: 0,0:21:51.88,0:21:52.72,Default#3,,0,0,0,,ん？
Dialogue: 0,0:21:52.72,0:21:54.93,Default#3,,0,0,0,,（チャルメラの演奏）
Dialogue: 0,0:21:54.93,0:21:55.89,Default#3,,0,0,0,,（チャルメラの演奏）
Dialogue: 0,0:21:54.93,0:21:55.89,Default#3,,0,0,0,,何事だ！
Dialogue: 0,0:21:55.89,0:21:56.81,Default#3,,0,0,0,,何事だ！
Dialogue: 0,0:21:59.47,0:22:01.94,Default#3,,0,0,0,,何か すっげえいい匂いしてきた
Dialogue: 0,0:22:02.06,0:22:03.65,Default#3,,0,0,0,,（演奏）
Dialogue: 0,0:22:03.98,0:22:06.15,Default#3,,0,0,0,,（千空）\Nコショウ巡って戦争したくらい―
Dialogue: 0,0:22:06.52,0:22:09.15,Default#3,,0,0,0,,飯は文明の根幹なんだよ
Dialogue: 0,0:22:12.40,0:22:17.83,Default#3,,0,0,0,,（千空）科学の飯 ラーメンで\Nこの村を制圧してやる！
Dialogue: 0,0:22:17.95,0:22:20.70,Default#3,,0,0,0,,（コハク）悪役の顔だな もはや…
Dialogue: 0,0:22:21.62,0:22:26.63,Default#3,,0,0,0,,♪～
Dialogue: 0,0:23:44.70,0:23:49.71,Default#3,,0,0,0,,～♪
