Dialogue: 0,0:00:09.00,0:00:11.42,Default#3,,0,0,0,,（千空(せんくう)）\N獅子王(ししおう) 司(つかさ)は いいヤツで―
Dialogue: 0,0:00:11.88,0:00:13.71,Default#3,,0,0,0,,人殺しだ
Dialogue: 0,0:00:14.09,0:00:15.17,Default#3,,0,0,0,,（千空）ククッ…
Dialogue: 0,0:00:15.30,0:00:18.72,Default#3,,0,0,0,,司が気付かねえうちに\N科学の武器を完成しちまえば―
Dialogue: 0,0:00:18.84,0:00:20.14,Default#3,,0,0,0,,俺らの勝ち
Dialogue: 0,0:00:20.26,0:00:22.97,Default#3,,0,0,0,,その前にバレたら 俺らの負け
Dialogue: 0,0:00:23.10,0:00:25.56,Default#3,,0,0,0,,これは そういうレースなんだよ
Dialogue: 0,0:00:26.10,0:00:29.85,Default#3,,0,0,0,,銃… つまり 火薬を作る！
Dialogue: 0,0:00:31.65,0:00:33.94,Default#3,,0,0,0,,唆(そそ)るぜ これは！
Dialogue: 0,0:00:34.23,0:00:36.57,Default#3,,0,0,0,,（司）はっ！　箱根(はこね)だ
Dialogue: 0,0:00:36.69,0:00:39.74,Default#3,,0,0,0,,火薬が完成すれば\N俺に勝ち目はない
Dialogue: 0,0:00:39.86,0:00:41.78,Default#3,,0,0,0,,必ず止める！
Dialogue: 0,0:00:41.91,0:00:44.83,Default#3,,0,0,0,,千空が作り上げる その前に
Dialogue: 0,0:00:45.29,0:00:47.87,Default#3,,0,0,0,,（採掘する音）
Dialogue: 0,0:00:48.12,0:00:51.00,Default#3,,0,0,0,,（千空）ヘヘヘ ヘヘヘ…
Dialogue: 0,0:00:51.33,0:00:52.46,Default#3,,0,0,0,,（大樹(たいじゅ)）杠(ゆずりは)―
Dialogue: 0,0:00:53.08,0:00:56.67,Default#3,,0,0,0,,石化中の出来事を\N話しておかなくてはな
Dialogue: 0,0:00:56.80,0:00:57.84,Default#3,,0,0,0,,（杠）あっ
Dialogue: 0,0:00:59.13,0:01:04.68,Default#3,,0,0,0,,3700年前 俺が杠を\Nクスノキに呼び出したときから…
Dialogue: 0,0:01:06.97,0:01:08.31,Default#3,,0,0,0,,（大樹）聞いてくれ 杠
Dialogue: 0,0:01:08.89,0:01:11.56,Default#3,,0,0,0,,俺は５年間ずっと…
Dialogue: 0,0:01:17.32,0:01:23.03,Default#3,,0,0,0,,（杠）あのとき…\N大樹君 何 言おうとしたの？
Dialogue: 0,0:01:31.16,0:01:35.29,Default#3,,0,0,0,,（大樹）\N杠 石化している間 俺は―
Dialogue: 0,0:01:35.42,0:01:38.17,Default#3,,0,0,0,,ずっと続きを話そうと思っていた
Dialogue: 0,0:01:38.46,0:01:41.38,Default#3,,0,0,0,,何百年も 何千年も…
Dialogue: 0,0:01:42.01,0:01:46.72,Default#3,,0,0,0,,だが今 この逃げ場もない\N極限の石の世界(ストーンワールド)で
Dialogue: 0,0:01:46.85,0:01:50.60,Default#3,,0,0,0,,それを伝えるのは 男として\Nひきょうな気がしてならん
Dialogue: 0,0:01:50.81,0:01:54.02,Default#3,,0,0,0,,（杠）あっ… フッ
Dialogue: 0,0:01:54.60,0:01:57.69,Default#3,,0,0,0,,あっ すまん！\N内容を知らん杠には
Dialogue: 0,0:01:57.82,0:02:00.61,Default#3,,0,0,0,,何を言ってるのか\Nさっぱり分からんかもしれんが…
Dialogue: 0,0:02:00.74,0:02:02.70,Default#3,,0,0,0,,（杠）ううん 分かるよ
Dialogue: 0,0:02:03.15,0:02:05.66,Default#3,,0,0,0,,俺たちは文明を取り戻す
Dialogue: 0,0:02:05.78,0:02:07.62,Default#3,,0,0,0,,人類を皆 助ける
Dialogue: 0,0:02:07.74,0:02:11.25,Default#3,,0,0,0,,そのときこそ 3700年越しで
Dialogue: 0,0:02:11.37,0:02:14.96,Default#3,,0,0,0,,俺の話の続きを\N聞いてくれないか 杠！
Dialogue: 0,0:02:17.29,0:02:19.55,Default#3,,0,0,0,,うん 分かった
Dialogue: 0,0:02:19.96,0:02:23.47,Default#3,,0,0,0,,戻せるよ 世界… 絶対！
Dialogue: 0,0:02:24.26,0:02:29.26,Default#3,,0,0,0,,♪～
Dialogue: 0,0:03:48.93,0:03:53.93,Default#3,,0,0,0,,～♪
Dialogue: 0,0:04:00.27,0:04:02.11,Default#3,,0,0,0,,（千空）クッ フフ…
Dialogue: 0,0:04:03.44,0:04:06.19,Default#3,,0,0,0,,火薬の素材の３つはそろった
Dialogue: 0,0:04:06.61,0:04:08.70,Default#3,,0,0,0,,おおっ！　もう そろったのか！
Dialogue: 0,0:04:08.91,0:04:10.82,Default#3,,0,0,0,,あとは混ぜるだけ
Dialogue: 0,0:04:10.95,0:04:14.62,Default#3,,0,0,0,,さあ\N楽しい火薬クッキングの時間だ！
Dialogue: 0,0:04:19.92,0:04:21.58,Default#3,,0,0,0,,（千空）火薬の素材１
Dialogue: 0,0:04:21.96,0:04:24.67,Default#3,,0,0,0,,この温泉で採れ放題の硫黄
Dialogue: 0,0:04:25.13,0:04:27.59,Default#3,,0,0,0,,その２ 木炭
Dialogue: 0,0:04:27.72,0:04:30.68,Default#3,,0,0,0,,こんなもん 木 燃やしゃ\Nいくらでも手に入る
Dialogue: 0,0:04:31.05,0:04:32.35,Default#3,,0,0,0,,そして その３
Dialogue: 0,0:04:32.47,0:04:35.97,Default#3,,0,0,0,,最後にして最大の難関が硝酸カリ
Dialogue: 0,0:04:36.10,0:04:38.94,Default#3,,0,0,0,,これ 作んのは\Nクソほど時間がかかるので…
Dialogue: 0,0:04:39.94,0:04:41.69,Default#3,,0,0,0,,ククク 今日は あらかじめ
Dialogue: 0,0:04:41.81,0:04:44.44,Default#3,,0,0,0,,ここに その硝酸カリが\N用意してあんぞ！
Dialogue: 0,0:04:44.57,0:04:45.94,Default#3,,0,0,0,,おおおおっ！
Dialogue: 0,0:04:46.19,0:04:50.45,Default#3,,0,0,0,,う～ん ナントカ酸って\Nどっかで聞いたこと…
Dialogue: 0,0:04:50.74,0:04:53.07,Default#3,,0,0,0,,硝酸！　奇跡の水！
Dialogue: 0,0:04:53.20,0:04:54.91,Default#3,,0,0,0,,例の洞穴から採ったのか？
Dialogue: 0,0:04:55.03,0:04:57.83,Default#3,,0,0,0,,雑頭(ざつあたま)が珍しく正解じゃねえか
Dialogue: 0,0:04:57.95,0:04:59.71,Default#3,,0,0,0,,100億万点やるよ
Dialogue: 0,0:05:00.00,0:05:04.00,Default#3,,0,0,0,,硝酸カリ 硫黄 木炭を\Nブチ込んだもんに―
Dialogue: 0,0:05:04.13,0:05:08.55,Default#3,,0,0,0,,隠し味で 砂糖とかを\Nちょちょっと足すとパワーが上がる
Dialogue: 0,0:05:08.67,0:05:11.59,Default#3,,0,0,0,,ちなみに これは\Nブドウから作ったブドウ糖な
Dialogue: 0,0:05:13.89,0:05:16.35,Default#3,,0,0,0,,（メカ千空）\Nよう！　俺の名はメカ千空
Dialogue: 0,0:05:16.47,0:05:18.98,Default#3,,0,0,0,,今のレシピは全部マジ話だ
Dialogue: 0,0:05:19.10,0:05:22.60,Default#3,,0,0,0,,ホントに爆弾できっから\Nマネするんじゃねえぞ！
Dialogue: 0,0:05:25.48,0:05:27.78,Default#3,,0,0,0,,仕上げに ぶったたいて固める！
Dialogue: 0,0:05:27.90,0:05:29.03,Default#3,,0,0,0,,（大樹）ふん！
Dialogue: 0,0:05:29.57,0:05:33.66,Default#3,,0,0,0,,ぶったたくんだな？\N体力作業は俺に任せろ！
Dialogue: 0,0:05:33.78,0:05:34.78,Default#3,,0,0,0,,（千空･杠）ええ～!?
Dialogue: 0,0:05:35.16,0:05:36.66,Default#3,,0,0,0,,さ… さすがにマズくない？
Dialogue: 0,0:05:36.78,0:05:38.58,Default#3,,0,0,0,,大樹君のパワーで\Nそれ ぶつけたら
Dialogue: 0,0:05:38.70,0:05:41.96,Default#3,,0,0,0,,火花でドカーンって！\N火打ち石的な…
Dialogue: 0,0:05:42.08,0:05:45.75,Default#3,,0,0,0,,いや まあ\N石同士ぶつけても火花は出ねえがな
Dialogue: 0,0:05:46.00,0:05:48.13,Default#3,,0,0,0,,え… そうなの？
Dialogue: 0,0:05:51.47,0:05:52.88,Default#3,,0,0,0,,おお 本当だ！
Dialogue: 0,0:05:53.43,0:05:56.39,Default#3,,0,0,0,,火打ち石っつうのは\N石だけじゃねえんだよ
Dialogue: 0,0:05:56.51,0:05:58.97,Default#3,,0,0,0,,鉄が混じってなきゃ 火花は…
Dialogue: 0,0:06:07.82,0:06:10.07,Default#3,,0,0,0,,（千空）待っ…\N（大樹）ふん！
Dialogue: 0,0:06:12.82,0:06:14.28,Default#3,,0,0,0,,（一同）ああ…
Dialogue: 0,0:06:17.12,0:06:18.62,Default#3,,0,0,0,,（一同の叫び声）
Dialogue: 0,0:06:18.74,0:06:20.66,Default#3,,0,0,0,,（杠･大樹）うわっ！\N（千空）ぬわああ！
Dialogue: 0,0:06:27.17,0:06:28.29,Default#3,,0,0,0,,（大樹）んっ ううっ…\N（杠）うう…
Dialogue: 0,0:06:28.42,0:06:30.51,Default#3,,0,0,0,,（千空）フッ ハハ… 問題ねえ
Dialogue: 0,0:06:30.88,0:06:33.51,Default#3,,0,0,0,,火薬クッキング大成功じゃねえか
Dialogue: 0,0:06:33.63,0:06:35.76,Default#3,,0,0,0,,こんなにすごいんだ 火薬って…
Dialogue: 0,0:06:36.14,0:06:39.76,Default#3,,0,0,0,,ああ 昔から\N学生が実験とかでミスして
Dialogue: 0,0:06:39.89,0:06:43.27,Default#3,,0,0,0,,手足 吹っ飛ぶレベルの事故も\Nバンバン起きてっからな
Dialogue: 0,0:06:43.64,0:06:44.98,Default#3,,0,0,0,,（杠）ええ…
Dialogue: 0,0:06:45.10,0:06:47.77,Default#3,,0,0,0,,その気になりゃ 確実に凶器だ
Dialogue: 0,0:06:48.69,0:06:51.90,Default#3,,0,0,0,,（杠）これで司君を攻撃するの？
Dialogue: 0,0:06:53.57,0:06:55.86,Default#3,,0,0,0,,いや 取り引きする
Dialogue: 0,0:06:55.99,0:06:56.91,Default#3,,0,0,0,,（杠･大樹）あ…
Dialogue: 0,0:06:57.03,0:07:00.33,Default#3,,0,0,0,,司は話の通じねえ殺人鬼じゃねえ
Dialogue: 0,0:07:00.45,0:07:04.12,Default#3,,0,0,0,,大樹 テメーとバトったとき\N言ってたじゃねえか
Dialogue: 0,0:07:04.71,0:07:06.75,Default#3,,0,0,0,,君の主張を整理すると
Dialogue: 0,0:07:06.87,0:07:09.46,Default#3,,0,0,0,,自分は手を出さず\N殴られ続ける
Dialogue: 0,0:07:09.59,0:07:11.21,Default#3,,0,0,0,,よって 石像は壊すな
Dialogue: 0,0:07:12.30,0:07:13.51,Default#3,,0,0,0,,そういうことかい？
Dialogue: 0,0:07:13.63,0:07:15.01,Default#3,,0,0,0,,そういうことだ！
Dialogue: 0,0:07:15.84,0:07:17.64,Default#3,,0,0,0,,意味が分からない
Dialogue: 0,0:07:17.76,0:07:19.76,Default#3,,0,0,0,,何の取り引きにもなってない
Dialogue: 0,0:07:20.14,0:07:24.77,Default#3,,0,0,0,,（千空）逆に言やあ 戦況次第で\N取り引きの余地はあるってことだ
Dialogue: 0,0:07:24.89,0:07:28.10,Default#3,,0,0,0,,火薬武器さえありゃ 優位に立てる
Dialogue: 0,0:07:28.60,0:07:29.98,Default#3,,0,0,0,,（大樹･杠）あっ…
Dialogue: 0,0:07:30.11,0:07:34.69,Default#3,,0,0,0,,（千空）だが もしも\N司と取り引きが決裂したら…
Dialogue: 0,0:07:35.78,0:07:38.03,Default#3,,0,0,0,,そのときは司を…
Dialogue: 0,0:07:39.16,0:07:43.41,Default#3,,0,0,0,,（司）もしも 千空が既に\N火薬を完成させていたなら…
Dialogue: 0,0:07:44.04,0:07:46.21,Default#3,,0,0,0,,そのときは千空を…
Dialogue: 0,0:07:48.71,0:07:50.75,Default#3,,0,0,0,,（司･千空）殺すしかない
Dialogue: 0,0:07:56.97,0:08:00.01,Default#3,,0,0,0,,（大樹）\Nおーし だいぶ弱くなってきたな
Dialogue: 0,0:08:00.14,0:08:02.81,Default#3,,0,0,0,,（千空）ハハッ\N司が追ってきてたりしたら―
Dialogue: 0,0:08:02.93,0:08:05.56,Default#3,,0,0,0,,100億％ 見つかるからな
Dialogue: 0,0:08:06.10,0:08:07.10,Default#3,,0,0,0,,あっ
Dialogue: 0,0:08:07.52,0:08:08.81,Default#3,,0,0,0,,ああ…
Dialogue: 0,0:08:09.02,0:08:11.06,Default#3,,0,0,0,,千空君 大樹君…
Dialogue: 0,0:08:11.19,0:08:12.27,Default#3,,0,0,0,,（千空･大樹）あ？
Dialogue: 0,0:08:13.27,0:08:14.40,Default#3,,0,0,0,,（千空）あっ…
Dialogue: 0,0:08:18.11,0:08:19.53,Default#3,,0,0,0,,（千空）のろし!?
Dialogue: 0,0:08:20.70,0:08:21.74,Default#3,,0,0,0,,司君？
Dialogue: 0,0:08:21.87,0:08:23.74,Default#3,,0,0,0,,（千空）いや 逆方向だ
Dialogue: 0,0:08:24.20,0:08:27.96,Default#3,,0,0,0,,大体 司が わざわざ居場所を\N俺らに知らせるわけがねえ
Dialogue: 0,0:08:28.08,0:08:30.37,Default#3,,0,0,0,,じゃあ 何だ？　山火事か？
Dialogue: 0,0:08:30.50,0:08:32.34,Default#3,,0,0,0,,タイミングが偶然すぎる
Dialogue: 0,0:08:32.79,0:08:35.92,Default#3,,0,0,0,,明らかに\N俺らの噴煙に反応して上がった
Dialogue: 0,0:08:36.05,0:08:37.42,Default#3,,0,0,0,,（杠）じゃあ…
Dialogue: 0,0:08:37.55,0:08:38.55,Default#3,,0,0,0,,（千空）ああ
Dialogue: 0,0:08:40.59,0:08:43.30,Default#3,,0,0,0,,唆るぜ これは
Dialogue: 0,0:08:44.14,0:08:48.14,Default#3,,0,0,0,,このストーンワールドに\N俺らのほかに誰かいる
Dialogue: 0,0:08:48.39,0:08:49.60,Default#3,,0,0,0,,（大樹･杠）あっ…
Dialogue: 0,0:08:49.73,0:08:52.02,Default#3,,0,0,0,,人類が ほかに…
Dialogue: 0,0:08:52.15,0:08:54.57,Default#3,,0,0,0,,ひとまず完全に火を消さなきゃ！
Dialogue: 0,0:08:54.69,0:08:56.86,Default#3,,0,0,0,,あっ… ああ そうだったな
Dialogue: 0,0:08:56.98,0:08:58.11,Default#3,,0,0,0,,（千空）いや 待て
Dialogue: 0,0:08:58.24,0:08:59.40,Default#3,,0,0,0,,（大樹）んっ？\N（杠）あっ
Dialogue: 0,0:08:59.95,0:09:02.32,Default#3,,0,0,0,,ヤツらから見りゃ 今の爆発は
Dialogue: 0,0:09:02.45,0:09:04.83,Default#3,,0,0,0,,“火山かも？”っつう話だ
Dialogue: 0,0:09:04.95,0:09:08.33,Default#3,,0,0,0,,立ち去られる前に\N更に燃やして 合図しねえと
Dialogue: 0,0:09:08.45,0:09:10.00,Default#3,,0,0,0,,（大樹）そういうことか！
Dialogue: 0,0:09:10.12,0:09:13.42,Default#3,,0,0,0,,（杠）\Nでも もし司君が追ってきてたら…
Dialogue: 0,0:09:13.54,0:09:16.84,Default#3,,0,0,0,,（千空）ご親切に俺らの居場所を\N知らせるハメになる
Dialogue: 0,0:09:16.96,0:09:18.01,Default#3,,0,0,0,,（大樹）むう…
Dialogue: 0,0:09:18.34,0:09:19.80,Default#3,,0,0,0,,（千空）クッ フフ…
Dialogue: 0,0:09:19.92,0:09:23.59,Default#3,,0,0,0,,勘とかいう非合理的なもんが\N告げてやがる
Dialogue: 0,0:09:23.72,0:09:26.39,Default#3,,0,0,0,,ここでつけたら俺は きっと…
Dialogue: 0,0:09:26.85,0:09:30.52,Default#3,,0,0,0,,どっちを取る？\N安全か 未来か
Dialogue: 0,0:09:30.89,0:09:34.86,Default#3,,0,0,0,,どうする 千空？\N消すのか つけるのか
Dialogue: 0,0:09:37.44,0:09:40.78,Default#3,,0,0,0,,つけるぞ！　のろしを上げろ！
Dialogue: 0,0:09:46.49,0:09:50.00,Default#3,,0,0,0,,（爆発音）
Dialogue: 0,0:09:53.58,0:09:54.96,Default#3,,0,0,0,,火薬が尽きちまう
Dialogue: 0,0:09:55.08,0:09:57.34,Default#3,,0,0,0,,燃えるもん\Nじゃんじゃんブチ込め！
Dialogue: 0,0:09:57.46,0:09:59.51,Default#3,,0,0,0,,待ってろ 木を集めてくるぞ！
Dialogue: 0,0:10:00.46,0:10:02.17,Default#3,,0,0,0,,（千空）もろ刃の のろしだ
Dialogue: 0,0:10:02.30,0:10:05.09,Default#3,,0,0,0,,周り中に\N居場所を知らせることになる
Dialogue: 0,0:10:05.22,0:10:08.72,Default#3,,0,0,0,,もし 火薬作る計画が\N司にバレてたら…
Dialogue: 0,0:10:09.56,0:10:12.14,Default#3,,0,0,0,,（司）\N千空は火薬を作ろうとしている
Dialogue: 0,0:10:12.89,0:10:14.98,Default#3,,0,0,0,,貝殻が俺に教えてくれた
Dialogue: 0,0:10:15.81,0:10:19.36,Default#3,,0,0,0,,４つも\N死ぬほど重要な使い道がある
Dialogue: 0,0:10:19.98,0:10:21.69,Default#3,,0,0,0,,３つって言わなかったか？
Dialogue: 0,0:10:22.24,0:10:26.82,Default#3,,0,0,0,,（司）あのとき 千空は\N俺の武力を警戒して隠した
Dialogue: 0,0:10:26.95,0:10:27.99,Default#3,,0,0,0,,つまり―
Dialogue: 0,0:10:28.87,0:10:33.50,Default#3,,0,0,0,,“貝殻の重要な使い道 その４”は\N科学の武器だ
Dialogue: 0,0:10:33.62,0:10:34.92,Default#3,,0,0,0,,予測はつく
Dialogue: 0,0:10:35.04,0:10:38.54,Default#3,,0,0,0,,例えば\N火薬原料となる硝酸カリの量産
Dialogue: 0,0:10:39.09,0:10:39.92,Default#3,,0,0,0,,あっ！
Dialogue: 0,0:10:41.42,0:10:44.68,Default#3,,0,0,0,,（司）\Nそうだ 千空は あのときから―
Dialogue: 0,0:10:44.80,0:10:47.93,Default#3,,0,0,0,,火薬で俺と戦う未来を\N見据えていた！
Dialogue: 0,0:10:52.18,0:10:53.14,Default#3,,0,0,0,,あっ
Dialogue: 0,0:10:53.48,0:10:54.77,Default#3,,0,0,0,,はっ…
Dialogue: 0,0:11:10.37,0:11:14.46,Default#3,,0,0,0,,（千空）クッ フフ…\N科学の武器が登場したら―
Dialogue: 0,0:11:15.00,0:11:18.42,Default#3,,0,0,0,,“最強の僕が\N最強じゃなくなっちゃう”
Dialogue: 0,0:11:18.54,0:11:23.13,Default#3,,0,0,0,,そう だだこねてるようにしか\N見えねえな 司
Dialogue: 0,0:11:23.63,0:11:27.43,Default#3,,0,0,0,,うん\Nそう捉えてもらってかまわないよ
Dialogue: 0,0:11:28.26,0:11:33.81,Default#3,,0,0,0,,もし 科学の武器を作り\N旧世代をよみがえらせれば―
Dialogue: 0,0:11:33.93,0:11:36.73,Default#3,,0,0,0,,既得権益を求めて争い出し―
Dialogue: 0,0:11:36.85,0:11:39.65,Default#3,,0,0,0,,たちまち汚れた世界へと逆戻りだ
Dialogue: 0,0:11:40.36,0:11:45.69,Default#3,,0,0,0,,それを食い止めるためなら\N俺が力で統べることもいとわない
Dialogue: 0,0:11:46.20,0:11:50.95,Default#3,,0,0,0,,んで 科学マンの千空は\Nブチ殺すっきゃねえ… と
Dialogue: 0,0:11:51.08,0:11:56.00,Default#3,,0,0,0,,フッ ハハ… お優しすぎる\N死刑判決に全米が泣くわ
Dialogue: 0,0:11:56.41,0:11:58.79,Default#3,,0,0,0,,うん でも その前に
Dialogue: 0,0:11:58.92,0:12:01.88,Default#3,,0,0,0,,石化復活液のレシピを\N教えてくれないか？
Dialogue: 0,0:12:03.17,0:12:04.21,Default#3,,0,0,0,,（杠）ああ…
Dialogue: 0,0:12:05.34,0:12:06.38,Default#3,,0,0,0,,（千空）んっ…
Dialogue: 0,0:12:08.84,0:12:11.80,Default#3,,0,0,0,,悪いが\N俺はテメーほどお優しかねえ
Dialogue: 0,0:12:11.93,0:12:14.97,Default#3,,0,0,0,,合理的にしか考えられねえタチでな
Dialogue: 0,0:12:15.43,0:12:19.48,Default#3,,0,0,0,,その女一人どうしようが\N１ミリも興味ねえや
Dialogue: 0,0:12:19.60,0:12:21.65,Default#3,,0,0,0,,メスなら ほかにいくらでも…
Dialogue: 0,0:12:22.02,0:12:23.19,Default#3,,0,0,0,,あっ…
Dialogue: 0,0:12:23.32,0:12:24.02,Default#3,,0,0,0,,ぐっ！
Dialogue: 0,0:12:24.15,0:12:26.82,Default#3,,0,0,0,,（杠）ああっ ああ…
Dialogue: 0,0:12:27.24,0:12:29.61,Default#3,,0,0,0,,（司）駆け引きは無駄だよ 千空
Dialogue: 0,0:12:29.74,0:12:33.83,Default#3,,0,0,0,,うん\Nだって 君は杠を埋めなかった
Dialogue: 0,0:12:34.70,0:12:36.08,Default#3,,0,0,0,,最善手は―
Dialogue: 0,0:12:36.20,0:12:40.25,Default#3,,0,0,0,,杠を石のまま どこか遠くへ\N埋めてしまうことだった
Dialogue: 0,0:12:40.37,0:12:43.04,Default#3,,0,0,0,,それなら人質にされようがない
Dialogue: 0,0:12:43.17,0:12:48.13,Default#3,,0,0,0,,俺でも思いつくことを\N君の頭脳が思いつかないはずがない
Dialogue: 0,0:12:48.76,0:12:50.93,Default#3,,0,0,0,,だが 君はしなかった
Dialogue: 0,0:12:51.05,0:12:54.18,Default#3,,0,0,0,,大樹のためか 杠のためか
Dialogue: 0,0:12:54.31,0:12:57.39,Default#3,,0,0,0,,いや 恐らくは２人とも…
Dialogue: 0,0:12:57.77,0:12:58.81,Default#3,,0,0,0,,あっ…
Dialogue: 0,0:12:59.06,0:13:00.10,Default#3,,0,0,0,,（千空）うっ…
Dialogue: 0,0:13:01.81,0:13:06.61,Default#3,,0,0,0,,（司）君は自分を合理的と言うが\N大切な友人がいる
Dialogue: 0,0:13:06.94,0:13:11.74,Default#3,,0,0,0,,俺には取り巻きは山ほどいるが\N大切な人間などいない
Dialogue: 0,0:13:13.07,0:13:16.95,Default#3,,0,0,0,,だから千空 俺の勝ちだ
Dialogue: 0,0:13:17.08,0:13:20.04,Default#3,,0,0,0,,（杠）\Nアハハ 助かっちゃったかも
Dialogue: 0,0:13:20.16,0:13:22.96,Default#3,,0,0,0,,この世界だと髪洗うのも大変だし
Dialogue: 0,0:13:25.13,0:13:25.96,Default#3,,0,0,0,,あっ
Dialogue: 0,0:13:27.84,0:13:28.96,Default#3,,0,0,0,,あ…
Dialogue: 0,0:13:30.51,0:13:33.34,Default#3,,0,0,0,,（杠）言っちゃダメだよ 千空君
Dialogue: 0,0:13:33.72,0:13:36.64,Default#3,,0,0,0,,復活液のレシピ\N聞き出さないうちは―
Dialogue: 0,0:13:36.76,0:13:40.48,Default#3,,0,0,0,,司君は\N千空君のこと 殺せないんだから
Dialogue: 0,0:13:44.02,0:13:46.52,Default#3,,0,0,0,,私は全然 大丈夫
Dialogue: 0,0:13:46.65,0:13:49.57,Default#3,,0,0,0,,でも 千空君だけは―
Dialogue: 0,0:13:49.69,0:13:53.78,Default#3,,0,0,0,,みんなの未来のために\N絶対 死んじゃダメだから
Dialogue: 0,0:13:54.49,0:13:56.41,Default#3,,0,0,0,,ハァ…
Dialogue: 0,0:14:06.84,0:14:11.59,Default#3,,0,0,0,,（千空）復活液は\N硝酸とアルコールの混合液だ
Dialogue: 0,0:14:14.34,0:14:17.39,Default#3,,0,0,0,,洞穴の奇跡の水を\Nろ過したあと―
Dialogue: 0,0:14:17.76,0:14:22.98,Default#3,,0,0,0,,限界値96％目指して蒸留しまくった\Nアルコールと混ぜる
Dialogue: 0,0:14:23.56,0:14:26.90,Default#3,,0,0,0,,奇跡の水 30 対 アルコール 70
Dialogue: 0,0:14:27.02,0:14:30.15,Default#3,,0,0,0,,数％ ズレただけで\N反応しねえから―
Dialogue: 0,0:14:30.28,0:14:34.49,Default#3,,0,0,0,,石化したツバメの羽根で\Nつつきながら微調整する
Dialogue: 0,0:14:38.66,0:14:41.33,Default#3,,0,0,0,,ありがとう 千空
Dialogue: 0,0:14:42.04,0:14:47.13,Default#3,,0,0,0,,これで 君を生かしておく理由が\Nなくなってしまった
Dialogue: 0,0:14:50.84,0:14:54.26,Default#3,,0,0,0,,うむ これだけあれば… あっ！
Dialogue: 0,0:14:55.26,0:14:57.43,Default#3,,0,0,0,,お… おおおお！
Dialogue: 0,0:14:57.55,0:14:59.22,Default#3,,0,0,0,,のろしが３本！
Dialogue: 0,0:15:00.60,0:15:03.93,Default#3,,0,0,0,,さっきの火薬３連発に\N返答してきたんだ！
Dialogue: 0,0:15:04.44,0:15:07.19,Default#3,,0,0,0,,もう間違いない！　人間がいるぞ！
Dialogue: 0,0:15:07.73,0:15:10.98,Default#3,,0,0,0,,千空～！　杠～！
Dialogue: 0,0:15:17.36,0:15:18.82,Default#3,,0,0,0,,（コハク）スリー…
Dialogue: 0,0:15:19.91,0:15:21.58,Default#3,,0,0,0,,（杠）うっ… うう！
Dialogue: 0,0:15:27.50,0:15:29.38,Default#3,,0,0,0,,君を生かしておけば
Dialogue: 0,0:15:29.50,0:15:33.34,Default#3,,0,0,0,,うん 必ず文明を発展させてしまう
Dialogue: 0,0:15:34.17,0:15:37.18,Default#3,,0,0,0,,それをしないと\N約束してくれないか
Dialogue: 0,0:15:37.93,0:15:40.60,Default#3,,0,0,0,,（千空）\Nクッ ハハ… 何言ってやがる
Dialogue: 0,0:15:40.72,0:15:42.47,Default#3,,0,0,0,,そんな約束なんざ 適当に…
Dialogue: 0,0:15:42.60,0:15:45.77,Default#3,,0,0,0,,いや 君はウソをつかない
Dialogue: 0,0:15:45.89,0:15:47.73,Default#3,,0,0,0,,科学にだけは
Dialogue: 0,0:15:49.98,0:15:54.40,Default#3,,0,0,0,,今 ここで\N永遠に誓ってくれないか
Dialogue: 0,0:15:54.65,0:15:56.57,Default#3,,0,0,0,,科学を捨てると！
Dialogue: 0,0:15:59.91,0:16:02.08,Default#3,,0,0,0,,そうすれば 俺は―
Dialogue: 0,0:16:02.83,0:16:07.16,Default#3,,0,0,0,,千空\N君を殺さなくてすむんだ
Dialogue: 0,0:16:13.50,0:16:15.55,Default#3,,0,0,0,,（教師）じゃあ 次は千空君
Dialogue: 0,0:16:16.09,0:16:17.13,Default#3,,0,0,0,,（千空）宇宙に行く
Dialogue: 0,0:16:17.26,0:16:18.59,Default#3,,0,0,0,,（生徒たち）え～！
Dialogue: 0,0:16:18.93,0:16:22.43,Default#3,,0,0,0,,（教師）宇宙飛行士！\Nおお いい夢ですねえ
Dialogue: 0,0:16:22.55,0:16:23.89,Default#3,,0,0,0,,では 大人になったら…
Dialogue: 0,0:16:24.01,0:16:27.02,Default#3,,0,0,0,,いや 今すぐソッコーで行く
Dialogue: 0,0:16:27.94,0:16:29.14,Default#3,,0,0,0,,（千空）クッ フフ…
Dialogue: 0,0:16:29.27,0:16:32.52,Default#3,,0,0,0,,つっても こっちは\N科学の“カ”の字も知らねえガキだ
Dialogue: 0,0:16:33.48,0:16:34.73,Default#3,,0,0,0,,全部 一から―
Dialogue: 0,0:16:36.40,0:16:37.78,Default#3,,0,0,0,,調べまくる
Dialogue: 0,0:16:39.36,0:16:40.28,Default#3,,0,0,0,,試しまくる
Dialogue: 0,0:16:40.41,0:16:41.24,Default#3,,0,0,0,,（千空）うわっ！
Dialogue: 0,0:16:47.58,0:16:49.87,Default#3,,0,0,0,,（千空の父）父さんは手伝えねえ\N（千空）あ？
Dialogue: 0,0:16:50.21,0:16:53.17,Default#3,,0,0,0,,（千空の父）だが 千空\Nお前さえ本気なら―
Dialogue: 0,0:16:53.29,0:16:56.71,Default#3,,0,0,0,,地道な科学で\N何だって成し遂げられるさ
Dialogue: 0,0:16:59.47,0:17:04.72,Default#3,,0,0,0,,道具だけは\Nきっとサンタが用意してくれる
Dialogue: 0,0:17:08.89,0:17:09.81,Default#3,,0,0,0,,あっ
Dialogue: 0,0:17:13.06,0:17:15.02,Default#3,,0,0,0,,うわあ…
Dialogue: 0,0:17:16.32,0:17:19.78,Default#3,,0,0,0,,（千空）虫眼鏡の光って\N点にすると燃えんだな
Dialogue: 0,0:17:19.90,0:17:22.24,Default#3,,0,0,0,,（おじいちゃん）\Nかわいい実験だの～
Dialogue: 0,0:17:25.12,0:17:26.58,Default#3,,0,0,0,,クッ フフ…
Dialogue: 0,0:17:26.70,0:17:29.12,Default#3,,0,0,0,,砂鉄にアルミホイル ヤベえ
Dialogue: 0,0:17:29.25,0:17:32.08,Default#3,,0,0,0,,テルミット反応で\Nフライパンがドロッドロだ
Dialogue: 0,0:17:32.21,0:17:34.25,Default#3,,0,0,0,,（おじいちゃん）かわいい…？
Dialogue: 0,0:17:38.67,0:17:40.13,Default#3,,0,0,0,,（千空）インジェクターが常温じゃ
Dialogue: 0,0:17:40.26,0:17:43.47,Default#3,,0,0,0,,100億％ 液体酸素が沸騰するし
Dialogue: 0,0:17:43.59,0:17:45.43,Default#3,,0,0,0,,冷えすぎりゃ 凍る
Dialogue: 0,0:17:45.55,0:17:49.14,Default#3,,0,0,0,,まあ 当分は エタノールで\N試してからのケロシンだ
Dialogue: 0,0:17:49.35,0:17:51.27,Default#3,,0,0,0,,（高校生たち）ああ？　クフフ…
Dialogue: 0,0:17:51.69,0:17:52.64,Default#3,,0,0,0,,あ？
Dialogue: 0,0:17:53.23,0:17:54.31,Default#3,,0,0,0,,ああっ！
Dialogue: 0,0:17:54.44,0:17:56.77,Default#3,,0,0,0,,（大樹）うおおおお！
Dialogue: 0,0:17:57.19,0:17:58.69,Default#3,,0,0,0,,（千空）うわあ～！
Dialogue: 0,0:17:58.94,0:18:00.36,Default#3,,0,0,0,,ああ…
Dialogue: 0,0:18:09.04,0:18:09.87,Default#3,,0,0,0,,（高校生）ああ？
Dialogue: 0,0:18:10.00,0:18:11.62,Default#3,,0,0,0,,ヘヘ～ン
Dialogue: 0,0:18:12.83,0:18:15.33,Default#3,,0,0,0,,（高校生たちの叫び声）
Dialogue: 0,0:18:16.04,0:18:17.25,Default#3,,0,0,0,,（大樹）何だ それは？
Dialogue: 0,0:18:17.38,0:18:18.63,Default#3,,0,0,0,,アブレータだ
Dialogue: 0,0:18:18.75,0:18:20.55,Default#3,,0,0,0,,使わねえとチャンバーが焼ける
Dialogue: 0,0:18:21.80,0:18:23.05,Default#3,,0,0,0,,（千空･大樹）うわっ！
Dialogue: 0,0:18:23.63,0:18:25.22,Default#3,,0,0,0,,（大樹）すみませ～ん
Dialogue: 0,0:18:25.34,0:18:28.47,Default#3,,0,0,0,,“らずぱい”\N“そうしんもじゅーる”
Dialogue: 0,0:18:28.60,0:18:29.97,Default#3,,0,0,0,,“じゃいろ”ってやつ下さい
Dialogue: 0,0:18:31.64,0:18:32.48,Default#3,,0,0,0,,ん？
Dialogue: 0,0:18:36.19,0:18:37.69,Default#3,,0,0,0,,（爆発音）\N（大樹）あっ
Dialogue: 0,0:18:45.49,0:18:48.74,Default#3,,0,0,0,,データ受信は\N古き良き八木(やぎ)アンテナだ
Dialogue: 0,0:18:48.87,0:18:50.37,Default#3,,0,0,0,,テレビに使うやつな
Dialogue: 0,0:18:50.49,0:18:51.75,Default#3,,0,0,0,,（大樹･千空）あっ… ああ！
Dialogue: 0,0:18:57.29,0:18:58.21,Default#3,,0,0,0,,（大樹）千空！
Dialogue: 0,0:18:58.75,0:19:02.09,Default#3,,0,0,0,,軽い荷物を乗せて試すって\N言ってたじゃないか
Dialogue: 0,0:19:02.21,0:19:04.97,Default#3,,0,0,0,,手芸部の小川(おがわ) 杠さんに頼んで
Dialogue: 0,0:19:05.09,0:19:08.10,Default#3,,0,0,0,,とりあえず ３体\N乗客を作ってもらったぞ
Dialogue: 0,0:19:08.22,0:19:09.05,Default#3,,0,0,0,,あ？
Dialogue: 0,0:19:10.26,0:19:13.85,Default#3,,0,0,0,,（杠）自分の編みぐるみとか\N超羞恥プレーなんですけど…
Dialogue: 0,0:19:14.14,0:19:16.35,Default#3,,0,0,0,,てか 何に使うの これ？
Dialogue: 0,0:19:22.53,0:19:26.03,Default#3,,0,0,0,,ハァハァ ハァ…
Dialogue: 0,0:19:57.19,0:19:58.90,Default#3,,0,0,0,,超上空で吹っ飛んだ
Dialogue: 0,0:19:59.02,0:20:01.32,Default#3,,0,0,0,,またダメか～！
Dialogue: 0,0:20:01.61,0:20:04.57,Default#3,,0,0,0,,（千空）クッ フフ… そうでもねえ
Dialogue: 0,0:20:05.40,0:20:06.61,Default#3,,0,0,0,,（大樹･杠）ん？
Dialogue: 0,0:20:07.24,0:20:08.86,Default#3,,0,0,0,,（杠）うわああ！\N（大樹）うおおおっ！
Dialogue: 0,0:20:11.49,0:20:13.16,Default#3,,0,0,0,,（千空）宇宙に行く
Dialogue: 0,0:20:14.12,0:20:15.83,Default#3,,0,0,0,,ソッコーで行く
Dialogue: 0,0:20:17.12,0:20:21.46,Default#3,,0,0,0,,（千空）地道な科学で\N何だって成し遂げられるさ
Dialogue: 0,0:20:25.96,0:20:29.76,Default#3,,0,0,0,,千空 できれば殺したくない
Dialogue: 0,0:20:31.14,0:20:32.76,Default#3,,0,0,0,,もう一度 聞く
Dialogue: 0,0:20:34.22,0:20:39.48,Default#3,,0,0,0,,今 ここで誓ってくれないか\N科学を捨てると
Dialogue: 0,0:20:42.90,0:20:45.44,Default#3,,0,0,0,,無理だな それだけは
Dialogue: 0,0:20:50.49,0:20:54.70,Default#3,,0,0,0,,うん 君は きっと\Nそう答えると思ったよ
Dialogue: 0,0:20:55.04,0:20:58.41,Default#3,,0,0,0,,クッ フフ…\N何 寝言 言ってやがる
Dialogue: 0,0:20:58.54,0:21:03.09,Default#3,,0,0,0,,どう答えようが\Nどうせ ゆくゆくは殺すんだろうが
Dialogue: 0,0:21:03.21,0:21:04.59,Default#3,,0,0,0,,念のためな
Dialogue: 0,0:21:05.67,0:21:07.05,Default#3,,0,0,0,,（司）かもね
Dialogue: 0,0:21:07.88,0:21:09.38,Default#3,,0,0,0,,（首の骨が鳴る音）
Dialogue: 0,0:21:09.51,0:21:11.26,Default#3,,0,0,0,,一撃でやれよ
Dialogue: 0,0:21:11.39,0:21:16.22,Default#3,,0,0,0,,ダラダラ血 流して粘んのは\Nお互い 非合理的だろうが
Dialogue: 0,0:21:17.35,0:21:18.98,Default#3,,0,0,0,,（司）心配ないよ
Dialogue: 0,0:21:19.35,0:21:21.40,Default#3,,0,0,0,,頸(けい)神経を一撃で砕く
Dialogue: 0,0:21:21.94,0:21:24.56,Default#3,,0,0,0,,瞬時に失神して死に至る
Dialogue: 0,0:21:24.69,0:21:26.48,Default#3,,0,0,0,,苦しみは与えない
Dialogue: 0,0:21:26.86,0:21:29.03,Default#3,,0,0,0,,絶対にミスはしない
Dialogue: 0,0:21:29.53,0:21:30.57,Default#3,,0,0,0,,あっ
Dialogue: 0,0:21:31.03,0:21:32.49,Default#3,,0,0,0,,（杠）大樹君！
Dialogue: 0,0:21:34.16,0:21:37.29,Default#3,,0,0,0,,杠… 千空！
Dialogue: 0,0:21:40.50,0:21:45.92,Default#3,,0,0,0,,千空 もしも俺たちが\N3700年前に出会っていたら―
