Dialogue: 0,0:00:07.21,0:00:09.46,Default#3,,0,0,0,,（大樹(たいじゅ)）杠(ゆずりは)！　待たせてすまん！
Dialogue: 0,0:00:11.54,0:00:15.88,Default#3,,0,0,0,,（杠）んで 何だいね 大樹君\N話ってのは
Dialogue: 0,0:00:17.38,0:00:19.26,Default#3,,0,0,0,,（大樹）思いを伝えることで―
Dialogue: 0,0:00:19.38,0:00:22.51,Default#3,,0,0,0,,杠と友達ですらなくなるのが\N怖かった
Dialogue: 0,0:00:22.80,0:00:24.47,Default#3,,0,0,0,,（大樹）聞いてくれ 杠
Dialogue: 0,0:00:25.10,0:00:26.98,Default#3,,0,0,0,,（大樹）だが 今日こそは…
Dialogue: 0,0:00:27.56,0:00:30.31,Default#3,,0,0,0,,（大樹）俺は５年間ずっと…
Dialogue: 0,0:00:30.94,0:00:31.77,Default#3,,0,0,0,,（千空(せんくう)）あっ
Dialogue: 0,0:00:32.65,0:00:33.48,Default#3,,0,0,0,,（杠）ああっ…
Dialogue: 0,0:00:34.40,0:00:37.11,Default#3,,0,0,0,,（大樹）何だ あの光？
Dialogue: 0,0:00:38.74,0:00:42.45,Default#3,,0,0,0,,（ナレーション）\Nその日 世界中の人間は全て―
Dialogue: 0,0:00:43.45,0:00:45.16,Default#3,,0,0,0,,石になった
Dialogue: 0,0:00:46.62,0:00:48.91,Default#3,,0,0,0,,（大樹）ハァハァ ハァハァ…
Dialogue: 0,0:00:49.04,0:00:49.87,Default#3,,0,0,0,,（千空）ハハハッ
Dialogue: 0,0:00:50.71,0:00:54.67,Default#3,,0,0,0,,やっと起きやがったか\Nこのデカブツ
Dialogue: 0,0:00:55.46,0:00:56.30,Default#3,,0,0,0,,フッ…
Dialogue: 0,0:00:56.67,0:01:00.59,Default#3,,0,0,0,,今日で西暦5738年の10月５日だ
Dialogue: 0,0:01:00.72,0:01:02.97,Default#3,,0,0,0,,ざっくり3700年はたってる
Dialogue: 0,0:01:03.09,0:01:07.56,Default#3,,0,0,0,,なっ… なんで分かるんだ？\Nそんな正確な日付が
Dialogue: 0,0:01:07.85,0:01:10.44,Default#3,,0,0,0,,あ？　ただ数えてただけだ
Dialogue: 0,0:01:10.56,0:01:12.19,Default#3,,0,0,0,,ほかに方法あんのかよ？
Dialogue: 0,0:01:12.77,0:01:17.82,Default#3,,0,0,0,,人類が 石の時代から\N近代文明まで200万年
Dialogue: 0,0:01:17.94,0:01:19.99,Default#3,,0,0,0,,そこを 一気に駆け上がる
Dialogue: 0,0:01:20.70,0:01:22.95,Default#3,,0,0,0,,世界を取り戻してやる
Dialogue: 0,0:01:23.24,0:01:26.74,Default#3,,0,0,0,,石化や復活の原理も\N科学的に突き止めて…
Dialogue: 0,0:01:27.79,0:01:29.75,Default#3,,0,0,0,,（大樹）杠も助け出す！
Dialogue: 0,0:01:31.71,0:01:33.63,Default#3,,0,0,0,,（大樹）うおおおおお！
Dialogue: 0,0:01:36.46,0:01:40.01,Default#3,,0,0,0,,（千空）ファンタジーに\N科学で勝ってやんぞ
Dialogue: 0,0:01:40.13,0:01:41.22,Default#3,,0,0,0,,フッ…
Dialogue: 0,0:01:41.34,0:01:44.18,Default#3,,0,0,0,,唆(そそ)るぜ これは…！
Dialogue: 0,0:01:44.64,0:01:47.60,Default#3,,0,0,0,,それで 千空\N誰から復活させるんだ？
Dialogue: 0,0:01:48.01,0:01:51.68,Default#3,,0,0,0,,（千空）あ～？\Nどうせ全員 たたき起こすんだ
Dialogue: 0,0:01:51.81,0:01:54.48,Default#3,,0,0,0,,誰からでもいいわ そんなもん
Dialogue: 0,0:01:54.60,0:01:55.94,Default#3,,0,0,0,,クッ フフッ…
Dialogue: 0,0:01:56.06,0:01:59.61,Default#3,,0,0,0,,いきなり 殺人鬼みてえなヤツ\N起こすのはアレだがな
Dialogue: 0,0:02:02.03,0:02:03.11,Default#3,,0,0,0,,そうか…
Dialogue: 0,0:02:05.82,0:02:09.08,Default#3,,0,0,0,,（千空）最初の人間 決めんの\Nめんどくせえなあ…
Dialogue: 0,0:02:10.45,0:02:12.62,Default#3,,0,0,0,,大樹 テメーが選べ
Dialogue: 0,0:02:12.75,0:02:13.75,Default#3,,0,0,0,,あっ
Dialogue: 0,0:02:15.38,0:02:16.42,Default#3,,0,0,0,,ありがとう 千空！
Dialogue: 0,0:02:17.67,0:02:20.92,Default#3,,0,0,0,,答えは もちろん決まっている！
Dialogue: 0,0:02:21.30,0:02:26.26,Default#3,,0,0,0,,♪～
Dialogue: 0,0:03:45.92,0:03:50.93,Default#3,,0,0,0,,～♪
Dialogue: 0,0:03:57.73,0:04:01.02,Default#3,,0,0,0,,（大樹）ついに来たぞ この時が
Dialogue: 0,0:04:02.90,0:04:06.57,Default#3,,0,0,0,,その水をかければ\N石化が解けて復活するんだな？
Dialogue: 0,0:04:06.69,0:04:08.57,Default#3,,0,0,0,,ああ そのはずだ
Dialogue: 0,0:04:09.45,0:04:12.03,Default#3,,0,0,0,,試しに バラバラの石像に\Nぶっかけたら―
Dialogue: 0,0:04:12.16,0:04:13.91,Default#3,,0,0,0,,ちゃ～んと死体に戻った
Dialogue: 0,0:04:14.12,0:04:16.41,Default#3,,0,0,0,,なんと罰当たりなヤツだ！\N（千空）へへへへ…
Dialogue: 0,0:04:16.87,0:04:20.46,Default#3,,0,0,0,,一応 全部ひっつけてから\N試したんだがな
Dialogue: 0,0:04:20.58,0:04:24.25,Default#3,,0,0,0,,でも やっぱ既に死んでるヤツは\N助けてやれねえ
Dialogue: 0,0:04:24.38,0:04:27.09,Default#3,,0,0,0,,尊い犠牲だ\N念仏でもあげとけ
Dialogue: 0,0:04:27.22,0:04:28.05,Default#3,,0,0,0,,（大樹）おおっ！
Dialogue: 0,0:04:28.17,0:04:30.80,Default#3,,0,0,0,,ナンマンダブ ナンマンダブ\Nナンマンダブ ナンマンダブ～！
Dialogue: 0,0:04:33.43,0:04:37.35,Default#3,,0,0,0,,（大樹）\N3700年も待たせてすまん 杠…
Dialogue: 0,0:04:38.35,0:04:41.69,Default#3,,0,0,0,,今 生き返らせてやるからな
Dialogue: 0,0:04:44.65,0:04:45.78,Default#3,,0,0,0,,待て 千空！　杠は…
Dialogue: 0,0:04:45.90,0:04:47.49,Default#3,,0,0,0,,（千空）ああ？\N（大樹）裸だ～！
Dialogue: 0,0:04:47.61,0:04:49.07,Default#3,,0,0,0,,（千空）ぐはっ！
Dialogue: 0,0:04:49.70,0:04:50.66,Default#3,,0,0,0,,（杠）イヤ～ン
Dialogue: 0,0:04:51.20,0:04:53.99,Default#3,,0,0,0,,（大樹）ダメだ！\Nこのまま復活させては！
Dialogue: 0,0:04:54.28,0:04:58.04,Default#3,,0,0,0,,まった非合理的なバカ\N言いだしやがった
Dialogue: 0,0:04:58.16,0:05:00.79,Default#3,,0,0,0,,非常事態の石の世界(ストーンワールド)だぞ
Dialogue: 0,0:05:00.92,0:05:03.79,Default#3,,0,0,0,,尻丸出しだろうが\Nチンコ モロ見せだろうが―
Dialogue: 0,0:05:03.92,0:05:05.71,Default#3,,0,0,0,,気にしねえよ 誰も
Dialogue: 0,0:05:06.38,0:05:08.05,Default#3,,0,0,0,,杠にチンコなどない！
Dialogue: 0,0:05:08.17,0:05:10.09,Default#3,,0,0,0,,論点 そこじゃねえ！
Dialogue: 0,0:05:11.05,0:05:14.10,Default#3,,0,0,0,,（大樹）キャンプに連れて帰って\N服を着せてからだ
Dialogue: 0,0:05:14.22,0:05:16.72,Default#3,,0,0,0,,（千空）\Nいや 何キロあんだ その石像
Dialogue: 0,0:05:16.85,0:05:19.23,Default#3,,0,0,0,,（大樹）杠はデブではない！
Dialogue: 0,0:05:19.35,0:05:21.31,Default#3,,0,0,0,,（千空）論点 そこじゃねえ
Dialogue: 0,0:05:21.81,0:05:25.57,Default#3,,0,0,0,,大体 杠 ここでたたき起こして\N歩かしたほうが―
Dialogue: 0,0:05:25.69,0:05:28.36,Default#3,,0,0,0,,100億倍 早いじゃねえか
Dialogue: 0,0:05:28.48,0:05:30.40,Default#3,,0,0,0,,どんだけテメーは非合理的…
Dialogue: 0,0:05:30.53,0:05:33.57,Default#3,,0,0,0,,（獣のうなり声）\N（千空）うっ！　んっ…
Dialogue: 0,0:05:34.07,0:05:35.83,Default#3,,0,0,0,,待て デカブツ！\N（大樹）なっ…
Dialogue: 0,0:05:37.74,0:05:42.71,Default#3,,0,0,0,,（獣のうなり声）
Dialogue: 0,0:05:44.29,0:05:46.84,Default#3,,0,0,0,,（ライオンのほえ声）\N（千空･大樹）うおおっ！
Dialogue: 0,0:05:47.30,0:05:49.34,Default#3,,0,0,0,,なぜ 日本にライオンがいるんだ？
Dialogue: 0,0:05:49.46,0:05:53.09,Default#3,,0,0,0,,んなもん 出どころは\N動物園しかありえねえだろ！
Dialogue: 0,0:05:53.22,0:05:55.85,Default#3,,0,0,0,,飼育員が鍵 開けたまま\N石化しちまったとかな
Dialogue: 0,0:05:56.64,0:06:00.77,Default#3,,0,0,0,,人間不在で逃げ出しゃ\N園内の草食獣は全部エサ
Dialogue: 0,0:06:00.89,0:06:03.19,Default#3,,0,0,0,,街に出りゃ ペットは食い放題
Dialogue: 0,0:06:03.73,0:06:06.98,Default#3,,0,0,0,,んで 文字どおり\N百獣の王になった
Dialogue: 0,0:06:07.11,0:06:10.90,Default#3,,0,0,0,,このストーンワールドじゃ\N食物連鎖の頂点は もう…
Dialogue: 0,0:06:11.11,0:06:13.53,Default#3,,0,0,0,,人間様じゃねえってことだ！
Dialogue: 0,0:06:15.70,0:06:18.12,Default#3,,0,0,0,,（千空･大樹）うわああああっ！
Dialogue: 0,0:06:21.54,0:06:23.12,Default#3,,0,0,0,,うっ… ぐはっ！
Dialogue: 0,0:06:24.62,0:06:25.67,Default#3,,0,0,0,,ううっ…
Dialogue: 0,0:06:25.79,0:06:27.96,Default#3,,0,0,0,,（ライオンのほえ声）
Dialogue: 0,0:06:28.09,0:06:31.67,Default#3,,0,0,0,,（大樹）しかし どうして\N襲ってこないんだ ヤツらは？
Dialogue: 0,0:06:31.80,0:06:34.72,Default#3,,0,0,0,,（千空）フフフ…\N連中にしてみりゃ―
Dialogue: 0,0:06:34.84,0:06:38.68,Default#3,,0,0,0,,俺らは 初めて見る\Nキメえ 二足歩行生物だかんな
Dialogue: 0,0:06:39.51,0:06:42.39,Default#3,,0,0,0,,（大樹）\Nこの世界に人間は俺たちだけ
Dialogue: 0,0:06:42.52,0:06:44.44,Default#3,,0,0,0,,（千空）ヤツらも警戒してる
Dialogue: 0,0:06:44.56,0:06:46.56,Default#3,,0,0,0,,だが もう時間の問題だ
Dialogue: 0,0:06:47.02,0:06:50.02,Default#3,,0,0,0,,超絶ラッキーで\Nはるばるキャンプまで戻れても
Dialogue: 0,0:06:50.15,0:06:52.36,Default#3,,0,0,0,,槍(やり)で戦うくらいしか手がねえ
Dialogue: 0,0:06:52.49,0:06:56.03,Default#3,,0,0,0,,初めから ほぼ詰んでんだよ\Nこのゲームはよ
Dialogue: 0,0:06:56.61,0:06:58.37,Default#3,,0,0,0,,うっ ううっ…
Dialogue: 0,0:06:58.49,0:06:59.87,Default#3,,0,0,0,,ううっ
Dialogue: 0,0:07:00.33,0:07:02.29,Default#3,,0,0,0,,ぬおおおお！
Dialogue: 0,0:07:02.62,0:07:04.33,Default#3,,0,0,0,,（千空）うわうわっ…
Dialogue: 0,0:07:05.46,0:07:07.75,Default#3,,0,0,0,,千空だけは\N死なすわけにいかん！
Dialogue: 0,0:07:08.25,0:07:11.25,Default#3,,0,0,0,,科学知識を持った人類最後の砦(とりで)
Dialogue: 0,0:07:11.38,0:07:13.05,Default#3,,0,0,0,,いざとなれば 俺が盾となって…
Dialogue: 0,0:07:13.17,0:07:13.92,Default#3,,0,0,0,,（千空）ダメだ！
Dialogue: 0,0:07:14.17,0:07:15.13,Default#3,,0,0,0,,あっ…
Dialogue: 0,0:07:17.26,0:07:19.22,Default#3,,0,0,0,,合理的に考えろ
Dialogue: 0,0:07:19.35,0:07:21.97,Default#3,,0,0,0,,俺は頭 テメーは体を使う
Dialogue: 0,0:07:22.10,0:07:25.02,Default#3,,0,0,0,,片方が欠けるわけには\Nいかねえだろうが！
Dialogue: 0,0:07:25.44,0:07:29.27,Default#3,,0,0,0,,逃げるときは必ず\N俺ら２人 同時にだ！
Dialogue: 0,0:07:31.98,0:07:34.11,Default#3,,0,0,0,,ああ 分かった！
Dialogue: 0,0:07:34.24,0:07:37.70,Default#3,,0,0,0,,（千空）フフッ… 大体 テメーは\N小学生んときから―
Dialogue: 0,0:07:37.82,0:07:40.24,Default#3,,0,0,0,,人 殴ったことなんか ねえだろうが
Dialogue: 0,0:07:41.95,0:07:45.62,Default#3,,0,0,0,,テメーのカードは体力だ\N武力じゃねえ
Dialogue: 0,0:07:47.04,0:07:50.21,Default#3,,0,0,0,,（大樹）千空\N逃げ切れないなら イチかバチか…
Dialogue: 0,0:07:50.79,0:07:54.01,Default#3,,0,0,0,,ハァハァ… 前に見つけたんだ
Dialogue: 0,0:07:55.21,0:07:58.13,Default#3,,0,0,0,,“霊長類最強の高校生”
Dialogue: 0,0:07:58.26,0:08:00.39,Default#3,,0,0,0,,獅子王(ししおう) 司(つかさ)！
Dialogue: 0,0:08:02.97,0:08:04.93,Default#3,,0,0,0,,（大樹）すまん 杠
Dialogue: 0,0:08:05.06,0:08:07.94,Default#3,,0,0,0,,今は何としても\N武力が必要なんだ
Dialogue: 0,0:08:08.31,0:08:10.69,Default#3,,0,0,0,,もしも\Nライオンたちに勝てたならば―
Dialogue: 0,0:08:10.81,0:08:11.90,Default#3,,0,0,0,,次こそは必ず…
Dialogue: 0,0:08:12.02,0:08:14.07,Default#3,,0,0,0,,（千空）いいから！\Nとっとと ぶっかけっぞ
Dialogue: 0,0:08:20.45,0:08:22.37,Default#3,,0,0,0,,（ライオンのうなり声）\N（千空･大樹）あっ！
Dialogue: 0,0:08:23.58,0:08:25.50,Default#3,,0,0,0,,（大樹）いかん 囲まれた！
Dialogue: 0,0:08:26.83,0:08:28.08,Default#3,,0,0,0,,来るぞ！
Dialogue: 0,0:08:30.00,0:08:31.08,Default#3,,0,0,0,,（ひび割れる音）\N（千空･大樹）あっ!?
Dialogue: 0,0:08:39.72,0:08:40.64,Default#3,,0,0,0,,（大樹）すまん！
Dialogue: 0,0:08:40.76,0:08:44.47,Default#3,,0,0,0,,数千年ぶりに起こしておいて\N何が何やら分からんまま…
Dialogue: 0,0:08:45.43,0:08:46.60,Default#3,,0,0,0,,（司）現況は？
Dialogue: 0,0:08:46.72,0:08:47.73,Default#3,,0,0,0,,なっ…
Dialogue: 0,0:08:50.35,0:08:52.52,Default#3,,0,0,0,,体表全体に鉱石片
Dialogue: 0,0:08:52.65,0:08:55.27,Default#3,,0,0,0,,９時から２時方向にライオン群！
Dialogue: 0,0:08:55.86,0:08:57.03,Default#3,,0,0,0,,（司）オーケー
Dialogue: 0,0:09:02.45,0:09:03.62,Default#3,,0,0,0,,（ライオンたちのほえ声）
Dialogue: 0,0:09:07.66,0:09:08.75,Default#3,,0,0,0,,（大樹）どわっ!?
Dialogue: 0,0:09:10.75,0:09:12.79,Default#3,,0,0,0,,（ほえ声）
Dialogue: 0,0:09:18.51,0:09:19.42,Default#3,,0,0,0,,（千空）うわっ…\N（大樹）なっ!?
Dialogue: 0,0:09:33.98,0:09:39.07,Default#3,,0,0,0,,（司）詳しい説明は…\Nうん ゆっくり聞くよ
Dialogue: 0,0:09:40.24,0:09:42.49,Default#3,,0,0,0,,ただ 一つ約束する
Dialogue: 0,0:09:43.20,0:09:47.58,Default#3,,0,0,0,,君らには もう二度と\N危険ってやつは訪れない
Dialogue: 0,0:09:49.04,0:09:52.04,Default#3,,0,0,0,,（司）これからは\Nこの俺が戦うからだ
Dialogue: 0,0:09:52.71,0:09:53.62,Default#3,,0,0,0,,フッ
Dialogue: 0,0:09:53.75,0:09:55.79,Default#3,,0,0,0,,（大樹）うおおおおおお！
Dialogue: 0,0:09:56.46,0:09:58.05,Default#3,,0,0,0,,すごいぞ 千空！
Dialogue: 0,0:09:58.17,0:09:59.17,Default#3,,0,0,0,,これで 人類は
Dialogue: 0,0:09:59.30,0:10:03.26,Default#3,,0,0,0,,知力 体力 武力の三銃士が\Nそろったってことだ！
Dialogue: 0,0:10:03.38,0:10:06.85,Default#3,,0,0,0,,フッ フフ… そうなんだが
Dialogue: 0,0:10:06.97,0:10:10.64,Default#3,,0,0,0,,いくらなんでも強すぎんぞ\N獅子王って男
Dialogue: 0,0:10:10.98,0:10:12.85,Default#3,,0,0,0,,強すぎちゃダメか？
Dialogue: 0,0:10:12.98,0:10:14.94,Default#3,,0,0,0,,むしろ頼もしいじゃないか
Dialogue: 0,0:10:15.06,0:10:16.40,Default#3,,0,0,0,,じゃあ もしヤツが
Dialogue: 0,0:10:16.52,0:10:19.61,Default#3,,0,0,0,,欲望モロ出しの\N悪代官だったらどうする？
Dialogue: 0,0:10:20.11,0:10:23.70,Default#3,,0,0,0,,素手でライオンぶっ倒す\Nチート武力の男だぞ
Dialogue: 0,0:10:24.03,0:10:28.87,Default#3,,0,0,0,,銃もねえこの世界じゃ\N100億％ 止めようがねえ
Dialogue: 0,0:10:29.20,0:10:30.16,Default#3,,0,0,0,,（杠）イヤ～ン
Dialogue: 0,0:10:30.29,0:10:33.83,Default#3,,0,0,0,,（司）近(ちこ)う寄れ 杠
Dialogue: 0,0:10:33.96,0:10:37.25,Default#3,,0,0,0,,それは困る！　それはダメだ！
Dialogue: 0,0:10:37.38,0:10:38.92,Default#3,,0,0,0,,（司）すまないが\N（大樹）おっ？
Dialogue: 0,0:10:39.25,0:10:42.05,Default#3,,0,0,0,,（司）肉をさばく道具を\N借りても いいかい？
Dialogue: 0,0:10:42.47,0:10:46.01,Default#3,,0,0,0,,ナイフ…\Nいや なければ石器でもいい
Dialogue: 0,0:10:46.14,0:10:50.06,Default#3,,0,0,0,,あっ… 食うのか ライオンを？\N食えるのか？
Dialogue: 0,0:10:50.18,0:10:53.35,Default#3,,0,0,0,,フフフ… 毒はねえよ
Dialogue: 0,0:10:53.48,0:10:57.27,Default#3,,0,0,0,,アンモニア臭(くせ)えわ 硬(かて)えわで\N死ぬほどマズいがな
Dialogue: 0,0:10:57.40,0:10:59.73,Default#3,,0,0,0,,食ったことあるのか 千空！
Dialogue: 0,0:10:59.86,0:11:02.36,Default#3,,0,0,0,,エボラの調査で\Nアフリカに行ったときな
Dialogue: 0,0:11:02.49,0:11:04.61,Default#3,,0,0,0,,どういう高校生だ～!?
Dialogue: 0,0:11:05.24,0:11:10.03,Default#3,,0,0,0,,（司）身を守るためとはいえ\N俺がこの手であやめたんだ
Dialogue: 0,0:11:10.37,0:11:11.45,Default#3,,0,0,0,,うん
Dialogue: 0,0:11:12.41,0:11:17.54,Default#3,,0,0,0,,全てを糧にすることで\N自然の輪廻(りんね)に感謝したい
Dialogue: 0,0:11:18.21,0:11:19.54,Default#3,,0,0,0,,それだけだよ
Dialogue: 0,0:11:19.79,0:11:22.00,Default#3,,0,0,0,,うおおおおお！
Dialogue: 0,0:11:22.13,0:11:23.46,Default#3,,0,0,0,,立派だ～！
Dialogue: 0,0:11:24.13,0:11:27.64,Default#3,,0,0,0,,よかったな 千空\N悪代官なんかじゃないぞ
Dialogue: 0,0:11:27.76,0:11:29.97,Default#3,,0,0,0,,めちゃめちゃ\Nいいヤツじゃないか～！
Dialogue: 0,0:11:32.47,0:11:34.77,Default#3,,0,0,0,,（千空）だと いいがな…
Dialogue: 0,0:11:35.60,0:11:39.40,Default#3,,0,0,0,,まあ 感謝とか何とかは\N１ミリも興味ねえが―
Dialogue: 0,0:11:39.94,0:11:42.90,Default#3,,0,0,0,,肉を無駄にしねえのは\N大賛成だ
Dialogue: 0,0:12:00.00,0:12:03.00,Default#3,,0,0,0,,（司）これを君たち２人だけで？
Dialogue: 0,0:12:03.13,0:12:04.17,Default#3,,0,0,0,,（千空）まあな
Dialogue: 0,0:12:05.76,0:12:08.05,Default#3,,0,0,0,,少しだけ待ってくれ 杠
Dialogue: 0,0:12:08.18,0:12:12.30,Default#3,,0,0,0,,奇跡の水 ナントカ酸がたまったら\Nすぐ助けるからな
Dialogue: 0,0:12:19.48,0:12:21.19,Default#3,,0,0,0,,（司）研究室？
Dialogue: 0,0:12:22.94,0:12:25.82,Default#3,,0,0,0,,改めて 獅子王 司だ
Dialogue: 0,0:12:25.94,0:12:27.61,Default#3,,0,0,0,,司で構わないよ
Dialogue: 0,0:12:28.03,0:12:31.37,Default#3,,0,0,0,,この世界じゃ\N名字も意味ねえわな
Dialogue: 0,0:12:31.49,0:12:34.99,Default#3,,0,0,0,,頭がまともな科学担当 千空と
Dialogue: 0,0:12:35.12,0:12:37.66,Default#3,,0,0,0,,頭が雑な体力担当 大樹だ
Dialogue: 0,0:12:38.04,0:12:41.00,Default#3,,0,0,0,,頭が雑な大樹だ よろしく
Dialogue: 0,0:12:41.13,0:12:44.34,Default#3,,0,0,0,,考えることは\N全部 千空に聞いてくれ
Dialogue: 0,0:12:44.46,0:12:46.30,Default#3,,0,0,0,,普段の食事は何を？
Dialogue: 0,0:12:46.59,0:12:48.97,Default#3,,0,0,0,,（千空）\N基本は山菜とキノコだ
Dialogue: 0,0:12:49.09,0:12:51.55,Default#3,,0,0,0,,肉はたまに捕れる\Nウサギくらいだな
Dialogue: 0,0:12:51.68,0:12:56.02,Default#3,,0,0,0,,（大樹）俺は最近\N肉をたらふく食う夢ばかり見るぞ
Dialogue: 0,0:12:56.14,0:12:57.14,Default#3,,0,0,0,,ハハハハハッ
Dialogue: 0,0:12:57.93,0:13:01.65,Default#3,,0,0,0,,（司）じゃあ そんな生活も… うん
Dialogue: 0,0:13:02.90,0:13:04.32,Default#3,,0,0,0,,おしまいだね
Dialogue: 0,0:13:11.82,0:13:13.49,Default#3,,0,0,0,,（イノシシの鳴き声）
Dialogue: 0,0:13:35.39,0:13:38.39,Default#3,,0,0,0,,（司）俺は武力 狩猟担当だね
Dialogue: 0,0:13:38.60,0:13:41.69,Default#3,,0,0,0,,うおおおお！　すごすぎる！
Dialogue: 0,0:13:43.10,0:13:47.57,Default#3,,0,0,0,,俺が仲間になったからには\N二度と獲物に不自由はさせない
Dialogue: 0,0:13:52.91,0:13:54.28,Default#3,,0,0,0,,（大樹）なるほど
Dialogue: 0,0:13:54.53,0:13:58.29,Default#3,,0,0,0,,すぐ焼けば 冷蔵庫なしでも\N腐らないわけだな
Dialogue: 0,0:13:58.41,0:13:59.70,Default#3,,0,0,0,,（千空）焼いてんじゃねえ
Dialogue: 0,0:14:00.16,0:14:04.21,Default#3,,0,0,0,,煙のアルデヒドで\N微生物をブチ殺してんだよ
Dialogue: 0,0:14:04.33,0:14:09.42,Default#3,,0,0,0,,頭が雑なテメーでも\N分かる言い方で言うと燻製(くんせい)だ
Dialogue: 0,0:14:09.76,0:14:14.05,Default#3,,0,0,0,,俺と千空のタッグなら\N保存食は心配ないね
Dialogue: 0,0:14:09.76,0:14:14.05,Default#3,,0,0,0,,（大樹が匂いを嗅ぐ音）
Dialogue: 0,0:14:14.18,0:14:18.72,Default#3,,0,0,0,,ああ～ これでやっと\N文明の一歩目に進めるな
Dialogue: 0,0:14:18.85,0:14:21.27,Default#3,,0,0,0,,まだゼロ歩だったのか？
Dialogue: 0,0:14:22.56,0:14:23.64,Default#3,,0,0,0,,お？
Dialogue: 0,0:14:24.40,0:14:27.11,Default#3,,0,0,0,,おい 司 どうした？
Dialogue: 0,0:14:27.48,0:14:28.65,Default#3,,0,0,0,,はあ～っ！
Dialogue: 0,0:14:30.23,0:14:31.07,Default#3,,0,0,0,,（大樹）うおっ！\N（千空）なっ!?
Dialogue: 0,0:14:39.16,0:14:39.99,Default#3,,0,0,0,,ああ…
Dialogue: 0,0:14:43.29,0:14:45.21,Default#3,,0,0,0,,驚かしてすまない
Dialogue: 0,0:14:46.75,0:14:50.25,Default#3,,0,0,0,,うん この人が\N岩の下敷きになってたんだ
Dialogue: 0,0:14:50.63,0:14:52.63,Default#3,,0,0,0,,やっぱ 司はいいヤツだ～
Dialogue: 0,0:14:53.22,0:14:57.47,Default#3,,0,0,0,,クッ…\Nもはや スーパーヒーロー様だな
Dialogue: 0,0:15:01.56,0:15:05.44,Default#3,,0,0,0,,（大樹）いや～\Nたらふく食ったな～
Dialogue: 0,0:15:05.69,0:15:09.40,Default#3,,0,0,0,,さ～て 楽しいクイズの時間だぞ
Dialogue: 0,0:15:09.52,0:15:14.45,Default#3,,0,0,0,,科学文明にまず欲しい\Nいちばん重要なもんは何だ？
Dialogue: 0,0:15:14.57,0:15:16.78,Default#3,,0,0,0,,正解者は100億点な
Dialogue: 0,0:15:17.07,0:15:18.24,Default#3,,0,0,0,,（大樹）んん…
Dialogue: 0,0:15:18.37,0:15:23.95,Default#3,,0,0,0,,科学文明… いちばん重要…\Nまず欲しい…
Dialogue: 0,0:15:24.91,0:15:26.00,Default#3,,0,0,0,,スマホか？
Dialogue: 0,0:15:26.12,0:15:27.50,Default#3,,0,0,0,,いいな スマホ！
Dialogue: 0,0:15:27.63,0:15:29.67,Default#3,,0,0,0,,うん 欲しいけどな スマホ！
Dialogue: 0,0:15:30.09,0:15:33.34,Default#3,,0,0,0,,何百万年ワープしてんだ\Nデカブツ！
Dialogue: 0,0:15:33.71,0:15:35.47,Default#3,,0,0,0,,鉄… かい？
Dialogue: 0,0:15:35.59,0:15:38.09,Default#3,,0,0,0,,鉄も欲しいが まだ先だ
Dialogue: 0,0:15:38.22,0:15:40.22,Default#3,,0,0,0,,もっと便利なもんがある
Dialogue: 0,0:15:41.72,0:15:43.47,Default#3,,0,0,0,,炭酸カルシウム
Dialogue: 0,0:15:43.72,0:15:46.69,Default#3,,0,0,0,,（大樹）なるほど！\N例によって全然分からん！
Dialogue: 0,0:15:46.81,0:15:47.94,Default#3,,0,0,0,,（司）石灰か
Dialogue: 0,0:15:48.06,0:15:48.94,Default#3,,0,0,0,,（千空）ああ
Dialogue: 0,0:15:49.06,0:15:52.90,Default#3,,0,0,0,,そこの雑頭(ざつあたま)でも分かる\N言い方で言うと それな
Dialogue: 0,0:15:53.03,0:15:55.69,Default#3,,0,0,0,,グラウンドの白線引きだ
Dialogue: 0,0:15:56.57,0:15:59.62,Default#3,,0,0,0,,つまり その炭酸ナントカ\Nゲットのために
Dialogue: 0,0:15:59.74,0:16:01.58,Default#3,,0,0,0,,体育倉庫を探すんだな？
Dialogue: 0,0:16:01.70,0:16:04.45,Default#3,,0,0,0,,おお それな 体育倉庫な！
Dialogue: 0,0:16:04.58,0:16:09.63,Default#3,,0,0,0,,あったらいいな～！\N3700年後の この世界にな～！
Dialogue: 0,0:16:13.46,0:16:14.71,Default#3,,0,0,0,,（千空）デカブツ
Dialogue: 0,0:16:14.84,0:16:19.26,Default#3,,0,0,0,,テメーのおヒゲのケアに\N大活躍してた貝殻だが…
Dialogue: 0,0:16:20.26,0:16:23.01,Default#3,,0,0,0,,ボッコボコの\N粉々にするだけで
Dialogue: 0,0:16:23.14,0:16:26.31,Default#3,,0,0,0,,その炭酸ナントカの\N出来上がりだ
Dialogue: 0,0:16:27.14,0:16:31.31,Default#3,,0,0,0,,おーし！\N体力担当 俺に任せろ～！
Dialogue: 0,0:16:31.44,0:16:33.98,Default#3,,0,0,0,,うおおおおお～！
Dialogue: 0,0:16:37.65,0:16:38.65,Default#3,,0,0,0,,ふんぬっ！
Dialogue: 0,0:16:38.86,0:16:41.66,Default#3,,0,0,0,,（千空）炭酸カルシウムほど\N唆るもんはねえ
Dialogue: 0,0:16:42.49,0:16:46.04,Default#3,,0,0,0,,４つも\N死ぬほど重要な使い道がある
Dialogue: 0,0:16:46.45,0:16:48.54,Default#3,,0,0,0,,その１ 農業
Dialogue: 0,0:16:49.04,0:16:51.54,Default#3,,0,0,0,,石灰で水素イオンをブチ飛ばす
Dialogue: 0,0:16:51.67,0:16:53.96,Default#3,,0,0,0,,つまり 土がレベルアップする
Dialogue: 0,0:16:54.63,0:16:55.38,Default#3,,0,0,0,,その２ 建築
Dialogue: 0,0:16:55.38,0:16:56.88,Default#3,,0,0,0,,その２ 建築
Dialogue: 0,0:16:55.38,0:16:56.88,Default#3,,0,0,0,,（大樹と千空の\Nせき込み）
Dialogue: 0,0:16:56.88,0:16:57.01,Default#3,,0,0,0,,（大樹と千空の\Nせき込み）
Dialogue: 0,0:16:57.01,0:17:00.43,Default#3,,0,0,0,,（大樹と千空の\Nせき込み）
Dialogue: 0,0:16:57.01,0:17:00.43,Default#3,,0,0,0,,焼いて砂と混ぜりゃ\Nモルタルの完成だ
Dialogue: 0,0:17:00.84,0:17:03.22,Default#3,,0,0,0,,モルタルは\Nセメントの子供だな
Dialogue: 0,0:17:03.35,0:17:05.51,Default#3,,0,0,0,,でけえ かまどや家が建つ
Dialogue: 0,0:17:05.97,0:17:07.93,Default#3,,0,0,0,,その３ せっけん
Dialogue: 0,0:17:08.81,0:17:11.48,Default#3,,0,0,0,,海藻からゲットした\N炭酸ナトリウムに―
Dialogue: 0,0:17:11.60,0:17:14.48,Default#3,,0,0,0,,油を混ぜて反応させりゃ 完成だ
Dialogue: 0,0:17:15.07,0:17:18.32,Default#3,,0,0,0,,病気 イコール ゲームオーバーの\Nこの世界じゃ―
Dialogue: 0,0:17:18.44,0:17:23.66,Default#3,,0,0,0,,バイ菌浄化する この小せえ塊が\N医者代わりの命の石
Dialogue: 0,0:17:24.49,0:17:26.66,Default#3,,0,0,0,,Ｄｒ.(ドクター)ストーンだ
Dialogue: 0,0:17:28.83,0:17:32.08,Default#3,,0,0,0,,（司）\N千空 君はすばらしい男だ
Dialogue: 0,0:17:32.21,0:17:33.08,Default#3,,0,0,0,,（千空）あ？
Dialogue: 0,0:17:33.83,0:17:36.42,Default#3,,0,0,0,,俺の復活直後もそうだ
Dialogue: 0,0:17:36.55,0:17:38.96,Default#3,,0,0,0,,とっさに冷静な現状伝達
Dialogue: 0,0:17:39.59,0:17:42.30,Default#3,,0,0,0,,君より切れる男を\N見たことがない
Dialogue: 0,0:17:42.59,0:17:45.01,Default#3,,0,0,0,,尊敬するよ 心から
Dialogue: 0,0:17:49.31,0:17:52.35,Default#3,,0,0,0,,（千空）\N目の前で男を褒める男は―
Dialogue: 0,0:17:52.48,0:17:57.36,Default#3,,0,0,0,,下心だらけの腹黒ダヌキって\N100億年前から決まってんだ
Dialogue: 0,0:17:59.03,0:18:00.74,Default#3,,0,0,0,,何が言いてえ？
Dialogue: 0,0:18:02.91,0:18:06.41,Default#3,,0,0,0,,困ったな\Nそんなに深い意図はないよ
Dialogue: 0,0:18:07.33,0:18:08.49,Default#3,,0,0,0,,君なら―
Dialogue: 0,0:18:08.62,0:18:12.92,Default#3,,0,0,0,,本当にゼロから近代文明を\N作れてしまうかもしれない
Dialogue: 0,0:18:13.33,0:18:16.67,Default#3,,0,0,0,,うん ただ そう思っただけだ
Dialogue: 0,0:18:18.63,0:18:20.59,Default#3,,0,0,0,,（大樹）いや～
Dialogue: 0,0:18:20.92,0:18:25.09,Default#3,,0,0,0,,文明ってのは こうやって\N出来上がっていくんだな～
Dialogue: 0,0:18:25.68,0:18:28.35,Default#3,,0,0,0,,（千空）ああ 一歩一歩な
Dialogue: 0,0:18:28.47,0:18:32.02,Default#3,,0,0,0,,じわっじわ迫ってんぜ\N近代文明に
Dialogue: 0,0:18:32.73,0:18:34.77,Default#3,,0,0,0,,で ４つ目は何だ？
Dialogue: 0,0:18:35.31,0:18:39.27,Default#3,,0,0,0,,貝殻の重要な使い道は\N４つもあるって言ってたよな
Dialogue: 0,0:18:41.86,0:18:43.45,Default#3,,0,0,0,,いや ３つだ
Dialogue: 0,0:18:43.57,0:18:45.20,Default#3,,0,0,0,,３つって言わなかったか？
Dialogue: 0,0:18:45.78,0:18:47.57,Default#3,,0,0,0,,（大樹）あれ そうか？
Dialogue: 0,0:18:47.70,0:18:49.91,Default#3,,0,0,0,,記憶も雑だな 俺は！
Dialogue: 0,0:18:50.04,0:18:53.91,Default#3,,0,0,0,,フハハハハッ…
Dialogue: 0,0:18:54.04,0:18:59.04,Default#3,,0,0,0,,（いびき）
Dialogue: 0,0:19:14.89,0:19:19.06,Default#3,,0,0,0,,（大樹）貝！　貝！　貝！　貝…
Dialogue: 0,0:19:25.36,0:19:28.82,Default#3,,0,0,0,,（司）\Nこのストーンワールドは自由だ
Dialogue: 0,0:19:29.70,0:19:33.58,Default#3,,0,0,0,,貝なんて\Nもともと誰のものでもない
Dialogue: 0,0:19:34.45,0:19:37.29,Default#3,,0,0,0,,海だって 土地だって…
Dialogue: 0,0:19:41.42,0:19:45.01,Default#3,,0,0,0,,昔 １人の貧しい少年が―
Dialogue: 0,0:19:45.76,0:19:50.72,Default#3,,0,0,0,,手術をする妹のために\N貝の首飾りを作ろうとした
Dialogue: 0,0:19:51.81,0:19:54.89,Default#3,,0,0,0,,妹は人魚姫が大好きだったんだ
Dialogue: 0,0:19:56.10,0:20:01.69,Default#3,,0,0,0,,そこへ その場所の\N“漁業権”を持つ中年男が現れた
Dialogue: 0,0:20:01.94,0:20:04.23,Default#3,,0,0,0,,酒の臭いと共にね
Dialogue: 0,0:20:04.86,0:20:05.86,Default#3,,0,0,0,,（殴る音）
Dialogue: 0,0:20:08.07,0:20:10.32,Default#3,,0,0,0,,（司）貝を集めていた…
Dialogue: 0,0:20:10.82,0:20:16.37,Default#3,,0,0,0,,いや その男が言うには\N貝を盗んでいた少年は―
Dialogue: 0,0:20:16.50,0:20:18.71,Default#3,,0,0,0,,顔が変わるほど殴られたよ
Dialogue: 0,0:20:19.83,0:20:25.26,Default#3,,0,0,0,,最後まで妹を\N人魚姫にはしてあげられなかった
Dialogue: 0,0:20:29.97,0:20:30.97,Default#3,,0,0,0,,ううっ…
Dialogue: 0,0:20:37.64,0:20:40.27,Default#3,,0,0,0,,分かって やってんだろうな
Dialogue: 0,0:20:40.40,0:20:45.48,Default#3,,0,0,0,,司 テメーは今\N人間１人 ブチ殺したんだぞ
Dialogue: 0,0:20:46.36,0:20:49.07,Default#3,,0,0,0,,（司）分かってるさ もちろん
Dialogue: 0,0:20:49.66,0:20:51.03,Default#3,,0,0,0,,千空
Dialogue: 0,0:20:51.24,0:20:55.74,Default#3,,0,0,0,,君は心の汚れた年寄りたちまで\N全員 助けるつもりかい？
Dialogue: 0,0:20:56.79,0:21:01.50,Default#3,,0,0,0,,うん 彼らも最初は\Nしおらしく感謝するだろうね
Dialogue: 0,0:21:01.96,0:21:06.96,Default#3,,0,0,0,,だが 文明が戻れば 必ず\N老いた金持ちや権力者たちが―
Dialogue: 0,0:21:07.09,0:21:11.13,Default#3,,0,0,0,,“そこは俺の土地だった”\N“家賃をよこせ”
Dialogue: 0,0:21:11.26,0:21:13.22,Default#3,,0,0,0,,“税を払え”と―
Dialogue: 0,0:21:13.51,0:21:17.27,Default#3,,0,0,0,,また貧しい若者から\N未来を奪い取るだろう
Dialogue: 0,0:21:18.93,0:21:22.56,Default#3,,0,0,0,,もう そんな世界に\N戻しちゃいけない
Dialogue: 0,0:21:24.27,0:21:26.57,Default#3,,0,0,0,,ここはストーンワールド
Dialogue: 0,0:21:26.86,0:21:29.32,Default#3,,0,0,0,,まだ何の汚(けが)れもない楽園だ
Dialogue: 0,0:21:29.95,0:21:33.24,Default#3,,0,0,0,,純粋な若者だけを復活させて
Dialogue: 0,0:21:33.37,0:21:37.37,Default#3,,0,0,0,,このまま誰のものでもない\N自然と共に生きていく
Dialogue: 0,0:21:38.20,0:21:40.75,Default#3,,0,0,0,,人類を浄化するチャンスなんだ
Dialogue: 0,0:21:41.79,0:21:45.50,Default#3,,0,0,0,,君もそう思わないか 千空
Dialogue: 0,0:21:54.51,0:21:58.43,Default#3,,0,0,0,,ぜんっぜん\N１ミリも思わねえな
Dialogue: 0,0:21:59.02,0:22:03.35,Default#3,,0,0,0,,俺は メカやら宇宙やら\Nドラえもんやらに唆りまくりの―
Dialogue: 0,0:22:03.48,0:22:06.69,Default#3,,0,0,0,,テクノロジー大好き少年なもんでな
Dialogue: 0,0:22:08.07,0:22:13.49,Default#3,,0,0,0,,科学の力で\N人類全員 もれなく助けてやるよ
Dialogue: 0,0:22:13.61,0:22:14.87,Default#3,,0,0,0,,フッ…
Dialogue: 0,0:22:21.54,0:22:26.54,Default#3,,0,0,0,,♪～
Dialogue: 0,0:23:44.91,0:23:49.92,Default#3,,0,0,0,,～♪
