Dialogue: 0,0:00:07.08,0:00:09.67,Default#3,,0,0,0,,（クロム）この細(ほせ)え毛みてえのが\N銀になんのか？
Dialogue: 0,0:00:10.21,0:00:13.21,Default#3,,0,0,0,,ヤベえ\N植物の根っこだと思ってたぜ
Dialogue: 0,0:00:13.50,0:00:14.50,Default#3,,0,0,0,,（スイカ）おお～！
Dialogue: 0,0:00:14.63,0:00:15.59,Default#3,,0,0,0,,（銀狼(ギンロー)）ほっ ほっ\N（金狼(キンロー)）うっ！
Dialogue: 0,0:00:15.71,0:00:16.55,Default#3,,0,0,0,,（コハク）ふっ！\N（金狼）くっ！
Dialogue: 0,0:00:16.67,0:00:18.30,Default#3,,0,0,0,,（銀狼）っと ハァ…
Dialogue: 0,0:00:18.43,0:00:21.89,Default#3,,0,0,0,,フフフ\Nあれが僕の銀の槍(やり)にねえ
Dialogue: 0,0:00:22.01,0:00:25.27,Default#3,,0,0,0,,いや～ 科学って\Nホ～ント不思議だよね
Dialogue: 0,0:00:25.39,0:00:27.31,Default#3,,0,0,0,,（金狼）ううっ…\N（銀狼）ところで…
Dialogue: 0,0:00:27.43,0:00:28.27,Default#3,,0,0,0,,（コハク･金狼）ん？
Dialogue: 0,0:00:28.39,0:00:31.90,Default#3,,0,0,0,,（銀狼）金狼も もちろん\Nすでに金の槍をもらって…
Dialogue: 0,0:00:32.02,0:00:35.65,Default#3,,0,0,0,,あれ～？\Nごめんね～ 気が付かなくて
Dialogue: 0,0:00:35.90,0:00:38.49,Default#3,,0,0,0,,（金狼）くう…
Dialogue: 0,0:00:35.90,0:00:38.49,Default#3,,0,0,0,,（銀狼）まさか金の槍はなくて\N銀の槍だけなんて
Dialogue: 0,0:00:38.49,0:00:39.03,Default#3,,0,0,0,,（銀狼）まさか金の槍はなくて\N銀の槍だけなんて
Dialogue: 0,0:00:39.15,0:00:40.07,Default#3,,0,0,0,,（コハク）銀狼！\N（銀狼）え？
Dialogue: 0,0:00:40.20,0:00:41.36,Default#3,,0,0,0,,（コハク）口より手を動かせ！
Dialogue: 0,0:00:41.49,0:00:43.07,Default#3,,0,0,0,,（銀狼）ぐっ！　げっ…
Dialogue: 0,0:00:43.70,0:00:44.66,Default#3,,0,0,0,,げぶ…
Dialogue: 0,0:00:44.78,0:00:48.00,Default#3,,0,0,0,,（クロム）おう でもよ\Nなんで 銀の槍だけ作ってやんだ？
Dialogue: 0,0:00:48.12,0:00:51.17,Default#3,,0,0,0,,（千空(せんくう)）あ～ 危険度マックスの\Nお宝素材ゲットに―
Dialogue: 0,0:00:51.29,0:00:52.83,Default#3,,0,0,0,,必要なもんでな
Dialogue: 0,0:00:52.96,0:00:54.21,Default#3,,0,0,0,,（クロム･スイカ）ん？
Dialogue: 0,0:00:55.25,0:00:56.21,Default#3,,0,0,0,,おお～っ！
Dialogue: 0,0:00:56.67,0:00:59.47,Default#3,,0,0,0,,やった～！　ついに 銀の槍～！
Dialogue: 0,0:00:59.72,0:01:01.80,Default#3,,0,0,0,,（スイカ）わ～い！　わ～い！\N（銀狼）ありがとう 千空！
Dialogue: 0,0:01:01.93,0:01:03.09,Default#3,,0,0,0,,（金狼）ふん！\N（銀狼）ハハハッ
Dialogue: 0,0:01:03.22,0:01:04.30,Default#3,,0,0,0,,ん～\N（千空）ククク…
Dialogue: 0,0:01:04.43,0:01:07.52,Default#3,,0,0,0,,１ミリも ありがたがられる\N筋合いはねえよ
Dialogue: 0,0:01:08.02,0:01:10.44,Default#3,,0,0,0,,テメーのために\N作っちゃいねえんだ
Dialogue: 0,0:01:10.56,0:01:12.27,Default#3,,0,0,0,,とっとと出発すんぞ
Dialogue: 0,0:01:12.94,0:01:16.73,Default#3,,0,0,0,,銀狼 テメーの仕事は\Nチームの護衛だ
Dialogue: 0,0:01:16.86,0:01:19.15,Default#3,,0,0,0,,（銀狼）おお～っ！
Dialogue: 0,0:01:19.74,0:01:23.74,Default#3,,0,0,0,,（銀狼）\N♪ 護衛！　護衛！　僕は護衛！
Dialogue: 0,0:01:23.87,0:01:25.87,Default#3,,0,0,0,,♪ 銀狼だ 銀狼だ～
Dialogue: 0,0:01:25.87,0:01:26.83,Default#3,,0,0,0,,♪ 銀狼だ 銀狼だ～
Dialogue: 0,0:01:25.87,0:01:26.83,Default#3,,0,0,0,,（コハク）なんだ
Dialogue: 0,0:01:26.83,0:01:26.95,Default#3,,0,0,0,,♪ 銀狼だ 銀狼だ～
Dialogue: 0,0:01:26.95,0:01:27.29,Default#3,,0,0,0,,♪ 銀狼だ 銀狼だ～
Dialogue: 0,0:01:26.95,0:01:27.29,Default#3,,0,0,0,,いつも湯をくみに来ている\N温泉地帯じゃないか
Dialogue: 0,0:01:27.29,0:01:27.41,Default#3,,0,0,0,,いつも湯をくみに来ている\N温泉地帯じゃないか
Dialogue: 0,0:01:27.41,0:01:29.95,Default#3,,0,0,0,,いつも湯をくみに来ている\N温泉地帯じゃないか
Dialogue: 0,0:01:27.41,0:01:29.95,Default#3,,0,0,0,,ハハハ ヒヒヒー
Dialogue: 0,0:01:30.08,0:01:31.92,Default#3,,0,0,0,,（クロム）\N危険度マックスとか言うから―
Dialogue: 0,0:01:30.08,0:01:31.92,Default#3,,0,0,0,,♪ 護衛！　護衛…
Dialogue: 0,0:01:31.92,0:01:32.04,Default#3,,0,0,0,,♪ 護衛！　護衛…
Dialogue: 0,0:01:32.04,0:01:32.67,Default#3,,0,0,0,,♪ 護衛！　護衛…
Dialogue: 0,0:01:32.04,0:01:32.67,Default#3,,0,0,0,,やたら身構えちまったぜ
Dialogue: 0,0:01:32.67,0:01:33.75,Default#3,,0,0,0,,やたら身構えちまったぜ
Dialogue: 0,0:01:33.88,0:01:35.96,Default#3,,0,0,0,,（千空）危ねえのは この先だ
Dialogue: 0,0:01:36.09,0:01:40.01,Default#3,,0,0,0,,銀狼 遊んでねえで\N槍は前に構えながら歩け！
Dialogue: 0,0:01:40.13,0:01:41.13,Default#3,,0,0,0,,（銀狼）え？
Dialogue: 0,0:01:41.51,0:01:43.64,Default#3,,0,0,0,,（千空）この銀の槍はセンサーだ
Dialogue: 0,0:01:43.97,0:01:46.47,Default#3,,0,0,0,,そのために作ってやったんだよ
Dialogue: 0,0:01:46.60,0:01:48.60,Default#3,,0,0,0,,槍先をよ～く見てやがれ
Dialogue: 0,0:01:48.97,0:01:53.06,Default#3,,0,0,0,,もしも\Nその銀の槍が黒く変色したら…
Dialogue: 0,0:01:53.19,0:01:55.86,Default#3,,0,0,0,,（銀狼）黒く… なったら？
Dialogue: 0,0:01:57.44,0:02:01.28,Default#3,,0,0,0,,（千空）それから わずか数秒で\Nテメーは死ぬ
Dialogue: 0,0:02:01.61,0:02:02.53,Default#3,,0,0,0,,（銀狼）なっ！
Dialogue: 0,0:02:03.15,0:02:06.07,Default#3,,0,0,0,,だから 0,1秒でその場から逃げろ
Dialogue: 0,0:02:06.20,0:02:08.24,Default#3,,0,0,0,,そんときゃ俺らも即 逃げる
Dialogue: 0,0:02:08.70,0:02:13.21,Default#3,,0,0,0,,これから俺らが戦う相手は\Nミスったら即 あの世行き
Dialogue: 0,0:02:13.54,0:02:17.46,Default#3,,0,0,0,,サルファ剤作りぶっちぎりの\N最難関素材だ
Dialogue: 0,0:02:17.92,0:02:18.96,Default#3,,0,0,0,,（銀狼）ああ…
Dialogue: 0,0:02:19.09,0:02:20.67,Default#3,,0,0,0,,（唾を飲み込む音）
Dialogue: 0,0:02:21.26,0:02:26.26,Default#3,,0,0,0,,♪～
Dialogue: 0,0:03:45.92,0:03:50.93,Default#3,,0,0,0,,～♪
Dialogue: 0,0:03:56.81,0:03:59.19,Default#3,,0,0,0,,この川\Nぜんっぜん魚いねえのな
Dialogue: 0,0:03:59.48,0:04:00.31,Default#3,,0,0,0,,（千空）ああ
Dialogue: 0,0:04:00.44,0:04:03.44,Default#3,,0,0,0,,エメラルドグリーンの\Nチャツボミゴケだけだ
Dialogue: 0,0:04:03.57,0:04:06.69,Default#3,,0,0,0,,間違いねえ\Nこの上流にゴールはある
Dialogue: 0,0:04:07.20,0:04:10.11,Default#3,,0,0,0,,（コハク）\Nこの先に その最難関の素材が…
Dialogue: 0,0:04:10.24,0:04:11.66,Default#3,,0,0,0,,（銀狼）大丈夫…
Dialogue: 0,0:04:11.78,0:04:12.62,Default#3,,0,0,0,,（３人）ん？
Dialogue: 0,0:04:12.87,0:04:15.37,Default#3,,0,0,0,,（銀狼）ハァ ハァ…
Dialogue: 0,0:04:15.58,0:04:19.83,Default#3,,0,0,0,,大丈夫… 大丈夫… まだ黒くない
Dialogue: 0,0:04:20.17,0:04:22.92,Default#3,,0,0,0,,大丈夫… 大丈夫…
Dialogue: 0,0:04:23.04,0:04:25.09,Default#3,,0,0,0,,大丈夫… だいじょう…
Dialogue: 0,0:04:25.21,0:04:26.30,Default#3,,0,0,0,,（千空）あああああ！\N（銀狼）うわあっ…
Dialogue: 0,0:04:26.42,0:04:29.84,Default#3,,0,0,0,,センサー役がケツ歩いてどうすんだ\N銀狼 テメー！
Dialogue: 0,0:04:29.97,0:04:33.26,Default#3,,0,0,0,,だって 死ぬとか言うから～！\N怖いじゃんか！
Dialogue: 0,0:04:33.55,0:04:35.93,Default#3,,0,0,0,,（コハク）\Nハァ… 代わるか 私が？
Dialogue: 0,0:04:36.06,0:04:37.60,Default#3,,0,0,0,,渡せ その銀の槍
Dialogue: 0,0:04:37.73,0:04:38.89,Default#3,,0,0,0,,それはやだ！
Dialogue: 0,0:04:39.02,0:04:41.65,Default#3,,0,0,0,,やるよ！　やりますよ！
Dialogue: 0,0:04:42.48,0:04:45.32,Default#3,,0,0,0,,だ… 大丈夫… 大丈夫…
Dialogue: 0,0:04:45.44,0:04:46.73,Default#3,,0,0,0,,（コハク）ハァ…
Dialogue: 0,0:04:47.53,0:04:50.36,Default#3,,0,0,0,,（銀狼）だいじ…\Nだいだいだい… 大丈夫… 大丈夫…
Dialogue: 0,0:04:50.82,0:04:53.07,Default#3,,0,0,0,,大丈夫… だいじょう…
Dialogue: 0,0:04:53.20,0:04:54.03,Default#3,,0,0,0,,あっ！
Dialogue: 0,0:04:54.62,0:04:57.70,Default#3,,0,0,0,,クロム 千空 コハクちゃん…
Dialogue: 0,0:05:00.16,0:05:02.83,Default#3,,0,0,0,,あっ！　着いたぜ 千空
Dialogue: 0,0:05:03.08,0:05:05.38,Default#3,,0,0,0,,ああ 案の定…
Dialogue: 0,0:05:05.50,0:05:09.09,Default#3,,0,0,0,,見つけたぞ\N最難関素材の源泉だ
Dialogue: 0,0:05:09.84,0:05:13.09,Default#3,,0,0,0,,何を採りに来たのか知らない\N私ですら
Dialogue: 0,0:05:13.22,0:05:16.10,Default#3,,0,0,0,,ここがゴールということだけは\N分かった
Dialogue: 0,0:05:16.93,0:05:23.02,Default#3,,0,0,0,,それほどまでに神々しく美しい\Nエメラルドグリーンの泉だ
Dialogue: 0,0:05:24.02,0:05:26.27,Default#3,,0,0,0,,（クロム･銀狼）おおお…
Dialogue: 0,0:05:26.52,0:05:28.23,Default#3,,0,0,0,,おおお…
Dialogue: 0,0:05:29.49,0:05:32.24,Default#3,,0,0,0,,（リューさん）\Nウフフフ ウフフフ…
Dialogue: 0,0:05:32.61,0:05:34.16,Default#3,,0,0,0,,うおおお…
Dialogue: 0,0:05:41.25,0:05:42.25,Default#3,,0,0,0,,（千空）ん…
Dialogue: 0,0:05:45.00,0:05:49.71,Default#3,,0,0,0,,ん？　おう 何だよ 千空\Nここじゃねえのか ゴール
Dialogue: 0,0:05:49.84,0:05:52.63,Default#3,,0,0,0,,いや ここだ… 完璧だ
Dialogue: 0,0:05:53.26,0:05:56.47,Default#3,,0,0,0,,まさに この緑の泉をくみに来た
Dialogue: 0,0:05:56.60,0:05:58.35,Default#3,,0,0,0,,ただ 地形が気になる
Dialogue: 0,0:05:58.97,0:06:01.18,Default#3,,0,0,0,,このエリアに出る毒ガス―
Dialogue: 0,0:06:01.31,0:06:04.98,Default#3,,0,0,0,,硫化水素や二酸化硫黄は\N空気よりも重い
Dialogue: 0,0:06:05.10,0:06:08.15,Default#3,,0,0,0,,たまるんだよ\Nこういう くぼ地にはよ
Dialogue: 0,0:06:08.73,0:06:12.40,Default#3,,0,0,0,,おう もしかして\Nその毒ガスが銀の槍で分かんのか？
Dialogue: 0,0:06:12.53,0:06:13.40,Default#3,,0,0,0,,ああ
Dialogue: 0,0:06:13.53,0:06:17.20,Default#3,,0,0,0,,銀は硫化水素と反応して\Nソッコー黒く…
Dialogue: 0,0:06:17.33,0:06:18.37,Default#3,,0,0,0,,（クロム）ん？
Dialogue: 0,0:06:18.99,0:06:20.83,Default#3,,0,0,0,,（銀狼）あ… ああ…
Dialogue: 0,0:06:21.20,0:06:22.96,Default#3,,0,0,0,,ウフフフ…
Dialogue: 0,0:06:23.37,0:06:25.33,Default#3,,0,0,0,,（銀狼）ははは… はあ…
Dialogue: 0,0:06:25.54,0:06:27.71,Default#3,,0,0,0,,ウフフフ…
Dialogue: 0,0:06:31.51,0:06:33.01,Default#3,,0,0,0,,戻れ 銀狼！
Dialogue: 0,0:06:36.47,0:06:37.76,Default#3,,0,0,0,,（コハク）うっ… ぐうっ！
Dialogue: 0,0:06:37.89,0:06:38.85,Default#3,,0,0,0,,（銀狼）うおおお！
Dialogue: 0,0:06:48.98,0:06:49.82,Default#3,,0,0,0,,（一同）あっ！
Dialogue: 0,0:06:50.23,0:06:51.78,Default#3,,0,0,0,,あ…
Dialogue: 0,0:06:51.90,0:06:52.94,Default#3,,0,0,0,,うっ！
Dialogue: 0,0:06:53.36,0:06:55.24,Default#3,,0,0,0,,なぜ 分かったの？
Dialogue: 0,0:06:55.36,0:06:59.28,Default#3,,0,0,0,,もう一歩で 永遠の眠りに\Nつかせてあげられたのに！
Dialogue: 0,0:06:59.58,0:07:02.08,Default#3,,0,0,0,,（銀狼）うわ～！\Nあ… あっち行け～！
Dialogue: 0,0:07:02.20,0:07:03.62,Default#3,,0,0,0,,（コハク）\N落ち着け！　誰もいない！
Dialogue: 0,0:07:03.75,0:07:05.46,Default#3,,0,0,0,,（銀狼）いいっ いい～！\N（コハク）誰もいないぞ 銀狼！
Dialogue: 0,0:07:08.71,0:07:11.00,Default#3,,0,0,0,,溶けた 鳥の羽が…
Dialogue: 0,0:07:11.13,0:07:14.63,Default#3,,0,0,0,,（クロム）何なんだよ\Nこの泉の水はよ 千空！
Dialogue: 0,0:07:16.09,0:07:20.35,Default#3,,0,0,0,,（千空）８世紀ごろ\N錬金術の研究中に発見されて―
Dialogue: 0,0:07:20.47,0:07:21.43,Default#3,,0,0,0,,俺らの時代では
Dialogue: 0,0:07:21.56,0:07:25.31,Default#3,,0,0,0,,あらゆる化学(ばけがく)産業の\N根幹になっている薬品…
Dialogue: 0,0:07:30.15,0:07:31.69,Default#3,,0,0,0,,硫酸だ
Dialogue: 0,0:07:31.98,0:07:32.69,Default#3,,0,0,0,,（銀狼のおびえる声）
Dialogue: 0,0:07:32.69,0:07:34.32,Default#3,,0,0,0,,（銀狼のおびえる声）
Dialogue: 0,0:07:32.69,0:07:34.32,Default#3,,0,0,0,,（クロム）\Nその硫酸っつうの抜きじゃ―
Dialogue: 0,0:07:34.32,0:07:34.44,Default#3,,0,0,0,,（銀狼のおびえる声）
Dialogue: 0,0:07:34.44,0:07:36.95,Default#3,,0,0,0,,（銀狼のおびえる声）
Dialogue: 0,0:07:34.44,0:07:36.95,Default#3,,0,0,0,,ルリの万能薬は作れねえのかよ！
Dialogue: 0,0:07:37.07,0:07:38.16,Default#3,,0,0,0,,（千空）無理だな
Dialogue: 0,0:07:38.45,0:07:43.58,Default#3,,0,0,0,,そもそも硫酸源を確保しねえと\N今後の化学(ばけがく)も どん詰まりだ
Dialogue: 0,0:07:44.91,0:07:47.71,Default#3,,0,0,0,,やはり\N強行突破でくむしかないな
Dialogue: 0,0:07:47.83,0:07:50.92,Default#3,,0,0,0,,ルリ姉を救うためなら\N命など いくらでも懸ける
Dialogue: 0,0:07:51.34,0:07:52.63,Default#3,,0,0,0,,私のスピードならば…
Dialogue: 0,0:07:52.75,0:07:54.17,Default#3,,0,0,0,,ん？　あっ
Dialogue: 0,0:07:54.63,0:07:56.72,Default#3,,0,0,0,,俺の時代の話だが―
Dialogue: 0,0:07:56.84,0:08:00.43,Default#3,,0,0,0,,似たような硫酸エリアの調査に出た\N一団がいてな
Dialogue: 0,0:08:01.22,0:08:05.73,Default#3,,0,0,0,,先頭の男が靴ひもでも直しに\Nふっと しゃがんだ
Dialogue: 0,0:08:07.60,0:08:09.69,Default#3,,0,0,0,,（女性）\N先生 どうしたんですか？
Dialogue: 0,0:08:13.65,0:08:15.19,Default#3,,0,0,0,,死んでたんだよ
Dialogue: 0,0:08:16.11,0:08:19.57,Default#3,,0,0,0,,しゃがんだ高さに\N硫化水素がたまってた
Dialogue: 0,0:08:19.70,0:08:21.91,Default#3,,0,0,0,,マジで実際にあった事故だ
Dialogue: 0,0:08:22.62,0:08:26.70,Default#3,,0,0,0,,自然様が その気になりゃ\N人間なんぞ瞬殺だってこった
Dialogue: 0,0:08:27.21,0:08:30.63,Default#3,,0,0,0,,コハクが超スピードとか\Nそういう次元の問題じゃねえ
Dialogue: 0,0:08:30.75,0:08:33.13,Default#3,,0,0,0,,しかし なら どうするんだ 千空！
Dialogue: 0,0:08:33.25,0:08:35.46,Default#3,,0,0,0,,私は絶対にルリ姉を…
Dialogue: 0,0:08:35.59,0:08:38.05,Default#3,,0,0,0,,（千空）決まってんじゃねえか
Dialogue: 0,0:08:38.17,0:08:41.93,Default#3,,0,0,0,,作るんだよ ガスマスクを！
Dialogue: 0,0:08:43.18,0:08:45.81,Default#3,,0,0,0,,化学(ばけがく)の敵をブチのめすには―
Dialogue: 0,0:08:45.93,0:08:48.68,Default#3,,0,0,0,,化学(ばけがく)で戦うしかねえ
Dialogue: 0,0:08:49.44,0:08:53.77,Default#3,,0,0,0,,ククク… こんなもんで\Nどこまで毒 吸えっかだな
Dialogue: 0,0:08:54.40,0:08:55.23,Default#3,,0,0,0,,こればっかりは
Dialogue: 0,0:08:55.36,0:08:58.19,Default#3,,0,0,0,,トライ＆エラーっつう\Nわけにもいかねえ
Dialogue: 0,0:09:00.82,0:09:03.20,Default#3,,0,0,0,,エラー ＝(イコール) 死だ
Dialogue: 0,0:09:05.79,0:09:07.45,Default#3,,0,0,0,,おう 次は俺のマスクを…
Dialogue: 0,0:09:07.58,0:09:09.21,Default#3,,0,0,0,,あ～ それは要らねえ
Dialogue: 0,0:09:09.58,0:09:10.58,Default#3,,0,0,0,,ん？
Dialogue: 0,0:09:12.04,0:09:13.17,Default#3,,0,0,0,,（千空）クロム
Dialogue: 0,0:09:13.29,0:09:16.09,Default#3,,0,0,0,,テメーは硫酸採集には\Nもう行かねえ
Dialogue: 0,0:09:16.21,0:09:17.26,Default#3,,0,0,0,,ここに残れ
Dialogue: 0,0:09:17.38,0:09:20.47,Default#3,,0,0,0,,（クロム）あ？　いきなり何だ…\N（千空）黙って聞きやがれ
Dialogue: 0,0:09:20.59,0:09:22.72,Default#3,,0,0,0,,こんなガスマスクに保証はねえ
Dialogue: 0,0:09:23.30,0:09:28.10,Default#3,,0,0,0,,万が一 科学者が全滅したら\Nこの先 誰がルリを救う？
Dialogue: 0,0:09:28.22,0:09:29.52,Default#3,,0,0,0,,（クロム）あ…
Dialogue: 0,0:09:30.48,0:09:32.81,Default#3,,0,0,0,,（千空）人間は いつか必ず死ぬ
Dialogue: 0,0:09:32.94,0:09:35.27,Default#3,,0,0,0,,だが その知恵は死なねえ
Dialogue: 0,0:09:35.40,0:09:38.28,Default#3,,0,0,0,,継がれてきたんだ 200万年
Dialogue: 0,0:09:39.32,0:09:40.95,Default#3,,0,0,0,,よく聞け クロム
Dialogue: 0,0:09:41.45,0:09:44.49,Default#3,,0,0,0,,今からテメーに俺の知る科学を…
Dialogue: 0,0:09:44.62,0:09:47.70,Default#3,,0,0,0,,人類200万年の全てを継ぐ
Dialogue: 0,0:09:47.95,0:09:49.50,Default#3,,0,0,0,,（クロム）あ ああ…
Dialogue: 0,0:09:51.08,0:09:53.58,Default#3,,0,0,0,,おう!?\N待て待て 待て待て いきなり！
Dialogue: 0,0:09:53.71,0:09:56.42,Default#3,,0,0,0,,“後継者は お前だ”みてえな話\Nしてんじゃねえよ！
Dialogue: 0,0:09:56.54,0:09:57.80,Default#3,,0,0,0,,縁起でもねえ！
Dialogue: 0,0:09:57.92,0:10:00.84,Default#3,,0,0,0,,（千空）おや まあ\N随分とお優しいこって
Dialogue: 0,0:10:00.97,0:10:03.13,Default#3,,0,0,0,,テメーは俺の彼女かよ
Dialogue: 0,0:10:03.26,0:10:06.30,Default#3,,0,0,0,,１ミリも死ぬ気はねえから\N安心しやがれ
Dialogue: 0,0:10:06.64,0:10:09.93,Default#3,,0,0,0,,だがな\Nルリの病気を治すためには―
Dialogue: 0,0:10:10.06,0:10:13.81,Default#3,,0,0,0,,毒ガスエリアに特攻して\N硫酸くんでくるしかねえ
Dialogue: 0,0:10:14.31,0:10:18.94,Default#3,,0,0,0,,万が一 俺とテメーが\N共倒れになりゃ その瞬間…
Dialogue: 0,0:10:19.94,0:10:23.53,Default#3,,0,0,0,,人類から科学の全てが\N消えうせる
Dialogue: 0,0:10:27.37,0:10:29.66,Default#3,,0,0,0,,（クロム）\N千空が死んだときのために―
Dialogue: 0,0:10:29.79,0:10:31.16,Default#3,,0,0,0,,俺は お留守番か？
Dialogue: 0,0:10:31.29,0:10:34.71,Default#3,,0,0,0,,（千空）ああ\N科学知識を継いでからな
Dialogue: 0,0:10:38.46,0:10:41.17,Default#3,,0,0,0,,継がねえよ！\Nそういうことならな
Dialogue: 0,0:10:41.42,0:10:42.26,Default#3,,0,0,0,,あ!?
Dialogue: 0,0:10:44.05,0:10:45.64,Default#3,,0,0,0,,ガキか テメーは
Dialogue: 0,0:10:45.76,0:10:47.14,Default#3,,0,0,0,,お留守番にふてくされてんじゃね…
Dialogue: 0,0:10:47.26,0:10:48.60,Default#3,,0,0,0,,（クロム）んな話じゃねえ！
Dialogue: 0,0:10:49.26,0:10:51.52,Default#3,,0,0,0,,“これで友達が死んでもオーケー”
Dialogue: 0,0:10:51.64,0:10:55.10,Default#3,,0,0,0,,そんなプランに手 貸す気は\Nさらさらねえってことだよ！
Dialogue: 0,0:10:56.27,0:10:58.06,Default#3,,0,0,0,,おう 残念だったな
Dialogue: 0,0:10:58.19,0:10:59.98,Default#3,,0,0,0,,俺が知識を継がねえもんだから―
Dialogue: 0,0:11:00.44,0:11:04.61,Default#3,,0,0,0,,千空 テメーがくたばったら\N科学はゲームオーバーだぜ！
Dialogue: 0,0:11:07.03,0:11:10.28,Default#3,,0,0,0,,100億％ 生きて戻んなきゃ\Nなんねえんだ！
Dialogue: 0,0:11:10.41,0:11:12.08,Default#3,,0,0,0,,千空 テメーはよ！
Dialogue: 0,0:11:13.08,0:11:15.54,Default#3,,0,0,0,,おう そもそも毒ガス特攻を―
Dialogue: 0,0:11:15.67,0:11:19.38,Default#3,,0,0,0,,なんでわざわざ\N科学のキーマン 千空がやんだよ
Dialogue: 0,0:11:19.50,0:11:22.17,Default#3,,0,0,0,,俺でも誰でも\Nほかのヤツを犠牲にすりゃあいい
Dialogue: 0,0:11:22.80,0:11:27.09,Default#3,,0,0,0,,千空 テメーの大好きな\N合理的ってやつだぜ
Dialogue: 0,0:11:27.22,0:11:29.89,Default#3,,0,0,0,,なのに\N“クロム テメーは留守番”だ？
Dialogue: 0,0:11:30.01,0:11:31.97,Default#3,,0,0,0,,守ってやろうって気\N丸出しじゃねえか！
Dialogue: 0,0:11:32.68,0:11:34.98,Default#3,,0,0,0,,俺はテメーの子供かよ
Dialogue: 0,0:11:35.85,0:11:38.85,Default#3,,0,0,0,,下に見てんじゃねえぞ\Nこの野郎
Dialogue: 0,0:11:39.19,0:11:42.32,Default#3,,0,0,0,,ああ？　下も上もねえよ バカ
Dialogue: 0,0:11:42.44,0:11:44.49,Default#3,,0,0,0,,単純に合理的な理由だ
Dialogue: 0,0:11:44.86,0:11:48.16,Default#3,,0,0,0,,ガスマスクの原理やら\Nついでに採る素材やら―
Dialogue: 0,0:11:48.28,0:11:52.41,Default#3,,0,0,0,,もろもろ分かってる俺が\N直(ちょく)に行くのが いちばん勝率が高(たけ)え
Dialogue: 0,0:11:52.54,0:11:53.37,Default#3,,0,0,0,,それだけだ
Dialogue: 0,0:11:53.70,0:11:56.33,Default#3,,0,0,0,,（クロム）いちばん勝率高えのは\Nそれじゃねえだろ！
Dialogue: 0,0:11:56.46,0:11:57.29,Default#3,,0,0,0,,（千空）あ？
Dialogue: 0,0:11:57.87,0:12:00.92,Default#3,,0,0,0,,（クロム）科学使い２人で\Nタッグで行くことだろ！
Dialogue: 0,0:12:01.04,0:12:03.00,Default#3,,0,0,0,,いざってときに救えんだからな
Dialogue: 0,0:12:03.38,0:12:04.92,Default#3,,0,0,0,,違うのかよ！
Dialogue: 0,0:12:06.97,0:12:08.05,Default#3,,0,0,0,,（千空）クッ…
Dialogue: 0,0:12:08.63,0:12:12.68,Default#3,,0,0,0,,ククク… いざってときは\Nもう毒ガスで死んでんだ
Dialogue: 0,0:12:12.81,0:12:14.68,Default#3,,0,0,0,,救えるもクソもねえだろが
Dialogue: 0,0:12:14.81,0:12:16.48,Default#3,,0,0,0,,お… おう でもよ
Dialogue: 0,0:12:16.60,0:12:19.81,Default#3,,0,0,0,,ヤベえ 足つったとか何とか\Nあるかもしんねえじゃねえかよ
Dialogue: 0,0:12:20.19,0:12:22.27,Default#3,,0,0,0,,（千空）ああ そうだな
Dialogue: 0,0:12:22.86,0:12:27.70,Default#3,,0,0,0,,0,1％かもしんねえが\N生存率は上がるわな
Dialogue: 0,0:12:29.20,0:12:32.03,Default#3,,0,0,0,,大樹(たいじゅ)と杠(ゆずりは)… だったか？
Dialogue: 0,0:12:32.78,0:12:35.49,Default#3,,0,0,0,,司(つかさ)帝国にスパイで潜入してんだろ？
Dialogue: 0,0:12:35.62,0:12:37.75,Default#3,,0,0,0,,それこそ命懸けじゃねえか
Dialogue: 0,0:12:37.87,0:12:40.46,Default#3,,0,0,0,,テメーと\N背中 預け合ってんじゃねえか
Dialogue: 0,0:12:41.04,0:12:44.42,Default#3,,0,0,0,,俺らもよ\N下も上もねえ仲間だってんなら―
Dialogue: 0,0:12:45.05,0:12:47.80,Default#3,,0,0,0,,“俺がテメーを守ってやる”\Nじゃねえんだよ！
Dialogue: 0,0:12:48.38,0:12:51.89,Default#3,,0,0,0,,違うだろ セリフがよ！
Dialogue: 0,0:12:54.60,0:12:55.43,Default#3,,0,0,0,,フッ…
Dialogue: 0,0:12:55.81,0:12:57.64,Default#3,,0,0,0,,ああ テメーのせいで―
Dialogue: 0,0:12:57.77,0:13:01.69,Default#3,,0,0,0,,作んなきゃなんねえガスマスクが\N１つ増えたじゃねえか
Dialogue: 0,0:13:03.06,0:13:06.78,Default#3,,0,0,0,,クロム 俺にテメーの命を預けろ
Dialogue: 0,0:13:06.90,0:13:09.82,Default#3,,0,0,0,,おうよ！　千空 そっちもな
Dialogue: 0,0:13:13.87,0:13:14.87,Default#3,,0,0,0,,（ルリ）コハク
Dialogue: 0,0:13:14.99,0:13:18.91,Default#3,,0,0,0,,お母様が亡くなった今\N大切なお話があります
Dialogue: 0,0:13:19.25,0:13:23.42,Default#3,,0,0,0,,巫女(みこ)のいちばん大事な仕事は何か\N知っていますか？
Dialogue: 0,0:13:23.71,0:13:26.25,Default#3,,0,0,0,,それは「百物語」
Dialogue: 0,0:13:26.38,0:13:29.59,Default#3,,0,0,0,,さまざまな知識が込められた\N100本のお話を
Dialogue: 0,0:13:29.72,0:13:32.18,Default#3,,0,0,0,,村に代々 欠かさず\N継いでいくのです
Dialogue: 0,0:13:32.55,0:13:33.72,Default#3,,0,0,0,,（コハク）ん…
Dialogue: 0,0:13:33.97,0:13:35.80,Default#3,,0,0,0,,（コクヨウ）察しろ コハク
Dialogue: 0,0:13:35.93,0:13:38.85,Default#3,,0,0,0,,ルリの体は長生きには耐えられん\N（コハク）はっ！
Dialogue: 0,0:13:38.97,0:13:42.19,Default#3,,0,0,0,,（コクヨウ）「百物語」の\N断絶だけは まかりならん
Dialogue: 0,0:13:43.06,0:13:45.73,Default#3,,0,0,0,,健康なお前が\Nルリの次の巫女として…
Dialogue: 0,0:13:45.86,0:13:48.15,Default#3,,0,0,0,,（コハク）ハ！\N継ぐことはできんな！
Dialogue: 0,0:13:48.28,0:13:49.61,Default#3,,0,0,0,,そういうことならな！
Dialogue: 0,0:13:49.74,0:13:50.57,Default#3,,0,0,0,,なっ…
Dialogue: 0,0:13:50.90,0:13:53.24,Default#3,,0,0,0,,“これで\Nルリ姉が死んでもオーケー”
Dialogue: 0,0:13:53.36,0:13:56.53,Default#3,,0,0,0,,そんなプランに手を貸す気は\Nさらさらないということだ！
Dialogue: 0,0:13:56.66,0:13:57.62,Default#3,,0,0,0,,クッ…
Dialogue: 0,0:13:57.74,0:13:59.62,Default#3,,0,0,0,,（コクヨウ）どこへ行く コハク！
Dialogue: 0,0:14:00.79,0:14:02.46,Default#3,,0,0,0,,（コハク）ハァ ハァ ハァ…
Dialogue: 0,0:14:03.00,0:14:05.50,Default#3,,0,0,0,,（コハク）私がいつでも\N巫女を継げるとなれば―
Dialogue: 0,0:14:05.63,0:14:09.30,Default#3,,0,0,0,,真面目なルリ姉をもたせている\N気力の糸は切れてしまう
Dialogue: 0,0:14:09.88,0:14:13.55,Default#3,,0,0,0,,（コハク）そうだ\N私が父上に嫌われればよいのだ！
Dialogue: 0,0:14:14.09,0:14:15.84,Default#3,,0,0,0,,やんちゃな娘になろう！
Dialogue: 0,0:14:15.97,0:14:18.51,Default#3,,0,0,0,,到底 巫女などには\Nふさわしくないような！
Dialogue: 0,0:14:19.31,0:14:23.44,Default#3,,0,0,0,,湯治の湯を運ぼう！\N何千杯でも 何万杯でも
Dialogue: 0,0:14:23.56,0:14:27.73,Default#3,,0,0,0,,私が絶対に\Nルリ姉を治してみせる！
Dialogue: 0,0:14:30.44,0:14:31.61,Default#3,,0,0,0,,（コハク）クロム\N（クロム）ん？
Dialogue: 0,0:14:31.74,0:14:34.28,Default#3,,0,0,0,,（コハク）君は私に似ている\N（クロム）ん？
Dialogue: 0,0:14:35.03,0:14:38.58,Default#3,,0,0,0,,（コハク）本当は\N君のような男にルリ姉も嫁げば
Dialogue: 0,0:14:38.70,0:14:41.29,Default#3,,0,0,0,,皆 めっぽう幸せなのだろうな
Dialogue: 0,0:14:42.08,0:14:45.17,Default#3,,0,0,0,,だが 天は\N戦闘力を君に与えなかった
Dialogue: 0,0:14:45.29,0:14:48.59,Default#3,,0,0,0,,ハ！\N神様も融通の利かないものだ
Dialogue: 0,0:14:50.21,0:14:52.46,Default#3,,0,0,0,,私たちの計画どおりいけば―
Dialogue: 0,0:14:52.59,0:14:56.09,Default#3,,0,0,0,,ルリ姉の夫は\N金狼か銀狼になってしまう
Dialogue: 0,0:14:56.80,0:14:58.05,Default#3,,0,0,0,,そのわびに
Dialogue: 0,0:14:58.18,0:15:01.97,Default#3,,0,0,0,,ルリ姉と似ている私が\N代わりに嫁にでもなってやるか？
Dialogue: 0,0:15:02.35,0:15:03.31,Default#3,,0,0,0,,（クロム）フッ
Dialogue: 0,0:15:05.10,0:15:06.48,Default#3,,0,0,0,,似てねえよ
Dialogue: 0,0:15:06.98,0:15:09.65,Default#3,,0,0,0,,ルリは お嬢だけど\Nコハクはゴリラだろ
Dialogue: 0,0:15:09.77,0:15:11.44,Default#3,,0,0,0,,（コハク）フフフ
Dialogue: 0,0:15:13.82,0:15:15.57,Default#3,,0,0,0,,ほら ゴリラだろ？
Dialogue: 0,0:15:15.99,0:15:18.87,Default#3,,0,0,0,,つか 何だよ コハク\N実は俺にホレてんのかよ
Dialogue: 0,0:15:18.99,0:15:19.99,Default#3,,0,0,0,,（コハク）いや みじんも
Dialogue: 0,0:15:20.12,0:15:22.41,Default#3,,0,0,0,,（クロム）ケッ だと思ったぜ
Dialogue: 0,0:15:22.54,0:15:25.08,Default#3,,0,0,0,,なら言うなよ そういうことよ
Dialogue: 0,0:15:27.46,0:15:30.04,Default#3,,0,0,0,,（千空）エジソンの\N電球 作ったときと一緒だ
Dialogue: 0,0:15:30.42,0:15:32.59,Default#3,,0,0,0,,まず 竹を蒸し焼きにする
Dialogue: 0,0:15:32.71,0:15:35.30,Default#3,,0,0,0,,（クロム）おう\Nこんなガラスの使い方もあんのか！
Dialogue: 0,0:15:35.67,0:15:38.14,Default#3,,0,0,0,,ラーメンでも使った\N炭酸カリウム―
Dialogue: 0,0:15:38.26,0:15:40.60,Default#3,,0,0,0,,灰のアクをガンガンにブチ込む
Dialogue: 0,0:15:42.81,0:15:44.60,Default#3,,0,0,0,,出来た黒い粉―
Dialogue: 0,0:15:44.73,0:15:49.61,Default#3,,0,0,0,,炭酸カリウムしみしみの活性炭で\N毒ガスを中和してキャッチする
Dialogue: 0,0:15:50.23,0:15:54.49,Default#3,,0,0,0,,（クロム）ＶＳ 毒ガス\N化学(ばけがく)のバリアーの完成だ！
Dialogue: 0,0:15:55.86,0:15:59.78,Default#3,,0,0,0,,千空＆俺の科学使いタッグで\Nリベンジマッチだぜ！
Dialogue: 0,0:15:59.91,0:16:03.33,Default#3,,0,0,0,,（千空）ククク 今度こそ頂くぞ
Dialogue: 0,0:16:03.45,0:16:07.79,Default#3,,0,0,0,,万能薬の最難関素材 硫酸をな
Dialogue: 0,0:16:21.80,0:16:25.35,Default#3,,0,0,0,,（銀狼）\N絶対 泉の妖精の呪いだよ これ！
Dialogue: 0,0:16:25.68,0:16:28.77,Default#3,,0,0,0,,鳥だって死んでたし\N銀の槍が真っ黒に…
Dialogue: 0,0:16:28.89,0:16:30.35,Default#3,,0,0,0,,嫌だ もう あんなとこ
Dialogue: 0,0:16:30.48,0:16:32.36,Default#3,,0,0,0,,絶対行かないぞ 僕は～！
Dialogue: 0,0:16:32.65,0:16:34.40,Default#3,,0,0,0,,銀狼 テメー！\N（千空）んっ…
Dialogue: 0,0:16:34.53,0:16:35.53,Default#3,,0,0,0,,おう 行くぞ！
Dialogue: 0,0:16:35.65,0:16:38.03,Default#3,,0,0,0,,あ～ いいからもう留守番してろ
Dialogue: 0,0:16:38.15,0:16:39.61,Default#3,,0,0,0,,足手まといだ
Dialogue: 0,0:16:40.20,0:16:43.28,Default#3,,0,0,0,,ただな これは呪いなんかじゃねえ
Dialogue: 0,0:16:43.41,0:16:44.41,Default#3,,0,0,0,,科学だ
Dialogue: 0,0:16:45.12,0:16:49.50,Default#3,,0,0,0,,硫化水素の黒ずみを\N適当なアルカリにひっつけりゃ戻る
Dialogue: 0,0:16:49.62,0:16:52.25,Default#3,,0,0,0,,例えば\Nホカホカの灰でもむだけで…
Dialogue: 0,0:16:52.88,0:16:55.25,Default#3,,0,0,0,,（クロム）おお！\N毒ガスセンサー復活！
Dialogue: 0,0:16:55.59,0:16:58.97,Default#3,,0,0,0,,とっとと行くぞ 硫酸の泉に
Dialogue: 0,0:16:59.55,0:17:00.59,Default#3,,0,0,0,,（銀狼）うっ…
Dialogue: 0,0:17:06.35,0:17:07.18,Default#3,,0,0,0,,（クロム･千空）あっ！
Dialogue: 0,0:17:07.81,0:17:09.18,Default#3,,0,0,0,,（クロムの荒い息）
Dialogue: 0,0:17:10.02,0:17:11.94,Default#3,,0,0,0,,死んでたんだよ
Dialogue: 0,0:17:12.81,0:17:15.15,Default#3,,0,0,0,,（クロム）ぶっつけ本番じゃねえか
Dialogue: 0,0:17:15.27,0:17:16.94,Default#3,,0,0,0,,（リューさん）きええええ！
Dialogue: 0,0:17:17.07,0:17:18.74,Default#3,,0,0,0,,（クロム）太刀打ちできんのか？
Dialogue: 0,0:17:18.86,0:17:21.91,Default#3,,0,0,0,,吸ったら終わりの\N死の毒ガスエリアによ
Dialogue: 0,0:17:22.49,0:17:24.37,Default#3,,0,0,0,,（クロム）ん？　はあ!?
Dialogue: 0,0:17:24.74,0:17:26.66,Default#3,,0,0,0,,ヤベえ～！　だだだだ…
Dialogue: 0,0:17:26.79,0:17:28.45,Default#3,,0,0,0,,マジか！　そんなスッタスタ…
Dialogue: 0,0:17:28.58,0:17:31.50,Default#3,,0,0,0,,（千空）あ～だこ～だ心配して\N呼吸量が増えりゃ―
Dialogue: 0,0:17:31.62,0:17:34.38,Default#3,,0,0,0,,ガスマスクの毒ガス浄化が\N追っつかなくなる
Dialogue: 0,0:17:34.96,0:17:38.17,Default#3,,0,0,0,,ククク アホほど単純な理屈だ
Dialogue: 0,0:17:38.30,0:17:39.92,Default#3,,0,0,0,,ビビるほど 死ぬ
Dialogue: 0,0:17:40.05,0:17:41.34,Default#3,,0,0,0,,分かったら とっとと行くぞ
Dialogue: 0,0:17:41.76,0:17:45.35,Default#3,,0,0,0,,（クロム）おう\N理屈では分かっけどよ クッソ
Dialogue: 0,0:17:45.47,0:17:46.47,Default#3,,0,0,0,,こっちは 千空―
Dialogue: 0,0:17:46.60,0:17:48.72,Default#3,,0,0,0,,テメーほど\N心臓に毛 生えちゃいね…
Dialogue: 0,0:17:48.85,0:17:49.98,Default#3,,0,0,0,,あっ…
Dialogue: 0,0:17:54.69,0:17:56.32,Default#3,,0,0,0,,ああ…
Dialogue: 0,0:17:58.03,0:17:58.94,Default#3,,0,0,0,,うっ！
Dialogue: 0,0:18:03.36,0:18:04.87,Default#3,,0,0,0,,（カセキ）まったく
Dialogue: 0,0:18:04.99,0:18:09.08,Default#3,,0,0,0,,ワシも なんで また\Nせっせと手伝っちゃっとるんだか
Dialogue: 0,0:18:09.20,0:18:11.75,Default#3,,0,0,0,,（銀狼）おかしいよ\N千空もクロムもさ
Dialogue: 0,0:18:11.87,0:18:12.71,Default#3,,0,0,0,,（カセキ）ん？
Dialogue: 0,0:18:13.04,0:18:15.00,Default#3,,0,0,0,,怖いに決まってるじゃんよ！
Dialogue: 0,0:18:15.13,0:18:16.63,Default#3,,0,0,0,,死ぬかもなんだよ？
Dialogue: 0,0:18:16.75,0:18:19.63,Default#3,,0,0,0,,あ～ やだなあ ホント！\Nああいうの！
Dialogue: 0,0:18:19.76,0:18:22.22,Default#3,,0,0,0,,ただの無謀なのに\N勇気あるぶっちゃってさ～！
Dialogue: 0,0:18:22.42,0:18:26.10,Default#3,,0,0,0,,（カセキ）\N黙って逃げんで わざわざ\N悪態つくっちゅうことは―
Dialogue: 0,0:18:26.68,0:18:30.64,Default#3,,0,0,0,,怖がってる自分の弱さに\N引け目を感じちゃっとるんじゃの
Dialogue: 0,0:18:30.77,0:18:32.35,Default#3,,0,0,0,,（銀狼）うっ… 別に…
Dialogue: 0,0:18:33.02,0:18:34.81,Default#3,,0,0,0,,（カセキ）安心せい 銀狼
Dialogue: 0,0:18:35.48,0:18:38.90,Default#3,,0,0,0,,ぬしは\Nち～とも弱くなんかないわい
Dialogue: 0,0:18:39.23,0:18:42.07,Default#3,,0,0,0,,怖がりは長生きの秘けつじゃ
Dialogue: 0,0:18:42.19,0:18:44.91,Default#3,,0,0,0,,ジジイが言うと\N説得力 ビンビンじゃろ？
Dialogue: 0,0:18:46.07,0:18:48.41,Default#3,,0,0,0,,ワシも怖がりじゃった
Dialogue: 0,0:18:48.95,0:18:52.08,Default#3,,0,0,0,,皆だって内心 実は…
Dialogue: 0,0:18:52.50,0:18:55.83,Default#3,,0,0,0,,怖がりじゃない人間などおらんよ
Dialogue: 0,0:18:56.75,0:18:57.96,Default#3,,0,0,0,,（金狼）え～い！\N（コハク）うっ！
Dialogue: 0,0:18:58.59,0:19:01.71,Default#3,,0,0,0,,（銀狼）そうだ\N想像したこともなかったな
Dialogue: 0,0:19:02.76,0:19:04.42,Default#3,,0,0,0,,みんなは知らないけど―
Dialogue: 0,0:19:04.55,0:19:08.97,Default#3,,0,0,0,,金狼はボヤボヤの目で戦うマグマが\Nどれだけ怖いか…
Dialogue: 0,0:19:09.64,0:19:12.85,Default#3,,0,0,0,,（カセキ）じゃが\N何か大切なもののために―
Dialogue: 0,0:19:12.98,0:19:16.23,Default#3,,0,0,0,,理屈と心で恐怖に勝とうとしとる
Dialogue: 0,0:19:16.56,0:19:20.73,Default#3,,0,0,0,,よう知らんけど\Nワシには そう見えるのう
Dialogue: 0,0:19:24.44,0:19:29.03,Default#3,,0,0,0,,私は姉者(あねじゃ)の… 命を救いたいのだ
Dialogue: 0,0:19:33.29,0:19:34.29,Default#3,,0,0,0,,お～っと！
Dialogue: 0,0:19:34.41,0:19:35.79,Default#3,,0,0,0,,うっかり勢い余って―
Dialogue: 0,0:19:35.91,0:19:38.67,Default#3,,0,0,0,,ガスマスク もう１個\N作っちゃったわい
Dialogue: 0,0:19:38.79,0:19:43.09,Default#3,,0,0,0,,特に使い道もないし\Nここに置いとくかの
Dialogue: 0,0:20:01.15,0:20:02.86,Default#3,,0,0,0,,（クロム）はっ！　千空！
Dialogue: 0,0:20:03.40,0:20:05.61,Default#3,,0,0,0,,ガスマスクの根元が溶けて\N外れかかってんぞ！
Dialogue: 0,0:20:05.74,0:20:06.57,Default#3,,0,0,0,,（千空）なっ！
Dialogue: 0,0:20:06.70,0:20:09.11,Default#3,,0,0,0,,ククク… 危ねえ
Dialogue: 0,0:20:09.36,0:20:10.95,Default#3,,0,0,0,,タッグで来てて助かった…
Dialogue: 0,0:20:18.42,0:20:21.21,Default#3,,0,0,0,,（クロム）\Nヤベえ… これはマジで…
Dialogue: 0,0:20:21.46,0:20:24.71,Default#3,,0,0,0,,おう\N千空が駆けつけようとしてやがる
Dialogue: 0,0:20:24.84,0:20:28.30,Default#3,,0,0,0,,無理すんな\Nどう見ても間に合わねえ
Dialogue: 0,0:20:28.43,0:20:31.72,Default#3,,0,0,0,,クッソ こんな一瞬のミスで…
Dialogue: 0,0:20:32.22,0:20:35.14,Default#3,,0,0,0,,あとは頼んだぜ ルリを…
Dialogue: 0,0:20:36.73,0:20:39.14,Default#3,,0,0,0,,（銀狼）うわああああ！\N（クロム）うっ！
Dialogue: 0,0:20:39.69,0:20:40.52,Default#3,,0,0,0,,（銀狼）うわあああ！　ぐっ！
Dialogue: 0,0:20:40.77,0:20:41.65,Default#3,,0,0,0,,（千空）あっ！
Dialogue: 0,0:20:41.98,0:20:44.15,Default#3,,0,0,0,,（銀狼）うぐぐぐ…\N（クロム･千空）銀狼！
Dialogue: 0,0:20:45.32,0:20:46.86,Default#3,,0,0,0,,（リューさん）がああああ！
Dialogue: 0,0:20:47.28,0:20:49.36,Default#3,,0,0,0,,あああああ！
Dialogue: 0,0:20:49.78,0:20:52.20,Default#3,,0,0,0,,（銀狼）お… お…
Dialogue: 0,0:20:52.32,0:20:54.20,Default#3,,0,0,0,,重い～！
Dialogue: 0,0:20:54.53,0:20:56.29,Default#3,,0,0,0,,（千空）呼吸を鎮めろ 銀狼！
Dialogue: 0,0:20:56.41,0:20:58.50,Default#3,,0,0,0,,吸気量にガスマスクがもたねえ！
Dialogue: 0,0:20:58.96,0:21:00.96,Default#3,,0,0,0,,（銀狼）もたないって ハァハァ…
Dialogue: 0,0:21:01.08,0:21:03.96,Default#3,,0,0,0,,毒ガスで死ぬの？\N今 死ぬの 僕？
Dialogue: 0,0:21:04.09,0:21:06.51,Default#3,,0,0,0,,ハァハァ ハァハァ…
Dialogue: 0,0:21:06.63,0:21:10.84,Default#3,,0,0,0,,（千空）\N大量の活性炭と炭酸カリウムが\N必ず毒ガスをブチ壊す！
Dialogue: 0,0:21:10.97,0:21:12.47,Default#3,,0,0,0,,呼吸さえ整えれば！
Dialogue: 0,0:21:12.93,0:21:15.14,Default#3,,0,0,0,,テメーは勝てる 恐怖に！
Dialogue: 0,0:21:15.26,0:21:18.35,Default#3,,0,0,0,,だから ここまで自分で\N出向いてこれたんだろうがよ！
Dialogue: 0,0:21:19.31,0:21:20.77,Default#3,,0,0,0,,（クロム）おう 銀狼
Dialogue: 0,0:21:21.65,0:21:24.69,Default#3,,0,0,0,,ここと ここで考えろ
Dialogue: 0,0:21:25.23,0:21:27.53,Default#3,,0,0,0,,自然がどんだけ強かろうがな―
Dialogue: 0,0:21:27.65,0:21:30.70,Default#3,,0,0,0,,自然には考える頭もねえし\Nハートもねえ！
Dialogue: 0,0:21:31.41,0:21:32.95,Default#3,,0,0,0,,俺ら人が勝てんのは―
Dialogue: 0,0:21:33.99,0:21:36.03,Default#3,,0,0,0,,そこだけだろうがよ！
Dialogue: 0,0:21:36.87,0:21:39.04,Default#3,,0,0,0,,（銀狼）ハァ… そうだ
Dialogue: 0,0:21:39.16,0:21:40.50,Default#3,,0,0,0,,僕は護衛 銀狼
Dialogue: 0,0:21:40.62,0:21:42.46,Default#3,,0,0,0,,（リューさん）がああああ！
Dialogue: 0,0:21:42.58,0:21:45.17,Default#3,,0,0,0,,（銀狼）\N頭とハートで 恐怖に勝つ！
Dialogue: 0,0:21:46.09,0:21:48.01,Default#3,,0,0,0,,（銀狼）ふんぬうううう…
Dialogue: 0,0:21:48.13,0:21:51.09,Default#3,,0,0,0,,おりゃああああ！
Dialogue: 0,0:21:51.84,0:21:52.80,Default#3,,0,0,0,,（リューさん）ギャアアア！
Dialogue: 0,0:21:53.01,0:21:53.84,Default#3,,0,0,0,,（クロム）ぐっ…
Dialogue: 0,0:21:53.97,0:21:57.97,Default#3,,0,0,0,,（リューさん）ギャアアアア！
Dialogue: 0,0:22:05.61,0:22:09.03,Default#3,,0,0,0,,千空＆俺の科学使いタッグと…
Dialogue: 0,0:22:09.15,0:22:11.11,Default#3,,0,0,0,,護衛 銀狼で…
Dialogue: 0,0:22:11.57,0:22:14.16,Default#3,,0,0,0,,万能薬の最難関素材―
Dialogue: 0,0:22:14.78,0:22:16.33,Default#3,,0,0,0,,硫酸ゲットだ！
Dialogue: 0,0:22:16.45,0:22:19.29,Default#3,,0,0,0,,（クロム･銀狼）\Nしゃ～！
Dialogue: 0,0:22:21.50,0:22:26.50,Default#3,,0,0,0,,♪～
Dialogue: 0,0:23:44.75,0:23:49.75,Default#3,,0,0,0,,～♪
