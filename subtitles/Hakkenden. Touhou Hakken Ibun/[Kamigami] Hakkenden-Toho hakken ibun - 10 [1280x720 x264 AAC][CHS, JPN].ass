Dialogue: 0,0:02:18.35,0:02:20.91,八犬-OP.CN,,0,0,0,,	神之所绘阴影
Dialogue: 0,0:02:20.91,0:02:21.88,八犬-OP.CN,,0,0,0,,	信否
Dialogue: 0,0:02:21.88,0:02:24.25,八犬-OP.CN,,0,0,0,,	可否
Dialogue: 0,0:02:24.25,0:02:27.89,八犬-OP.CN,,0,0,0,,	吾命由君定
Dialogue: 0,0:02:31.68,0:02:35.01,八犬-OP.CN,,0,0,0,,	冷风相拥
Dialogue: 0,0:02:35.01,0:02:41.54,八犬-OP.CN,,0,0,0,,	生命之思 铭记于心
Dialogue: 0,0:02:41.54,0:02:44.96,八犬-OP.CN,,0,0,0,,	百首不离
Dialogue: 0,0:02:44.96,0:02:47.54,八犬-OP.CN,,0,0,0,,	爱深恨切
Dialogue: 0,0:02:47.54,0:02:51.31,八犬-OP.CN,,0,0,0,,	柔由悲生
Dialogue: 0,0:02:51.31,0:02:56.26,八犬-OP.CN,,0,0,0,,	纵光之灭
Dialogue: 0,0:02:56.26,0:03:01.09,八犬-OP.CN,,0,0,0,,	明望尤存
Dialogue: 0,0:03:01.09,0:03:05.04,八犬-OP.CN,,0,0,0,,	沸腾之血 引入我身
Dialogue: 0,0:03:05.04,0:03:10.18,八犬-OP.CN,,0,0,0,,	将其宿命 变为奇迹
Dialogue: 0,0:03:10.18,0:03:12.44,八犬-OP.CN,,0,0,0,,	勿停 勿休
Dialogue: 0,0:03:12.44,0:03:14.34,八犬-OP.CN,,0,0,0,,	神之所绘阴影
Dialogue: 0,0:03:14.34,0:03:18.40,八犬-OP.CN,,0,0,0,,	划破黑暗
Dialogue: 0,0:03:18.40,0:03:22.33,八犬-OP.CN,,0,0,0,,	伸出双手 天涯海角
Dialogue: 0,0:03:22.33,0:03:24.85,八犬-OP.CN,,0,0,0,,	吾心在念
Dialogue: 0,0:03:24.85,0:03:28.27,八犬-OP.CN,,0,0,0,,	直至归期
Dialogue: 0,0:03:28.27,0:03:32.92,八犬-OP.CN,,0,0,0,,	泪之所示 皆有深意
Dialogue: 0,0:03:32.92,0:03:37.82,八犬-OP.CN,,0,0,0,,	漩涡蠢动 世界尽头
Dialogue: 0,0:03:37.82,0:03:41.37,八犬-OP.CN,,0,0,0,,	咆哮交织 此命运
Dialogue: 0,0:03:41.78,0:03:42.58,八犬-OP.CN,,0,0,0,,	hell!
Dialogue: 0,0:00:00.00,0:00:00.00,Default,,0,0,0,,
Dialogue: 0,0:22:08.91,0:22:11.77,八犬-ed.CN,,0,0,0,,	残像 再现
Dialogue: 0,0:22:11.77,0:22:14.46,八犬-ed.CN,,0,0,0,,	恸哭之后
Dialogue: 0,0:22:14.46,0:22:19.68,八犬-ed.CN,,0,0,0,,	仍见分隔未来的光芒
Dialogue: 0,0:22:19.81,0:22:25.01,八犬-ed.CN,,0,0,0,,	选择的天空 所指示的黎明
Dialogue: 0,0:22:25.01,0:22:30.33,八犬-ed.CN,,0,0,0,,	为了知道生存的意义
Dialogue: 0,0:22:30.45,0:22:35.62,八犬-ed.CN,,0,0,0,,	就算被伤害 但若有闪耀的未来
Dialogue: 0,0:22:35.90,0:22:40.73,八犬-ed.CN,,0,0,0,,	那这身躯 便能毫不犹豫地献出
Dialogue: 0,0:22:40.99,0:22:46.26,八犬-ed.CN,,0,0,0,,	现在 朝着那狂风的彼岸
Dialogue: 0,0:22:46.26,0:22:51.77,八犬-ed.CN,,0,0,0,,	就算有一天世界消融
Dialogue: 0,0:22:51.77,0:22:57.12,八犬-ed.CN,,0,0,0,,	交握的手所抓住的羁绊
Dialogue: 0,0:22:57.33,0:23:02.53,八犬-ed.CN,,0,0,0,,	绝不会被解开
Dialogue: 0,0:23:02.74,0:23:08.13,八犬-ed.CN,,0,0,0,,	紧紧连接命运 string of pain
