Dialogue: 0,1:07:56.11,1:07:58.32,DefaultSingle-J,,0,0,0,,		コナン君　世良ちゃん
Dialogue: 0,1:08:08.78,1:08:09.44,DefaultSingle-J,,0,0,0,,		もしもし
Dialogue: 0,1:08:10.00,1:08:11.35,DefaultSingle-J,,0,0,0,,		あと少しだけ待てる
Dialogue: 0,1:08:13.81,1:08:14.57,DefaultSingle-J,,0,0,0,,		いや
Dialogue: 0,1:08:16.26,1:08:17.95,DefaultSingle-J,,0,0,0,,		タイムリミットだ
Dialogue: 0,1:08:22.35,1:08:23.05,DefaultSingle-J,,0,0,0,,		分かった
Dialogue: 0,1:08:43.70,1:08:44.30,DefaultSingle-J,,0,0,0,,		ゴー
Dialogue: 0,1:08:47.88,1:08:50.00,DefaultSingle-J,,0,0,0,,		アラン会長を早く見つけないと
Dialogue: 0,1:08:50.22,1:08:53.06,DefaultSingle-J,,0,0,0,,		コナン君　今のは銃声だよね
Dialogue: 0,1:08:53.43,1:08:55.23,DefaultSingle-J,,0,0,0,,		しかもボルトアクションのライフル
Dialogue: 0,1:08:55.57,1:08:57.38,DefaultSingle-J,,0,0,0,,		君はさっきから誰と
Dialogue: 0,1:08:57.38,1:08:58.90,DefaultSingle-J,,0,0,0,,		一体何をしてるんだ
