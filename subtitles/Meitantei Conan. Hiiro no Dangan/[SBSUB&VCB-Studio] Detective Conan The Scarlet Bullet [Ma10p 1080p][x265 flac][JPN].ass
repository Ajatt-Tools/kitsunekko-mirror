Dialogue: 0,1:09:28.38,1:09:30.66,DefaultSingle-J,,0,0,0,,		何やってんのよ　もう
Dialogue: 0,1:09:36.51,1:09:37.26,DefaultSingle-J,,0,0,0,,		よし
Dialogue: 0,1:09:39.49,1:09:40.54,DefaultSingle-J,,0,0,0,,		何やってんだ
Dialogue: 0,1:09:41.14,1:09:41.78,DefaultSingle-J,,0,0,0,,		借りるわよ
Dialogue: 0,1:09:42.35,1:09:44.23,DefaultSingle-J,,0,0,0,,		ちょ　ちょっと　哀ちゃん　どうしたの
Dialogue: 0,1:09:47.54,1:09:50.25,DefaultSingle-J,,0,0,0,,		ったく　人使いが荒いわね
Dialogue: 0,1:09:55.85,1:09:56.87,DefaultSingle-J,,0,0,0,,		ここで終わってる
Dialogue: 0,1:09:57.17,1:09:58.05,DefaultSingle-J,,0,0,0,,		ほんとだ
Dialogue: 0,1:09:59.54,1:10:00.54,DefaultSingle-J,,0,0,0,,		扉開けるよ
Dialogue: 0,1:10:00.79,1:10:01.30,DefaultSingle-J,,0,0,0,,		うん
Dialogue: 0,1:10:06.66,1:10:08.05,DefaultSingle-J,,0,0,0,,		もしかしてこの中に
Dialogue: 0,1:10:09.40,1:10:10.15,DefaultSingle-J,,0,0,0,,		ちょっと待って
