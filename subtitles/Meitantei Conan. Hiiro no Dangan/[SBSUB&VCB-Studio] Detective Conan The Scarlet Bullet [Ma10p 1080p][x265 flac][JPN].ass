Dialogue: 0,0:44:38.67,0:44:40.21,DefaultSingle-J,,0,0,0,,		しっかりしろ　灰原
Dialogue: 0,0:44:40.79,0:44:43.20,DefaultSingle-J,,0,0,0,,		灰原　灰原
Dialogue: 0,0:44:43.68,0:44:45.80,DefaultSingle-J,,0,0,0,,		し　しん...いち
Dialogue: 0,0:44:47.39,0:44:49.40,DefaultSingle-J,,0,0,0,,		蘭　大丈夫か
Dialogue: 0,0:44:51.18,0:44:51.75,DefaultSingle-J,,0,0,0,,		おい
Dialogue: 0,0:44:52.30,0:44:54.02,DefaultSingle-J,,0,0,0,,		ら　蘭
Dialogue: 0,0:44:54.42,0:44:56.67,DefaultSingle-J,,0,0,0,,		か　体が動かねえ
Dialogue: 0,0:44:57.54,0:45:02.13,DefaultSingle-J,,0,0,0,,		一体　な...何が　起きて
Dialogue: 0,0:45:09.29,0:45:11.14,DefaultSingle-J,,0,0,0,,		もしもし　どうした　ボウヤ
Dialogue: 0,0:45:25.80,0:45:26.42,DefaultSingle-J,,0,0,0,,		誰だ
Dialogue: 0,0:45:41.55,0:45:42.35,DefaultSingle-J,,0,0,0,,		これは
Dialogue: 0,0:45:43.58,0:45:45.20,DefaultSingle-J,,0,0,0,,		一体何があったんだ
Dialogue: 0,0:45:46.65,0:45:48.59,DefaultSingle-J,,0,0,0,,		なんてザマだ　情けない
Dialogue: 0,0:45:48.59,0:45:50.05,DefaultSingle-J,,0,0,0,,		しょうがないだろ
Dialogue: 0,0:45:50.30,0:45:53.27,DefaultSingle-J,,0,0,0,,		急に飛び出した車とぶつかるとこだったんだから
Dialogue: 0,0:45:55.48,0:45:56.44,DefaultSingle-J,,0,0,0,,		でも大丈夫
Dialogue: 0,0:45:56.92,0:46:00.13,DefaultSingle-J,,0,0,0,,		空港から市街地につながってる道は　これしかない
Dialogue: 0,0:46:00.98,0:46:03.20,DefaultSingle-J,,0,0,0,,		わっ　切られた　なんで
Dialogue: 0,0:46:03.20,0:46:04.70,DefaultSingle-J,,0,0,0,,		いた　チュウ吉
Dialogue: 0,0:46:05.20,0:46:07.83,DefaultSingle-J,,0,0,0,,		さっきからどこ電話してんのよ
Dialogue: 0,0:46:08.16,0:46:09.61,DefaultSingle-J,,0,0,0,,		僕の家族です
Dialogue: 0,0:46:10.82,0:46:12.86,DefaultSingle-J,,0,0,0,,		お付き合いしている女性として
Dialogue: 0,0:46:12.86,0:46:14.96,DefaultSingle-J,,0,0,0,,		由美さんを紹介したかったんだけど
Dialogue: 0,0:46:15.63,0:46:18.27,DefaultSingle-J,,0,0,0,,		やっぱりまだ認めてくれてないのかも
Dialogue: 0,0:46:19.25,0:46:21.38,DefaultSingle-J,,0,0,0,,		将祺のタイトルすべてとったら
Dialogue: 0,0:46:21.60,0:46:24.23,DefaultSingle-J,,0,0,0,,		プロポーズしたい人がいるって母に言っちゃったから
Dialogue: 0,0:46:24.23,0:46:27.39,DefaultSingle-J,,0,0,0,,		そんなタイトルの1つや2つ　どーでもいいでしょ
Dialogue: 0,0:46:28.35,0:46:31.43,DefaultSingle-J,,0,0,0,,		あんたはもう一番いいタイトルを手に入れてるんだから
Dialogue: 0,0:46:31.77,0:46:34.39,DefaultSingle-J,,0,0,0,,		この宮本由美様ってタイトルをね
Dialogue: 0,0:46:36.96,0:46:37.72,DefaultSingle-J,,0,0,0,,		由美さん
Dialogue: 0,0:46:40.32,0:46:42.38,DefaultSingle-J,,0,0,0,,		って　由美タン　酔ってない
Dialogue: 0,0:46:42.38,0:46:43.89,DefaultSingle-J,,0,0,0,,		じぇ一んじぇーん
Dialogue: 0,0:46:44.74,0:46:46.78,DefaultSingle-J,,0,0,0,,	{\pos(416,1064)}	ほら　店戻るわよ
Dialogue: 0,0:46:45.16,0:46:46.77,DefaultSingle-J,,0,0,0,,		危ないよ　由美タン
Dialogue: 0,0:46:48.45,0:46:50.31,DefaultSingle-J,,0,0,0,,		どこか痛みはありますか
Dialogue: 0,0:46:50.51,0:46:51.66,DefaultSingle-J,,0,0,0,,		いえ　大丈夫です
Dialogue: 0,0:46:50.28,0:46:51.66,DefaultSingle-J,,0,0,0,,	{\a6\fscx90\fscy90}	蘭　どこだ
Dialogue: 0,0:46:52.09,0:46:52.70,DefaultSingle-J,,0,0,0,,		蘭
Dialogue: 0,0:46:54.85,0:46:55.33,DefaultSingle-J,,0,0,0,,		蘭
Dialogue: 0,0:46:57.01,0:46:58.92,DefaultSingle-J,,0,0,0,,		新...一
Dialogue: 0,0:46:58.92,0:47:01.12,DefaultSingle-J,,0,0,0,,		新一じゃねえ　俺だ
Dialogue: 0,0:47:01.70,0:47:02.86,DefaultSingle-J,,0,0,0,,		お父さん
Dialogue: 0,0:47:03.48,0:47:05.30,DefaultSingle-J,,0,0,0,,		あっ　コナン君と哀ちゃんは
Dialogue: 0,0:47:05.68,0:47:07.12,DefaultSingle-J,,0,0,0,,		まだ気を失ってる
Dialogue: 0,0:47:07.55,0:47:09.73,DefaultSingle-J,,0,0,0,,		俺はジョン社長の様子を見てくるから
Dialogue: 0,0:47:10.01,0:47:11.07,DefaultSingle-J,,0,0,0,,		起こしといてくれ
Dialogue: 0,0:47:13.04,0:47:15.08,DefaultSingle-J,,0,0,0,,		コナン君　コナン君
Dialogue: 0,0:47:16.41,0:47:17.22,DefaultSingle-J,,0,0,0,,		ハッ　蘭
Dialogue: 0,0:47:18.15,0:47:20.54,DefaultSingle-J,,0,0,0,,		...姉ちゃん　大丈夫
Dialogue: 0,0:47:20.54,0:47:22.70,DefaultSingle-J,,0,0,0,,		うん　なんともないみたい
Dialogue: 0,0:47:22.70,0:47:23.51,DefaultSingle-J,,0,0,0,,		コナン君は
Dialogue: 0,0:47:23.51,0:47:24.08,DefaultSingle-J,,0,0,0,,		いない
Dialogue: 0,0:47:24.73,0:47:26.15,DefaultSingle-J,,0,0,0,,		ジョン社長がいねえ
Dialogue: 0,0:47:26.39,0:47:28.62,DefaultSingle-J,,0,0,0,,		えっ　わたし達より先に起きて
Dialogue: 0,0:47:28.62,0:47:30.41,DefaultSingle-J,,0,0,0,,		問診受けてるとかじゃないの
Dialogue: 0,0:47:30.41,0:47:30.91,DefaultSingle-J,,0,0,0,,		わからん
Dialogue: 0,0:47:30.91,0:47:33.53,DefaultSingle-J,,0,0,0,,		よし　ジョンさんに仕掛けた発信器は生きてる
Dialogue: 0,0:47:33.85,0:47:35.50,DefaultSingle-J,,0,0,0,,		蘭姉ちゃん　灰原をお願い
Dialogue: 0,0:47:35.69,0:47:36.56,DefaultSingle-J,,0,0,0,,		どこ行くの
Dialogue: 0,0:47:36.56,0:47:37.08,DefaultSingle-J,,0,0,0,,		トイレ
Dialogue: 0,0:47:51.50,0:47:52.97,DefaultSingle-J,,0,0,0,,		ボウヤ　何があった
Dialogue: 0,0:47:53.22,0:47:55.46,DefaultSingle-J,,0,0,0,,		ちょっと病院でトラブルに巻き込まれちゃって
Dialogue: 0,0:47:56.09,0:47:57.04,DefaultSingle-J,,0,0,0,,		無事ならいい
Dialogue: 0,0:47:57.28,0:47:59.23,DefaultSingle-J,,0,0,0,,		でもジョンさんが誘拐されてしまった
Dialogue: 0,0:47:59.23,0:47:59.73,DefaultSingle-J,,0,0,0,,		何
Dialogue: 0,0:48:00.14,0:48:01.82,DefaultSingle-J,,0,0,0,,		発信器の信号をたどると
Dialogue: 0,0:48:02.08,0:48:02.86,DefaultSingle-J,,0,0,0,,		ジョンさんは今
Dialogue: 0,0:48:03.13,0:48:05.23,DefaultSingle-J,,0,0,0,,		空港からの一本道を抜けて
Dialogue: 0,0:48:05.23,0:48:07.46,DefaultSingle-J,,0,0,0,,		おそらくトリトン大橋を東へ
Dialogue: 0,0:48:07.63,0:48:08.12,DefaultSingle-J,,0,0,0,,		追える
Dialogue: 0,0:48:08.33,0:48:08.94,DefaultSingle-J,,0,0,0,,		ああ
Dialogue: 0,0:48:09.86,0:48:11.12,DefaultSingle-J,,0,0,0,,		あ　ノイズ
Dialogue: 0,0:48:14.37,0:48:16.12,DefaultSingle-J,,0,0,0,,		こっからどっちに向かったんだ
Dialogue: 0,0:48:19.92,0:48:21.41,DefaultSingle-J,,0,0,0,,		今の赤い車を追え
Dialogue: 0,0:48:22.29,0:48:23.03,DefaultSingle-J,,0,0,0,,		なんで
Dialogue: 0,0:48:23.33,0:48:24.35,DefaultSingle-J,,0,0,0,,		いいから早く
Dialogue: 0,0:48:37.02,0:48:39.84,DefaultSingle-J,,0,0,0,,		あのバイクにメット　まさかな
Dialogue: 0,0:48:46.93,0:48:48.03,DefaultSingle-J,,0,0,0,,		あれ誰なんだよ
Dialogue: 0,0:48:48.03,0:48:49.54,DefaultSingle-J,,0,0,0,,		いいから離されるな
Dialogue: 0,0:48:50.94,0:48:51.95,DefaultSingle-J,,0,0,0,,		分かってる
Dialogue: 0,0:48:59.12,0:49:00.86,DefaultSingle-J,,0,0,0,,		こんな時に故障かよ
Dialogue: 0,0:49:01.77,0:49:02.48,DefaultSingle-J,,0,0,0,,		危ない
Dialogue: 0,0:49:11.46,0:49:11.89,DefaultSingle-J,,0,0,0,,		クソ
Dialogue: 0,0:49:14.80,0:49:16.14,DefaultSingle-J,,0,0,0,,		あっぶねえ
Dialogue: 0,0:49:17.70,0:49:18.35,DefaultSingle-J,,0,0,0,,		灰原
Dialogue: 0,0:49:18.75,0:49:19.81,DefaultSingle-J,,0,0,0,,		起きてっか　灰原
Dialogue: 0,0:49:20.13,0:49:22.62,DefaultSingle-J,,0,0,0,,		起こされたわよ　蘭姉ちゃんに
Dialogue: 0,0:49:22.96,0:49:24.61,DefaultSingle-J,,0,0,0,,		無事でよかった　実は
Dialogue: 0,0:49:24.61,0:49:27.01,DefaultSingle-J,,0,0,0,,		ちょっと待って　移動するから
Dialogue: 0,0:49:27.01,0:49:30.19,DefaultSingle-J,,0,0,0,,		ダメだ　ジョンさんの携帯　電源入ってねえ
Dialogue: 0,0:49:30.54,0:49:31.53,DefaultSingle-J,,0,0,0,,		今どこ
Dialogue: 0,0:49:31.90,0:49:33.81,DefaultSingle-J,,0,0,0,,		オレのメガネが壊れちまったんだ
Dialogue: 0,0:49:34.21,0:49:37.56,DefaultSingle-J,,0,0,0,,		さっきクエンチで倒れた時にでも壊れたんじゃないの
Dialogue: 0,0:49:35.54,0:49:37.00,DefaultSingle-J,,0,0,0,,	{\a6\fscx90\fscy90}	クエンチ？もしかして
Dialogue: 0,0:49:37.56,0:49:39.96,DefaultSingle-J,,0,0,0,,		で　至急　ジョンさんの位置を確認してくれ
Dialogue: 0,0:49:40.23,0:49:41.54,DefaultSingle-J,,0,0,0,,		位置ってねえ
Dialogue: 0,0:49:41.77,0:49:44.90,DefaultSingle-J,,0,0,0,,		なんで私が予備のメガネ持ってきてんの知ってんのよ
Dialogue: 0,0:49:45.15,0:49:47.45,DefaultSingle-J,,0,0,0,,		だってお前　用意いいだろ
Dialogue: 0,0:49:49.47,0:49:50.64,DefaultSingle-J,,0,0,0,,		ちょっと待ってなさい
Dialogue: 0,0:49:51.21,0:49:52.28,DefaultSingle-J,,0,0,0,,		頼む　灰原
Dialogue: 0,0:49:53.86,0:49:55.75,DefaultSingle-J,,0,0,0,,		さっきの爆発は何なんですか
Dialogue: 0,0:49:55.75,0:49:56.73,DefaultSingle-J,,0,0,0,,		落ち着いてください
Dialogue: 0,0:49:56.73,0:49:57.46,DefaultSingle-J,,0,0,0,,		すみません
Dialogue: 0,0:49:57.96,0:49:59.43,DefaultSingle-J,,0,0,0,,		クエンチが起きた可能性がある
Dialogue: 0,0:49:59.68,0:50:01.52,DefaultSingle-J,,0,0,0,,		すぐMRI技師を呼んでください
Dialogue: 0,0:50:01.76,0:50:02.68,DefaultSingle-J,,0,0,0,,		は　はい
Dialogue: 0,0:50:04.16,0:50:07.86,DefaultSingle-J,,0,0,0,,	{\a6\fscx90\fscy90}	MRI技師の高橋さん　MRI技師の高橋さん...
Dialogue: 0,0:50:05.72,0:50:07.49,DefaultSingle-J,,0,0,0,,		ジョンさんは本島へ入って
Dialogue: 0,0:50:07.79,0:50:09.86,DefaultSingle-J,,0,0,0,,		東海インター辺りから南下してるわ
Dialogue: 0,0:50:10.24,0:50:12.19,DefaultSingle-J,,0,0,0,,		この速さは車かバイクね
Dialogue: 0,0:50:12.19,0:50:13.80,DefaultSingle-J,,0,0,0,,		MRI室だ　急げ
Dialogue: 0,0:50:20.22,0:50:21.91,DefaultSingle-J,,0,0,0,,		昴さん　ジョンさんは今...
Dialogue: 0,0:50:21.91,0:50:24.49,DefaultSingle-J,,0,0,0,,		聞こえた　東海コンビナートだな
Dialogue: 0,0:50:28.41,0:50:29.38,DefaultSingle-J,,0,0,0,,		見つけた
Dialogue: 0,0:50:35.04,0:50:36.34,DefaultSingle-J,,0,0,0,,		灰原　ジョンさんは
Dialogue: 0,0:50:37.48,0:50:40.14,DefaultSingle-J,,0,0,0,,		今は　東海コンビナート辺りで止まってる
Dialogue: 0,0:50:40.88,0:50:43.16,DefaultSingle-J,,0,0,0,,		私これから　MRI室に入るから
Dialogue: 0,0:50:43.62,0:50:47.23,DefaultSingle-J,,0,0,0,,		内部の磁気で　メガネなんかの電子機器に異常が出るかも
Dialogue: 0,0:50:47.73,0:50:50.81,DefaultSingle-J,,0,0,0,,		まっ　クエンチ起こしてるなら　大丈夫だと思うけど
Dialogue: 0,0:50:51.02,0:50:53.03,DefaultSingle-J,,0,0,0,,		だからクエンチって　何なんだよ
Dialogue: 0,0:50:53.55,0:50:55.61,DefaultSingle-J,,0,0,0,,		あら　さすがの名探偵さんも
Dialogue: 0,0:50:55.61,0:50:56.94,DefaultSingle-J,,0,0,0,,		クエンチは知らないのね
Dialogue: 0,0:50:57.22,0:50:58.13,DefaultSingle-J,,0,0,0,,		悪かったな
Dialogue: 0,0:50:58.68,0:51:00.16,DefaultSingle-J,,0,0,0,,		じゃ　教えてあげる
Dialogue: 0,0:51:00.70,0:51:03.93,DefaultSingle-J,,0,0,0,,		MRIにはね　超電導磁石が使われてるの
Dialogue: 0,0:51:04.34,0:51:06.10,DefaultSingle-J,,0,0,0,,		その温度を低く保つために
Dialogue: 0,0:51:06.10,0:51:07.90,DefaultSingle-J,,0,0,0,,		液体ヘリウムが使われている
Dialogue: 0,0:51:08.59,0:51:11.20,DefaultSingle-J,,0,0,0,,		でも　この温度がなんらかの原因で上がると
Dialogue: 0,0:51:11.47,0:51:12.92,DefaultSingle-J,,0,0,0,,		爆発的に気化する
Dialogue: 0,0:51:13.59,0:51:14.84,DefaultSingle-J,,0,0,0,,		それがクエンチか
Dialogue: 0,0:51:15.21,0:51:15.66,DefaultSingle-J,,0,0,0,,		そう
Dialogue: 0,0:51:16.59,0:51:17.80,DefaultSingle-J,,0,0,0,,		クエンチが起こると
Dialogue: 0,0:51:17.80,0:51:20.60,DefaultSingle-J,,0,0,0,,		ヘリウムガスが酸素濃度を急激に下げるから
Dialogue: 0,0:51:20.93,0:51:22.64,DefaultSingle-J,,0,0,0,,		数分で命に関わるわ
Dialogue: 0,0:51:23.45,0:51:26.87,DefaultSingle-J,,0,0,0,,		でも　そうならないための安全装置があるはずなのに
Dialogue: 0,0:51:27.37,0:51:28.11,DefaultSingle-J,,0,0,0,,		なんで
Dialogue: 0,0:51:28.80,0:51:31.57,DefaultSingle-J,,0,0,0,,		MRIに対応していない材質の点滴スタンドだ
Dialogue: 0,0:51:32.17,0:51:34.66,DefaultSingle-J,,0,0,0,,		しかも　緊急停止ボタンが押されています
Dialogue: 0,0:51:34.81,0:51:35.95,DefaultSingle-J,,0,0,0,,		どういうことですか
Dialogue: 0,0:51:36.23,0:51:39.61,DefaultSingle-J,,0,0,0,,		こういった物が　MRIの超電導磁石にくっつき
Dialogue: 0,0:51:39.89,0:51:42.39,DefaultSingle-J,,0,0,0,,		誰かがあわてて緊急停止ボタンを押したため
Dialogue: 0,0:51:42.77,0:51:44.45,DefaultSingle-J,,0,0,0,,		クエンチを起こしたんだと思います
Dialogue: 0,0:51:44.64,0:51:47.33,DefaultSingle-J,,0,0,0,,		でも普通　緊急停止ボタンを押すと
Dialogue: 0,0:51:47.33,0:51:50.18,DefaultSingle-J,,0,0,0,,		病院内の配管はすべて閉じるはずでしょ
Dialogue: 0,0:51:51.43,0:51:52.13,DefaultSingle-J,,0,0,0,,		そうだ
Dialogue: 0,0:51:52.81,0:51:55.93,DefaultSingle-J,,0,0,0,,		煙が出たら　院内の配管は閉じて
Dialogue: 0,0:51:55.93,0:51:58.25,DefaultSingle-J,,0,0,0,,		外へつながる配管だけが開くはずだ
Dialogue: 0,0:51:58.83,0:52:00.66,DefaultSingle-J,,0,0,0,,		それなのに　どうして
Dialogue: 0,0:52:04.23,0:52:04.89,DefaultSingle-J,,0,0,0,,		どちらへ
Dialogue: 0,0:52:04.89,0:52:06.48,DefaultSingle-J,,0,0,0,,		制御室のほうへ来てください
Dialogue: 0,0:52:09.19,0:52:11.84,DefaultSingle-J,,0,0,0,,		2階フロアへつながる配管を開きっぱなしにし
Dialogue: 0,0:52:12.06,0:52:15.27,DefaultSingle-J,,0,0,0,,		代わりに　排気設備がフル稼働するように設定されています
Dialogue: 0,0:52:15.90,0:52:16.64,DefaultSingle-J,,0,0,0,,		聞こえた
Dialogue: 0,0:52:16.90,0:52:20.20,DefaultSingle-J,,0,0,0,,		だから2階だけに充満した煙がすぐに排出され
Dialogue: 0,0:52:20.39,0:52:22.91,DefaultSingle-J,,0,0,0,,		私達は酸欠にならずに済んだみたいね
Dialogue: 0,0:52:23.93,0:52:25.78,DefaultSingle-J,,0,0,0,,		犯人がわざとそうしたのか
Dialogue: 0,0:52:25.78,0:52:26.79,DefaultSingle-J,,0,0,0,,		でしょうね
Dialogue: 0,0:52:27.56,0:52:30.42,DefaultSingle-J,,0,0,0,,		だとしたらこの犯人　人を殺す意思がない
Dialogue: 0,0:52:30.71,0:52:31.47,DefaultSingle-J,,0,0,0,,		そうか
Dialogue: 0,0:52:32.00,0:52:35.57,DefaultSingle-J,,0,0,0,,		だから拉致したターグットを　すぐ見つかる場所に放置した
Dialogue: 0,0:52:38.18,0:52:39.64,DefaultSingle-J,,0,0,0,,		東海コンビナートに着いた
Dialogue: 0,0:52:41.68,0:52:43.36,DefaultSingle-J,,0,0,0,,		ターゲットはどこにいる
Dialogue: 0,0:52:43.71,0:52:44.68,DefaultSingle-J,,0,0,0,,		もう近くだよ
Dialogue: 0,0:52:44.90,0:52:46.14,DefaultSingle-J,,0,0,0,,		ジョンさんに動きはない
Dialogue: 0,0:53:16.89,0:53:18.05,DefaultSingle-J,,0,0,0,,		またあのバイク
Dialogue: 0,0:53:47.59,0:53:48.71,DefaultSingle-J,,0,0,0,,		この感触は
Dialogue: 0,0:53:49.50,0:53:50.41,DefaultSingle-J,,0,0,0,,		ジークンドー
Dialogue: 0,0:53:51.31,0:53:52.30,DefaultSingle-J,,0,0,0,,		何者だ
Dialogue: 0,0:54:04.00,0:54:05.48,DefaultSingle-J,,0,0,0,,		つ　強い
Dialogue: 0,0:54:05.85,0:54:07.68,DefaultSingle-J,,0,0,0,,		このままじゃ　やられる
Dialogue: 0,0:54:13.19,0:54:14.24,DefaultSingle-J,,0,0,0,,		この子供
Dialogue: 0,0:54:14.77,0:54:15.59,DefaultSingle-J,,0,0,0,,		まさか
Dialogue: 0,0:54:20.99,0:54:22.27,DefaultSingle-J,,0,0,0,,		やはり真純か
Dialogue: 0,0:54:28.64,0:54:30.65,DefaultSingle-J,,0,0,0,,		昴さん　どこにいるんだ
Dialogue: 0,0:54:32.46,0:54:33.90,DefaultSingle-J,,0,0,0,,		それって変装だよね
Dialogue: 0,0:54:35.10,0:54:36.84,DefaultSingle-J,,0,0,0,,		あんた一体何者なんだ
Dialogue: 0,0:54:37.06,0:54:38.50,DefaultSingle-J,,0,0,0,,		世良の姉ちゃん
Dialogue: 0,0:54:38.89,0:54:39.74,DefaultSingle-J,,0,0,0,,		コナン君
Dialogue: 0,0:54:40.05,0:54:41.31,DefaultSingle-J,,0,0,0,,		なんでここにいるの
Dialogue: 0,0:54:42.02,0:54:44.14,DefaultSingle-J,,0,0,0,,		ああ　ちょっと　さがしてる人がいてね
Dialogue: 0,0:54:44.38,0:54:46.09,DefaultSingle-J,,0,0,0,,		わざわざこんな工場まで
Dialogue: 0,0:54:46.55,0:54:48.29,DefaultSingle-J,,0,0,0,,		こっちにも事情があるんだよ
Dialogue: 0,0:54:57.99,0:55:00.83,DefaultSingle-J,,0,0,0,,		私は今　あの子に会うわけにはいかない
Dialogue: 0,0:55:01.65,0:55:03.22,DefaultSingle-J,,0,0,0,,		分かったよ　ママ
Dialogue: 0,0:55:03.48,0:55:04.32,DefaultSingle-J,,0,0,0,,		世良の姉ちゃん
Dialogue: 0,0:55:05.20,0:55:07.75,DefaultSingle-J,,0,0,0,,		さがしてる人って　もしかしてジョンさん
Dialogue: 0,0:55:09.40,0:55:11.49,DefaultSingle-J,,0,0,0,,		やっぱり君はするどいな
Dialogue: 0,0:55:12.62,0:55:13.38,DefaultSingle-J,,0,0,0,,		そうだよ
Dialogue: 0,0:55:13.56,0:55:15.27,DefaultSingle-J,,0,0,0,,		ジョンさんの居場所なら分かるよ
Dialogue: 0,0:55:15.86,0:55:16.89,DefaultSingle-J,,0,0,0,,		ボクについてきて
Dialogue: 0,0:55:16.89,0:55:17.80,DefaultSingle-J,,0,0,0,,		あっ　ちょっと
Dialogue: 0,0:55:21.30,0:55:23.09,DefaultSingle-J,,0,0,0,,		世良の姉ちゃんはなんでここに
Dialogue: 0,0:55:24.14,0:55:25.51,DefaultSingle-J,,0,0,0,,		病院のロビーで見たんだ
Dialogue: 0,0:55:28.35,0:55:29.43,DefaultSingle-J,,0,0,0,,		何が起こったんだ
Dialogue: 0,0:55:32.76,0:55:33.84,DefaultSingle-J,,0,0,0,,		そのカートは
Dialogue: 0,0:55:33.97,0:55:35.81,DefaultSingle-J,,0,0,0,,		爆発でパニックになってる中を
Dialogue: 0,0:55:35.81,0:55:37.12,DefaultSingle-J,,0,0,0,,		平然と走ってた
Dialogue: 0,0:55:37.12,0:55:38.89,DefaultSingle-J,,0,0,0,,		運転してた人の顔は
Dialogue: 0,0:55:38.89,0:55:40.41,DefaultSingle-J,,0,0,0,,		一瞬で見えなかったけど
Dialogue: 0,0:55:40.41,0:55:41.98,DefaultSingle-J,,0,0,0,,		体格から見て男だった
Dialogue: 0,0:55:42.48,0:55:43.71,DefaultSingle-J,,0,0,0,,		犯人は男
Dialogue: 0,0:55:44.43,0:55:45.01,DefaultSingle-J,,0,0,0,,		そこよ
Dialogue: 0,0:55:45.64,0:55:47.24,DefaultSingle-J,,0,0,0,,		ジョンさんの発信器は　その辺
Dialogue: 0,0:55:51.65,0:55:53.53,DefaultSingle-J,,0,0,0,,		この辺りにジョン・ボイドがいるのか
Dialogue: 0,0:55:53.92,0:55:57.33,DefaultSingle-J,,0,0,0,,		犯人は拉致した人をすぐ見つかる場所に放置していた
Dialogue: 0,0:55:57.93,0:55:59.82,DefaultSingle-J,,0,0,0,,		今回もその可能性はあるわね
Dialogue: 0,0:56:00.43,0:56:02.21,DefaultSingle-J,,0,0,0,,		ジョンさんの携帯を鳴らしてみる
Dialogue: 0,0:56:02.55,0:56:04.06,DefaultSingle-J,,0,0,0,,		番号を知ってるのか
Dialogue: 0,0:56:04.61,0:56:05.25,DefaultSingle-J,,0,0,0,,		まあね
Dialogue: 0,0:56:05.66,0:56:09.09,DefaultSingle-J,,0,0,0,,		そういえば　ジョンさんの携帯　今電源入ってないみたいよ
Dialogue: 0,0:56:09.63,0:56:13.12,DefaultSingle-J,,0,0,0,,		いや　犯人がオレが思ってるようなヤツだったら
Dialogue: 0,0:56:16.03,0:56:16.85,DefaultSingle-J,,0,0,0,,		聞こえる
Dialogue: 0,0:56:17.47,0:56:18.14,DefaultSingle-J,,0,0,0,,		どこだ
Dialogue: 0,0:56:23.30,0:56:23.90,DefaultSingle-J,,0,0,0,,		分かった
Dialogue: 0,0:56:24.40,0:56:25.28,DefaultSingle-J,,0,0,0,,		上からだ
Dialogue: 0,0:56:26.15,0:56:26.73,DefaultSingle-J,,0,0,0,,		よし
Dialogue: 0,0:56:32.38,0:56:33.25,DefaultSingle-J,,0,0,0,,		見つけた
Dialogue: 0,0:56:33.50,0:56:35.38,DefaultSingle-J,,0,0,0,,		なんでこんな人目につく所に
Dialogue: 0,0:56:36.02,0:56:36.75,DefaultSingle-J,,0,0,0,,		それは
Dialogue: 0,0:56:37.47,0:56:40.50,DefaultSingle-J,,0,0,0,,		犯人がジョンさんを殺すつもりがないからだよ
Dialogue: 0,0:56:41.53,0:56:43.84,DefaultSingle-J,,0,0,0,,		いっただっきま～す
Dialogue: 0,0:56:44.35,0:56:46.70,DefaultSingle-J,,0,0,0,,		うめえ
Dialogue: 0,0:56:47.30,0:56:50.28,DefaultSingle-J,,0,0,0,,		やっぱ名古屋来たら　ひつまぶし食わなきゃな
Dialogue: 0,0:56:50.28,0:56:51.66,DefaultSingle-J,,0,0,0,,		お父さん　お父さん
Dialogue: 0,0:56:51.66,0:56:55.14,DefaultSingle-J,,0,0,0,,		新一から今連絡が来て　ジョンさん見つかったって
Dialogue: 0,0:56:55.45,0:56:59.35,DefaultSingle-J,,0,0,0,,		あぁ？　なんであの探偵ボウズがそんな電話してくんだよ
Dialogue: 0,0:56:59.35,0:57:01.58,DefaultSingle-J,,0,0,0,,		いいから早く係の人に知らせて
Dialogue: 0,0:57:04.14,0:57:07.21,DefaultSingle-J,,0,0,0,,		そのひつまぶし　俺のだから見張っとけよ
Dialogue: 0,0:57:07.39,0:57:08.43,DefaultSingle-J,,0,0,0,,		はいはい
Dialogue: 0,0:57:09.12,0:57:10.54,DefaultSingle-J,,0,0,0,,		ありがとね　新一
Dialogue: 0,0:57:10.75,0:57:12.31,DefaultSingle-J,,0,0,0,,		うん　こっちは大丈夫
Dialogue: 0,0:57:12.61,0:57:15.86,DefaultSingle-J,,0,0,0,,		ったく　こっちにも連絡よこせっつーの
Dialogue: 0,0:57:19.98,0:57:23.13,DefaultSingle-J,,0,0,0,,		ジョンさん　誘拐された時のこと何か覚えてる
Dialogue: 0,0:57:23.52,0:57:27.34,DefaultSingle-J,,0,0,0,,		あの時は　突然白い煙に包まれて
Dialogue: 0,0:57:27.57,0:57:29.14,DefaultSingle-J,,0,0,0,,		息苦しくなって
Dialogue: 0,0:57:29.35,0:57:30.00,DefaultSingle-J,,0,0,0,,		ただ
Dialogue: 0,0:57:30.62,0:57:33.72,DefaultSingle-J,,0,0,0,,		一度目が覚めた時　車の中にいて
Dialogue: 0,0:57:34.10,0:57:36.73,DefaultSingle-J,,0,0,0,,		隣に誰かが乗っていたような
Dialogue: 0,0:57:37.53,0:57:38.81,DefaultSingle-J,,0,0,0,,		それって犯人
Dialogue: 0,0:57:39.30,0:57:40.27,DefaultSingle-J,,0,0,0,,		分からない
Dialogue: 0,0:57:40.68,0:57:41.81,DefaultSingle-J,,0,0,0,,		男か女かは
Dialogue: 0,0:57:43.62,0:57:44.69,DefaultSingle-J,,0,0,0,,		分からない
Dialogue: 0,0:57:46.69,0:57:48.62,DefaultSingle-J,,0,0,0,,		じゃあリニア乗れないの
Dialogue: 0,0:57:48.62,0:57:49.73,DefaultSingle-J,,0,0,0,,		どうして
Dialogue: 0,0:57:49.73,0:57:51.84,DefaultSingle-J,,0,0,0,,		検査の結果異常なしだったのに
Dialogue: 0,0:57:51.84,0:57:55.68,DefaultSingle-J,,0,0,0,,		うん　でもね　またさっきみたいなことが起きたら大変だから
Dialogue: 0,0:57:52.61,0:57:54.39,DefaultSingle-J,,0,0,0,,	{\a6\fscx90\fscy90}	ああ　うまかった
Dialogue: 0,0:57:54.39,0:57:55.68,DefaultSingle-J,,0,0,0,,	{\a6\fscx90\fscy90}	おいしかったね
Dialogue: 0,0:57:55.68,0:57:59.75,DefaultSingle-J,,0,0,0,,		新幹線で東京へ戻ったほうがいいっていうことになったのよ
Dialogue: 0,0:58:00.79,0:58:02.49,DefaultSingle-J,,0,0,0,,		エリーさんが困っている
Dialogue: 0,0:58:02.49,0:58:04.42,DefaultSingle-J,,0,0,0,,		ここは俺がガツンと
Dialogue: 0,0:58:02.78,0:58:04.41,DefaultSingle-J,,0,0,0,,	{\a6\fscx90\fscy90}	エリーさん　井上さん
Dialogue: 0,0:58:04.65,0:58:06.87,DefaultSingle-J,,0,0,0,,		こっちにアラン会長来てませんか
Dialogue: 0,0:58:07.06,0:58:08.90,DefaultSingle-J,,0,0,0,,		僕は見てないですね
Dialogue: 0,0:58:09.08,0:58:09.76,DefaultSingle-J,,0,0,0,,		私も
Dialogue: 0,0:58:10.38,0:58:12.73,DefaultSingle-J,,0,0,0,,		病院も会議室もさがしたんですが
Dialogue: 0,0:58:12.73,0:58:15.01,DefaultSingle-J,,0,0,0,,		どこにもアラン会長がいないの
Dialogue: 0,0:58:17.32,0:58:19.26,DefaultSingle-J,,0,0,0,,		110番通報した方ですね
Dialogue: 0,0:58:19.50,0:58:21.17,DefaultSingle-J,,0,0,0,,		そうだけど　遅いよ
Dialogue: 0,0:58:21.17,0:58:22.25,DefaultSingle-J,,0,0,0,,		すみません
Dialogue: 0,0:58:22.54,0:58:23.99,DefaultSingle-J,,0,0,0,,		空港で爆発があって
Dialogue: 0,0:58:23.99,0:58:27.24,DefaultSingle-J,,0,0,0,,		名古屋市内の警察の多くが　そちらに取られてしまって
Dialogue: 0,0:58:28.04,0:58:30.40,DefaultSingle-J,,0,0,0,,		とにかく　この人を早く病院へ
Dialogue: 0,0:58:32.02,0:58:34.58,DefaultSingle-J,,0,0,0,,		君達が助けてくれてほんとによかった
Dialogue: 0,0:58:34.83,0:58:35.66,DefaultSingle-J,,0,0,0,,		ありがとう
Dialogue: 0,0:58:36.25,0:58:37.41,DefaultSingle-J,,0,0,0,,		どういたしまして
Dialogue: 0,0:58:37.41,0:58:39.20,DefaultSingle-J,,0,0,0,,		お大事にね　ジョンさん
Dialogue: 0,0:58:41.52,0:58:43.95,DefaultSingle-J,,0,0,0,,		これで任務完了っと
Dialogue: 0,0:58:47.29,0:58:49.74,DefaultSingle-J,,0,0,0,,		イギリスの要人は守れたか
Dialogue: 0,0:58:51.70,0:58:53.51,DefaultSingle-J,,0,0,0,,		よくやった　真純
Dialogue: 0,0:58:54.39,0:58:56.80,DefaultSingle-J,,0,0,0,,		私達　新幹線で帰ることになったわ
Dialogue: 0,0:58:57.03,0:58:59.18,DefaultSingle-J,,0,0,0,,		えっ　リニアは走らないのか
Dialogue: 0,0:58:59.49,0:59:03.43,DefaultSingle-J,,0,0,0,,		一応　開会式に間に合うように　駅から発車するみたい
Dialogue: 0,0:59:03.90,0:59:05.05,DefaultSingle-J,,0,0,0,,		誰も乗せずにね
Dialogue: 0,0:59:05.55,0:59:06.80,DefaultSingle-J,,0,0,0,,		誰も乗せずに？
Dialogue: 0,0:59:07.16,0:59:08.98,DefaultSingle-J,,0,0,0,,		リニアは無人運行だから
Dialogue: 0,0:59:09.56,0:59:10.57,DefaultSingle-J,,0,0,0,,		そんなことより
Dialogue: 0,0:59:10.97,0:59:12.32,DefaultSingle-J,,0,0,0,,		アラン会長が消えたわ
Dialogue: 0,0:59:12.58,0:59:13.23,DefaultSingle-J,,0,0,0,,		えっ
Dialogue: 0,0:59:13.75,0:59:17.32,DefaultSingle-J,,0,0,0,,		さっきジョンさんが言ってた　車の中にいたもう1人って
Dialogue: 0,0:59:17.74,0:59:19.46,DefaultSingle-J,,0,0,0,,		アラン会長のことかもね
Dialogue: 0,0:59:22.59,0:59:24.50,DefaultSingle-J,,0,0,0,,		ちょっと待ってて　電話してくる
Dialogue: 0,0:59:24.69,0:59:25.76,DefaultSingle-J,,0,0,0,,		あ　うん
Dialogue: 0,0:59:26.98,0:59:29.25,DefaultSingle-J,,0,0,0,,		犯人の車を見つけたぞ　ボウヤ
Dialogue: 0,0:59:29.75,0:59:31.40,DefaultSingle-J,,0,0,0,,		空港の駐車場だ
Dialogue: 0,0:59:31.99,0:59:33.40,DefaultSingle-J,,0,0,0,,		しかし分かったのは
Dialogue: 0,0:59:33.40,0:59:36.51,DefaultSingle-J,,0,0,0,,		運転手がおそらく男ということだけ
Dialogue: 0,0:59:36.92,0:59:39.24,DefaultSingle-J,,0,0,0,,		犯人はやっぱり男
Dialogue: 0,0:59:42.92,0:59:45.24,DefaultSingle-J,,0,0,0,,		その当時のFBI長官を調べたら
Dialogue: 0,0:59:45.79,0:59:48.31,DefaultSingle-J,,0,0,0,,		ニッポンのみなさん　コンニチハ
Dialogue: 0,0:59:48.94,0:59:50.85,DefaultSingle-J,,0,0,0,,		石原が冤罪だった可能性は
Dialogue: 0,1:00:00.54,1:00:01.37,DefaultSingle-J,,0,0,0,,		赤井さん
Dialogue: 0,1:00:01.87,1:00:03.20,DefaultSingle-J,,0,0,0,,		万一の時が
Dialogue: 0,1:00:04.90,1:00:06.27,DefaultSingle-J,,0,0,0,,		来てしまったみたいだ
Dialogue: 0,1:00:07.39,1:00:09.50,DefaultSingle-J,,0,0,0,,		今すぐ新名古屋駅に向かって
Dialogue: 0,1:00:13.02,1:00:13.46,DefaultSingle-J,,0,0,0,,		ああ
Dialogue: 0,1:00:17.71,1:00:18.95,DefaultSingle-J,,0,0,0,,		了解した
Dialogue: 0,1:00:24.58,1:00:26.82,DefaultSingle-J,,0,0,0,,		世良の姉ちゃん　新名古屋駅だ
Dialogue: 0,1:00:26.82,1:00:27.25,DefaultSingle-J,,0,0,0,,		えっ
Dialogue: 0,1:00:27.46,1:00:28.08,DefaultSingle-J,,0,0,0,,		早く
Dialogue: 0,1:00:28.08,1:00:29.14,DefaultSingle-J,,0,0,0,,		どうした
Dialogue: 0,1:00:29.38,1:00:31.31,DefaultSingle-J,,0,0,0,,		犯人がクエンチを起こしたせいで
Dialogue: 0,1:00:31.31,1:00:34.99,DefaultSingle-J,,0,0,0,,		管轄の警察官が　空港へ集中したって言ってたでしょ
Dialogue: 0,1:00:35.22,1:00:38.20,DefaultSingle-J,,0,0,0,,		そうか　駅の警備が手薄になるってことか
Dialogue: 0,1:00:38.45,1:00:38.87,DefaultSingle-J,,0,0,0,,		うん
Dialogue: 0,1:00:40.57,1:00:41.53,DefaultSingle-J,,0,0,0,,		15年前
Dialogue: 0,1:00:42.05,1:00:45.03,DefaultSingle-J,,0,0,0,,		3人目の被害者は　駅の中で撃ち殺された
Dialogue: 0,1:00:45.27,1:00:49.05,DefaultSingle-J,,0,0,0,,		だから今回も　新名古屋駅で拳銃を使って殺すというのか
Dialogue: 0,1:00:49.83,1:00:51.40,DefaultSingle-J,,0,0,0,,		いや　きっと
Dialogue: 0,1:00:51.72,1:00:53.67,DefaultSingle-J,,0,0,0,,		ジャパニーズブレットを使ってだ
Dialogue: 0,1:00:54.18,1:00:56.09,DefaultSingle-J,,0,0,0,,		っまり　決戦はリニア
Dialogue: 0,1:00:56.09,1:00:59.70,DefaultSingle-J,,0,0,0,,		うむ　赤井君は今新名古屋駅に向かっている
Dialogue: 0,1:00:59.92,1:01:01.10,DefaultSingle-J,,0,0,0,,		我々も急ごう
Dialogue: 0,1:01:01.10,1:01:01.60,DefaultSingle-J,,0,0,0,,		はい
Dialogue: 0,1:01:04.56,1:01:07.03,DefaultSingle-J,,0,0,0,,		ああ　由美タン　飲みすぎだよ
Dialogue: 0,1:01:07.26,1:01:10.63,DefaultSingle-J,,0,0,0,,		もう少しセーブしてくれないと　家族に会わせられない
Dialogue: 0,1:01:10.63,1:01:13.42,DefaultSingle-J,,0,0,0,,		家族なんて関係ないでしょ
Dialogue: 0,1:01:13.42,1:01:16.18,DefaultSingle-J,,0,0,0,,		どうせ私達結婚するんだから
Dialogue: 0,1:01:19.14,1:01:19.95,DefaultSingle-J,,0,0,0,,		うみゃい
Dialogue: 0,1:01:20.36,1:01:23.23,DefaultSingle-J,,0,0,0,,		じゃあ　僕のプロポーズ　受けてくれるんだね
Dialogue: 0,1:01:23.23,1:01:25.51,DefaultSingle-J,,0,0,0,,		もちのローン
Dialogue: 0,1:01:25.80,1:01:27.09,DefaultSingle-J,,0,0,0,,		由美タン
Dialogue: 0,1:01:27.09,1:01:29.34,DefaultSingle-J,,0,0,0,,		幸せにするからね
Dialogue: 1,1:01:33.16,1:01:35.57,DefaultSingle-J,,0,0,0,,		では我々も　東京に戻りましょう
Dialogue: 0,1:01:35.86,1:01:37.35,DefaultSingle-J,,0,0,0,,		僕についてきてください
Dialogue: 0,1:01:39.14,1:01:40.95,DefaultSingle-J,,0,0,0,,	{\a6\fscx90\fscy90}	リニア乗りたかったね
Dialogue: 0,1:01:41.97,1:01:43.18,DefaultSingle-J,,0,0,0,,		どうかされましたか
Dialogue: 0,1:01:43.50,1:01:45.39,DefaultSingle-J,,0,0,0,,		連れの子が見当たらなくて
Dialogue: 0,1:01:45.63,1:01:46.14,DefaultSingle-J,,0,0,0,,		蘭
Dialogue: 0,1:01:47.60,1:01:49.22,DefaultSingle-J,,0,0,0,,		アラン会長は見つかったか
Dialogue: 0,1:01:49.65,1:01:50.59,DefaultSingle-J,,0,0,0,,		たぶん　まだ
Dialogue: 0,1:01:50.86,1:01:53.35,DefaultSingle-J,,0,0,0,,		でも予定どおりリニアを走らせて
Dialogue: 0,1:01:53.35,1:01:55.21,DefaultSingle-J,,0,0,0,,		開会式もするんですって
Dialogue: 0,1:01:55.65,1:01:58.81,DefaultSingle-J,,0,0,0,,		それがWSG協会の決定なんです
Dialogue: 0,1:01:58.81,1:02:00.74,DefaultSingle-J,,0,0,0,,		くつがえることはないかと
Dialogue: 0,1:02:01.37,1:02:03.24,DefaultSingle-J,,0,0,0,,		ジョン社長の様子はどうでした
Dialogue: 0,1:02:03.45,1:02:05.03,DefaultSingle-J,,0,0,0,,		ああ　大丈夫のようです
Dialogue: 0,1:02:05.21,1:02:06.49,DefaultSingle-J,,0,0,0,,		ついてなくていいの
Dialogue: 0,1:02:06.75,1:02:09.73,DefaultSingle-J,,0,0,0,,		だからジョン社長にはSPがついてる
Dialogue: 0,1:02:10.04,1:02:12.38,DefaultSingle-J,,0,0,0,,		俺が依頼されたのは事件の捜査
Dialogue: 0,1:02:12.76,1:02:13.39,DefaultSingle-J,,0,0,0,,		行くぞ
Dialogue: 0,1:02:13.39,1:02:14.37,DefaultSingle-J,,0,0,0,,		あっ　待って
Dialogue: 0,1:02:14.65,1:02:16.50,DefaultSingle-J,,0,0,0,,		コナン君が戻ってこないの
Dialogue: 0,1:02:16.94,1:02:17.76,DefaultSingle-J,,0,0,0,,		電話は？
Dialogue: 0,1:02:17.76,1:02:20.59,DefaultSingle-J,,0,0,0,,		何度もしてるけど　つながらなくて
Dialogue: 0,1:02:20.59,1:02:21.45,DefaultSingle-J,,0,0,0,,		ああ
Dialogue: 0,1:02:22.20,1:02:25.76,DefaultSingle-J,,0,0,0,,		江戸川君なら　知り合いと一緒に帰るって言ってたわよ
Dialogue: 0,1:02:26.93,1:02:28.44,DefaultSingle-J,,0,0,0,,		はぁ？
Dialogue: 0,1:02:33.07,1:02:34.56,DefaultSingle-J,,0,0,0,,		当初の予定と変わり
Dialogue: 0,1:02:34.70,1:02:39.17,DefaultSingle-J,,0,0,0,,		世界初の真空超電導リニアに乗るお客さんはいなくなりましたが
Dialogue: 0,1:02:39.17,1:02:41.19,DefaultSingle-J,,0,0,0,,		それでも　これだけの人が
Dialogue: 0,1:02:41.19,1:02:43.51,DefaultSingle-J,,0,0,0,,		リニアを見ようと集まっています
Dialogue: 0,1:02:47.00,1:02:49.03,DefaultSingle-J,,0,0,0,,		さあ　いよいよです
