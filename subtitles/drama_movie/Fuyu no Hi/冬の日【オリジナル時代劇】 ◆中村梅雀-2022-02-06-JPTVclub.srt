420
00:43:57,220 --> 00:43:59,155
((清ちゃん))

421
00:43:59,155 --> 00:44:01,090
((ただの鼻血だ))

422
00:44:01,090 --> 00:44:03,092
((心配いらねえよ))

423
00:44:03,092 --> 00:44:06,229
