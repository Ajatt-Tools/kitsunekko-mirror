Dialogue: 0,0:00:02.50,0:00:07.75,Default#1,,0,0,0,,（魘夢(えんむ)）夢を見ながら\N死ねるなんて 幸せだよね
Dialogue: 0,0:00:08.80,0:00:12.47,Default#1,,0,0,0,,どんなに強い鬼狩りだって関係ない
Dialogue: 0,0:00:13.22,0:00:18.68,Default#1,,0,0,0,,人間の原動力は心だ　精神だ
Dialogue: 0,0:00:21.35,0:00:25.23,Default#1,,0,0,0,,精神の核を破壊すればいいんだよ
Dialogue: 0,0:00:25.73,0:00:27.65,Default#1,,0,0,0,,殺すのも簡単
Dialogue: 0,0:00:28.15,0:00:31.03,Default#1,,0,0,0,,人間の心なんて みんな同じ
Dialogue: 0,0:00:31.69,0:00:36.74,Default#1,,0,0,0,,ガラス細工みたいに\Nもろくて弱いんだから
Dialogue: 0,0:00:38.16,0:00:44.25,Default#1,,0,0,0,,落ちていく 落ちていく 夢の中へ
Dialogue: 0,0:00:54.01,0:00:55.84,Default#1,,0,0,0,,深い眠りだ
Dialogue: 0,0:00:57.26,0:01:01.77,Default#1,,0,0,0,,もう 目覚めることはできないよ
Dialogue: 0,0:01:03.23,0:01:05.23,Default#1,,0,0,0,,♪～
Dialogue: 0,0:02:30.73,0:02:32.73,Default#1,,0,0,0,,～♪
Dialogue: 0,0:03:04.10,0:03:05.39,Default#1,,0,0,0,,（善逸(ぜんいつ)）こっち こっち！
Dialogue: 0,0:03:05.47,0:03:07.52,Default#1,,0,0,0,,こっちの桃が おいしいから
Dialogue: 0,0:03:07.60,0:03:09.89,Default#1,,0,0,0,,白詰草(シロツメクサ)も たくさん咲いてる
Dialogue: 0,0:03:09.98,0:03:11.60,Default#1,,0,0,0,,お花で輪っか作ってあげるよ
Dialogue: 0,0:03:12.10,0:03:14.44,Default#1,,0,0,0,,俺 本当にうまいの できるんだ
Dialogue: 0,0:03:15.07,0:03:16.11,Default#1,,0,0,0,,禰豆子(ねずこ)ちゃん
Dialogue: 0,0:03:16.19,0:03:18.78,Default#1,,0,0,0,,（禰豆子）うん　たくさん作ってね
Dialogue: 0,0:03:19.65,0:03:20.91,Default#1,,0,0,0,,善逸さん
Dialogue: 0,0:03:21.86,0:03:23.24,Default#1,,0,0,0,,ああ…
Dialogue: 0,0:03:24.70,0:03:26.87,Default#1,,0,0,0,,いやっほ～！
Dialogue: 0,0:03:28.29,0:03:31.46,Default#1,,0,0,0,,途中に川があるけど\N浅いし大丈夫だよね？
Dialogue: 0,0:03:31.96,0:03:32.71,Default#1,,0,0,0,,（禰豆子）川？
Dialogue: 0,0:03:34.79,0:03:36.96,Default#1,,0,0,0,,善逸さん どうしよう
Dialogue: 0,0:03:37.63,0:03:39.72,Default#1,,0,0,0,,私 泳げないの
Dialogue: 0,0:03:40.34,0:03:44.72,Default#1,,0,0,0,,お… 俺が おんぶして\Nひとっ飛びですよ 川なんて！
Dialogue: 0,0:03:45.43,0:03:47.77,Default#1,,0,0,0,,禰豆子ちゃんの爪先も\Nぬらさないよ
Dialogue: 0,0:03:51.02,0:03:52.81,Default#1,,0,0,0,,お任せくださいな！
Dialogue: 0,0:03:53.85,0:03:55.73,Default#1,,0,0,0,,（善逸）そ～れ～！\N（禰豆子）フフフッ
Dialogue: 0,0:03:55.81,0:04:00.07,Default#1,,0,0,0,,（２人の笑い声）
Dialogue: 0,0:04:10.96,0:04:14.67,Default#1,,0,0,0,,（伊之助(いのすけ)）探検隊 探検隊\N俺たち 洞窟探検隊♪
Dialogue: 0,0:04:14.75,0:04:18.09,Default#1,,0,0,0,,探検隊 探検隊\N俺たち 洞窟探検隊♪
Dialogue: 0,0:04:18.17,0:04:19.59,Default#1,,0,0,0,,探検隊 探検隊…
Dialogue: 0,0:04:19.67,0:04:20.76,Default#1,,0,0,0,,（ポン治郎(じろう)）親分！
Dialogue: 0,0:04:20.84,0:04:22.01,Default#1,,0,0,0,,（チュウ逸(いつ)）親分！
Dialogue: 0,0:04:22.72,0:04:25.76,Default#1,,0,0,0,,どうした？　子分その１ その２！
Dialogue: 0,0:04:26.39,0:04:30.43,Default#1,,0,0,0,,あっちから この洞窟の主(ぬし)の\Nにおいがしますポンポコ！
Dialogue: 0,0:04:31.10,0:04:33.94,Default#1,,0,0,0,,寝息も聞こえてますぜチュー
Dialogue: 0,0:04:34.56,0:04:37.44,Default#1,,0,0,0,,（寝息）
Dialogue: 0,0:04:38.61,0:04:40.44,Default#1,,0,0,0,,（伊之助）主 いるじゃないか
Dialogue: 0,0:04:40.53,0:04:43.03,Default#1,,0,0,0,,よし いくぞ！　勝負だ！
Dialogue: 0,0:04:43.53,0:04:44.91,Default#1,,0,0,0,,（２人）ガッテン！　親分！
Dialogue: 0,0:04:45.66,0:04:48.49,Default#1,,0,0,0,,（伊之助）おい こら！\Nついてこい 子分その３！
Dialogue: 0,0:04:49.12,0:04:50.58,Default#1,,0,0,0,,こっち来い ほら！
Dialogue: 0,0:04:50.66,0:04:52.75,Default#1,,0,0,0,,ツヤツヤのドングリやるから\Nほら！
Dialogue: 0,0:04:52.83,0:04:54.83,Default#1,,0,0,0,,いくぞ～！
Dialogue: 0,0:04:54.92,0:04:57.00,Default#1,,0,0,0,,（ポン治郎たち）へい！
Dialogue: 0,0:04:57.92,0:05:00.30,Default#1,,0,0,0,,フッ フフフ…
Dialogue: 0,0:05:01.17,0:05:04.59,Default#1,,0,0,0,,ウフッ ウフフ…
Dialogue: 0,0:05:05.18,0:05:06.97,Default#1,,0,0,0,,（伊之助）フフフ…
Dialogue: 0,0:05:07.05,0:05:08.60,Default#1,,0,0,0,,（善逸）ウフッ ウフフ…
Dialogue: 0,0:05:23.69,0:05:26.99,Default#1,,0,0,0,,（煉獄(れんごく)）ん？　俺は何をしに来た？
Dialogue: 0,0:05:31.08,0:05:34.29,Default#1,,0,0,0,,そうだ 父上へ報告だ
Dialogue: 0,0:05:35.33,0:05:36.96,Default#1,,0,0,0,,柱(はしら)になったことを
Dialogue: 0,0:05:56.94,0:05:59.23,Default#1,,0,0,0,,（槇寿郎(しんじゅろう)）柱になったから なんだ
Dialogue: 0,0:06:03.82,0:06:06.74,Default#1,,0,0,0,,くだらん　どうでもいい
Dialogue: 0,0:06:07.57,0:06:10.32,Default#1,,0,0,0,,どうせ大したものにはなれないんだ
Dialogue: 0,0:06:11.70,0:06:14.54,Default#1,,0,0,0,,お前も 俺も
Dialogue: 0,0:06:20.54,0:06:22.50,Default#1,,0,0,0,,（千寿郎(せんじゅろう)）あ… 兄上
Dialogue: 0,0:06:24.55,0:06:27.30,Default#1,,0,0,0,,父上は喜んでくれましたか？
Dialogue: 0,0:06:27.80,0:06:30.93,Default#1,,0,0,0,,俺も… 柱になったら
Dialogue: 0,0:06:31.55,0:06:33.97,Default#1,,0,0,0,,父上に認めてもらえるでしょうか？
Dialogue: 0,0:06:36.98,0:06:38.98,Default#1,,0,0,0,,（煉獄）昔から ああではなかった
Dialogue: 0,0:06:40.15,0:06:43.40,Default#1,,0,0,0,,鬼殺隊(きさつたい)で柱にまでなった父だ
Dialogue: 0,0:06:44.40,0:06:50.82,Default#1,,0,0,0,,情熱のある人だったのに\Nある日 突然 剣士をやめた
Dialogue: 0,0:06:51.91,0:06:52.95,Default#1,,0,0,0,,突然
Dialogue: 0,0:06:53.91,0:06:58.66,Default#1,,0,0,0,,あんなにも熱心に\N俺たちを育ててくれていた人が
Dialogue: 0,0:07:02.54,0:07:03.46,Default#1,,0,0,0,,なぜ…
Dialogue: 0,0:07:06.30,0:07:09.17,Default#1,,0,0,0,,考えてもしかたのないことは\N考えるな
Dialogue: 0,0:07:10.80,0:07:13.76,Default#1,,0,0,0,,千寿郎は もっと かわいそうだろう
Dialogue: 0,0:07:14.85,0:07:19.14,Default#1,,0,0,0,,物心つく前に病死した母の記憶は\Nほとんどなく
Dialogue: 0,0:07:19.81,0:07:21.56,Default#1,,0,0,0,,父は あの状態だ
Dialogue: 0,0:07:27.11,0:07:32.11,Default#1,,0,0,0,,（煉獄）正直に言う\N父上は喜んでくれなかった
Dialogue: 0,0:07:32.66,0:07:34.45,Default#1,,0,0,0,,どうでもいいとのことだ
Dialogue: 0,0:07:34.99,0:07:39.12,Default#1,,0,0,0,,しかし そんなことで\N俺の情熱はなくならない
Dialogue: 0,0:07:40.08,0:07:42.00,Default#1,,0,0,0,,心の炎が消えることはない
Dialogue: 0,0:07:43.29,0:07:45.00,Default#1,,0,0,0,,俺は決して くじけない
Dialogue: 0,0:07:45.50,0:07:47.21,Default#1,,0,0,0,,そして 千寿郎
Dialogue: 0,0:07:49.55,0:07:51.76,Default#1,,0,0,0,,お前は 俺とは違う
Dialogue: 0,0:07:52.84,0:07:57.26,Default#1,,0,0,0,,お前には兄がいる\N兄は弟を信じている
Dialogue: 0,0:07:58.35,0:08:02.31,Default#1,,0,0,0,,どんな道を歩んでも\Nお前は立派な人間になる
Dialogue: 0,0:08:03.15,0:08:06.19,Default#1,,0,0,0,,燃えるような情熱を胸に頑張ろう
Dialogue: 0,0:08:06.82,0:08:10.40,Default#1,,0,0,0,,頑張って生きていこう！\N寂しくとも
Dialogue: 0,0:08:17.95,0:08:19.37,Default#1,,0,0,0,,いい感じだ
Dialogue: 0,0:08:20.00,0:08:21.83,Default#1,,0,0,0,,俺の作った縄は
Dialogue: 0,0:08:21.91,0:08:25.83,Default#1,,0,0,0,,つなげた者の夢に侵入できる\N特別な術なんだ
Dialogue: 0,0:08:26.92,0:08:31.17,Default#1,,0,0,0,,俺は いつも\N細心の注意を払って戦うんだ
Dialogue: 0,0:08:31.67,0:08:36.80,Default#1,,0,0,0,,眠ってしまえば\N柱だろうがなんだろうが赤子と同じ
Dialogue: 0,0:08:37.68,0:08:40.27,Default#1,,0,0,0,,ごちそうは\N鬼狩りどもを始末してから
Dialogue: 0,0:08:40.35,0:08:42.89,Default#1,,0,0,0,,ゆっくり頂くとしよう
Dialogue: 0,0:08:51.44,0:08:53.86,Default#1,,0,0,0,,（煉獄）そんなに焦って\N振り下ろす必要はない
Dialogue: 0,0:08:54.74,0:08:56.20,Default#1,,0,0,0,,肩の力を抜いて
Dialogue: 0,0:08:57.74,0:08:59.87,Default#1,,0,0,0,,（千寿郎）こう？\N（煉獄）そうだ
Dialogue: 0,0:09:01.37,0:09:03.87,Default#1,,0,0,0,,（少女）危ない 本体がいる
Dialogue: 0,0:09:04.92,0:09:06.88,Default#1,,0,0,0,,（少女）\N気付かれないようにしないと
Dialogue: 0,0:09:08.59,0:09:10.09,Default#1,,0,0,0,,夢の端まで…
Dialogue: 0,0:09:11.38,0:09:12.46,Default#1,,0,0,0,,早く
Dialogue: 0,0:09:14.38,0:09:17.76,Default#1,,0,0,0,,（魘夢）\N俺が見せる夢の世界は無限ではない
Dialogue: 0,0:09:18.89,0:09:22.85,Default#1,,0,0,0,,夢を見ている者を中心に\N円形となっている
Dialogue: 0,0:09:23.89,0:09:30.48,Default#1,,0,0,0,,夢の外側には無意識の領域があり\Nそこに精神の核が存在する
Dialogue: 0,0:09:31.40,0:09:33.61,Default#1,,0,0,0,,それを破壊しろ
Dialogue: 0,0:09:34.74,0:09:39.24,Default#1,,0,0,0,,そうすれば夢の持ち主は\N廃人となる
Dialogue: 0,0:09:46.00,0:09:47.92,Default#1,,0,0,0,,ハッ… あった
Dialogue: 0,0:09:48.71,0:09:52.42,Default#1,,0,0,0,,風景は続いているけど\Nこれ以上 進めない
Dialogue: 0,0:09:55.67,0:09:58.76,Default#1,,0,0,0,,（少女）早く こいつの\N精神の核を破壊して…
Dialogue: 0,0:10:01.31,0:10:05.56,Default#1,,0,0,0,,私も幸せな夢を見せてもらうんだ！
Dialogue: 0,0:10:06.85,0:10:07.89,Default#1,,0,0,0,,（少女）ううっ！
Dialogue: 0,0:10:15.32,0:10:17.65,Default#1,,0,0,0,,変な無意識領域…
Dialogue: 0,0:10:18.28,0:10:20.49,Default#1,,0,0,0,,熱い… 燃えてる
Dialogue: 0,0:10:21.91,0:10:23.20,Default#1,,0,0,0,,急がないと
Dialogue: 0,0:10:32.29,0:10:35.05,Default#1,,0,0,0,,ハア ハア…
Dialogue: 0,0:10:35.13,0:10:36.30,Default#1,,0,0,0,,あっ！
Dialogue: 0,0:10:39.89,0:10:42.39,Default#1,,0,0,0,,見つけた 精神の核
Dialogue: 0,0:10:45.02,0:10:47.14,Default#1,,0,0,0,,赤いのは初めて見た
Dialogue: 0,0:10:48.89,0:10:50.48,Default#1,,0,0,0,,（息を吐く音）
Dialogue: 0,0:10:51.19,0:10:52.90,Default#1,,0,0,0,,これを壊せば…
Dialogue: 0,0:10:53.40,0:10:54.90,Default#1,,0,0,0,,私も！
Dialogue: 0,0:10:59.78,0:11:00.95,Default#1,,0,0,0,,あっ…
Dialogue: 0,0:11:03.53,0:11:04.41,Default#1,,0,0,0,,あっ…
Dialogue: 0,0:11:05.79,0:11:06.45,Default#1,,0,0,0,,ううっ！
Dialogue: 0,0:11:08.46,0:11:09.37,Default#1,,0,0,0,,かはっ…
Dialogue: 0,0:11:16.46,0:11:17.55,Default#1,,0,0,0,,うっ…
Dialogue: 0,0:11:18.42,0:11:20.34,Default#1,,0,0,0,,（少女）術に落ちているときは
Dialogue: 0,0:11:20.84,0:11:24.05,Default#1,,0,0,0,,人間は\N動くことができないはずなのに
Dialogue: 0,0:11:28.02,0:11:30.89,Default#1,,0,0,0,,なんて… 生存本能なの
Dialogue: 0,0:11:38.19,0:11:42.32,Default#1,,0,0,0,,（母）今日は 炭治郎(たんじろう)の好きな\Nお煎餅を焼いてあげるからね
Dialogue: 0,0:11:42.41,0:11:43.99,Default#1,,0,0,0,,（炭治郎）うわあ～
Dialogue: 0,0:11:44.07,0:11:46.99,Default#1,,0,0,0,,今 古くなったお餅を潰すから
Dialogue: 0,0:11:47.49,0:11:49.87,Default#1,,0,0,0,,やったな 六太(ろくた) お煎餅だ
Dialogue: 0,0:11:49.96,0:11:51.54,Default#1,,0,0,0,,（竹雄(たけお)）ずるい！
Dialogue: 0,0:11:51.62,0:11:54.46,Default#1,,0,0,0,,煎餅 好きなのは\N兄ちゃんだけじゃないよ
Dialogue: 0,0:11:54.96,0:11:57.05,Default#1,,0,0,0,,（花子(はなこ)）私も好き\N（茂(しげる)）俺も！
Dialogue: 0,0:11:57.13,0:11:59.88,Default#1,,0,0,0,,じゃあ みんなで食べようね
Dialogue: 0,0:12:00.38,0:12:01.93,Default#1,,0,0,0,,網を用意してくれる？
Dialogue: 0,0:12:02.01,0:12:03.14,Default#1,,0,0,0,,（竹雄たち）は～い！
Dialogue: 0,0:12:03.64,0:12:05.85,Default#1,,0,0,0,,（竹雄）俺 すり鉢で潰すよ
Dialogue: 0,0:12:05.93,0:12:08.64,Default#1,,0,0,0,,（花子）\Nじゃあ 私が ひっくり返すの担当ね
Dialogue: 0,0:12:08.72,0:12:09.35,Default#1,,0,0,0,,（茂）俺も！
Dialogue: 0,0:12:10.23,0:12:12.73,Default#1,,0,0,0,,（炭治郎）\Nじゃあ 兄ちゃんは食べる係だ
Dialogue: 0,0:12:12.81,0:12:14.35,Default#1,,0,0,0,,（竹雄たち）ずる～い！
Dialogue: 0,0:12:15.11,0:12:18.11,Default#1,,0,0,0,,（一同の笑い声）
Dialogue: 0,0:12:30.58,0:12:31.37,Default#1,,0,0,0,,うっ…
Dialogue: 0,0:12:38.25,0:12:39.63,Default#1,,0,0,0,,よっと…
Dialogue: 0,0:12:40.80,0:12:42.51,Default#1,,0,0,0,,禰豆子 行くよ
Dialogue: 0,0:12:48.05,0:12:48.89,Default#1,,0,0,0,,あ…
Dialogue: 0,0:12:51.39,0:12:53.35,Default#1,,0,0,0,,何を言ってるんだ 俺は
Dialogue: 0,0:12:56.40,0:12:57.48,Default#1,,0,0,0,,ただいま
Dialogue: 0,0:12:59.48,0:13:01.15,Default#1,,0,0,0,,おかえり 炭治郎
Dialogue: 0,0:13:01.90,0:13:03.32,Default#1,,0,0,0,,（炭治郎）うん ただいま
Dialogue: 0,0:13:05.45,0:13:06.95,Default#1,,0,0,0,,（竹雄）兄ちゃん おかえり
Dialogue: 0,0:13:09.41,0:13:11.29,Default#1,,0,0,0,,おかえりなさい
Dialogue: 0,0:13:11.37,0:13:12.62,Default#1,,0,0,0,,おかえり
Dialogue: 0,0:13:13.96,0:13:15.67,Default#1,,0,0,0,,あれ 禰豆子は？
Dialogue: 0,0:13:16.17,0:13:18.79,Default#1,,0,0,0,,（竹雄）姉ちゃん\N山に山菜採りに行ってるよ
Dialogue: 0,0:13:18.88,0:13:21.21,Default#1,,0,0,0,,えっ… 昼間なのに？
Dialogue: 0,0:13:22.05,0:13:22.71,Default#1,,0,0,0,,ん？
Dialogue: 0,0:13:23.80,0:13:25.13,Default#1,,0,0,0,,ダメなの？
Dialogue: 0,0:13:25.22,0:13:28.89,Default#1,,0,0,0,,あっ いや… あれ？
Dialogue: 0,0:13:29.39,0:13:32.18,Default#1,,0,0,0,,炭治郎 お風呂の準備してくれる？
Dialogue: 0,0:13:32.68,0:13:34.73,Default#1,,0,0,0,,こっちが まだ かかりそうなの
Dialogue: 0,0:13:38.56,0:13:40.65,Default#1,,0,0,0,,（炭治郎）\N変なことばかり言ってしまう
Dialogue: 0,0:13:41.98,0:13:43.44,Default#1,,0,0,0,,疲れてるのかな
Dialogue: 0,0:13:48.07,0:13:48.91,Default#1,,0,0,0,,あっ…
Dialogue: 0,0:13:50.33,0:13:52.45,Default#1,,0,0,0,,あれ… 消えた
Dialogue: 0,0:13:54.41,0:13:59.08,Default#1,,0,0,0,,なんだったんだろう 一瞬…\N道具箱か？
Dialogue: 0,0:14:03.13,0:14:04.71,Default#1,,0,0,0,,見間違いか…
Dialogue: 0,0:14:08.13,0:14:08.84,Default#1,,0,0,0,,（炭治郎）起きろ！
Dialogue: 0,0:14:12.60,0:14:13.35,Default#1,,0,0,0,,起きろ！
Dialogue: 0,0:14:17.94,0:14:20.27,Default#1,,0,0,0,,起きろ 攻撃されてる
Dialogue: 0,0:14:20.36,0:14:23.02,Default#1,,0,0,0,,夢だ… これは夢だ！
Dialogue: 0,0:14:23.11,0:14:24.19,Default#1,,0,0,0,,目覚めろ！
Dialogue: 0,0:14:25.24,0:14:27.53,Default#1,,0,0,0,,（炭治郎）そうか… そうだ 俺は
Dialogue: 0,0:14:28.86,0:14:30.66,Default#1,,0,0,0,,汽車の中だ
Dialogue: 0,0:14:31.16,0:14:34.16,Default#1,,0,0,0,,起きて戦え… 戦え！
Dialogue: 0,0:14:34.95,0:14:37.96,Default#1,,0,0,0,,戦え～！
Dialogue: 0,0:14:42.29,0:14:44.46,Default#1,,0,0,0,,兄ちゃん たくあん くれよ
Dialogue: 0,0:14:44.55,0:14:47.05,Default#1,,0,0,0,,ダメだってば　やめなさいよ
Dialogue: 0,0:14:47.67,0:14:50.64,Default#1,,0,0,0,,なんで そんな\Nお兄ちゃんから食べ物 取るのよ
Dialogue: 0,0:14:50.72,0:14:51.93,Default#1,,0,0,0,,（竹雄）なんだよ！
Dialogue: 0,0:14:52.01,0:14:53.89,Default#1,,0,0,0,,（花子）\Nさっき おかわりしたでしょ
Dialogue: 0,0:14:56.47,0:15:00.15,Default#1,,0,0,0,,（炭治郎）\Nダメだ 目覚めていない　夢の中だ
Dialogue: 0,0:15:00.73,0:15:04.65,Default#1,,0,0,0,,どうすれば出られる？\Nせっかく夢だと気付けたのに
Dialogue: 0,0:15:05.78,0:15:07.24,Default#1,,0,0,0,,どうすればいいんだ
Dialogue: 0,0:15:16.29,0:15:17.16,Default#1,,0,0,0,,（禰豆子）ん？
Dialogue: 0,0:15:21.96,0:15:24.96,Default#1,,0,0,0,,ハア ハア…
Dialogue: 0,0:15:25.59,0:15:27.01,Default#1,,0,0,0,,起きないと…
Dialogue: 0,0:15:27.88,0:15:29.80,Default#1,,0,0,0,,（禰豆子）ん～ ん～ ん～
Dialogue: 0,0:15:40.77,0:15:42.06,Default#1,,0,0,0,,ん～
Dialogue: 0,0:15:43.61,0:15:44.44,Default#1,,0,0,0,,んっ！
Dialogue: 0,0:15:53.70,0:15:54.70,Default#1,,0,0,0,,んん…
Dialogue: 0,0:15:54.78,0:15:56.70,Default#1,,0,0,0,,んん～！
Dialogue: 0,0:16:04.79,0:16:06.42,Default#1,,0,0,0,,（竹雄）あっ…\N（花子）お兄ちゃん！
Dialogue: 0,0:16:06.50,0:16:08.55,Default#1,,0,0,0,,（花子）どうしよう 火が…\N（竹雄）兄ちゃん！
Dialogue: 0,0:16:11.76,0:16:15.35,Default#1,,0,0,0,,（炭治郎）\N禰豆子のにおいだ　禰豆子の血だ
Dialogue: 0,0:16:17.01,0:16:17.97,Default#1,,0,0,0,,禰豆子…
Dialogue: 0,0:16:18.47,0:16:19.81,Default#1,,0,0,0,,禰豆子！
Dialogue: 0,0:16:24.56,0:16:29.03,Default#1,,0,0,0,,隊服 日輪刀(にちりんとう)… 覚醒してる！
Dialogue: 0,0:16:29.61,0:16:32.07,Default#1,,0,0,0,,少しずつ… 少しずつ！
Dialogue: 0,0:16:33.11,0:16:34.32,Default#1,,0,0,0,,兄ちゃん？
Dialogue: 0,0:16:34.41,0:16:36.49,Default#1,,0,0,0,,お兄ちゃん 大丈夫？
Dialogue: 0,0:16:36.57,0:16:37.74,Default#1,,0,0,0,,兄ちゃん…
Dialogue: 0,0:16:38.95,0:16:41.08,Default#1,,0,0,0,,ごめん… 行かないと
Dialogue: 0,0:16:46.46,0:16:48.13,Default#1,,0,0,0,,（炭治郎）早く戻らないと
Dialogue: 0,0:16:50.13,0:16:50.92,Default#1,,0,0,0,,ごめんな
Dialogue: 0,0:16:51.42,0:16:52.76,Default#1,,0,0,0,,（竹雄）兄ちゃん！
Dialogue: 0,0:16:52.84,0:16:54.51,Default#1,,0,0,0,,（花子）お兄ちゃん！\N（茂）兄ちゃん！
Dialogue: 0,0:17:00.93,0:17:03.56,Default#1,,0,0,0,,（炭治郎）俺に夢を見せてる鬼が\N近くにいるなら
Dialogue: 0,0:17:04.27,0:17:06.56,Default#1,,0,0,0,,早く見つけて斬らなければ！
Dialogue: 0,0:17:08.27,0:17:10.69,Default#1,,0,0,0,,どこだ 早く…
Dialogue: 0,0:17:13.61,0:17:15.28,Default#1,,0,0,0,,（禰豆子）\Nお兄ちゃん どこ行くの？
Dialogue: 0,0:17:23.04,0:17:25.75,Default#1,,0,0,0,,今日は山菜 いっぱい採れたよ
Dialogue: 0,0:17:30.59,0:17:32.34,Default#1,,0,0,0,,（茂）母ちゃん こっち こっち
Dialogue: 0,0:17:32.42,0:17:34.92,Default#1,,0,0,0,,（花子）\Nお兄ちゃんから 急に火が出てきて
Dialogue: 0,0:17:38.30,0:17:39.26,Default#1,,0,0,0,,（禰豆子）お母さん
Dialogue: 0,0:17:39.76,0:17:42.43,Default#1,,0,0,0,,炭治郎 大丈夫なの？
Dialogue: 0,0:17:43.22,0:17:44.39,Default#1,,0,0,0,,お兄ちゃん…
Dialogue: 0,0:17:51.57,0:17:53.36,Default#1,,0,0,0,,（母）どうしたの？　炭治郎
Dialogue: 0,0:17:53.44,0:17:55.36,Default#1,,0,0,0,,それに その格好は…
Dialogue: 0,0:18:04.25,0:18:05.08,Default#1,,0,0,0,,（炭治郎）ああ…
Dialogue: 0,0:18:06.62,0:18:09.92,Default#1,,0,0,0,,ここにいたいなあ ずっと
Dialogue: 0,0:18:13.34,0:18:15.55,Default#1,,0,0,0,,（炭治郎）振り返って戻りたいな
Dialogue: 0,0:18:16.97,0:18:22.93,Default#1,,0,0,0,,本当なら ずっと こうして\N暮らせていたはずなんだ ここで
Dialogue: 0,0:18:25.02,0:18:28.94,Default#1,,0,0,0,,本当なら みんな 今も元気で
Dialogue: 0,0:18:30.90,0:18:35.78,Default#1,,0,0,0,,禰豆子も日の光の中で 青空の下で
Dialogue: 0,0:18:38.66,0:18:42.03,Default#1,,0,0,0,,本当なら 本当なら…
Dialogue: 0,0:18:43.16,0:18:46.54,Default#1,,0,0,0,,俺は 今日も ここで炭を焼いていた
Dialogue: 0,0:18:47.58,0:18:49.92,Default#1,,0,0,0,,刀なんて触ることもなかった
Dialogue: 0,0:18:53.42,0:18:58.09,Default#1,,0,0,0,,本当なら… 本当なら！
Dialogue: 0,0:19:11.86,0:19:14.73,Default#1,,0,0,0,,でも もう俺は失った
Dialogue: 0,0:19:15.28,0:19:16.90,Default#1,,0,0,0,,戻ることはできない！
Dialogue: 0,0:19:20.45,0:19:21.82,Default#1,,0,0,0,,（六太）お兄ちゃん！
Dialogue: 0,0:19:22.45,0:19:24.83,Default#1,,0,0,0,,置いていかないで！
Dialogue: 0,0:19:31.21,0:19:34.88,Default#1,,0,0,0,,（炭治郎）\Nごめん… ごめんなあ 六太
Dialogue: 0,0:19:36.71,0:19:39.09,Default#1,,0,0,0,,もう 一緒には いられないんだよ
Dialogue: 0,0:19:40.68,0:19:44.89,Default#1,,0,0,0,,だけど いつだって兄ちゃんは\Nお前のことを思っているから
Dialogue: 0,0:19:45.89,0:19:48.56,Default#1,,0,0,0,,みんなのこと 思っているから
Dialogue: 0,0:19:51.39,0:19:54.31,Default#1,,0,0,0,,たくさん ありがとうと思うよ
Dialogue: 0,0:19:55.02,0:19:57.65,Default#1,,0,0,0,,たくさん ごめんと思うよ
Dialogue: 0,0:19:58.40,0:20:00.15,Default#1,,0,0,0,,忘れることなんてない
Dialogue: 0,0:20:00.74,0:20:04.03,Default#1,,0,0,0,,どんなときも 心は そばにいる
Dialogue: 0,0:20:05.03,0:20:08.75,Default#1,,0,0,0,,だから どうか許してくれ
Dialogue: 0,0:20:15.59,0:20:19.80,Default#1,,0,0,0,,（青年）\N早く… 精神の核を破壊しなければ
Dialogue: 0,0:20:38.94,0:20:41.78,Default#1,,0,0,0,,（青年）これが彼の心の中…
Dialogue: 0,0:20:44.03,0:20:48.87,Default#1,,0,0,0,,なんという美しさ　どこまでも広い
Dialogue: 0,0:20:49.49,0:20:53.41,Default#1,,0,0,0,,そして 暖かい
Dialogue: 0,0:20:58.34,0:20:59.84,Default#1,,0,0,0,,てこずってるな
Dialogue: 0,0:21:00.34,0:21:02.13,Default#1,,0,0,0,,どうしたのかな
Dialogue: 0,0:21:02.63,0:21:05.84,Default#1,,0,0,0,,まだ誰の核も\N破壊できてないじゃないか
Dialogue: 0,0:21:07.80,0:21:12.27,Default#1,,0,0,0,,まあ… 時間稼ぎができているから\Nいいけど
Dialogue: 0,0:21:13.10,0:21:16.52,Default#1,,0,0,0,,（炭治郎）ハア ハア…
Dialogue: 0,0:21:17.23,0:21:20.82,Default#1,,0,0,0,,（炭治郎）いない…\Nにおいはするんだ かすかに
Dialogue: 0,0:21:21.40,0:21:24.61,Default#1,,0,0,0,,でも なんだ これは\N幕が かかっているようだ
Dialogue: 0,0:21:25.66,0:21:28.91,Default#1,,0,0,0,,どこからでも\Nかすかに鬼のにおいがする
Dialogue: 0,0:21:29.41,0:21:31.04,Default#1,,0,0,0,,場所を特定できない
Dialogue: 0,0:21:31.62,0:21:35.58,Default#1,,0,0,0,,早くしないと…\N禰豆子が血を流している
Dialogue: 0,0:21:36.17,0:21:39.79,Default#1,,0,0,0,,ほかのみんなも眠っているなら\N相当マズい状況だ
Dialogue: 0,0:21:40.38,0:21:41.63,Default#1,,0,0,0,,（炭治郎）どうすれば…
Dialogue: 0,0:21:43.34,0:21:46.68,Default#1,,0,0,0,,俺は全集中の呼吸を\N使えていないのか？
Dialogue: 0,0:21:47.72,0:21:50.14,Default#1,,0,0,0,,今は ただ眠っているだけなのか
Dialogue: 0,0:21:51.68,0:21:53.56,Default#1,,0,0,0,,（父）炭治郎\N（炭治郎）ハッ…
Dialogue: 0,0:21:58.02,0:21:59.73,Default#1,,0,0,0,,（父）刃(やいば)を持て
Dialogue: 0,0:22:01.44,0:22:04.40,Default#1,,0,0,0,,斬るべきものは もうある
Dialogue: 0,0:22:14.95,0:22:18.88,Default#1,,0,0,0,,（炭治郎）斬るべきものは… ある
Dialogue: 0,0:22:21.09,0:22:24.34,Default#1,,0,0,0,,斬るべきもの… 目覚めるために
Dialogue: 0,0:22:26.51,0:22:27.84,Default#1,,0,0,0,,分かったと思う
Dialogue: 0,0:22:29.01,0:22:31.55,Default#1,,0,0,0,,でも もし違っていたら？
Dialogue: 0,0:22:32.43,0:22:35.48,Default#1,,0,0,0,,夢の中の出来事が\N現実にも影響する場合
Dialogue: 0,0:22:36.48,0:22:37.73,Default#1,,0,0,0,,取り返しが…
Dialogue: 0,0:22:40.90,0:22:44.32,Default#1,,0,0,0,,迷うな！　やれ！　やるんだ！
Dialogue: 0,0:22:44.82,0:22:47.36,Default#1,,0,0,0,,夢の中の死が現実につながる
Dialogue: 0,0:22:47.86,0:22:51.78,Default#1,,0,0,0,,つまり 斬るのは…
Dialogue: 0,0:22:52.33,0:22:54.74,Default#1,,0,0,0,,ハア ハア…
Dialogue: 0,0:22:54.83,0:22:57.25,Default#1,,0,0,0,,（炭治郎）自分の首だ！
Dialogue: 0,0:22:57.33,0:23:00.75,Default#1,,0,0,0,,うおおおお！
Dialogue: 0,0:23:01.42,0:23:01.92,Default#1,,0,0,0,,（斬る音）
Dialogue: 0,0:23:04.71,0:23:06.71,Default#1,,0,0,0,,♪～
Dialogue: 0,0:24:32.09,0:24:34.09,Default#1,,0,0,0,,～♪
Dialogue: 0,0:24:36.05,0:24:38.56,Default#1,,0,0,0,,（父）よく覚悟を決められたな
Dialogue: 0,0:24:39.06,0:24:41.43,Default#1,,0,0,0,,いつも父さんに言われてたから
Dialogue: 0,0:24:41.93,0:24:44.27,Default#1,,0,0,0,,自分が苦しいときでも
Dialogue: 0,0:24:44.35,0:24:49.23,Default#1,,0,0,0,,人を慈しむことができる\Nしなやかで強い人間になれ
Dialogue: 0,0:24:49.32,0:24:54.20,Default#1,,0,0,0,,鬼に苦しめられている人たちを\N禰豆子を頼んだぞ
Dialogue: 0,0:24:54.70,0:24:56.03,Default#1,,0,0,0,,炭治郎
Dialogue: 0,0:24:57.20,0:24:59.66,Default#1,,0,0,0,,（炭治郎）父さん 俺 頑張るから
Dialogue: 0,0:25:00.16,0:25:02.75,Default#1,,0,0,0,,次回 第４話「侮辱」
