Dialogue: 0,0:00:03.50,0:00:05.42,Default#3,,0,0,0,,（外交官）\N大使館までは どれくらいかね
Dialogue: 0,0:00:06.88,0:00:08.96,Default#3,,0,0,0,,（運転手）恐らく20分程度かと
Dialogue: 0,0:00:09.84,0:00:11.22,Default#3,,0,0,0,,あれ？　ブレーキが…
Dialogue: 0,0:00:11.30,0:00:12.93,Default#3,,0,0,0,,（外交官）お… おい！
Dialogue: 0,0:00:13.01,0:00:14.97,Default#3,,0,0,0,,君！　前 前！
Dialogue: 0,0:00:19.72,0:00:21.35,Default#3,,0,0,0,,（機関員）東国(オスタニア)において
Dialogue: 0,0:00:21.43,0:00:23.89,Default#3,,0,0,0,,我が国の外交官が事故死した
Dialogue: 0,0:00:24.44,0:00:29.36,Default#3,,0,0,0,,だが 当局は\N東の極右政党による暗殺と見ている
Dialogue: 0,0:00:29.44,0:00:33.90,Default#3,,0,0,0,,ヤツらは我が西国(ウェスタリス)への\N戦争を企てている
Dialogue: 0,0:00:34.41,0:00:37.66,Default#3,,0,0,0,,なんとしても\Nその計画を突き止めねば
Dialogue: 0,0:00:38.16,0:00:39.33,Default#3,,0,0,0,,（機関員）彼に任せよう
Dialogue: 0,0:00:39.99,0:00:42.33,Default#3,,0,0,0,,うちで最も腕の立つエージェント
Dialogue: 0,0:00:42.41,0:00:43.75,Default#3,,0,0,0,,“黄昏(たそがれ)”
Dialogue: 0,0:00:45.42,0:00:47.33,Default#3,,0,0,0,,（男）約束の物だ
Dialogue: 0,0:00:47.42,0:00:50.92,Default#3,,0,0,0,,外務大臣がヅラだという証拠写真\Nネガもある
Dialogue: 0,0:00:52.42,0:00:53.59,Default#3,,0,0,0,,（偽エドガー）よくやった
Dialogue: 0,0:00:54.38,0:00:56.51,Default#3,,0,0,0,,これでヤツを辞任に追い込める
Dialogue: 0,0:00:56.59,0:00:58.35,Default#3,,0,0,0,,次も頼んだぞ
Dialogue: 0,0:01:00.97,0:01:01.81,Default#3,,0,0,0,,（エドガー）おい
Dialogue: 0,0:01:02.93,0:01:06.02,Default#3,,0,0,0,,さあ 約束の物を渡してもらおうか
Dialogue: 0,0:01:06.10,0:01:08.19,Default#3,,0,0,0,,（男）えっ いや… だって今…
Dialogue: 0,0:01:09.40,0:01:12.28,Default#3,,0,0,0,,ううう… やられた！
Dialogue: 0,0:01:12.82,0:01:14.61,Default#3,,0,0,0,,（ナレーション）\Nコードネーム 黄昏
Dialogue: 0,0:01:15.61,0:01:17.28,Default#3,,0,0,0,,男はスパイだった
Dialogue: 0,0:01:20.08,0:01:25.12,Default#3,,0,0,0,,世界各国が水面下で\N熾烈(しれつ)な情報戦を繰り広げていた時代
Dialogue: 0,0:01:25.21,0:01:29.79,Default#3,,0,0,0,,男は百の顔を使い分けながら\Nその戦場を生き抜いていた
Dialogue: 0,0:01:32.09,0:01:35.38,Default#3,,0,0,0,,（カレン）でさ～ パパが\Nヅラ写真を奪われたとか言って
Dialogue: 0,0:01:35.47,0:01:36.88,Default#3,,0,0,0,,八つ当たりしてくんの
Dialogue: 0,0:01:36.97,0:01:39.01,Default#3,,0,0,0,,意味分かんない マジムカつく
Dialogue: 0,0:01:39.09,0:01:41.18,Default#3,,0,0,0,,ねえ 聞いてる？　ロバート
Dialogue: 0,0:01:41.26,0:01:43.52,Default#3,,0,0,0,,（黄昏）ん？　ああ 災難だね
Dialogue: 0,0:01:43.60,0:01:46.02,Default#3,,0,0,0,,（拍手）
Dialogue: 0,0:01:46.10,0:01:49.44,Default#3,,0,0,0,,ねえねえ ロバート\N私たちもいつか…
Dialogue: 0,0:01:49.52,0:01:51.15,Default#3,,0,0,0,,（黄昏）カレン 僕たち別れよう
Dialogue: 0,0:01:51.23,0:01:51.86,Default#3,,0,0,0,,ええっ
Dialogue: 0,0:01:51.94,0:01:54.40,Default#3,,0,0,0,,（黄昏）君の話には知性を感じない
Dialogue: 0,0:01:54.49,0:01:56.78,Default#3,,0,0,0,,（カレン）えっ…\N（黄昏）それじゃ お幸せに
Dialogue: 0,0:01:56.86,0:01:58.99,Default#3,,0,0,0,,（カレン）\Nあっ ちょっと ロバート！
Dialogue: 0,0:01:59.07,0:02:01.53,Default#3,,0,0,0,,そんな急に… ロバート！
Dialogue: 0,0:02:01.62,0:02:05.54,Default#3,,0,0,0,,（黄昏）ごめんよ カレン\N君たち親子に もう用はなくなった
Dialogue: 0,0:02:06.41,0:02:08.54,Default#3,,0,0,0,,ロバートという仮面も今夜限り
Dialogue: 0,0:02:09.54,0:02:11.88,Default#3,,0,0,0,,結婚？　人並みの幸せ？
Dialogue: 0,0:02:11.96,0:02:13.59,Default#3,,0,0,0,,そんなものへの執着は
Dialogue: 0,0:02:13.67,0:02:16.84,Default#3,,0,0,0,,スパイとなった日\N身分証と共に処分した
Dialogue: 0,0:02:28.14,0:02:29.10,Default#3,,0,0,0,,（連絡係）にゃ～ん
Dialogue: 0,0:02:29.19,0:02:30.48,Default#3,,0,0,0,,（黄昏）Ｃ暗号か
Dialogue: 0,0:02:31.23,0:02:34.44,Default#3,,0,0,0,,（アナウンス）まもなく５番線から\Nバーリント行(いき)が発車いたします
Dialogue: 0,0:02:37.15,0:02:40.91,Default#3,,0,0,0,,（局長）“こんにちは\Nあるいは こんばんは 黄昏君”
Dialogue: 0,0:02:40.99,0:02:43.20,Default#3,,0,0,0,,“先の任務 ご苦労であった”
Dialogue: 0,0:02:43.28,0:02:47.54,Default#3,,0,0,0,,“おかげで大臣は命拾いし\N我が国にとって利となった”
Dialogue: 0,0:02:48.54,0:02:50.54,Default#3,,0,0,0,,“さて 早速\N次の任務だ”
Dialogue: 0,0:02:51.04,0:02:55.13,Default#3,,0,0,0,,“標的は国家統一党総裁\Nドノバン･デズモンド”
Dialogue: 0,0:02:55.21,0:02:57.97,Default#3,,0,0,0,,“東西平和を脅かす\N危険人物だ”
Dialogue: 0,0:02:58.05,0:03:02.43,Default#3,,0,0,0,,“君の使命は彼に近づき\Nその不穏な動きを探ること”
Dialogue: 0,0:03:02.51,0:03:05.14,Default#3,,0,0,0,,“そのために まず\N結婚して子供をこさえろ”
Dialogue: 0,0:03:05.22,0:03:06.31,Default#3,,0,0,0,,ブ～ッ！
Dialogue: 0,0:03:06.39,0:03:07.73,Default#3,,0,0,0,,ゲホッ はい？
Dialogue: 0,0:03:07.81,0:03:09.10,Default#3,,0,0,0,,（局長）“デズモンドは\N用心深く”
Dialogue: 0,0:03:09.18,0:03:12.15,Default#3,,0,0,0,,“なかなか表舞台に\N顔を出さない”
Dialogue: 0,0:03:12.23,0:03:13.27,Default#3,,0,0,0,,“唯一 現れるのは”
Dialogue: 0,0:03:13.36,0:03:17.99,Default#3,,0,0,0,,“息子が通う名門校で\N定期的に開かれる懇親会のみ”
Dialogue: 0,0:03:18.07,0:03:21.53,Default#3,,0,0,0,,“これは政財界の大物たちが集う\N社交場にもなっている”
Dialogue: 0,0:03:22.57,0:03:25.08,Default#3,,0,0,0,,“君は子供を\Nこの学校へ入学させ”
Dialogue: 0,0:03:25.16,0:03:26.87,Default#3,,0,0,0,,“懇親会へ潜入せよ”
Dialogue: 0,0:03:27.41,0:03:29.83,Default#3,,0,0,0,,“なお 入学までの\N期限が迫っているため”
Dialogue: 0,0:03:29.91,0:03:31.71,Default#3,,0,0,0,,“猶予は１週間とする”
Dialogue: 0,0:03:32.63,0:03:34.50,Default#3,,0,0,0,,７日で子供を作れと？
Dialogue: 0,0:03:36.46,0:03:37.38,Default#3,,0,0,0,,（せきばらい）
Dialogue: 0,0:03:37.46,0:03:38.59,Default#3,,0,0,0,,（黄昏）失敬
Dialogue: 0,0:03:39.09,0:03:41.22,Default#3,,0,0,0,,（局長）“オペレーション〈梟(ストリクス)〉”
Dialogue: 0,0:03:41.30,0:03:42.68,Default#3,,0,0,0,,“今次作戦が東西の”
Dialogue: 0,0:03:42.76,0:03:45.35,Default#3,,0,0,0,,“ひいては世界の平和を\N守る鍵となる”
Dialogue: 0,0:03:46.18,0:03:48.02,Default#3,,0,0,0,,“影なき英雄よ”
Dialogue: 0,0:03:48.10,0:03:51.02,Default#3,,0,0,0,,“君たちエージェントの活躍が\N日の目を見ることはない”
Dialogue: 0,0:03:51.10,0:03:54.44,Default#3,,0,0,0,,“勲章もなく\N新聞の片隅に載ることもない”
Dialogue: 0,0:03:54.52,0:03:55.52,Default#3,,0,0,0,,“だが それでも”
Dialogue: 0,0:03:55.61,0:04:00.36,Default#3,,0,0,0,,“その骸(むくろ)の上に人々の日常が\N成り立っていることを忘れるな”
Dialogue: 0,0:04:01.53,0:04:02.32,Default#3,,0,0,0,,（黄昏）いいだろう
Dialogue: 0,0:04:03.16,0:04:05.82,Default#3,,0,0,0,,名も顔も捨てた この“誰(た)そ彼(がれ)”
Dialogue: 0,0:04:05.91,0:04:08.16,Default#3,,0,0,0,,子持ちの父だろうと演じてみせる
Dialogue: 0,0:04:08.83,0:04:11.25,Default#3,,0,0,0,,全ては よりよき世界のために
Dialogue: 0,0:04:15.88,0:04:16.71,Default#3,,0,0,0,,（不動産屋）こちらが
Dialogue: 0,0:04:16.79,0:04:18.71,Default#3,,0,0,0,,ファミリータイプの\Nお部屋になります
Dialogue: 0,0:04:18.80,0:04:20.46,Default#3,,0,0,0,,家具付き 冷暖房完備
Dialogue: 0,0:04:20.55,0:04:22.80,Default#3,,0,0,0,,それと… あの お客様？
Dialogue: 0,0:04:22.88,0:04:26.01,Default#3,,0,0,0,,（ロイド）\N盗聴器なし 逃走経路も確保可能
Dialogue: 0,0:04:26.64,0:04:27.76,Default#3,,0,0,0,,（ロイド）ここに決めます
Dialogue: 0,0:04:27.85,0:04:30.43,Default#3,,0,0,0,,（不動産屋）では フォージャー様\Nこちらの書類にサインを
Dialogue: 0,0:04:31.06,0:04:34.31,Default#3,,0,0,0,,（ロイド）ロイド･フォージャー\N職業 精神科医
Dialogue: 0,0:04:34.40,0:04:36.52,Default#3,,0,0,0,,それが俺の新しい人生
Dialogue: 0,0:04:37.15,0:04:39.78,Default#3,,0,0,0,,愛する家族 幸せな家庭
Dialogue: 0,0:04:39.86,0:04:42.36,Default#3,,0,0,0,,（不動産屋）\Nいいですね 家族で新居
Dialogue: 0,0:04:42.44,0:04:44.66,Default#3,,0,0,0,,お子さんは男の子？　女の子？
Dialogue: 0,0:04:44.74,0:04:47.53,Default#3,,0,0,0,,（ロイド）\Nああ それは… これから決めます
Dialogue: 0,0:04:47.62,0:04:48.45,Default#3,,0,0,0,,（不動産屋）へ？
Dialogue: 0,0:04:48.53,0:04:51.29,Default#3,,0,0,0,,（ロイド）\Nスパイにとっては全くのお荷物だ
Dialogue: 0,0:04:51.83,0:04:53.04,Default#3,,0,0,0,,（チャイム）
Dialogue: 0,0:04:53.96,0:04:56.42,Default#3,,0,0,0,,（主人）\Nああ？　里親になりたい？
Dialogue: 0,0:04:57.13,0:04:58.13,Default#3,,0,0,0,,（ロイド）ええ
Dialogue: 0,0:04:58.21,0:05:01.51,Default#3,,0,0,0,,こちらの孤児院で\N縁組を行ってると聞きまして
Dialogue: 0,0:05:01.59,0:05:03.05,Default#3,,0,0,0,,（ロイド）実は妻との間に…\N（主人）いいよ
Dialogue: 0,0:05:03.13,0:05:05.34,Default#3,,0,0,0,,（主人）\Nどれでも好きなの持ってきな
Dialogue: 0,0:05:05.43,0:05:07.30,Default#3,,0,0,0,,（ロイド）えっ\N（主人）勝手に入ってくれ
Dialogue: 0,0:05:07.39,0:05:09.26,Default#3,,0,0,0,,（ロイド）劣悪な環境だな
Dialogue: 0,0:05:09.89,0:05:14.14,Default#3,,0,0,0,,だが アングラな施設ほど\N素性のあやふやな子が多く
Dialogue: 0,0:05:14.23,0:05:16.06,Default#3,,0,0,0,,経歴の改竄(かいざん)に都合がいい
Dialogue: 0,0:05:16.85,0:05:19.06,Default#3,,0,0,0,,この任務は子供さえいれば\Nなんとかなる
Dialogue: 0,0:05:19.90,0:05:22.36,Default#3,,0,0,0,,本当なら\N全て１人でこなしたいが
Dialogue: 0,0:05:22.44,0:05:25.15,Default#3,,0,0,0,,西国一(いち)のスパイと謡われた\Nこの俺も
Dialogue: 0,0:05:25.24,0:05:27.32,Default#3,,0,0,0,,子供にまでは化けられんからな
Dialogue: 0,0:05:27.41,0:05:28.41,Default#3,,0,0,0,,あの…
Dialogue: 0,0:05:28.49,0:05:31.37,Default#3,,0,0,0,,できれば読み書きできる子を\N探しているのですが
Dialogue: 0,0:05:31.45,0:05:32.83,Default#3,,0,0,0,,ああ だったら…
Dialogue: 0,0:05:32.91,0:05:34.58,Default#3,,0,0,0,,おい アーニャ
Dialogue: 0,0:05:34.66,0:05:38.33,Default#3,,0,0,0,,うちで一番 賢い\N無口だが まあ いい子さ
Dialogue: 0,0:05:38.42,0:05:40.75,Default#3,,0,0,0,,（主人）\N不気味で いけすかんガキだからな
Dialogue: 0,0:05:40.84,0:05:43.26,Default#3,,0,0,0,,とっとと もらわれてくれりゃ\N願ったりだ
Dialogue: 0,0:05:43.34,0:05:44.92,Default#3,,0,0,0,,ほら 挨拶せんか
Dialogue: 0,0:05:45.55,0:05:47.22,Default#3,,0,0,0,,（ロイド）えっと すみません
Dialogue: 0,0:05:48.51,0:05:51.22,Default#3,,0,0,0,,（ロイド）確かイーデン校の\N就学年齢は６歳から
Dialogue: 0,0:05:51.81,0:05:54.02,Default#3,,0,0,0,,この子は どう見ても\N４～５歳かそこら
Dialogue: 0,0:05:54.10,0:05:54.73,Default#3,,0,0,0,,（アーニャ）むっつ
Dialogue: 0,0:05:54.81,0:05:55.52,Default#3,,0,0,0,,ん？
Dialogue: 0,0:05:55.60,0:05:56.44,Default#3,,0,0,0,,（アーニャ）むっつ
Dialogue: 0,0:05:56.52,0:05:58.73,Default#3,,0,0,0,,（主人）お前 ６歳だったのか？
Dialogue: 0,0:05:58.81,0:06:01.23,Default#3,,0,0,0,,（ロイド）いや 身長とか…
Dialogue: 0,0:06:04.32,0:06:06.74,Default#3,,0,0,0,,（ロイド）ん？　新聞？
Dialogue: 0,0:06:07.32,0:06:08.70,Default#3,,0,0,0,,クロスワード？
Dialogue: 0,0:06:08.78,0:06:10.99,Default#3,,0,0,0,,子供には\N難しすぎるんじゃないか？
Dialogue: 0,0:06:11.83,0:06:14.87,Default#3,,0,0,0,,（ロイド）まあ 俺にとっては\N子供のお遊びだがな
Dialogue: 0,0:06:14.95,0:06:16.66,Default#3,,0,0,0,,縦１はホメオスタシス
Dialogue: 0,0:06:16.75,0:06:18.58,Default#3,,0,0,0,,横１は因果的閉包性(いんがてきへいほうせい)
Dialogue: 0,0:06:18.67,0:06:21.04,Default#3,,0,0,0,,その下は\Nシンプレティック同相写像(どうそうしゃぞう)
Dialogue: 0,0:06:25.76,0:06:27.47,Default#3,,0,0,0,,（ロイド）\Nできたの？　マジで？
Dialogue: 0,0:06:27.55,0:06:29.43,Default#3,,0,0,0,,（ロイド）恐るべき知力！
Dialogue: 0,0:06:29.51,0:06:32.14,Default#3,,0,0,0,,これなら入学試験も\N容易に突破できる
Dialogue: 0,0:06:32.76,0:06:35.14,Default#3,,0,0,0,,この子にします！\N手続きの書類は…
Dialogue: 0,0:06:35.22,0:06:38.31,Default#3,,0,0,0,,（主人）そんなんいいから\Nさっさと引き取ってくれ
Dialogue: 0,0:06:38.39,0:06:42.11,Default#3,,0,0,0,,（ロイド）子作り任務達成\N順調すぎて逆に不安だ
Dialogue: 0,0:06:42.19,0:06:43.57,Default#3,,0,0,0,,（ロイド）\Nお前は それでいいのか？
Dialogue: 0,0:06:44.07,0:06:46.24,Default#3,,0,0,0,,（アーニャ）\Nスパイ… ミッション…
Dialogue: 0,0:06:46.32,0:06:47.53,Default#3,,0,0,0,,わくわく！
Dialogue: 0,0:06:47.61,0:06:50.07,Default#3,,0,0,0,,（ナレーション）\N少女は超能力者だった
Dialogue: 0,0:06:50.16,0:06:52.37,Default#3,,0,0,0,,被験体００７(ゼロゼロセブン)
Dialogue: 0,0:06:52.45,0:06:54.91,Default#3,,0,0,0,,少女は人の心を読むことができた
Dialogue: 0,0:06:55.62,0:06:58.54,Default#3,,0,0,0,,とある組織の実験によって\N偶然 生みだされ
Dialogue: 0,0:06:58.62,0:07:00.50,Default#3,,0,0,0,,のちに施設を逃亡
Dialogue: 0,0:07:00.58,0:07:03.54,Default#3,,0,0,0,,保護対象を求め 転々としていた
Dialogue: 0,0:07:03.63,0:07:04.67,Default#3,,0,0,0,,（ロイド）いいか お嬢ちゃん
Dialogue: 0,0:07:04.75,0:07:05.50,Default#3,,0,0,0,,（アーニャ）アーニャ
Dialogue: 0,0:07:05.59,0:07:06.55,Default#3,,0,0,0,,（ロイド）いいか アーニャ
Dialogue: 0,0:07:07.13,0:07:09.05,Default#3,,0,0,0,,今日からお前は うちの子になるが
Dialogue: 0,0:07:09.13,0:07:12.09,Default#3,,0,0,0,,周りの人たちには\Nもともとの親子だってことにする
Dialogue: 0,0:07:12.18,0:07:12.97,Default#3,,0,0,0,,分かったか？
Dialogue: 0,0:07:13.05,0:07:13.68,Default#3,,0,0,0,,（アーニャ）うい
Dialogue: 0,0:07:14.43,0:07:17.10,Default#3,,0,0,0,,俺のことは お父様と呼ぶように
Dialogue: 0,0:07:17.18,0:07:18.14,Default#3,,0,0,0,,ちち！
Dialogue: 0,0:07:18.23,0:07:19.10,Default#3,,0,0,0,,（ロイド）よし
Dialogue: 0,0:07:19.18,0:07:21.35,Default#3,,0,0,0,,（住人）あら かわいいお嬢さんね
Dialogue: 0,0:07:21.44,0:07:22.73,Default#3,,0,0,0,,こんにちは
Dialogue: 0,0:07:22.81,0:07:24.52,Default#3,,0,0,0,,今日 越してきたフォージャーです
Dialogue: 0,0:07:24.61,0:07:27.11,Default#3,,0,0,0,,（アーニャ）ずっと前から\Nちちの子供のアーニャです
Dialogue: 0,0:07:27.19,0:07:28.28,Default#3,,0,0,0,,うん？
Dialogue: 0,0:07:28.36,0:07:29.65,Default#3,,0,0,0,,（ロイド）いらんこと言うな
Dialogue: 0,0:07:29.74,0:07:31.61,Default#3,,0,0,0,,（ロイド）ほら 部屋に入ろうな
Dialogue: 0,0:07:32.66,0:07:33.74,Default#3,,0,0,0,,（アーニャ）アーニャんち？
Dialogue: 0,0:07:33.82,0:07:34.49,Default#3,,0,0,0,,（ロイド）そうだ
Dialogue: 0,0:07:34.58,0:07:35.87,Default#3,,0,0,0,,（アーニャ）あっ テレビ！
Dialogue: 0,0:07:36.79,0:07:38.04,Default#3,,0,0,0,,つけてもいいぞ
Dialogue: 0,0:07:39.79,0:07:41.17,Default#3,,0,0,0,,（テレビ）冒険アニメ「SPY　WARS(スパイウォーズ)」
Dialogue: 0,0:07:41.25,0:07:42.75,Default#3,,0,0,0,,アーニャ これ好き
Dialogue: 0,0:07:44.08,0:07:45.54,Default#3,,0,0,0,,（ロイド）よりによって…
Dialogue: 0,0:07:45.63,0:07:48.09,Default#3,,0,0,0,,（テレビ:ボンドマン）\Nサイレンサー付きの拳銃だと？
Dialogue: 0,0:07:48.17,0:07:49.01,Default#3,,0,0,0,,わくわく
Dialogue: 0,0:07:49.67,0:07:52.13,Default#3,,0,0,0,,（ロイド）まずは\N必要なものを そろえないとな
Dialogue: 0,0:07:52.22,0:07:54.47,Default#3,,0,0,0,,それと こいつの身分証の偽造
Dialogue: 0,0:07:54.55,0:07:56.97,Default#3,,0,0,0,,ちょっと出かけてくる\Nおとなしく それ見てろ
Dialogue: 0,0:07:57.06,0:07:58.77,Default#3,,0,0,0,,（テレビ:ボンドマン）\Nそこをどけ～！
Dialogue: 0,0:07:58.85,0:08:00.56,Default#3,,0,0,0,,（アーニャ）冒険！
Dialogue: 0,0:08:00.64,0:08:02.77,Default#3,,0,0,0,,なっ 冒険じゃない ただの買い物だ
Dialogue: 0,0:08:07.27,0:08:09.74,Default#3,,0,0,0,,（アーニャ）アーニャ\N音の出ないピストル 欲しい
Dialogue: 0,0:08:09.82,0:08:11.28,Default#3,,0,0,0,,（ロイド）はいはい 売ってたらな
Dialogue: 0,0:08:12.11,0:08:13.03,Default#3,,0,0,0,,（ロイド）目立つことなく
Dialogue: 0,0:08:13.11,0:08:15.91,Default#3,,0,0,0,,ただただ普通を演じることこそ\Nスパイの真髄(しんずい)
Dialogue: 0,0:08:15.99,0:08:18.54,Default#3,,0,0,0,,どこからどう見ても\N平凡な親子であるべし
Dialogue: 0,0:08:18.62,0:08:21.04,Default#3,,0,0,0,,（アーニャ）ちち～ 助けて～！\N（ロイド）なぜ目立つ
Dialogue: 0,0:08:21.12,0:08:24.63,Default#3,,0,0,0,,（女）ダメよ 小さい子は\N手をつないであげなくちゃ
Dialogue: 0,0:08:24.71,0:08:25.54,Default#3,,0,0,0,,はい
Dialogue: 0,0:08:29.63,0:08:31.17,Default#3,,0,0,0,,（ロイド）片手が塞がれては
Dialogue: 0,0:08:31.26,0:08:34.30,Default#3,,0,0,0,,いざというときの敵襲に\N備えられんが しかたない
Dialogue: 0,0:08:34.38,0:08:35.26,Default#3,,0,0,0,,（アーニャ）敵？
Dialogue: 0,0:08:42.02,0:08:43.06,Default#3,,0,0,0,,何してる？
Dialogue: 0,0:08:43.14,0:08:43.94,Default#3,,0,0,0,,警戒
Dialogue: 0,0:08:44.02,0:08:46.23,Default#3,,0,0,0,,（ロイド）\N警戒されるようなことしたか？
Dialogue: 0,0:08:46.31,0:08:48.90,Default#3,,0,0,0,,手つなぎは早かったか？\N嫌われてる？
Dialogue: 0,0:08:48.98,0:08:49.82,Default#3,,0,0,0,,マズいな
Dialogue: 0,0:08:49.90,0:08:53.32,Default#3,,0,0,0,,任務完了までに こいつとは\N良好な関係を保っておかねば
Dialogue: 0,0:08:53.40,0:08:56.37,Default#3,,0,0,0,,知らなくては\Nこの生き物について
Dialogue: 0,0:08:56.45,0:08:59.33,Default#3,,0,0,0,,外交しかり\N相手を知ることが和平への第一歩
Dialogue: 0,0:08:59.91,0:09:02.20,Default#3,,0,0,0,,（アーニャ）\Nアーニャを知ると世界が平和に？
Dialogue: 0,0:09:04.25,0:09:06.21,Default#3,,0,0,0,,アーニャ ピーナツが好き
Dialogue: 0,0:09:06.29,0:09:07.25,Default#3,,0,0,0,,にんじんは嫌い
Dialogue: 0,0:09:07.33,0:09:08.38,Default#3,,0,0,0,,（ロイド）ん？　うん
Dialogue: 0,0:09:08.46,0:09:10.25,Default#3,,0,0,0,,カリカリベーコン 好き
Dialogue: 0,0:09:11.42,0:09:12.21,Default#3,,0,0,0,,（ロイド）ベーカリーは
Dialogue: 0,0:09:12.30,0:09:14.51,Default#3,,0,0,0,,カリカリベーコン\Nって意味じゃないぞ
Dialogue: 0,0:09:14.59,0:09:15.18,Default#3,,0,0,0,,あ…
Dialogue: 0,0:09:15.84,0:09:17.26,Default#3,,0,0,0,,これ ください
Dialogue: 0,0:09:17.89,0:09:20.64,Default#3,,0,0,0,,（ロイド）１ダルクの物は\N10ペント硬貨じゃ買えないぞ
Dialogue: 0,0:09:22.81,0:09:23.43,Default#3,,0,0,0,,あ…
Dialogue: 0,0:09:24.60,0:09:27.23,Default#3,,0,0,0,,（ロイド）\Nこいつ 実は頭良くない？
Dialogue: 0,0:09:27.31,0:09:28.98,Default#3,,0,0,0,,クロスワードは まぐれ？
Dialogue: 0,0:09:29.06,0:09:30.82,Default#3,,0,0,0,,今からでも\Nほかの子に替えたほうが…
Dialogue: 0,0:09:30.90,0:09:33.78,Default#3,,0,0,0,,す… 捨てたら やあ～！
Dialogue: 0,0:09:33.86,0:09:35.86,Default#3,,0,0,0,,（ロイド）どうした？　急に\N（通行人）まあ ひどい親
Dialogue: 0,0:09:35.95,0:09:38.32,Default#3,,0,0,0,,（アーニャ）\Nアーニャ お買い得だよ！
Dialogue: 0,0:09:38.41,0:09:40.78,Default#3,,0,0,0,,（ロイド）うっ どうすれば…
Dialogue: 0,0:09:41.58,0:09:43.16,Default#3,,0,0,0,,ピーナツ買ってやるから 泣きやめ
Dialogue: 0,0:09:43.91,0:09:44.91,Default#3,,0,0,0,,ピーナツ！
Dialogue: 0,0:09:48.67,0:09:52.59,Default#3,,0,0,0,,ちち アーニャ眠い 歩けない
Dialogue: 0,0:09:52.67,0:09:53.46,Default#3,,0,0,0,,あ？
Dialogue: 0,0:09:54.76,0:09:57.30,Default#3,,0,0,0,,（ロイド）ダメだ 理解できん
Dialogue: 0,0:09:57.80,0:09:59.85,Default#3,,0,0,0,,この非合理的振る舞いを
Dialogue: 0,0:10:00.80,0:10:03.93,Default#3,,0,0,0,,解読するためには\Nマニュアルが必要だ
Dialogue: 0,0:10:05.81,0:10:07.94,Default#3,,0,0,0,,“子育ての基本は信頼感です”
Dialogue: 0,0:10:08.52,0:10:11.44,Default#3,,0,0,0,,“叱るより受け止めよう\N子供と同じ目線で”
Dialogue: 0,0:10:12.07,0:10:14.94,Default#3,,0,0,0,,“子供は自分の気持ちを\Nうまく言葉にできません”
Dialogue: 0,0:10:15.03,0:10:16.53,Default#3,,0,0,0,,“察してあげましょう”
Dialogue: 0,0:10:17.07,0:10:18.61,Default#3,,0,0,0,,尋問してはダメなのか
Dialogue: 0,0:10:19.53,0:10:20.82,Default#3,,0,0,0,,（ロイド）世の親たちは
Dialogue: 0,0:10:20.91,0:10:23.45,Default#3,,0,0,0,,こんな高難度ミッションを\Nこなしているのか
Dialogue: 0,0:10:24.04,0:10:27.16,Default#3,,0,0,0,,（ロイド）\N“将来のために自尊心を育てよう”
Dialogue: 0,0:10:27.25,0:10:30.96,Default#3,,0,0,0,,“自分で考える力を\N身につけさせることで 将来…”
Dialogue: 0,0:10:34.00,0:10:36.80,Default#3,,0,0,0,,（ロイド）どうせ\N任務が終わったら孤児院へ戻す
Dialogue: 0,0:10:37.42,0:10:39.38,Default#3,,0,0,0,,ただ それだけの関係なんだ
Dialogue: 0,0:10:43.76,0:10:45.56,Default#3,,0,0,0,,（アーニャ）いや～だ～！
Dialogue: 0,0:10:45.64,0:10:48.06,Default#3,,0,0,0,,アーニャ 勉強 やだ！
Dialogue: 0,0:10:48.14,0:10:51.56,Default#3,,0,0,0,,試験のために お前の学力を\N知っておかなくちゃいけないんだ
Dialogue: 0,0:10:51.65,0:10:54.73,Default#3,,0,0,0,,アーニャ 勉強しなくても\Nテストできるもん
Dialogue: 0,0:10:54.82,0:10:56.03,Default#3,,0,0,0,,ほかの人のここ…
Dialogue: 0,0:10:56.11,0:10:57.07,Default#3,,0,0,0,,（アーニャ）心 聞けば
Dialogue: 0,0:10:57.65,0:10:59.40,Default#3,,0,0,0,,カンニングでもするつもりか？
Dialogue: 0,0:10:59.49,0:11:01.66,Default#3,,0,0,0,,あのな お前が入学できんと任…
Dialogue: 0,0:11:01.74,0:11:02.78,Default#3,,0,0,0,,（ロイド）任務が失敗
Dialogue: 0,0:11:06.54,0:11:07.29,Default#3,,0,0,0,,もういい
Dialogue: 0,0:11:07.37,0:11:07.95,Default#3,,0,0,0,,あ…
Dialogue: 0,0:11:09.50,0:11:10.25,Default#3,,0,0,0,,出かけてくる
Dialogue: 0,0:11:11.88,0:11:13.75,Default#3,,0,0,0,,今日は連れていかないからな
Dialogue: 0,0:11:13.84,0:11:15.13,Default#3,,0,0,0,,絶対に
Dialogue: 0,0:11:15.21,0:11:16.34,Default#3,,0,0,0,,留守番してろ
Dialogue: 0,0:11:17.38,0:11:18.38,Default#3,,0,0,0,,（ドアが閉まる音）
Dialogue: 0,0:11:22.09,0:11:24.60,Default#3,,0,0,0,,おい！　ダメだと言ったろ
Dialogue: 0,0:11:26.18,0:11:28.60,Default#3,,0,0,0,,こら そこ！\Nバレないと思ってんのか
Dialogue: 0,0:11:29.18,0:11:30.02,Default#3,,0,0,0,,そこ！
Dialogue: 0,0:11:30.10,0:11:31.23,Default#3,,0,0,0,,そこ！
Dialogue: 0,0:11:31.31,0:11:34.69,Default#3,,0,0,0,,（アーニャ）\Nちち すごい見つけてくる 楽しい
Dialogue: 0,0:11:34.77,0:11:37.69,Default#3,,0,0,0,,（ロイド）\Nフハハハハハ！　これで出られまい
Dialogue: 0,0:11:38.28,0:11:39.70,Default#3,,0,0,0,,（フランキー）で 遅くなったの？
Dialogue: 0,0:11:39.78,0:11:42.45,Default#3,,0,0,0,,（ロイド）最終的には\N玄関にバリケード築いて
Dialogue: 0,0:11:42.53,0:11:43.70,Default#3,,0,0,0,,封じ込めてやった
Dialogue: 0,0:11:43.78,0:11:46.58,Default#3,,0,0,0,,（フランキー）\N虐待で通報されないことを祈るよ
Dialogue: 0,0:11:46.66,0:11:49.04,Default#3,,0,0,0,,子供ってやつは\N何考えてるか分からん
Dialogue: 0,0:11:49.12,0:11:52.46,Default#3,,0,0,0,,なんでも泣いて済まそうとする\N姿勢も腹立たしい
Dialogue: 0,0:11:52.54,0:11:55.71,Default#3,,0,0,0,,ヤツらは泣くのが仕事だぜ\N黄昏さん
Dialogue: 0,0:11:55.79,0:11:58.17,Default#3,,0,0,0,,それより ほら\N頼まれたもの
Dialogue: 0,0:11:58.26,0:12:00.80,Default#3,,0,0,0,,願書に受験票\Nそれと入試問題
Dialogue: 0,0:12:00.88,0:12:03.01,Default#3,,0,0,0,,手に入れるの苦労したのよ
Dialogue: 0,0:12:03.09,0:12:04.59,Default#3,,0,0,0,,（ロイド）助かるよ フランキー
Dialogue: 0,0:12:04.68,0:12:07.31,Default#3,,0,0,0,,答え丸暗記させれば\Nさすがになんとかなるだろ
Dialogue: 0,0:12:07.39,0:12:09.22,Default#3,,0,0,0,,そうそう お前の娘
Dialogue: 0,0:12:09.31,0:12:11.56,Default#3,,0,0,0,,孤児院にはなかった\N過去の記録あさってきた
Dialogue: 0,0:12:12.44,0:12:16.40,Default#3,,0,0,0,,出生に関するものはなし\N年齢も両親も不明
Dialogue: 0,0:12:16.48,0:12:18.15,Default#3,,0,0,0,,ここ１年ちょいの情報しか\Nなかったが
Dialogue: 0,0:12:18.73,0:12:21.07,Default#3,,0,0,0,,４回も里子に出されては\N戻されてる
Dialogue: 0,0:12:21.65,0:12:23.61,Default#3,,0,0,0,,施設も２度移ってるし
Dialogue: 0,0:12:23.70,0:12:26.16,Default#3,,0,0,0,,“アーニャ･ウィリアムズ\Nアーニャ･レブスキー”
Dialogue: 0,0:12:26.24,0:12:27.24,Default#3,,0,0,0,,“アーニャ･ロッシュ”
Dialogue: 0,0:12:27.33,0:12:30.83,Default#3,,0,0,0,,（フランキー）コロコロ名前変えて\Nお似合いの親子じゃんか
Dialogue: 0,0:12:30.91,0:12:33.25,Default#3,,0,0,0,,あ？　冗談だよ
Dialogue: 0,0:12:33.33,0:12:34.33,Default#3,,0,0,0,,任務だったな
Dialogue: 0,0:12:34.42,0:12:35.63,Default#3,,0,0,0,,子供とはいえ
Dialogue: 0,0:12:35.71,0:12:37.92,Default#3,,0,0,0,,いらん情を抱くと\Nろくなことにならんからな
Dialogue: 0,0:12:39.30,0:12:40.34,Default#3,,0,0,0,,（ロイド）忠告どうも
Dialogue: 0,0:12:41.01,0:12:42.05,Default#3,,0,0,0,,おい！　お代！
Dialogue: 0,0:12:42.84,0:12:44.13,Default#3,,0,0,0,,ったく…
Dialogue: 0,0:12:44.22,0:12:46.93,Default#3,,0,0,0,,スパイってやつも\N何考えてるか分からん
Dialogue: 0,0:12:53.52,0:12:54.64,Default#3,,0,0,0,,（アーニャ）つまんない
Dialogue: 0,0:12:54.73,0:12:56.94,Default#3,,0,0,0,,スパイ 思ってたのと違う
Dialogue: 0,0:12:57.02,0:12:59.77,Default#3,,0,0,0,,アーニャ 爆弾 取り返したいのに
Dialogue: 0,0:13:00.36,0:13:02.44,Default#3,,0,0,0,,（ロイド）スパイ道具を\Nいじられては かなわんから
Dialogue: 0,0:13:02.53,0:13:03.40,Default#3,,0,0,0,,鍵 かけとこう
Dialogue: 0,0:13:03.99,0:13:05.82,Default#3,,0,0,0,,番号は６ １…
Dialogue: 0,0:13:05.91,0:13:09.16,Default#3,,0,0,0,,（アーニャ）１ ０ 爆弾 爆弾♪
Dialogue: 0,0:13:14.92,0:13:17.42,Default#3,,0,0,0,,爆弾 爆弾♪
Dialogue: 0,0:13:17.50,0:13:20.92,Default#3,,0,0,0,,おおお！　秘密通信！
Dialogue: 0,0:13:21.00,0:13:23.92,Default#3,,0,0,0,,秘密 秘密♪
Dialogue: 0,0:13:24.01,0:13:25.47,Default#3,,0,0,0,,（通信音）
Dialogue: 0,0:13:25.55,0:13:28.43,Default#3,,0,0,0,,（部下）ボス！\N新しい通信を傍受しました
Dialogue: 0,0:13:28.97,0:13:30.10,Default#3,,0,0,0,,（エドガー）西の暗号か？
Dialogue: 0,0:13:30.60,0:13:31.93,Default#3,,0,0,0,,（部下）いえ 平文(ひらぶん)のようです
Dialogue: 0,0:13:32.52,0:13:35.14,Default#3,,0,0,0,,えっと…\Nタ ソ ガ レ サ ン ジョ ウ
Dialogue: 0,0:13:35.94,0:13:37.48,Default#3,,0,0,0,,黄昏 参上？
Dialogue: 0,0:13:37.56,0:13:39.86,Default#3,,0,0,0,,西の組織が使ってる周波数です
Dialogue: 0,0:13:39.94,0:13:41.19,Default#3,,0,0,0,,あっ また！
Dialogue: 0,0:13:41.27,0:13:43.32,Default#3,,0,0,0,,オ ニ サ ン コ チ ラ
Dialogue: 0,0:13:43.40,0:13:45.53,Default#3,,0,0,0,,（エドガー）発信源の特定 急げ！
Dialogue: 0,0:13:47.82,0:13:48.49,Default#3,,0,0,0,,フウ
Dialogue: 0,0:13:50.03,0:13:50.66,Default#3,,0,0,0,,ハッ
Dialogue: 0,0:13:51.28,0:13:54.16,Default#3,,0,0,0,,（ロイド）貴様 俺がスパイだと\N知ったからには消えてもらう
Dialogue: 0,0:13:56.41,0:13:58.88,Default#3,,0,0,0,,（アーニャ）アーニャも\Nエスパーだってバレたら
Dialogue: 0,0:13:59.79,0:14:01.00,Default#3,,0,0,0,,出てかなくちゃ
Dialogue: 0,0:14:01.09,0:14:02.34,Default#3,,0,0,0,,（研究者）アーニャ
Dialogue: 0,0:14:02.42,0:14:05.88,Default#3,,0,0,0,,その力のことは\N誰にも話してはいけないよ
Dialogue: 0,0:14:05.97,0:14:08.43,Default#3,,0,0,0,,（研究者）\Nさあ 勉強の時間だよ アーニャ
Dialogue: 0,0:14:08.51,0:14:10.22,Default#3,,0,0,0,,（アーニャ）\Nアーニャ お絵描きしたい
Dialogue: 0,0:14:10.30,0:14:12.93,Default#3,,0,0,0,,（研究者）\Nそんな幼稚なことはしなくていい
Dialogue: 0,0:14:13.01,0:14:16.23,Default#3,,0,0,0,,お前の力は\N世界の平和に役立てなくては
Dialogue: 0,0:14:16.85,0:14:20.23,Default#3,,0,0,0,,泣いてる暇なんてないぞ\N遊んでないで勉強だ
Dialogue: 0,0:14:21.73,0:14:23.23,Default#3,,0,0,0,,（泣き声）
Dialogue: 0,0:14:25.82,0:14:27.82,Default#3,,0,0,0,,（ロイド）あいつ\N部屋 散らかしてないだろうな
Dialogue: 0,0:14:28.41,0:14:30.82,Default#3,,0,0,0,,そうだった これをどかさねば
Dialogue: 0,0:14:32.20,0:14:32.74,Default#3,,0,0,0,,うん？
Dialogue: 0,0:14:33.37,0:14:35.04,Default#3,,0,0,0,,（ゴミ箱をどかす音）
Dialogue: 0,0:14:44.96,0:14:45.51,Default#3,,0,0,0,,（グエン）ふん！
Dialogue: 0,0:14:47.26,0:14:47.84,Default#3,,0,0,0,,うっ
Dialogue: 0,0:14:48.97,0:14:50.26,Default#3,,0,0,0,,（発砲音）
Dialogue: 0,0:14:50.34,0:14:51.34,Default#3,,0,0,0,,（手下）ぐわっ
Dialogue: 0,0:14:53.64,0:14:54.85,Default#3,,0,0,0,,（ロイド）なんだ こいつら
Dialogue: 0,0:14:55.72,0:14:56.64,Default#3,,0,0,0,,アーニャ！
Dialogue: 0,0:14:57.93,0:14:58.64,Default#3,,0,0,0,,アーニャ！
Dialogue: 0,0:14:59.14,0:14:59.64,Default#3,,0,0,0,,あっ
Dialogue: 0,0:15:00.98,0:15:02.11,Default#3,,0,0,0,,（ロイド）さらわれた？
Dialogue: 0,0:15:02.19,0:15:04.94,Default#3,,0,0,0,,こいつらの仲間が？\Nなんのために？
Dialogue: 0,0:15:05.98,0:15:07.07,Default#3,,0,0,0,,すぐに捜して…
Dialogue: 0,0:15:07.78,0:15:08.82,Default#3,,0,0,0,,冷静になれ
Dialogue: 0,0:15:09.36,0:15:12.87,Default#3,,0,0,0,,状況から見て 敵は\N俺がスパイであることを知った
Dialogue: 0,0:15:12.95,0:15:14.49,Default#3,,0,0,0,,今すぐ身を隠さねば危険だ
Dialogue: 0,0:15:15.33,0:15:16.37,Default#3,,0,0,0,,アーニャは…
Dialogue: 0,0:15:17.08,0:15:19.25,Default#3,,0,0,0,,子供は ほかにいくらでもいる
Dialogue: 0,0:15:19.33,0:15:20.83,Default#3,,0,0,0,,一(いち)から仕切り直して…
Dialogue: 0,0:15:20.92,0:15:21.63,Default#3,,0,0,0,,（グエン）ううっ！
Dialogue: 0,0:15:21.71,0:15:22.42,Default#3,,0,0,0,,（打撃音）
Dialogue: 0,0:15:24.29,0:15:25.84,Default#3,,0,0,0,,（エドガー）このガキは なんだ？
Dialogue: 0,0:15:27.01,0:15:28.63,Default#3,,0,0,0,,まさか黄昏の？
Dialogue: 0,0:15:28.72,0:15:30.05,Default#3,,0,0,0,,（手下）分かりません
Dialogue: 0,0:15:30.13,0:15:32.89,Default#3,,0,0,0,,発信源の部屋にいたので 念のため
Dialogue: 0,0:15:32.97,0:15:34.10,Default#3,,0,0,0,,（アーニャ）通信のせい？
Dialogue: 0,0:15:34.18,0:15:36.22,Default#3,,0,0,0,,（手下）\N部屋の外にバリケード築いて
Dialogue: 0,0:15:36.31,0:15:37.35,Default#3,,0,0,0,,立て籠もってました
Dialogue: 0,0:15:37.43,0:15:38.39,Default#3,,0,0,0,,なんで外？
Dialogue: 0,0:15:38.48,0:15:39.39,Default#3,,0,0,0,,（手下）さあ
Dialogue: 0,0:15:39.48,0:15:40.77,Default#3,,0,0,0,,まあいい
Dialogue: 0,0:15:40.85,0:15:43.73,Default#3,,0,0,0,,人質として使えそうなら\Nこいつを盾にとって
Dialogue: 0,0:15:43.81,0:15:47.82,Default#3,,0,0,0,,外務大臣のヅラを黄昏本人に\N直(じか)に奪ってこさせてやる
Dialogue: 0,0:15:47.90,0:15:48.90,Default#3,,0,0,0,,（手下）ボス
Dialogue: 0,0:15:48.99,0:15:50.99,Default#3,,0,0,0,,ヅラは もう諦めたほうが…
Dialogue: 0,0:15:51.99,0:15:54.24,Default#3,,0,0,0,,（エドガー）\N政治には透明性が大切だ
Dialogue: 0,0:15:54.32,0:15:55.62,Default#3,,0,0,0,,ヅラは よくない
Dialogue: 0,0:15:55.70,0:15:57.66,Default#3,,0,0,0,,（アーニャ）音の出ないピストル
Dialogue: 0,0:15:57.74,0:16:01.71,Default#3,,0,0,0,,（エドガー）それに大臣は\Nコソコソと西に肩入れする売国奴だ
Dialogue: 0,0:16:01.79,0:16:04.63,Default#3,,0,0,0,,売国奴を擁護するヤツも\N売国奴だ
Dialogue: 0,0:16:05.38,0:16:07.38,Default#3,,0,0,0,,（アーニャ）本物の悪い人
Dialogue: 0,0:16:08.21,0:16:09.34,Default#3,,0,0,0,,（ブレーキ音）
Dialogue: 0,0:16:09.42,0:16:10.22,Default#3,,0,0,0,,（手下）ボス
Dialogue: 0,0:16:10.30,0:16:11.38,Default#3,,0,0,0,,家を張ってたグエンたちが
Dialogue: 0,0:16:11.47,0:16:12.80,Default#3,,0,0,0,,戻ってきた！
Dialogue: 0,0:16:13.47,0:16:15.39,Default#3,,0,0,0,,（偽グエン）男を捕らえました
Dialogue: 0,0:16:16.55,0:16:17.89,Default#3,,0,0,0,,よくやった
Dialogue: 0,0:16:17.97,0:16:20.89,Default#3,,0,0,0,,うう… 素人の動きじゃなかった
Dialogue: 0,0:16:20.98,0:16:21.98,Default#3,,0,0,0,,本物ですよ
Dialogue: 0,0:16:22.48,0:16:23.94,Default#3,,0,0,0,,（手下）向こうで休んでろ
Dialogue: 0,0:16:24.02,0:16:26.61,Default#3,,0,0,0,,（エドガー）\Nさてと それじゃ黄昏君
Dialogue: 0,0:16:27.52,0:16:30.40,Default#3,,0,0,0,,横取りした写真を\N返してもらおうかな
Dialogue: 0,0:16:30.49,0:16:31.44,Default#3,,0,0,0,,（グエン）ん～！
Dialogue: 0,0:16:31.53,0:16:32.32,Default#3,,0,0,0,,（エドガー）グエン！
Dialogue: 0,0:16:32.40,0:16:33.61,Default#3,,0,0,0,,（手下）どういうことだ 今…
Dialogue: 0,0:16:33.70,0:16:34.70,Default#3,,0,0,0,,（手下）娘がいないぞ！
Dialogue: 0,0:16:34.78,0:16:36.66,Default#3,,0,0,0,,（エドガー）またやられた！
Dialogue: 0,0:16:36.74,0:16:38.12,Default#3,,0,0,0,,（ロイド）失態だ
Dialogue: 0,0:16:38.20,0:16:40.79,Default#3,,0,0,0,,こんなリスクを冒してまで\Nノコノコと敵地に
Dialogue: 0,0:16:40.87,0:16:42.00,Default#3,,0,0,0,,スパイ失格だ
Dialogue: 0,0:16:42.08,0:16:42.66,Default#3,,0,0,0,,（アーニャ）ちち！
Dialogue: 0,0:16:42.75,0:16:43.62,Default#3,,0,0,0,,ちびゃああ～！
Dialogue: 0,0:16:43.71,0:16:45.29,Default#3,,0,0,0,,（偽グエン）うおっ 大丈夫
Dialogue: 0,0:16:45.38,0:16:47.17,Default#3,,0,0,0,,おじさん 何もしない 怖くないよ
Dialogue: 0,0:16:47.25,0:16:49.21,Default#3,,0,0,0,,（泣き声）
Dialogue: 0,0:16:49.30,0:16:51.13,Default#3,,0,0,0,,（ロイド）だから ガキは…
Dialogue: 0,0:16:51.72,0:16:52.72,Default#3,,0,0,0,,そうか
Dialogue: 0,0:16:53.34,0:16:57.43,Default#3,,0,0,0,,子供が泣いていると腹が立つ理由が\Nなんとなく分かったぞ
Dialogue: 0,0:16:57.51,0:17:00.01,Default#3,,0,0,0,,小さかったころの自分を\N思い出すからだ
Dialogue: 0,0:17:01.02,0:17:03.18,Default#3,,0,0,0,,誰も救いの手を\N差し伸べてくれない
Dialogue: 0,0:17:03.89,0:17:07.31,Default#3,,0,0,0,,孤独や絶望と\Nただ泣くことしかできない無力感
Dialogue: 0,0:17:08.27,0:17:12.61,Default#3,,0,0,0,,捨て去ったと思った過去の自分と\N無意識に重ねていたのだな
Dialogue: 0,0:17:12.69,0:17:14.61,Default#3,,0,0,0,,いや それどころか…
Dialogue: 0,0:17:18.37,0:17:19.70,Default#3,,0,0,0,,あのな お嬢ちゃん
Dialogue: 0,0:17:19.78,0:17:20.83,Default#3,,0,0,0,,（アーニャ）アーニャ
Dialogue: 0,0:17:20.91,0:17:22.45,Default#3,,0,0,0,,あのな アーニャちゃん
Dialogue: 0,0:17:22.54,0:17:26.08,Default#3,,0,0,0,,おじさんたち 実は\Nプロの鬼ごっこ集団でね
Dialogue: 0,0:17:26.17,0:17:28.38,Default#3,,0,0,0,,才能がありそうな人を見つけては
Dialogue: 0,0:17:28.46,0:17:30.50,Default#3,,0,0,0,,いきなり勝負を挑んでるんだ
Dialogue: 0,0:17:30.59,0:17:31.17,Default#3,,0,0,0,,（アーニャ）ほう
Dialogue: 0,0:17:31.25,0:17:32.59,Default#3,,0,0,0,,（アーニャ）ちち ウソつき
Dialogue: 0,0:17:32.67,0:17:35.34,Default#3,,0,0,0,,いいかい？\Nこのまま まっすぐ行って
Dialogue: 0,0:17:35.43,0:17:37.97,Default#3,,0,0,0,,通りを右にずっと歩くと\N警察署がある
Dialogue: 0,0:17:38.05,0:17:41.60,Default#3,,0,0,0,,そこで警察の人にこれを渡せたら\N君の勝ちだ
Dialogue: 0,0:17:41.68,0:17:42.47,Default#3,,0,0,0,,分かったか？
Dialogue: 0,0:17:42.56,0:17:46.02,Default#3,,0,0,0,,（ロイド）これを見せれば\Nよりよい孤児院に保護してもらえる
Dialogue: 0,0:17:46.10,0:17:49.81,Default#3,,0,0,0,,計画は子供に頼らない\N別の方法で練り直そう
Dialogue: 0,0:17:49.90,0:17:51.48,Default#3,,0,0,0,,よし行け！　早く！
Dialogue: 0,0:17:52.78,0:17:55.20,Default#3,,0,0,0,,（ロイド）スパイ失格？　違う
Dialogue: 0,0:17:55.82,0:17:58.70,Default#3,,0,0,0,,失態なのは\Nあの子を危険に巻き込んだことだ
Dialogue: 0,0:17:59.28,0:18:00.12,Default#3,,0,0,0,,そうだった
Dialogue: 0,0:18:00.70,0:18:02.20,Default#3,,0,0,0,,子供が泣かない世界
Dialogue: 0,0:18:02.79,0:18:06.16,Default#3,,0,0,0,,それを作りたくて\N俺はスパイになったんだ
Dialogue: 0,0:18:09.25,0:18:10.71,Default#3,,0,0,0,,（打撃音）
Dialogue: 0,0:18:10.79,0:18:12.46,Default#3,,0,0,0,,（手下）\Nあの野郎を絶対に逃がすな！
Dialogue: 0,0:18:12.55,0:18:14.71,Default#3,,0,0,0,,（手下）引きずりだして\Nそのツラさらして…
Dialogue: 0,0:18:16.05,0:18:17.88,Default#3,,0,0,0,,トラップ？　いつの間に！
Dialogue: 0,0:18:18.38,0:18:20.18,Default#3,,0,0,0,,（手下）\Nうわっ なんだこれ 小麦粉…
Dialogue: 0,0:18:20.26,0:18:21.39,Default#3,,0,0,0,,（殴る音）\N（手下）うわあっ
Dialogue: 0,0:18:21.47,0:18:23.06,Default#3,,0,0,0,,（手下）た… 黄昏！
Dialogue: 0,0:18:23.14,0:18:25.35,Default#3,,0,0,0,,（手下）銃はよせ！　爆発するぞ！
Dialogue: 0,0:18:25.43,0:18:26.14,Default#3,,0,0,0,,ああっ
Dialogue: 0,0:18:26.64,0:18:27.81,Default#3,,0,0,0,,（殴る音）\N（手下）ぐはっ
Dialogue: 0,0:18:27.89,0:18:29.31,Default#3,,0,0,0,,（手下）うわっ
Dialogue: 0,0:18:29.40,0:18:30.81,Default#3,,0,0,0,,（手下）うおっ\N（手下）ぐわっ
Dialogue: 0,0:18:32.82,0:18:33.32,Default#3,,0,0,0,,なっ…
Dialogue: 0,0:18:34.86,0:18:35.82,Default#3,,0,0,0,,冗談だろ
Dialogue: 0,0:18:38.91,0:18:40.70,Default#3,,0,0,0,,振り向いたら殺す
Dialogue: 0,0:18:40.78,0:18:42.33,Default#3,,0,0,0,,（エドガー）黄昏！
Dialogue: 0,0:18:42.41,0:18:45.95,Default#3,,0,0,0,,（ロイド）こんにちは\Nあるいは こんばんは エドガーさん
Dialogue: 0,0:18:46.04,0:18:47.25,Default#3,,0,0,0,,カレンは元気かい？
Dialogue: 0,0:18:47.33,0:18:49.33,Default#3,,0,0,0,,（エドガー）貴様 なぜ娘の名を…
Dialogue: 0,0:18:49.42,0:18:52.67,Default#3,,0,0,0,,（ロイド）知ってるさ\Nそれがスパイの仕事だ
Dialogue: 0,0:18:52.75,0:18:54.55,Default#3,,0,0,0,,身長 体重 足のサイズ
Dialogue: 0,0:18:54.63,0:18:57.34,Default#3,,0,0,0,,好きな食べ物から\N体中のホクロの数まで
Dialogue: 0,0:18:58.01,0:19:01.97,Default#3,,0,0,0,,お前に比べりゃ かわいいもんだが\N犯罪行為の数々もな
Dialogue: 0,0:19:02.05,0:19:03.47,Default#3,,0,0,0,,バカ言え 娘がそんな…
Dialogue: 0,0:19:03.56,0:19:04.18,Default#3,,0,0,0,,（ロイド）エドガー
Dialogue: 0,0:19:04.26,0:19:07.48,Default#3,,0,0,0,,お前が娘思いなのも\Nよく知っている
Dialogue: 0,0:19:07.56,0:19:08.18,Default#3,,0,0,0,,いいか
Dialogue: 0,0:19:08.27,0:19:11.44,Default#3,,0,0,0,,彼女が ささやかな日常を\N送れることを願うなら
Dialogue: 0,0:19:11.52,0:19:13.48,Default#3,,0,0,0,,二度と俺に関わるな
Dialogue: 0,0:19:16.15,0:19:18.53,Default#3,,0,0,0,,分かったら とっとと家へ帰れ
Dialogue: 0,0:19:32.92,0:19:34.38,Default#3,,0,0,0,,あっ アーニャ
Dialogue: 0,0:19:34.46,0:19:35.34,Default#3,,0,0,0,,ちち！
Dialogue: 0,0:19:36.21,0:19:38.34,Default#3,,0,0,0,,ちち～！
Dialogue: 0,0:19:38.42,0:19:40.22,Default#3,,0,0,0,,お前 なんで… あっ いや…
Dialogue: 0,0:19:40.30,0:19:42.09,Default#3,,0,0,0,,勝手に家出て 何してんだ
Dialogue: 0,0:19:42.68,0:19:45.64,Default#3,,0,0,0,,いや 俺は偶然そこまで\N買い物に来たんだが
Dialogue: 0,0:19:45.72,0:19:47.14,Default#3,,0,0,0,,潰れちゃったみたいだな
Dialogue: 0,0:19:47.22,0:19:49.31,Default#3,,0,0,0,,（アーニャ）ちち すごいウソつき
Dialogue: 0,0:19:49.39,0:19:52.06,Default#3,,0,0,0,,アーニャ\Nおじさんたちと鬼ごっこしてた
Dialogue: 0,0:19:52.15,0:19:54.06,Default#3,,0,0,0,,（ロイド）そうか 楽しかったか？
Dialogue: 0,0:19:55.32,0:19:56.73,Default#3,,0,0,0,,（アーニャ）ちょっと怖かった
Dialogue: 0,0:19:57.86,0:19:59.78,Default#3,,0,0,0,,アーニャ おうち帰りたい
Dialogue: 0,0:20:00.57,0:20:02.45,Default#3,,0,0,0,,ちちとアーニャのおうち
Dialogue: 0,0:20:03.36,0:20:04.74,Default#3,,0,0,0,,いいのか？
Dialogue: 0,0:20:05.91,0:20:08.95,Default#3,,0,0,0,,（アーニャ）\N置いてかれたら アーニャ 涙出る
Dialogue: 0,0:20:09.04,0:20:11.62,Default#3,,0,0,0,,（フランキー）４回も\N里子に出されては戻されてる
Dialogue: 0,0:20:12.25,0:20:14.13,Default#3,,0,0,0,,（ロイド）\N“アーニャ･ウィリアムズ”
Dialogue: 0,0:20:14.21,0:20:15.88,Default#3,,0,0,0,,“アーニャ･レブスキー”
Dialogue: 0,0:20:15.96,0:20:17.17,Default#3,,0,0,0,,“アーニャ･ロッシュ”
Dialogue: 0,0:20:17.75,0:20:18.71,Default#3,,0,0,0,,（ロイド）そうか
Dialogue: 0,0:20:19.63,0:20:20.92,Default#3,,0,0,0,,じゃあ 帰ろう
Dialogue: 0,0:20:25.26,0:20:27.97,Default#3,,0,0,0,,だが あの家は\N危ないから引っ越そう
Dialogue: 0,0:20:28.06,0:20:29.68,Default#3,,0,0,0,,昨日 毒ヘビが出たんだ
Dialogue: 0,0:20:29.77,0:20:30.68,Default#3,,0,0,0,,（アーニャ）ヘビ 嫌い
Dialogue: 0,0:20:31.27,0:20:33.56,Default#3,,0,0,0,,（アーニャ）ちち\Nものすごいウソつき
Dialogue: 0,0:20:33.65,0:20:35.56,Default#3,,0,0,0,,でも\Nカッコいいウソつき
Dialogue: 0,0:20:36.11,0:20:37.69,Default#3,,0,0,0,,アーニャ\Nお城に住みたい
Dialogue: 0,0:20:37.77,0:20:38.94,Default#3,,0,0,0,,（ロイド）\N売りに出てたらな
Dialogue: 0,0:20:39.82,0:20:41.74,Default#3,,0,0,0,,新居に移ったら勉強だぞ
Dialogue: 0,0:20:41.82,0:20:42.40,Default#3,,0,0,0,,（アーニャ）むあっ
Dialogue: 0,0:20:42.49,0:20:45.66,Default#3,,0,0,0,,（ロイド）今度のは\N答え見て覚えるだけだ 簡単
Dialogue: 0,0:20:49.58,0:20:52.58,Default#3,,0,0,0,,（鐘の音）
Dialogue: 0,0:20:56.58,0:20:58.67,Default#3,,0,0,0,,（試験官）では 試験 始め！
Dialogue: 0,0:21:01.13,0:21:02.80,Default#3,,0,0,0,,（ロイド）頼んだぞ アーニャ
Dialogue: 0,0:21:04.01,0:21:04.97,Default#3,,0,0,0,,頑張れ！
Dialogue: 0,0:21:06.39,0:21:08.85,Default#3,,0,0,0,,（子供）難しいよ～\N（子供）全然 分かんない
Dialogue: 0,0:21:08.93,0:21:11.02,Default#3,,0,0,0,,（子供）ど れ に し よ う か な
Dialogue: 0,0:21:11.10,0:21:12.23,Default#3,,0,0,0,,（子供）ママ～！
Dialogue: 0,0:21:12.31,0:21:12.93,Default#3,,0,0,0,,（アーニャ）ああ…
Dialogue: 0,0:21:13.56,0:21:14.69,Default#3,,0,0,0,,うう…
Dialogue: 0,0:21:24.70,0:21:27.95,Default#3,,0,0,0,,（ロイド）Ｋ-212 Ｋ-212…
Dialogue: 0,0:21:31.04,0:21:33.29,Default#3,,0,0,0,,あった！　合格だ！
Dialogue: 0,0:21:33.37,0:21:34.46,Default#3,,0,0,0,,でかした！
Dialogue: 0,0:21:34.54,0:21:35.54,Default#3,,0,0,0,,（アーニャ）アーニャ 偉い？
Dialogue: 0,0:21:35.62,0:21:36.96,Default#3,,0,0,0,,偉い 偉い！
Dialogue: 0,0:21:37.04,0:21:37.83,Default#3,,0,0,0,,え… ら…
Dialogue: 0,0:21:37.92,0:21:39.46,Default#3,,0,0,0,,ああああ ちち～！
Dialogue: 0,0:21:40.25,0:21:43.05,Default#3,,0,0,0,,（ロイド）気が抜けて\N溜(た)まった疲労がどっときた
Dialogue: 0,0:21:44.05,0:21:46.47,Default#3,,0,0,0,,気を抜いただと？　この俺が
Dialogue: 0,0:21:48.18,0:21:49.43,Default#3,,0,0,0,,どうかしてしまったな
Dialogue: 0,0:21:49.51,0:21:51.22,Default#3,,0,0,0,,（アーニャ）戻ってきて～！
Dialogue: 0,0:21:51.93,0:21:53.93,Default#3,,0,0,0,,♪～
Dialogue: 0,0:22:49.99,0:22:51.78,Default#3,,0,0,0,,ちち 死んじゃった
Dialogue: 0,0:22:51.87,0:22:52.66,Default#3,,0,0,0,,（呼び鈴）
Dialogue: 0,0:22:52.74,0:22:53.87,Default#3,,0,0,0,,（郵便屋）郵便で～す
Dialogue: 0,0:22:56.41,0:22:57.75,Default#3,,0,0,0,,フォージャーさん？
Dialogue: 0,0:22:57.83,0:22:59.37,Default#3,,0,0,0,,アーニャ･フォージャーです
Dialogue: 0,0:22:59.46,0:23:02.13,Default#3,,0,0,0,,これ お父さんか\Nお母さんに渡してね
Dialogue: 0,0:23:02.21,0:23:03.50,Default#3,,0,0,0,,はは 存在しない
Dialogue: 0,0:23:03.59,0:23:05.67,Default#3,,0,0,0,,えっ そう… ごめん
Dialogue: 0,0:23:05.76,0:23:08.80,Default#3,,0,0,0,,ちち！　郵便屋さん来た！
Dialogue: 0,0:23:18.73,0:23:19.89,Default#3,,0,0,0,,フフッ
Dialogue: 0,0:23:20.48,0:23:22.48,Default#3,,0,0,0,,～♪
Dialogue: 0,0:23:24.57,0:23:25.07,Default#3,,0,0,0,,あっ
Dialogue: 0,0:23:26.73,0:23:28.86,Default#3,,0,0,0,,うおおお！　なんだ お前！
Dialogue: 0,0:23:28.95,0:23:30.70,Default#3,,0,0,0,,俺の命 狙ってんのか！
Dialogue: 0,0:23:31.32,0:23:33.87,Default#3,,0,0,0,,（ロイド）\N他人がいる前で眠ってしまうとは
Dialogue: 0,0:23:33.95,0:23:36.33,Default#3,,0,0,0,,いかん 気を引き締め直さんと
Dialogue: 0,0:23:36.41,0:23:37.08,Default#3,,0,0,0,,郵便
Dialogue: 0,0:23:37.16,0:23:37.70,Default#3,,0,0,0,,ん？
Dialogue: 0,0:23:39.96,0:23:42.04,Default#3,,0,0,0,,イーデン校から案内状だ
Dialogue: 0,0:23:42.13,0:23:42.96,Default#3,,0,0,0,,う…
Dialogue: 0,0:23:43.04,0:23:44.46,Default#3,,0,0,0,,どうした ちち
Dialogue: 0,0:23:44.54,0:23:47.34,Default#3,,0,0,0,,“二次審査は三者面談”
Dialogue: 0,0:23:47.42,0:23:50.55,Default#3,,0,0,0,,“必ず両親と３人で出席のこと”
Dialogue: 0,0:23:50.63,0:23:52.76,Default#3,,0,0,0,,“例外は認めない”
Dialogue: 0,0:23:54.10,0:23:55.81,Default#3,,0,0,0,,はは 存在しない
